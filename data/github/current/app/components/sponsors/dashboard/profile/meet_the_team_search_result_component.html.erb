<% list.with_item(
  active: active?,
  test_selector: "sponsors-featured-users-search-#{member.display_login}",
  label: member.safe_profile_name,
  content_arguments: {
    classes: "js-sponsors-featured-item-toggle",
    "data-input-name": "sponsors_listing[featured_users_selection][]",
    "data-input-value": member.id,
    align_items: :center,
  },
) do |item| %>
  <% item.with_leading_visual_content do
    render(GitHub::AvatarComponent.new(
      actor: member,
      size: 20,
      alt: "", # no alt text so that the username doesn't get repeated for screen reader users
    ))
  end %>
  <% unless member.safe_profile_name == member.display_login %>
    <% item.with_description { member.display_login } %>
  <% end %>
<% end %>

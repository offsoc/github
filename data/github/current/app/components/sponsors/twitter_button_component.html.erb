<%= form_tag(TWITTER_WEB_INTENT_URL,
  method: :get,
  target: "_blank",
  class: "d-inline",
  data: test_selector_hash("twitter-form"),
) do %>
  <%= hidden_field_tag(:url, sponsors_profile_url) %>

  <% if @render_textarea %>
    <textarea
      name="text"
      rows="3"
      class="form-control mb-3 width-full"
      aria-label="Share why you sponsor"
      required
      <% if @autofocus %>autofocus<% end %>
      <%= test_selector("sponsors-twitter-textarea") %>
    ><%= @text %></textarea>
  <% else %>
    <%= hidden_field_tag(:text, @text) %>
  <% end %>

  <%= render Primer::Beta::Button.new(
    type: :submit,
    font_weight: @font_weight,
    data: @data,
  ) do |button| %>
    <% button.with_leading_visual_svg do %>
      <%= svg("site/icons/twitter-x",
        height: 16,
        title: "X (formerly Twitter)",
      ) %>
    <% end %>

    <% @label %>
  <% end %>
<% end %>

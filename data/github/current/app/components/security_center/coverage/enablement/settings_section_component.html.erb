<%= render Primer::Box.new(**system_arguments) do %>
  <%= render(Primer::Beta::Subhead.new(hide_border: true)) do |subhead| %>
    <% subhead.with_heading(font_size: name_font_size, color: :default) do %>
      <%= data.name %>
    <% end %>
  <% end %>

  <% if data.blocked_message.present? %>
    <%= render(Primer::Box.new(align_items: :flex_start, color: :attention, display: :flex)) do %>
      <%= render(Primer::Beta::Octicon.new(:alert, mr: 2, mt: 1)) %>
      <%= render(Primer::Box.new(test_selector: BLOCKED_MESSAGE_TEST_SELECTOR)) do %>
        <%= data.blocked_message %>
      <% end %>
    <% end %>
  <% end %>

  <%= content %>
<% end %>

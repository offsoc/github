<%= render(Primer::Experimental::SelectMenu::ListComponent.new(
  id: "#{@menu_id}-list-1",
  test_selector: TEST_SELECTOR
)) do |list| %>
  <% @options.each do |option| %>
    <% list.with_item(tag: :a, href: option.href, selected: option.selected, test_selector: ITEM_TEST_SELECTOR) do %>
      <% render(Primer::Beta::Text.new(display: :inline_flex, direction: :column, style: "min-width: 0;")) do %>
        <%= render(Primer::Beta::Truncate.new(font_weight: :bold)) { option.text } %>
        <% if option.description.present? %>
          <%= render(Primer::Beta::Truncate.new(color: :muted)) { option.description } %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

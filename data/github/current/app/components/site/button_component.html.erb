<%= content_tag(element_tag,
  class: button_classes,
  data: @data,
  type: @submit ? "submit" : nil,
  disabled: @disabled && @is_button ? true : nil,
  href: @url,
  tabindex: @focusable ? nil : -1,
  **@options
) do %>
  <%= @text %>
  <%= content %>
  <%= svg("modules/site/icons/chevrow.svg") if @arrow && !@disabled %>
<% end %>

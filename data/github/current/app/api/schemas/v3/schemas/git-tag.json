{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/git-tag.json",
  "title": "Git Tag",
  "description": "Metadata for a Git tag",
  "type": "object",
  "definitions": {
    "message": {
      "description": "Message describing the purpose of the tag",
      "example": "Initial public release",
      "type": "string"
    },
    "tag": {
      "description": "Name of the tag",
      "example": "v0.0.1",
      "type": "string"
    },
    "type": {
      "description": "Type of the object referenced by the tag; usually a commit, but can also be a tree or a blob",
      "example": "commit",
      "type": "string"
    },
    "url": {
      "description": "URL for the tag",
      "example": "https://api.github.com/repositories/42/git/tags/940bd336248efae0f9ee5bc7b2d5c985887b16ac",
      "type": "string",
      "format": "uri"
    },
    "git-tagger-date": {
      "description": "Timestamp when the object was tagged",
      "example": "2014-10-01T21:00:42-04:00",
      "format": "date-time",
      "type": "string"
    },
    "git-tagger-email": {
      "description": "Email address of the tagger",
      "example": "schacon@example.com",
      "type": "string"
    },
    "git-tagger-name": {
      "description": "Name of the tagger",
      "example": "Scott Chacon",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    },
    "sha": {
      "type": "string",
      "example": "940bd336248efae0f9ee5bc7b2d5c985887b16ac"
    },
    "node_id": {
      "type": "string",
      "example": "MDM6VGFnOTQwYmQzMzYyNDhlZmFlMGY5ZWU1YmM3YjJkNWM5ODU4ODdiMTZhYw=="
    }
  },
  "links": [
    {
      "href": "/repositories/{repository_id}/git/tags",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "message": {
            "$ref": "#/definitions/message"
          },
          "object": {
            "description": "SHA of the git object referenced by the tag",
            "example": "c3d0be41ecbe669545ee3e94d31ed9a4bc91ee3c",
            "type": "string"
          },
          "tag": {
            "$ref": "#/definitions/tag"
          },
          "tagger": {
            "type": "object",
            "properties": {
              "date": {
                "$ref": "#/definitions/git-tagger-date"
              },
              "email": {
                "$ref": "#/definitions/git-tagger-email"
              },
              "name": {
                "$ref": "#/definitions/git-tagger-name"
              }
            },
            "required": [
              "email",
              "name"
            ]
          },
          "type": {
            "$ref": "#/definitions/type"
          }
        },
        "required": [
          "message",
          "object",
          "tag",
          "type"
        ],
        "type": "object"
      },
      "title": "Create"
    },
    {
      "title": "Create a tag",
      "method": "POST",
      "href": "/repositories/{repository_id}/git/tags",
      "rel": "create",
      "schema": {
        "properties": {
          "message": {
            "$ref": "#/definitions/message"
          },
          "object": {
            "description": "SHA of the git object referenced by the tag",
            "example": "c3d0be41ecbe669545ee3e94d31ed9a4bc91ee3c",
            "type": "string"
          },
          "tag": {
            "$ref": "#/definitions/tag"
          },
          "tagger": {
            "type": "object",
            "properties": {
              "date": {
                "$ref": "#/definitions/git-tagger-date"
              },
              "email": {
                "$ref": "#/definitions/git-tagger-email"
              },
              "name": {
                "$ref": "#/definitions/git-tagger-name"
              }
            },
            "required": [
              "email",
              "name"
            ]
          },
          "type": {
            "$ref": "#/definitions/type"
          }
        },
        "required": [
          "message",
          "object",
          "tag",
          "type"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ],
  "properties": {
    "sha": {
      "$ref": "#/definitions/sha"
    },
    "url": {
      "$ref": "#/definitions/url"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "tagger": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "date",
        "email",
        "name"
      ]
    },
    "object": {
      "type": "object",
      "properties": {
        "sha": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false,
      "required": [
        "sha",
        "type",
        "url"
      ]
    },
    "tag": {
      "$ref": "#/definitions/tag"
    },
    "message": {
      "$ref": "#/definitions/message"
    },
    "verification": {
      "$ref": "https://schema.github.com/v3/verification.json#"
    }
  },
  "additionalProperties": false,
  "required": [
    "sha",
    "url",
    "node_id",
    "tagger",
    "object",
    "tag",
    "message"
  ]
}

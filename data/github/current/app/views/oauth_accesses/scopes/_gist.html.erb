<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% if view.gist_access? %>
<div class="px-0 border-bottom-0 oauth-gist-permissions oauth-permissions-details js-details-container Details <%= view.gist_access_value %> <%= !view.gist_access?? 'd-none' : '' %>">

  <%= render Primer::ButtonComponent.new("aria-expanded": "false", scheme: :link, pr: 0, classes: "oauth-details-toggle js-details-target", "aria-label": "More information about this request") do %>
    <%= primer_octicon(:"chevron-down", size: :medium) %>
    <%= primer_octicon(:"chevron-up", size: :medium) %>
  <% end %>

  <%= primer_octicon(:"code-square", :height => 32) %>
  <div class="permission-summary lh-condensed">
    <strong class="permission-title">Gists</strong>
    <small class="access-details">
      <span class="no-access"><em class="highlight">No</em> access</span>
      <span class="full-access"><em class="highlight">Read and write</em> access</span>
    </small>
  </div>
  <div class="content">
    <div class="permission-help pt-2">
      <p>This application will be able to read and write your public and secret gists.</p>
      <%= render :partial => "oauth_accesses/learn_more_link", :locals => { :view => view } %>
    </div>
  </div> <!-- /.content -->
</div> <!-- /.details-container -->
<% end %>

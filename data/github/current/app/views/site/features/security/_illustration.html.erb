<% images.each_with_index do |image, i| %>
  <% if image[:webp] != nil %>
    <picture>
    <source srcset="<%= image[:webp] %>" type="image/webp">
  <% end %>
    <img src="<%= image[:src] %>"
      <% if image[:alt] != nil %>
        alt="<%= image[:alt] %>"
      <% else %>
        aria-hidden="true"
      <% end %>
      <% if image[:classes] != nil%>class="<%= image[:classes] %>" <% end %>
      <% if image[:height] != nil%>height="<%= image[:height] %>" <% end %>
      <% if image[:width] != nil%>width="<%= image[:width] %>" <% end %>
      <% if image[:style] != nil%>style="<%= image[:style] %>"<% end %>
      <% unless image[:lazy] != nil && image[:lazy] == false %>loading="lazy" decoding="async"<% end %>
    >
  <% if image[:webp] != nil %></picture><% end %>
<% end %>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/pull-request-review-request.json",
  "title": "Review Request",
  "description": "Review Requests are requests on pull requests.",
  "type": "object",
  "definitions": {
    "reviewers": {
      "description": "The desired users to request review from",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "team_reviewers": {
      "description": "The desired teams to request review from",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    },
    "pull_number": {
      "description": "The number of the pull request.",
      "type": "integer"
    }
  },
  "links": [
    {
      "method": "POST",
      "href": "/repositories/{repository_id}/pulls/{pull_number}/requested_reviewers",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "reviewers": {
            "$ref": "#/definitions/reviewers"
          },
          "team_reviewers": {
            "$ref": "#/definitions/team_reviewers"
          }
        },
        "anyOf": [
          {
            "required": [
              "reviewers"
            ]
          },
          {
            "required": [
              "team_reviewers"
            ]
          }
        ],
        "type": "object"
      },
      "title": "Create a pull request review request"
    },
    {
      "method": "DELETE",
      "href": "/repositories/{repository_id}/pulls/{pull_number}/requested_reviewers",
      "rel": "delete-legacy",
      "schema": {
        "properties": {
          "reviewers": {
            "$ref": "#/definitions/reviewers"
          },
          "team_reviewers": {
            "$ref": "#/definitions/team_reviewers"
          }
        },
        "required": [
          "reviewers"
        ],
        "type": "object"
      },
      "title": "Delete"
    },
    {
      "title": "Create a pull request review request",
      "method": "POST",
      "href": "/repositories/{repository_id}/pulls/{pull_number}/requested_reviewers",
      "rel": "create",
      "schema": {
        "properties": {
          "reviewers": {
            "$ref": "#/definitions/reviewers"
          },
          "team_reviewers": {
            "$ref": "#/definitions/team_reviewers"
          }
        },
        "anyOf": [
          {
            "required": [
              "reviewers"
            ]
          },
          {
            "required": [
              "team_reviewers"
            ]
          }
        ],
        "type": "object",
        "additionalProperties": false
      }
    },
    {
      "title": "Delete a pull request review request",
      "method": "DELETE",
      "href": "/repositories/{repository_id}/pulls/{pull_number}/requested_reviewers",
      "rel": "delete",
      "schema": {
        "properties": {
          "reviewers": {
            "$ref": "#/definitions/reviewers"
          },
          "team_reviewers": {
            "$ref": "#/definitions/team_reviewers"
          }
        },
        "required": [
          "reviewers"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

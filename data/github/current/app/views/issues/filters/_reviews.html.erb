<%# erblint:counter DeprecatedComponentsCounter 1 %>
<details class="details-reset details-overlay d-inline-block position-relative px-3" id="reviews-select-menu">
  <%= render Primer::ButtonComponent.new(tag: :summary, scheme: :link, "aria-haspopup": "true", "data-ga-click": "Pull Requests, Table filter, Reviews") do %>
    Reviews
    <span class="dropdown-caret hide-sm"></span>
  <% end %>
  <details-menu class="SelectMenu SelectMenu--hasFilter right-md-0" ><%# erblint:disable Primer::Accessibility::DetailsMenuMigration %>
    <div class="SelectMenu-modal">
      <header class="SelectMenu-header">
        <span class="SelectMenu-title">Filter by reviews</span>
        <button class="SelectMenu-closeButton" type="button" data-toggle-for="reviews-select-menu">
          <%= primer_octicon(:x, "aria-label": "Close menu") %>
        </button>
      </header>
      <div class="SelectMenu-list">
        <% review_filter_menu_items.each do |item| %>
          <a href="<%= item[:url] %>" class="SelectMenu-item" aria-checked="<%= item[:selected] %>" role="menuitemradio" >
            <%= primer_octicon(:check, classes: "SelectMenu-icon SelectMenu-icon--check") %>
            <span><%= item[:description] %></span>
          </a>
        <% end %>
      </div>
    </div>
  </details-menu>
</details>

<% if start_line.present? || local_assigns[:preview] %>
  <div class="f6 color-fg-muted">
    <% if local_assigns[:preview] %>
      Commenting on lines
    <% else %>
      Comment on lines
    <% end %>
    <%
      if start_line_type == "+"
        start_color = "color-fg-success"
      elsif start_line_type == "-"
        start_color = "color-fg-danger"
      end

      if end_line_type == "+"
        end_color = "color-fg-success"
      elsif end_line_type == "-"
        end_color = "color-fg-danger"
      end
    %>

    <span class="js-multi-line-preview-start <%= start_color %>">
      <%= start_line_type %><%= start_line %>
    </span> to <span class="js-multi-line-preview-end <%= end_color %>">
      <%= end_line_type %><%= end_line %>
    </span>

    <% if local_assigns[:diff_lines_truncated] %>
      <span class="text-italic">(Truncated to <%= PullRequestReviewThread::MAX_MULTI_LINE_EXCERPT_LINES %> lines)</span>
    <% end %>
  </div>
<% end %>

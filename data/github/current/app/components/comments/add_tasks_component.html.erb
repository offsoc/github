<%= render Primer::BaseComponent.new(**@system_arguments.merge({data: hydro_attributes})) do %>
  <%= render(Primer::Beta::Button.new(
      scheme: :invisible,
      size: :small,
      block: false,
      border: true,
      id: "tasklist-block-#{textarea_id}",
      "aria-label": "Add tasklist block",
      align_content: :center,
      classes: button_classes,
      for: textarea_id,
      color: :muted,
      style: "border-radius: 14px;",
  )) do |component| %>
    <% component.with_leading_visual_icon(icon: :plus) %>
    Add tasklist
  <% end %>
  <%= render(Primer::Beta::Button.new(
    classes: "add-tasklist-spinner",
    hidden: true,
    scheme: :invisible,
    size: :small,
    block: false,
    "aria-label": "Add tasklist spinner",
    align_content: :center,
    color: :muted
  )) do |component| %>
    <%= render(Primer::Beta::Spinner.new(size: :small, display: :block)) %>
    Adding tasklist...
  <% end %>
<% end %>

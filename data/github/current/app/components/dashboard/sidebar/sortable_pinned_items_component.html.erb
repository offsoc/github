<%= render Primer::BaseComponent.new(
  tag: :div,
  test_selector: "sortable-pinned-items-component",
  **system_arguments
) do %>
  <%= form_tag(
    sortable_path,
    class: "js-pinned-items-reorder-form",
    method: :post,
  ) do |f| %>
    <ol class="js-pinned-items-reorder-list position-relative">
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    </ol>
  <% end %>
<% end %>

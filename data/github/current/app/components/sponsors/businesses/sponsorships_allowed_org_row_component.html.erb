<div class="d-flex width-full p-3 flex-items-center"
  <%= test_selector("enterprise-org-#{org.id}") %>>
  <div class="d-flex flex-items-center">
    <%= link_to user_path(org) do %>
      <%= render GitHub::AvatarComponent.new actor: org, size: 48, mr: 2 %>
    <% end %>

    <div <%= test_selector('organization-card-name') %>>
      <%= link_to user_path(org), class: "f4 text-bold" do %>
        <%= org.display_login %>
      <% end %>
    </div>
  </div>

  <div class="flex-1">
  </div>

    <%= form_tag settings_sponsors_update_policy_enterprise_path(slug: business, org_to_disable: org), method: :put do %>
      <%= render Primer::Beta::Button.new(
        scheme: :danger, 
        type: :submit, 
        align: :right, 
        test_selector: "disable-button", 
        data: { confirm: "Are you sure you want to disable sponsorships?" },
      ).with_content("Disable") %>
    <% end %>
</div>

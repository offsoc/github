<%= render(Primer::Alpha::Dialog.new(
  title: "Convert trial to upgraded",
  id: "convert-dialog",
  size: :large
)) do |dialog| %>
  <% dialog.with_header do %>
    <%= render(Primer::Beta::Text.new) { "Force trial upgrade" } %>
  <% end %>
  <% dialog.with_body do %>
    <br>
    <%= render(Primer::Alpha::Banner.new(scheme: :danger, test_selector: "copilot-trial-force-upgrade")) do %>
      This functionality is intended to be used ONLY when this trial has been allowed to expire after a business has upgraded to a paid Copilot plan!
    <% end %>
  <% end %>
  <% dialog.with_footer do %>
    <%= form_tag stafftools_user_copilot_business_trials_path(organization.display_login), method: :patch do %>
      <%= hidden_field_tag :upgrade_only, true %>
      <%= render(Primer::Beta::Button.new(scheme: :default, type: :submit)) { "Confirm" } %>
    <% end %>
  <% end %>
  <% dialog.with_show_button(scheme: :danger) do %>
    Force upgrade
  <% end %>
<% end %>

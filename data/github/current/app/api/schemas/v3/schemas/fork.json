{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/fork.json",
  "title": "Fork",
  "description": "A copy of a repository",
  "type": "object",
  "definitions": {
    "organization": {
      "description": "The target organization for the fork",
      "type": "string"
    },
    "owner": {
      "description": "The owner of the repository",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository",
      "type": "integer",
      "example": 42
    }
  },
  "links": [
    {
      "title": "Create a fork",
      "method": "POST",
      "rel": "create",
      "href": "/repositories/{repository_id}/forks",
      "schema": {
        "properties": {
          "organization": {
            "$ref": "#/definitions/organization"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    }
  ]
}

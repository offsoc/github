{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/legacy-issue-comment.json",
  "title": "Legacy Issue Comment",
  "type": "object",
  "definitions": {
    "id": {
      "type": "integer",
      "example": 1
    },
    "node_id": {
      "type": "string",
      "example": "MDEyOklzc3VlQ29tbWVudDE="
    },
    "body": {
      "type": "string",
      "example": "Me too"
    },
    "body_text": {
      "type": "string"
    },
    "body_html": {
      "type": "string"
    },
    "html_url": {
      "type": "string",
      "format": "uri",
      "example": "https://github.com/octocat/Hello-World/issues/1347#issuecomment-1"
    },
    "issue_url": {
      "type": "string",
      "format": "uri"
    },
    "author_association": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/repos/octocat/Hello-World/issues/comments/1"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "example": "2011-04-14T16:00:49Z"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "example": "2011-04-14T16:00:49Z"
    }
  },
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "body": {
      "$ref": "#/definitions/body"
    },
    "body_text": {
      "$ref": "#/definitions/body_text"
    },
    "body_html": {
      "$ref": "#/definitions/body_html"
    },
    "html_url": {
      "$ref": "#/definitions/html_url"
    },
    "issue_url": {
      "$ref": "#/definitions/issue_url"
    },
    "author_association": {
      "$ref": "#/definitions/author_association"
    },
    "user": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    },
    "performed_via_github_app": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/integration.json#"
        }
      ]
    },
    "url": {
      "$ref": "#/definitions/url"
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    },
    "reactions": {
      "$ref": "https://schema.github.com/v3/reaction-rollup.json#"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "node_id",
    "html_url",
    "issue_url",
    "author_association",
    "user",
    "url",
    "created_at",
    "updated_at"
  ]
}

{
  "$schema": "http://json-schema.org/draft-04/schema",
  "$id": "http://schema.github.com/release_notes_config_schema.json",
  "title": "Release notes configuration",
  "description": "configuration for auto-generated release notes",
  "type": "object",
  "properties": {
    "title": {
      "description": "title for the release",
      "type": "string",
      "default": "${{version}}"
    },
    "changelog": {
      "description": "options for displaying the PRs in the release",
      "type": "object",
      "default": {},
      "properties": {
        "header": {
          "type": "string",
          "default": "What's Changed"
        },
        "default_text": {
          "type": "string",
          "default": "${{pr_title}} by ${{pr_author}} in ${{pr_url}}"
        },
        "no_author_text": {
          "type": "string",
          "default": "${{pr_title}} in ${{pr_url}}"
        },
        "exclude": {
          "description": "options for excluding PRs",
          "type": "object",
          "properties": {
            "authors": {
              "description": "author names whose PRs should be excluded",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "labels": {
              "description": "labels whose PRs should be excluded",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "categories": {
          "description": "defines groupings for PRs based on label",
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "labels": {
                "description": "a list of labels to use when determining which PRs to include in the category",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "title": {
                "description": "display title for the category",
                "type": "string"
              },
              "exclude": {
                "description": "options for excluding PRs",
                "type": "object",
                "properties": {
                  "authors": {
                    "description": "author names whose PRs should be excluded",
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "labels": {
                    "description": "labels whose PRs should be excluded",
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "new_contributors": {
      "description": "options for the new contributor section",
      "type": "object",
      "default": {},
      "properties": {
        "header": {
          "type": "string",
          "default": "New Contributors"
        },
        "default_text": {
          "type": "string",
          "default": "${{contributor_name}} made their first contribution in ${{contribution}}"
        }
      }
    },
    "compare": {
      "description": "options for release range compare link",
      "type": "object",
      "default": {},
      "properties": {
        "default_text": {
          "type": "string",
          "default": "**Full Changelog**: ${{compare_url}}"
        }
      }
    }
  }
}

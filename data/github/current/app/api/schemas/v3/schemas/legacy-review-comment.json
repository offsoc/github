{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/legacy-review-comment.json",
  "title": "Legacy Review Comment",
  "type": "object",
  "definitions": {
    "id": {
      "type": "integer",
      "example": 10
    },
    "node_id": {
      "type": "string",
      "example": "MDI0OlB1bGxSZXF1ZXN0UmV2aWV3Q29tbWVudDEw"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/repos/octocat/Hello-World/pulls/comments/1"
    },
    "body": {
      "type": "string",
      "example": "Great stuff"
    },
    "body_text": {
      "type": "string"
    },
    "body_html": {
      "type": "string"
    },
    "diff_hunk": {
      "type": "string",
      "example": "@@ -16,33 +16,40 @@ public class Connection : IConnection..."
    },
    "line": {
      "description": "The line of the blob to which the comment applies. The last line of the range for a multi-line comment",
      "example": 2,
      "type": "integer"
    },
    "original_line": {
      "description": "The original line of the blob to which the comment applies. The last line of the range for a multi-line comment",
      "example": 2,
      "type": "integer"
    },
    "start_line": {
      "description": "The first line of the range for a multi-line comment.",
      "example": 2,
      "type": [
        "integer",
        "null"
      ]
    },
    "original_start_line": {
      "description": "The original first line of the range for a multi-line comment.",
      "example": 2,
      "type": [
        "integer",
        "null"
      ]
    },
    "side": {
      "description": "The side of the first line of the range for a multi-line comment.",
      "enum": [
        "LEFT",
        "RIGHT"
      ],
      "default": "RIGHT",
      "type": "string"
    },
    "start_side": {
      "description": "The side of the first line of the range for a multi-line comment.",
      "enum": [
        "LEFT",
        "RIGHT"
      ],
      "default": "RIGHT",
      "type": "string"
    },
    "path": {
      "type": "string",
      "example": "file1.txt"
    },
    "position": {
      "type": [
        "number",
        "null"
      ],
      "example": 1
    },
    "original_position": {
      "type": "integer",
      "example": 4
    },
    "in_reply_to_id": {
      "type": "integer",
      "example": 8
    },
    "commit_id": {
      "type": "string",
      "example": "6dcb09b5b57875f334f61aebed695e2e4193db5e"
    },
    "original_commit_id": {
      "type": "string",
      "example": "9c48853fa3dc5c1c3d6f1f1cd1f2743e72652840"
    },
    "pull_request_review_id": {
      "type": [
        "number",
        "null"
      ],
      "example": 42
    },
    "html_url": {
      "type": "string",
      "format": "uri",
      "example": "https://github.com/octocat/Hello-World/pull/1#discussion-diff-1"
    },
    "pull_request_url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/repos/octocat/Hello-World/pulls/1"
    },
    "author_association": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "example": "2011-04-14T16:00:49Z"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "example": "2011-04-14T16:00:49Z"
    }
  },
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "url": {
      "$ref": "#/definitions/url"
    },
    "body": {
      "$ref": "#/definitions/body"
    },
    "body_text": {
      "$ref": "#/definitions/body_text"
    },
    "body_html": {
      "$ref": "#/definitions/body_html"
    },
    "diff_hunk": {
      "$ref": "#/definitions/diff_hunk"
    },
    "path": {
      "$ref": "#/definitions/path"
    },
    "position": {
      "$ref": "#/definitions/position"
    },
    "original_position": {
      "$ref": "#/definitions/original_position"
    },
    "side": {
      "$ref": "#/definitions/side"
    },
    "start_side": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/definitions/start_side"
        }
      ]
    },
    "line": {
      "$ref": "#/definitions/line"
    },
    "original_line": {
      "$ref": "#/definitions/original_line"
    },
    "start_line": {
      "$ref": "#/definitions/start_line"
    },
    "original_start_line": {
      "$ref": "#/definitions/original_start_line"
    },
    "in_reply_to_id": {
      "$ref": "#/definitions/in_reply_to_id"
    },
    "commit_id": {
      "$ref": "#/definitions/commit_id"
    },
    "original_commit_id": {
      "$ref": "#/definitions/original_commit_id"
    },
    "user": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    },
    "pull_request_review_id": {
      "$ref": "#/definitions/pull_request_review_id"
    },
    "html_url": {
      "$ref": "#/definitions/html_url"
    },
    "pull_request_url": {
      "$ref": "#/definitions/pull_request_url"
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "https://schema.github.com/v3/link.json#"
        },
        "html": {
          "$ref": "https://schema.github.com/v3/link.json#"
        },
        "pull_request": {
          "$ref": "https://schema.github.com/v3/link.json#"
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "html",
        "pull_request"
      ]
    },
    "author_association": {
      "$ref": "#/definitions/author_association"
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "node_id",
    "url",
    "body",
    "diff_hunk",
    "path",
    "position",
    "original_position",
    "commit_id",
    "original_commit_id",
    "user",
    "pull_request_review_id",
    "html_url",
    "pull_request_url",
    "_links",
    "author_association",
    "created_at",
    "updated_at"
  ]
}

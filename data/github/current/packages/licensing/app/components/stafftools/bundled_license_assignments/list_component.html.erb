<% if @search_form_path.present? %>
  <%= render Stafftools::SimpleSearchFormComponent.new(
    query_label: "Search license assignments",
    form_url: @search_form_path,
    form_group_test_selector: "bundled-license-assignment-search"
  ) %>
<% end %>

<div class="Box">
  <div class="Box-header" <%= test_selector("bundled-license-assignment-header") %>>
    <%= table_header %>
  </div>

  <ul>
    <% @assignments.each do |assignment| %>
      <%= render Stafftools::BundledLicenseAssignments::ListItemComponent.new(assignment: assignment) %>
    <% end %>
  </ul>
</div>

<% if pagination? %>
  <div class="paginate-container" <%= test_selector("bundled-license-assignment-pagination") %>>
    <div class="pagination">
      <%= will_paginate @assignments, params: {
        controller: PAGINATION_CONTROLLER,
        action: @action
      } %>
    </div>
  </div>
<% end %>

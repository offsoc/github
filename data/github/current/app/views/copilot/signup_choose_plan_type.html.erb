<% page_info title: "Signup to GitHub Copilot" %>

<%= render Copilot::SignupComponent.new do |signup_component| %>
  <% signup_component.with_heading do %>
    <span class="copilot-signup-heading">
      GitHub Copilot
    </span>
  <% end %>
  <% signup_component.with_subheading do %>
    <span class="copilot-signup-subheading">
      Infuse AI into GitHub to accelerate every step of the software development lifecycle
    </span>
  <% end %>
  <% signup_component.with_main do %>
    <div class="container-lg p-responsive clearfix mt-4" data-hpc>
      <h3 class="h2 mb-4">Select plan</h3>

      <copilot-signup-choose-plan-type>
        <div class="col-lg-6 float-lg-left mt-3 mt-lg-0 pr-lg-5">
          <% unless business_only %>
            <div class="<%= default_plan == "individual" ? "copilot-signup-selected-plan-type" : "" %> copilot-signup-plan-type d-flex p-3 rounded-2 mb-2" data-action="click:copilot-signup-choose-plan-type#showPlanIndividual" data-target="copilot-signup-choose-plan-type.planIndividualSelector">
              <div>
                <h3>GitHub Copilot Individual</h3>
                <div class="text-light">Code completions, Chat and more for indie developers and freelancers.</div>
              </div>
              <div class="text-right col-lg-3 ml-auto">
                <h3 class="f3-light">$10</h3>
                <div class="text-light">/ month</div>
              </div>
            </div>
          <% end %>
          <div class="<%= default_plan == "business" ? "copilot-signup-selected-plan-type" : "" %> copilot-signup-plan-type d-flex p-3 rounded-2 mb-2" data-action="click:copilot-signup-choose-plan-type#showPlanBusiness" data-target="copilot-signup-choose-plan-type.planBusinessSelector">
            <div>
              <h3>GitHub Copilot Business</h3>
              <div class="text-light">Copilot in the coding environment.</div>
            </div>
            <div class="text-right col-lg-3 ml-auto">
              <h3 class="f3-light">$19</h3>
              <div class="text-light">per user / month</div>
            </div>
          </div>
          <div class="<%= default_plan == "enterprise" ? "copilot-signup-selected-plan-type" : "" %> copilot-signup-plan-type d-flex p-3 rounded-2 mb-2" data-action="click:copilot-signup-choose-plan-type#showPlanEnterprise" data-target="copilot-signup-choose-plan-type.planEnterpriseSelector">
            <div>
              <h3>GitHub Copilot Enterprise <%= render Primer::Beta::Label.new(title: "New", scheme: :done, vertical_align: :middle, mb: 1, ml: 1) do %>New<% end %></h3>
              <div class="text-light">Copilot personalized to your organization.<br>Requires GitHub Enterprise Cloud.</div>
            </div>
            <div class="text-right col-lg-3 ml-auto">
              <h3 class="f3-light">$39</h3>
              <div class="text-light">per user / month</div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 float-lg-left pl-lg-6 mt-5 mt-lg-0">
          <div class="copilot-signup-payment-summary-box d-flex p-3 flex-column color-shadow-large rounded-bottom-2">
            <% unless business_only %>
              <div data-target="copilot-signup-choose-plan-type.planIndividual" <%= default_plan != "individual" ? "hidden" : "" %>>
                <h3 class="f2-light mb-2">GitHub Copilot Individual</h3>
                <div class="">
                  <div class="mb-1 col-lg-9">
                    <span>
                      Code completions, Chat and more for indie developers and freelancers.
                      Free for verified students, teachers and maintainers of popular open source projects.
                    </span>
                  </div>
                  <p class="text-light text-small mt-2">
                    See <%= link_to "all features available", "Copilot::COPILOT_FOR_INDIVIDUALS_DOCUMENTATION", class: "Link--inTextBlock" %> on this plan.
                  </p>
                  <hr class="mt-4 mb-2">
                  <div class="d-flex">
                    <b class="f2-light">$10</b>
                    <span class="text-light text-small flex-self-end mb-1 ml-2">per month / $100 per year</span>
                  </div>
                  <div class="mt-3 mb-2">
                    <div class="float-left">
                      <%= render Primer::Beta::Button.new(tag: :a, scheme: :primary, href: copilot_signup_path(**utm_memo), p: 2, pl: 4, pr: 4) do %>
                        Purchase Copilot
                      <% end %>
                    </div>
                    <div class="float-left ml-2">
                      <%= render Primer::Beta::Button.new(tag: :a, scheme: :default, href: copilot_signup_path(**utm_memo), p: 2, pl: 4, pr: 4) do %>
                        Start your free trial
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <div data-target="copilot-signup-choose-plan-type.planBusiness" <%= default_plan != "business" ? "hidden" : "" %>>
              <h3 class="f2-light mb-2">GitHub Copilot Business</h3>

              <p>Infuse AI into GitHub to accelerate every step of the software development lifecycle.</p>
              <div class="">
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <span>Code completions</span>
                </div>
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <span>Chat in IDE and Mobile</span>
                </div>
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <span>CLI assistance</span>
                </div>
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <span>Security vulnerability filter</span>
                </div>
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <span>Code referencing</span>
                </div>
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <span>Enterprise-grade security, safety, privacy and more...</span>
                </div>
                <p class="text-light text-small mt-2">
                  See <%= link_to "all features available", "Copilot::COPILOT_FOR_BUSINESS_DOCUMENTATION", class: "Link--inTextBlock" %> on this plan.
                </p>
                <hr class="mt-4 mb-2">
                <div class="d-flex">
                  <b class="f2-light">$19</b> &nbsp;
                  <span class="text-light text-small flex-self-end mb-1 ml-1">per user / month</span>
                </div>
                <div class="mt-3 mb-2">
                  <% href = enterprise ? copilot_business_signup_enterprise_payment_path(enterprise: enterprise, **utm_memo) : copilot_business_signup_path(**utm_memo)  %>
                  <%= render Primer::Beta::Button.new(tag: :a, scheme: :primary, size: :large, href: href, p: 2, pl: 4, pr: 4, col: 6, float: :left) do %>
                    Enable Copilot Business
                  <% end %>
                  <span class="text-light text-small f6 pl-2 ml-1 float-left col-lg-5">Next: <%= enterprise ? "confirm payment details" : "choose organization or enterprise" %></span>
                </div>
              </div>
            </div>
            <div data-target="copilot-signup-choose-plan-type.planEnterprise" <%= default_plan != "enterprise" ? "hidden" : "" %>>
              <%= render Primer::Beta::Label.new(title: "New", scheme: :done) do %>New<% end %>
              <h3 class="f2-light mb-2">GitHub Copilot Enterprise</h3>

              <p>Infuse AI into GitHub to accelerate every step of the software development lifecycle.</p>
              <div class="">
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <b>Everything in Copilot Business, plus...</b>
                </div>
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <span>Chat support on github.com</span>
                </div>
                <div class="mb-1">
                  <%= primer_octicon(icon: "check", color: :success) %>
                  <span>Explanations based on your repositories, and more...</span>
                </div>
                <p class="text-light text-small mt-2">
                  See <%= link_to "all features available", "Copilot::COPILOT_FOR_ENTERPRISE_DOCUMENTATION", class: "Link--inTextBlock" %> on this plan.
                </p>
                <hr class="mt-4 mb-2">
                <div class="d-flex">
                  <b class="f2-light">$39</b> &nbsp;
                  <span class="text-light text-small flex-self-end ml-1 mb-1">per user / month</span>
                </div>
                <div class="mt-3 mb-2">
                  <% href = enterprise ? copilot_enterprise_signup_payment_path(enterprise: enterprise, **utm_memo) : copilot_enterprise_signup_path(**utm_memo)  %>
                  <%= render Primer::Beta::Button.new(tag: :a, scheme: :primary, size: :large, href: href, p: 2, pl: 4, pr: 4, col: 6, float: :left) do %>
                    Enable Copilot Enterprise
                  <% end %>
                  <span class="text-light text-small f6 pl-2 ml-2 mt-2 float-left">Next: <%= enterprise ? "confirm payment details" : "choose enterprise" %></span>
                </div>
              </div>
            </div>
          </div>

          <p class="text-light text-small ml-4 mr-4 mt-3 text-center">
            Your existing agreement with GitHub governs your use of GitHub Copilot.
            See <%= link_to "GitHub Copilot specific terms here", Copilot::COPILOT_SPECIFIC_TERMS, class: "Link--inTextBlock" %>.
            If you require invoices
            <%= link_to "contact our sales team", Copilot::CONTACT_SALES_TEAM, class: "Link--inTextBlock" %>.
          </p>
        </div>
      </copilot-signup-choose-plan-type>
    </div>
  <% end %>
<% end %>

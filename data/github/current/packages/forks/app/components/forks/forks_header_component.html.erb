<%= render Primer::Box.new(align: :right) do %>
  <%= render Primer::Beta::Link.new(
    href: tree_view_path,
    font_size: :small,
    color: :muted)
    .with_content("Switch to tree view")
  %>
<% end %>
<search-control-menu>
  <%= render Primer::Box.new(
    display: :flex,
    mt: 2,
    align_items: :center,
    direction: [
      :column,
      :column,
      :column,
      :row,
    ],
  ) do %>
    <%= render Primer::Beta::Heading.new(
      tag: :h1,
      font_size: 2,
      font_weight: :normal,
      w: :auto,
      display: :inline_block,
      test_selector: "forks-heading",
    ).with_content("Forks") %>
    <% if render_controls? %>
      <%= render Primer::Box.new(flex: 1) %><%# Spacer %>
      <%= render Forks::ForksControlsComponent.new(path_resolver) %>
    <% end %>
  <% end %>
</search-control-menu>

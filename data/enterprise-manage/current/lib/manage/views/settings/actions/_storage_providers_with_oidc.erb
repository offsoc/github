<div class="js-actions-storage-selection actions-storage-providers-selection">
   <div class="actions-storage-providers-list js-actions-storage-list"
   style=<%=('display:none' if (view.actions_enabled? && view.storage_provider_configured?))%>>
     <div class="subsection-level-1">
         <div>
           <label class = "label-heading js-actions-storage-sub-heading">
             Storage Provider
           </label> 
           <label class="muted">
             <p>Select a storage provider to store your data generated by workflow runs.</p>
           </label>
         </div>
         <div class="actions-storage-providers-item actions-storage-providers-item-border-bottom">
           <div class="actions-storage-providers-logo">
             <img src="/setup/images/logos/azure.svg" alt="" class= "provider-logo">
           </div>
           <label class="lable-heading actions-storage-providers-item-label">
             Azure Blob Storage
           </label>
           <input type="button"
             name="azure"
             class="btn js-setup-storage actions-storage-providers-item-button"
             value="Setup"
           />
         </div>
         <div class="actions-storage-providers-item actions-storage-providers-item-border-bottom">
           <div class="actions-storage-providers-logo">
             <img src="/setup/images/logos/aws.svg" alt="" class="provider-logo">
           </div>
           <label class="label-heading actions-storage-providers-item-label">
             Amazon S3
           </label>
           <input type="button"
             name="s3"
             class="btn js-setup-storage actions-storage-providers-item-button"
             value="Setup"
           />
         </div>
        <div class="actions-storage-providers-item">
           <div class="actions-storage-providers-logo">
             <img src="/setup/images/logos/gcs.svg" alt="" class="provider-logo">
           </div>
           <label class="label-heading actions-storage-providers-item-label">
             Google Cloud Storage
           </label>
           <input type="button"
             name="gcs"
             class="btn js-setup-storage actions-storage-providers-item-button"
             value="Setup"
           />
        </div>
     </div>
   </div>

  <div class="js-actions-storage-dropdown"
    style=<%=('display:none' unless (view.actions_enabled? && view.storage_provider_configured?))%> >
    <div class="actions-storage-providers-dropdown">
      <div class="actions-storage-providers-dropdown-logo">
        <img src="/setup/images/logos/azure.svg" alt="" class= "js-azure-dropdown-logo actions-storage-providers-dropdown-azure-logo" style=<%=('display:none' unless view.azure_storage_enabled?)%>>
        <img src="/setup/images/logos/aws.svg" alt="" class= "js-s3-dropdown-logo actions-storage-providers-dropdown-s3-logo" style=<%=('display:none' unless view.s3_storage_enabled?)%>>
        <img src="/setup/images/logos/gcs.svg" alt="" class= "js-gcs-dropdown-logo actions-storage-providers-dropdown-azure-logo" style=<%=('display:none' unless view.gcs_storage_enabled?)%>>
      </div>
      <select name="actions_storage[blob_provider]" class="actions-storage-providers-dropdown-lable js-actions-storage-select js-select-trigger" data-triggers-select=".auth-selection">
        <option <%= view.azure_storage_selected? %> 
            value="azure" 
            class="actions-storage-providers-dropdown-option">
            Azure Blob Storage
        </option>
        <option <%= view.s3_storage_selected? %> 
            value="s3" 
            class="actions-storage-providers-dropdown-option">
            Amazon S3
        </option>
        <option <%= view.gcs_storage_selected? %> 
            value="gcs"
            class="actions-storage-providers-dropdown-option">
            Google Cloud Storage
        </option>
      </select>
    </div>
    <div id="actions-azure-blob-storage-provider" style=<%=('display:none' unless view.azure_storage_enabled?)%>>
      <%== erb :"settings/actions/_azure_blob", locals: {view: view} %>
    </div>
    <div id="actions-amazon-s3-storage-provider" style=<%=('display:none' unless view.s3_storage_enabled?)%>>
      <%== erb :"settings/actions/_amazon_s3", locals: {view: view} %>
    </div>
    <div id="actions-google-cloud-storage-provider" style=<%=('display:none' unless view.gcs_storage_enabled?)%>>
      <%== erb :"settings/actions/_google_storage", locals: {view: view} %>
    </div>
    <div id="test-storage" class="actions-test-storage">
      <button class="btn js-test-actions-settings" value="/setup/settings/test/storage/actions" popover="#test-actions-settings">
        Test storage settings
      </button>
    </div>
  </div>
 </div>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/team-discussion.json",
  "title": "Team Discussion",
  "description": "A team discussion is a persistent record of a free-form conversation within a team.",
  "type": "object",
  "definitions": {
    "number": {
      "description": "The unique sequence number of a team discussion.",
      "example": 42,
      "type": "integer"
    },
    "team_id": {
      "description": "The ID of the team.",
      "type": "integer"
    },
    "discussion_number": {
      "description": "The number of the discussion.",
      "type": "integer"
    },
    "title": {
      "description": "The title of the discussion.",
      "example": "How can we improve our workflow?",
      "type": "string"
    },
    "body": {
      "description": "The main text of the discussion.",
      "example": "Please suggest improvements to our workflow in comments.",
      "type": "string"
    },
    "body_version": {
      "description": "The current version of the body content. If provided, this update operation will be rejected if the given version does not match the latest version on the server.",
      "example": "0307116bbf7ced493b8d8a346c650b71",
      "type": "string"
    },
    "private": {
      "description": "Whether or not this discussion should be restricted to team members and organization administrators.",
      "example": true,
      "type": "boolean"
    },
    "pinned": {
      "description": "Whether or not this discussion should be pinned for easy retrieval.",
      "example": true,
      "type": "boolean"
    },
    "body_html": {
      "type": "string",
      "example": "<p>Hi! This is an area for us to collaborate as a team</p>"
    },
    "comments_count": {
      "type": "integer",
      "example": 0
    },
    "comments_url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/organizations/1/team/2343027/discussions/1/comments"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "example": "2018-01-25T18:56:31Z"
    },
    "last_edited_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "html_url": {
      "type": "string",
      "format": "uri",
      "example": "https://github.com/orgs/github/teams/justice-league/discussions/1"
    },
    "node_id": {
      "type": "string",
      "example": "MDE0OlRlYW1EaXNjdXNzaW9uMQ=="
    },
    "team_url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/organizations/1/team/2343027"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "example": "2018-01-25T18:56:31Z"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/organizations/1/team/2343027/discussions/1"
    }
  },
  "links": [
    {
      "href": "/organizations/{org_id}/team/{team_id}/discussions",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "title": {
            "$ref": "#/definitions/title"
          },
          "body": {
            "$ref": "#/definitions/body"
          },
          "private": {
            "$ref": "#/definitions/private"
          }
        },
        "required": [
          "title",
          "body"
        ],
        "type": "object"
      },
      "title": "Create a new team discussion"
    },
    {
      "href": "/organizations/{org_id}/team/{team_id}/discussions/{discussion_number}",
      "method": "PATCH",
      "rel": "update-legacy",
      "schema": {
        "properties": {
          "title": {
            "$ref": "#/definitions/title"
          },
          "body": {
            "$ref": "#/definitions/body"
          },
          "pinned": {
            "$ref": "#/definitions/pinned"
          },
          "body_version": {
            "$ref": "#/definitions/body_version"
          }
        },
        "type": [
          "object",
          "null"
        ]
      },
      "title": "Update an existing team discussion"
    },
    {
      "href": "/organizations/{org_id}/team/{team_id}/discussions/{discussion_number}",
      "method": "POST",
      "rel": "update",
      "schema": {
        "properties": {
          "title": {
            "$ref": "#/definitions/title"
          },
          "body": {
            "$ref": "#/definitions/body"
          },
          "pinned": {
            "$ref": "#/definitions/pinned"
          },
          "body_version": {
            "$ref": "#/definitions/body_version"
          }
        },
        "type": [
          "object",
          "null"
        ]
      },
      "title": "Update an existing team discussion"
    },
    {
      "title": "Create a new team discussion",
      "method": "POST",
      "href": "/organizations/{org_id}/team/{team_id}/discussions",
      "rel": "create",
      "schema": {
        "properties": {
          "title": {
            "$ref": "#/definitions/title"
          },
          "body": {
            "$ref": "#/definitions/body"
          },
          "private": {
            "$ref": "#/definitions/private"
          }
        },
        "required": [
          "title",
          "body"
        ],
        "type": "object",
        "additionalProperties": false
      }
    },
    {
      "title": "Update an existing team discussion",
      "method": "PATCH",
      "href": "/organizations/{org_id}/team/{team_id}/discussions/{discussion_number}",
      "rel": "update",
      "schema": {
        "properties": {
          "title": {
            "$ref": "#/definitions/title"
          },
          "body": {
            "$ref": "#/definitions/body"
          },
          "pinned": {
            "$ref": "#/definitions/pinned"
          },
          "body_version": {
            "$ref": "#/definitions/body_version"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Delete a discussion",
      "method": "DELETE",
      "rel": "delete",
      "href": "/organizations/{org_id}/team/{team_id}/discussions/{discussion_number}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ],
  "properties": {
    "author": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    },
    "body": {
      "$ref": "#/definitions/body"
    },
    "body_html": {
      "$ref": "#/definitions/body_html"
    },
    "body_version": {
      "$ref": "#/definitions/body_version"
    },
    "comments_count": {
      "$ref": "#/definitions/comments_count"
    },
    "comments_url": {
      "$ref": "#/definitions/comments_url"
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "last_edited_at": {
      "$ref": "#/definitions/last_edited_at"
    },
    "html_url": {
      "$ref": "#/definitions/html_url"
    },
    "pinned": {
      "$ref": "#/definitions/pinned"
    },
    "private": {
      "$ref": "#/definitions/private"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "number": {
      "$ref": "#/definitions/number"
    },
    "team_url": {
      "$ref": "#/definitions/team_url"
    },
    "title": {
      "$ref": "#/definitions/title"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    },
    "url": {
      "$ref": "#/definitions/url"
    },
    "reactions": {
      "$ref": "https://schema.github.com/v3/reaction-rollup.json#"
    }
  },
  "additionalProperties": false,
  "required": [
    "author",
    "body",
    "body_html",
    "body_version",
    "comments_count",
    "comments_url",
    "created_at",
    "last_edited_at",
    "html_url",
    "pinned",
    "private",
    "node_id",
    "number",
    "team_url",
    "title",
    "updated_at",
    "url"
  ]
}

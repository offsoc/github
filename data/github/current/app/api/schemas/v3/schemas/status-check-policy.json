{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/status-check-policy.json",
  "title": "Status Check Policy",
  "type": "object",
  "definitions": {
    "url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/repos/octocat/Hello-World/branches/master/protection/required_status_checks"
    },
    "contexts_url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/repos/octocat/Hello-World/branches/master/protection/required_status_checks/contexts"
    },
    "strict": {
      "type": "boolean",
      "example": true
    },
    "contexts": {
      "type": "array",
      "example": [
        "continuous-integration/travis-ci"
      ]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "context": {
            "type": "string",
            "example": "continuous-integrtion/travis-ci"
          },
          "app_id": {
            "type": [
              "null",
              "integer"
            ]
          }
        }
      }
    }
  },
  "properties": {
    "url": {
      "$ref": "#/definitions/url"
    },
    "contexts_url": {
      "$ref": "#/definitions/contexts_url"
    },
    "strict": {
      "$ref": "#/definitions/strict"
    },
    "contexts": {
      "$ref": "#/definitions/contexts"
    },
    "checks": {
      "$ref": "#/definitions/checks"
    }
  },
  "additionalProperties": false,
  "required": [
    "url",
    "contexts_url",
    "strict",
    "contexts"
  ]
}

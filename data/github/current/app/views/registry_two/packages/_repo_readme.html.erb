<% formatted_readme = format_readme(readme, entity: repository, committish: repository.default_branch) %>
<div id="readme" class="<%= class_names(
    "Box",
    readme_extension_class_name(readme),
    "js-code-block-container Box--responsive",
    "mb-4 mt-4"
  ) %>">
  <div class="Box-header d-flex flex-items-center flex-justify-between color-bg-default border-bottom-0">
    <h2 class="Box-title pr-3">
      <%= link_to blob_view_url(readme.path, repository.default_branch, repository), class: "Link--muted" do %>
        <%= readme_name_for_display %>
      <% end %>
    </h2>
  </div>
  <% if formatted_readme %>
    <div class="Box-body <% if readme.language %>px-5 pb-5<% end %>">
      <%= formatted_readme %>
    </div>
  <% else %>
    <div class="Box-body py-6 text-center">
      <% if readme.binary? %>
        We canâ€™t display this README because it appears to contain binary data.
      <% else %>
        There was an error when displaying this README.
      <% end %>
    </div>
  <% end %>
</div>

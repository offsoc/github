<% selected_link = :info unless selected_link.present? %>

<%= render Primer::Beta::Heading.new(tag: :h1) do %>
  <%= listing.name %>
<% end %>

<%= render(Primer::Alpha::UnderlineNav.new(label: "Listing navigation", mb: 3)) do |component| %>
  <% component.with_tab(href: biztools_marketplace_listing_path(listing.slug), selected: selected_link == :listing_info) do |tab| %>
    <% tab.with_icon(icon: :info) %>
    <% tab.with_text { "Info" } %>
  <% end %>
  <% component.with_tab(href: biztools_marketplace_listing_finance_path(listing.slug), selected: selected_link == :listing_finance) do |tab| %>
    <% tab.with_icon(icon: :"credit-card") %>
    <% tab.with_text { "Finance" } %>
  <% end %>
  <% component.with_tab(href: biztools_marketplace_listing_hook_path(listing.slug), selected: selected_link == :listing_webhook) do |tab| %>
    <% tab.with_icon(icon: :webhook) %>
    <% tab.with_text { "Webhook" } %>
  <% end %>
<% end %>

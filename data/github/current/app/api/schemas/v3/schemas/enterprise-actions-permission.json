{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/enterprise-actions-permission.json",
  "title": "Permission for running actions for an enterprise account",
  "type": "object",
  "definitions": {
    "enabled_organizations": {
      "description": "Whether GitHub Actions is enabled to run on this enterprise's orgs.",
      "type": "string",
      "enum": [
        "all",
        "none",
        "selected"
      ]
    },
    "selected_organizations_url": {
      "description": "The URL to specify which organizations are allowed to run Actions within this enterprise, if 'enabled_organizations' is 'selected'.",
      "type": "string"
    },
    "allowed_actions": {
      "description": "Which actions are allowed to run within this enterprise's organizations.",
      "type": "string",
      "enum": [
        "all",
        "local_only",
        "selected"
      ]
    },
    "selected_actions_url": {
      "description": "The URL of the selected actions if 'allowed_actions' is 'selected'.",
      "type": "string"
    }
  },
  "properties": {
    "enabled_organizations": {
      "$ref": "#/definitions/enabled_organizations"
    },
    "selected_organizations_url": {
      "$ref": "#/definitions/selected_organizations_url"
    },
    "allowed_actions": {
      "$ref": "#/definitions/allowed_actions"
    },
    "selected_actions_url": {
      "$ref": "#/definitions/selected_actions_url"
    }
  },
  "additionalProperties": false,
  "required": [
    "enabled_organizations"
  ],
  "links": [
    {
      "title": "Enable or disable GitHub Actions for an enterprise",
      "href": "/enterprises/{enterprise_id}/actions/permissions",
      "method": "PUT",
      "rel": "set-permission",
      "schema": {
        "properties": {
          "enabled_organizations": {
            "$ref": "#/definitions/enabled_organizations"
          },
          "allowed_actions": {
            "$ref": "#/definitions/allowed_actions"
          }
        },
        "required": [
          "enabled_organizations"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

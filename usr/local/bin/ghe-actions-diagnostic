#!/bin/bash
#/ Usage: ghe-actions-diagnostic [-h]
#/ OPTIONS:
#/   -h | --help        Show help from Actions diagnostic script.
#/
#/ Wrapper to exec /usr/local/share/enterprise/actions-diagnostics/diagnostic.rb with sudo
#/ if not already running as root
#/
set -euo pipefail

if [ "$(id -u)" != "0" ]; then
  exec sudo /usr/local/share/enterprise/actions-diagnostics/diagnostic.rb "$@"
else
  exec /usr/local/share/enterprise/actions-diagnostics/diagnostic.rb "$@"
fi
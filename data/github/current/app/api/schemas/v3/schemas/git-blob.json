{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/git-blob.json",
  "title": "Git Blob",
  "description": "The object type used to store the contents of each file in a repository",
  "type": "object",
  "definitions": {
    "content": {
      "description": "The blob's content",
      "type": "string",
      "example": "heart"
    },
    "encoding": {
      "description": "The encoding used for `content`",
      "default": "utf-8",
      "type": "string",
      "enum": [
        "utf-8",
        "base64"
      ]
    },
    "owner": {
      "description": "The owner of the repository",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository",
      "type": "integer",
      "example": 42
    }
  },
  "links": [
    {
      "title": "Create a blob",
      "method": "POST",
      "rel": "create",
      "href": "/repositories/{repository_id}/git/blobs",
      "schema": {
        "properties": {
          "content": {
            "$ref": "#/definitions/content"
          },
          "encoding": {
            "$ref": "#/definitions/encoding"
          }
        },
        "type": "object",
        "additionalProperties": false,
        "required": [
          "content"
        ]
      }
    }
  ]
}

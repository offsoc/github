# https://github.com/github/puppet/master/modules/github/files/etc/gitconfig

[gc]
	auto = 500
	autopacklimit = 50
	pruneexpire = 1.hour.ago
	reflogexpire = never

[pack]
	windowMemory = 512m
	deltaCacheSize = 512m
	threads = 1
	packSizeLimit = 20G
	usebitmaps = true

[core]
	alternateRefsCommand = git-nw-alternate-tips
	logAllRefUpdates = true
	attributesfile = /etc/gitattributes
	protectHFS = true
	protectNTFS = true

[receive]
	denyDeleteCurrent = false
	denyCurrentBranch = ignore
	autogc = false
	fsckObjects = true
	hiderefs = refs/pull/
	hiderefs = refs/__gh__
	maxsize = 2147483648
	warnobjectsize = 52428800
	advertisePushOptions = true
	pushOptionsCountLimit = 64

[transfer]
	unpackLimit = 1

[http]
	uploadpack = true
	receivepack = true
	getanyfile = false

[uploadArchive]
	allowUnreachable = true

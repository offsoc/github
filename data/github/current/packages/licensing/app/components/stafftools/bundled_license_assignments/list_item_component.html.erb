<li class="Box-row d-flex flex-items-center flex-justify-between" <%= test_selector("bundled-license-assignment-item") %>>
  <div class="text-bold">
    <span class="mr-2">
      <%= icon %>
    </span>
    <span <%= test_selector("bundled-license-assignment-#{@assignment.id}-label") %>><%= label %></span>
  </div>

<div>
  <div class="color-fg-muted">
    <%= linked_status %>
  </div>

  <div class="color-fg-muted">
    <%= revoked_status %>
  </div>

  <div>
    <% if show_perform_link_button %>
      <%= form_tag perform_user_link_job_stafftools_enterprise_bundled_license_assignment_path(@assignment.business, @assignment), method: :post do %>
        <%= render Primer::Beta::Button.new(
          type: :submit,
          size: :small,
          test_selector: "perform-user-link-button",
        ) do %>
          Perform User Link Job
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
</li>

<% items = actions.each_with_object([]) do |action, array| %>
  <% c = ProgrammaticAccess::ActionSelectionListItemMenuComponent.new(action, @resource, @view) %>

  <% if c.render? %>
    <% array << GitHub::Menu::RadioComponent.new(
      text: c.label_text, checked: c.checked?,
      name: c.name, value: c.value, replace_text: c.label_text,
      id: c.id, disabled: c.disabled?, data: c.data_attributes
    ) %>
  <% end %>
<% end %>

<%= render GitHub::MenuComponent.new(text: "Access: ", title: "Select an access level", items: items, align: :right) %>

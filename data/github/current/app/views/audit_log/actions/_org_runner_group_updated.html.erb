<% from_api = view.entry.data["request_category"] == "api" %>
Updated runner group <%= view.entry.hit.data[:runner_group_id] %> for <span class="context"><%= view.link_to_org %></span><% if from_api %> via the API <% end %>.
<% if view.entry.hit.data[:runner_group_name].present? %>
  Name is "<%= view.entry.hit.data[:runner_group_name].to_s %>".
<% end %>
<% if view.entry.hit.data[:runner_group_visibility].present? %>
  Visibility is "<%= view.entry.hit.data[:runner_group_visibility].to_s.downcase %>".
<% end %>
<% unless view.entry.hit.data[:runner_group_allow_public].nil? %>
  Allow public is "<%= view.entry.hit.data[:runner_group_allow_public].to_s %>".
<% end %>
<% if view.entry.hit.data[:runner_group_selected_repository_ids].present? %>
  Selected repositories are "<%= view.entry.hit.data[:runner_group_selected_repository_ids].join(", ") %>".
<% end %>
<% unless view.entry.hit.data[:runner_group_restricted_to_workflows].nil? %>
  Restricted to workflows is "<%= view.entry.hit.data[:runner_group_restricted_to_workflows].to_s %>".
<% end %>
<% if view.entry.hit.data[:runner_group_selected_workflow_refs].present? %>
  Selected workflows are "<%= view.entry.hit.data[:runner_group_selected_workflow_refs].join(", ") %>"
<% end %>
<% unless view.entry.hit.data[:network_configuration_id].nil? %>
  Network configuration id is "<%= view.entry.hit.data[:network_configuration_id].to_s %>".
<% end %>

<%= render(Primer::Box.new(font_weight: :light, display: :flex, justify_content: :space_between, align_items: :center)) do %>
  <%= render(Primer::Box.new) do %>
    <%= render(Primer::Beta::Octicon.new(mr: 2, icon: 'credit-card', color: :danger)) %>
    <%= render(Primer::Beta::Text.new(font_weight: :bold)) { "You must have a valid payment method to use Copilot." } %>
    <% if !has_azure_sub %>
      Add an Azure subscription to
      <%= render(Primer::Beta::Link.new(underline: true, href: settings_billing_tab_enterprise_path(this_business, :payment_information))) { "payment information" } %>
      , or contact your sales rep for additional support.
    <% elsif !is_metered_billable %>
      Contact your sales rep to enable metered billing for your account.
    <% else %>
      Contact your sales rep for help enabling Copilot.
    <% end %>
  <% end %>
<% end %>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/issue-lock.json",
  "title": "Issue Lock",
  "description": "A lock on an issue",
  "type": "object",
  "definitions": {
    "lock_reason": {
      "description": "The reason for locking the issue or pull request conversation.",
      "enum": [
        "off-topic",
        "too heated",
        "resolved",
        "spam"
      ],
      "example": "too heated",
      "type": "string"
    },
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    },
    "issue_number": {
      "description": "The number of the issue",
      "type": "integer"
    }
  },
  "links": [
    {
      "title": "Lock an issue",
      "method": "PUT",
      "rel": "close-legacy",
      "href": "/repositories/{repository_id}/issues/{issue_number}/lock",
      "schema": {
        "properties": {
          "lock_reason": {
            "$ref": "#/definitions/lock_reason"
          }
        },
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Lock an issue",
      "method": "PUT",
      "href": "/repositories/{repository_id}/issues/{issue_number}/lock",
      "rel": "close",
      "schema": {
        "properties": {
          "lock_reason": {
            "$ref": "#/definitions/lock_reason"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Unlock an issue",
      "method": "DELETE",
      "rel": "delete",
      "href": "/repositories/{repository_id}/issues/{issue_number}/lock",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ]
}

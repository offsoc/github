<%# locals: (suggested_plan:) -%>
<%
  page_info(
    title: "Here's what we recommend for you",
    class: "header-overlay",
    full_height: true
  )
%>

<% case suggested_plan.recommended_plan %>
<% when :education_student %>
  <%= render partial: "recommended_plans/education_student" %>
<% when :education_teacher %>
  <%= render partial: "recommended_plans/education_teacher" %>
<% when :business %>
  <%= render partial: "recommended_plans/team", locals: { highlight_recommendation: true } %>
<% when :free %>
  <%= render partial: "recommended_plans/team", locals: { highlight_recommendation: false } %>
<% when :business_plus %>
  <%= render partial: "recommended_plans/enterprise", locals: { discuss_your_needs: suggested_plan.must_discuss_plan? } %>
<% end %>

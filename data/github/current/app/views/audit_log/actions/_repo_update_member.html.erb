
<% if view.entry.hit.data[:new_repo_base_role].present? && view.entry.hit.data[:old_repo_permission] == view.entry.hit.data[:new_repo_permission] %>
	Updated <%= "#{view.entry.hit[:user]}'s permission on the #{view.entry.hit[:repo]} repository" %> from
	<%= view.entry.hit.data[:old_repo_permission] %> with base permission <%= view.entry.hit.data[:old_repo_base_role] %> to <%= view.entry.hit.data[:new_repo_permission] %> with base permission <%= view.entry.hit.data[:new_repo_base_role] %>
<% elsif view.entry.hit.data[:old_repo_permission].present? && view.entry.hit.data[:old_repo_permission] != view.entry.hit.data[:new_repo_permission] %>
	Updated <%= "#{view.entry.hit[:user]}'s permission on the #{view.entry.hit[:repo]} repository" %> from
	<%= view.entry.hit.data[:old_repo_permission] %> to <%= view.entry.hit.data[:new_repo_permission] %>
<% else %>
	Updated <%= "#{view.entry.hit[:user]}'s permission on the #{view.entry.hit[:repo]} repository" %> from
	<%= view.entry.hit.data[:old_permission] %> to <%= view.entry.hit.data[:new_permission] %>
<% end %>

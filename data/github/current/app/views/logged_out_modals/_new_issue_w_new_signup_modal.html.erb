  <p class="mt-4 color-fg-muted text-center">
    Already on GitHub?
    <%= link_to(
      "Sign in",
      modal_issues_login_path,
      data: sign_in_link_data_attributes(location_in_page: "new issue modal"),
      class: "Link--inTextBlock"
    ) %>
    to your account
  </p>
</div>

{
  "npmScope": "@github-ui",
  "affected": {
    "defaultBase": "master"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@github-ui/nx-remote-cache-runner",
      "options": {
        "container": "nx-remote-cache",
        "accountName": "ghnxremotecache",
        "adAuth": true,
        "cacheableOperations": ["lint", "test", "tsc", "stylelint"]
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "ui/packages",
    "libsDir": "ui/packages"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "{workspaceRoot}/.browserslistrc",
      "{workspaceRoot}/.prettierrc.js",
      "{workspaceRoot}/app/.eslintrc.js",
      "{workspaceRoot}/config/node-version",
      "{workspaceRoot}/test/.eslintrc.js",
      "{workspaceRoot}/ui/.eslintrc.js",
      "{workspaceRoot}/config/schema.*.graphql",

      "!{projectRoot}/.eslintcache",
      "!{projectRoot}/tsconfig.buildinfo"
    ],
    "production": ["default", "!{projectRoot}/**/*.test.tsx", "!{projectRoot}/**/*.test.ts"]
  },
  "targetDefaults": {
    "lint": {
      "inputs": ["default", "^production"],
      "outputs": ["{projectRoot}/.eslintcache"]
    },
    "test": {
      "inputs": ["default", "^production", {"env": "REACT_NEXT"}]
    },
    "tsc": {
      "inputs": ["default", "^production"]
    },
    "stylelint": {
      "inputs": ["default", "{workspaceRoot}/ui/packages/stylelint/**/*", "{workspaceRoot}/.stylelintignore"]
    }
  }
}

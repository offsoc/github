<html>
  <body style="box-sizing: border-box; font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji; font-size: 14px; line-height: 1.5; color: #24292e; background-color: #fff; margin: 0" bgcolor="#fff">
    <dl>
    <% if @memex_project_status.start_date.present? %>
      <dt style="font-weight: 600">Start date:</dt>
      <dd style="margin: 0 0 16px 0"><%= @memex_project_status.start_date.iso8601 %></dd>
    <% end %>
    <% if @memex_project_status.target_date.present? %>
      <dt style="font-weight: 600">Target date:</dt>
      <dd style="margin: 0 0 16px 0"><%= @memex_project_status.target_date.iso8601 %></dd>
    <% end %>
    <% if @memex_project_status.status_name_html.present? %>
      <dt style="font-weight: 600">Status:</dt>
      <dd style="margin: 0 0 16px 0"><%= @memex_project_status.status_name_html %></dd>
    <% end %>
    </dl>
    <p><%= @memex_project_status.email_body(@actor) %></p>
  </body>
</html>

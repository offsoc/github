<%
  page_data = local_assigns[:page_data]
  page_data => {
    data: {
      backfill_in_progress:,
      selected_tab:,
    }
  }
%>

<% content_for :sc_content do %>
  <%= render(
    SecurityCenter::PageComponent.new(
      backfill_in_progress:,
      organization: this_organization,
      selected_tab:,
      user: current_user,
    )
  ) do |c| %>
    <% c.with_main_section do %>
      <%= yield %>
    <% end %>
  <% end %>
<% end %>

<%= render template: "layouts/security_center" %>

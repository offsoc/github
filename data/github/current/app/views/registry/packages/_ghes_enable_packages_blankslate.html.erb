<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%# erblint:counter ButtonComponentMigrationCounter 2 %>
<%
  blankslate_class ||= ""
  blank_slate_style = "max-width: 900px; margin-left: auto; margin-right: auto;"
%>

<div class="<%= blankslate_class if blankslate_class %> d-flex flex-column flex-md-row width-full px-3" id="packages-disabled-blankslate">
  <%= render Primer::BlankslateComponent.new(
    image_src: "icons/registry-marketing-icon.svg",
    image_alt: "GitHub Packages",
    title: "GitHub Packages has not been enabled",
    spacious: false,
    style: blank_slate_style,
  ) do %>
    <% if current_user&.site_admin? %>
      <p>Safely publish and consume packages within your organization.</p>
      <a href="/setup" class="btn btn-primary my-3">Enable GitHub Packages</a><br>
      <p><a href="https://github.com/features/packages" class="btn-link">Learn more</a></p><%# erblint:disable GitHub::Accessibility::AvoidGenericLinkText %>
    <% else %>
      <p>Safely publish and consume packages within your organization.<br>
        Contact your Enterprise Administrator to enable GitHub Packages.
      </p>
      <a href="https://github.com/features/packages">Learn more</a><%# erblint:disable GitHub::Accessibility::AvoidGenericLinkText %>
    <% end %>
  <% end %>
</div>

<div class="previewable-comment-form">
  <div class="comment-form-head tabnav">
    <div class="tabnav-tabs">
      <span class="tabnav-tab write-tab selected">Write</span>
      <span class="tabnav-tab preview-tab ">Preview</span>
    </div>
  </div>
  <%= render Primer::Beta::Blankslate.new(test_selector: "limited-conversation-blankslate") do |c| %>
    <% c.with_visual_icon(icon: "lock") %>

    <% c.with_heading(tag: :h2) do %>
      Commenting has been disabled.
    <% end %>

    <% c.with_description do %>
      <%= "This conversation has reached the maximum number of allowed comments: #{number_with_delimiter(Issue::COMMENT_LIMIT, separator: ",")}" %>
    <% end %>
  <% end %>
</div>

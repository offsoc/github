<div class="form-group <% if required? %>required<% end %>" <%= test_selector("issue-form-codeblock") %>>
  <div class="form-group-header">
    <%= label(base_form_param, element.id, element.label, required: required?, class: "d-block mb-1") %>
    <% if has_description? %>
      <%= render Primer::Beta::Markdown.new(mb: 2, id: description_id, font_size: :small, classes: "note", test_selector: "issue-form-codeblock-description") do %>
        <%= description %>
      <% end %>
    <% end %>
  </div>
  <div class="form-group-body">
    <%= text_area(
            base_form_param,
            element.id,
            attributes.merge("data-test-selector": "issue-form-codeblock-element"),
            ) %>
  </div>
</div>

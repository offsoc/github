<% partial_view = create_view_model(
  Community::ContributorSidebarView,
  current_repository: current_repository,
  issue: view.issue,
) %>

<% if view.show_first_time_contributor_sidebar? %>
  <%= render "issues/sidebar/new/first_time_contributor", view: partial_view %>
<% elsif view.show_prior_contributor_sidebar? %>
  <%= render "issues/sidebar/new/prior_contributor", view: partial_view %>
<% elsif view.show_helpful_resources? %>
  <%= render "issues/sidebar/new/helpful_resources", view: partial_view %>
<% end %>

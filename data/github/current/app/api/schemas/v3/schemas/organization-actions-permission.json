{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/organization-actions-permission.json",
  "title": "Permission for running actions for an organization",
  "type": "object",
  "definitions": {
    "enabled_repositories": {
      "description": "Whether GitHub Actions is enabled to run on this organization's repositories.",
      "type": "string",
      "enum": [
        "all",
        "none",
        "selected"
      ]
    },
    "selected_repositories_url": {
      "description": "The URL of the selected repositories if enabled_repositories is selected.",
      "type": "string"
    },
    "allowed_actions": {
      "description": "Which actions are allowed to run on this repository.",
      "type": "string",
      "enum": [
        "all",
        "local_only",
        "selected"
      ]
    },
    "selected_actions_url": {
      "description": "The URL of the selected actions if allowed_actions is selected.",
      "type": "string"
    }
  },
  "properties": {
    "enabled_repositories": {
      "$ref": "#/definitions/enabled_repositories"
    },
    "selected_repositories_url": {
      "$ref": "#/definitions/selected_repositories_url"
    },
    "allowed_actions": {
      "$ref": "#/definitions/allowed_actions"
    },
    "selected_actions_url": {
      "$ref": "#/definitions/selected_actions_url"
    }
  },
  "additionalProperties": false,
  "links": [
    {
      "title": "Enable or disable GitHub Actions for repositories under this organization.",
      "href": "/organizations/{organization_id}/actions/permissions",
      "method": "PUT",
      "rel": "set-permission",
      "schema": {
        "properties": {
          "enabled_repositories": {
            "$ref": "#/definitions/enabled_repositories"
          },
          "allowed_actions": {
            "$ref": "#/definitions/allowed_actions"
          }
        },
        "required": [
          "enabled_repositories"
        ],
        "type": "object"
      }
    }
  ]
}

<% page_info title: "Audit log", selected_link: :business_audit_log_streams_settings,
  stafftools: stafftools_enterprise_path(business)%>
<%= render layout: "businesses/layout",
  locals: {
    business: business,
    title: "Audit log",
    container_attributes: "itemscope itemtype='http://schema.org/Business'"
  } do %>
    <%= render "businesses/audit_log/tabs", business: business %>
    <% unless streams.empty? %>
      <%= render partial: "businesses/audit_log_stream/list_multiple_streams", locals: { business: business, streams: streams} %>
    <% end %>
    <% unless streams.count > 1%>
      <%= render partial: "businesses/audit_log_stream/add_stream", locals: { business: business } %>
    <% end %>
 <% end %>

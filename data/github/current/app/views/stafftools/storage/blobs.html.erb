<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% page_info title: "File storage âˆ™ Site admin", selected_link: :file_storage %>

<%= render layout: "stafftools/stafftools" do %>

  <%= render(Primer::Beta::Subhead.new) do |component| %>
    <% component.with_heading(tag: :h3) do %>
      Storage objects
    <% end %>
  <% end %>

  <%= render(Primer::Beta::BorderBox.new(mb: 3)) do |component| %>
    <% component.with_body do %>
      <%= form_tag "", method: :get do %>
        <div class="form-group">
          <label for="oid" class="mr-2">Find by OID</label>
          <%= text_field_tag :oid, nil, class: "short" %>
          <%= render Primer::ButtonComponent.new(type: :submit) do %>Search<% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>

<% end -%>

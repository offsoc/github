<% unless current_user.dismissed_notice?(:dashboard_promo_universe24_earlybird_4) %>
  <div class="js-notice" <%= test_selector('dashboard-announcements') %>>
    <%= form_tag(
      dismiss_notice_path(:dashboard_promo_universe24_earlybird_4),
      class: "Box position-relative rounded-2 mb-4 p-3 js-notice-dismiss overflow-hidden",
      style: "z-index: 1; #{ user_feature_enabled?(:feeds_v2) ? '' : 'max-width: 340px;' }",
      data: analytics_visible_attributes(category: "In-product banner", text: "universe24_banner4li")
    ) do %>
      <img src="<%= image_path("modules/dashboard/universe24/bg.png") %>" alt="" width="300" height="300" class="position-absolute top-0 left-0 width-full" style="pointer-events: none; z-index: -1; height: 100%; height: 100%; object-fit: cover">

      <div class="position-absolute p-2" style="top: 4px; right: 6px;">
        <%= render(Primer::Beta::CloseButton.new(
          type: :submit,
          color: :on_emphasis,
          style: "color: #ffffff !important",
          data: analytics_click_attributes(
            category: "dashboard_notices",
            action: "Dismiss universe24_banner4li",
          ))) %>
      </div>

      <img src="<%= image_path("modules/dashboard/universe24/logo.svg") %>" alt="Universe24" width="179" height="32" style="max-width: 85%; height: auto" class="d-block">

      <h3 class="h4 col-11 mt-3" style="color: #ffffff !important;">
        Last chance: The Super Early Bird sale is extended for a limited time!
      </h3>

      <p class="mt-1 mb-4 pr-2 color-fg-muted text-small" style="color: rgba(255, 255, 255, 0.67) !important;">
        Get your GitHub Universe tickets for 35% off, only until July 15.
      </p>

      <%= render Primer::Beta::Button.new(
        size: :medium,
        tag: :a,
        href: "https://githubuniverse.com/?utm_source=github&utm_medium=banner&utm_campaign=24banner4li",
        block: true,
        data: analytics_click_attributes(
          category: "dashboard_notices",
          action: "universe24_banner4li",
        )
      ) do %>
        Get tickets 35% off
      <% end %>
    <% end %>
  </div>
<% end %>

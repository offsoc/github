<% case state %>
<% when :PENDING, :ENQUEUED, :PROCESSING, :PENDING_RETRY %>
  <%= render Primer::Beta::Octicon.new(icon: "dot-fill", mr: 0, classes: "hx_dot-fill-pending-icon") %>
<% when :TIMED_OUT, :CANCELLED %>
  <%= render Primer::Beta::Octicon.new(icon: "x", mr: 0, color: :danger) %>
<% when :PROCESSED_WITH_ERRORS %>
  <%= render Primer::Beta::Octicon.new(icon: "alert", mr: 0, color: :danger) %>
<% when :PROCESSED %>
  <%= render Primer::Beta::Octicon.new(icon: "check", mr: 0, color: :success) %>
<% else %>
  <%= render Primer::Beta::Octicon.new(icon: "dot-fill", mr: 0, color: :muted) %>
<% end %>

<table class="d-block">
  <tbody class="d-block">
    <tr class="d-block">
      <td class="d-block issue-form-body">
        <%= inputs %>

        <% if !preview? %>
          <div class="js-wysiwyg-container issue-forms-wysiwyg-container" hidden>
            <%= render(Comments::PreviewableCommentFormComponent.new(
              field_name: "issue[textarea_helper_element]",
              textarea_id: "issue_body",
              required: false,
              subject: templatable,
              hide_saved_replies: true,
              autofocus: true,
              session_resumable: false,
              current_repository: templatable.repository,
              use_fixed_width_font: current_user.use_fixed_width_font?,
              slash_commands_enabled: current_user.slash_commands_enabled?,
              slash_commands_surface: slash_commands_surface
            )) %>
          <% end %>
        </div>
      </td>
    </tr>
  </tbody>
</table>

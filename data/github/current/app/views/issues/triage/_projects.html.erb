<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% if current_repository %>
<details class="select-menu details-reset details-overlay d-inline-block position-relative px-3" id="triage-project-select-menu">
  <%= render Primer::ButtonComponent.new(tag: :summary, scheme: :link, test_selector: "triage-projects-button") do %>
    <span>Projects</span>
    <span class="dropdown-caret hide-sm"></span>
  <% end %>
  <details-menu class="SelectMenu SelectMenu--hasFilter right-lg-0" role="menu" src="<%= show_menu_content_issues_path(partial: "issues/triage/projects_content") %>" preload><%# erblint:disable Primer::Accessibility::DetailsMenuMigration %>
    <%= form_tag "#{issues_path}/triage", method: :put, class: "js-project-picker-form" do %>
    <div class="SelectMenu-modal">
      <header class="SelectMenu-header">
        <span class="SelectMenu-title">Add to project(s)</span>
        <button class="SelectMenu-closeButton" type="button" data-toggle-for="project-select-menu">
          <%= primer_octicon(:x, "aria-label": "Close menu") %>
        </button>
      </header>
      <include-fragment class="SelectMenu-loading">
        <%= render(Primer::Beta::Spinner.new(mx: :auto, display: :block)) %>
      </include-fragment>
    </div>
    <% end %>
  </details-menu>
</details>
<% end %>


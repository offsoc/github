<%= render Primer::BaseComponent.new(**system_arguments) do %>
  <% if template.icon_name.include? "octicon" %>
    <%= primer_octicon(icon, size: :small) %>
  <% else %>
    <% if template.icon_raw_url.blank? %>
      <img class="CircleBadge-icon" src="<%= image_path "icons/actions/#{template.icon_name}" %>" alt="<%= template.name %> logo">
    <% else %>
      <img class="CircleBadge-icon" src="<%= template.icon_raw_url %>" alt="<%= template.name %> logo">
    <% end %>
  <% end %>
<% end %>

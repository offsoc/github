<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render Primer::Beta::Subhead.new(spacious: true, id: "dependabot-repository-access") do |component| %>
  <% component.with_heading(tag: :h2) do %>Grant Dependabot access to private repositories<% end %>
<% end %>

<% if repo_access_service_unavailable? %>
  <%= render Primer::Beta::Flash.new(scheme: :danger) do %>
    There was a problem loading this setting.
  <% end %>
<% else %>
  <%= render(Organizations::Settings::DependabotRepositoryAccessFormComponent.new(organization: @organization, selected_repo_ids: repo_access.repository_github_ids, page_param: @page_param)) %>
<% end %>

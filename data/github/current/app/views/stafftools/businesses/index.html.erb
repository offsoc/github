<% page_info title: "Enterprise accounts", selected_link: :businesses %>

<%= render layout: "stafftools/stafftools" do %>
  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>Enterprise accounts<% end %>
    <% component.with_actions do %>
      <% if !GitHub.single_business_environment? && !GitHub.multi_tenant_enterprise? %>
        <%= link_to "New enterprise", new_stafftools_enterprise_path, class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% end %>

  <%= render Stafftools::Businesses::BusinessListComponent.new(businesses: businesses, tab: tab) %>
<% end %>

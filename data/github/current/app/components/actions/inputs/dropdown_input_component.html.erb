<div class="form-group mt-1 mb-2 <%= required? ? " required" : "" %>">
  <div class="form-group-header">
    <label class="color-fg-default text-mono f6" for="<%= id %>"><%= label %></label>
  </div>
  <div class="form-group-body">
    <select
      class="form-select form-control select-sm input-contrast width-full"
      id="<%= id %>"
      <%= required? ? "required" : "" %>
      name="inputs[<%= name %>]"
      value="<%= value %>">
      <%= options_for_select options, value %>
    </select>
  </div>
</div>


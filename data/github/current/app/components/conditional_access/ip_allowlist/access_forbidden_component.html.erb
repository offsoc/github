<%= render Primer::Beta::Blankslate.new(
  narrow: true,
  mt: 5,
  test_selector: "ip-allowlist-forbidden-message"
) do |bs| %>
  <% bs.with_visual_icon(icon: :alert) %>
  <% bs.with_heading(tag: :h2).with_content("Access forbidden from this IP address") %>
  <% bs.with_description(mt: 3) do %>
    The <strong><%= target.safe_profile_name %></strong> <%= target_type_name %>
    has an IP allow list enabled and <strong><%= ip %></strong> is not permitted to access
    this resource. Please contact an owner of the <%= target_type_name %>
    for details on allowed IP addresses for the account.
  <% end %>
<% end %>

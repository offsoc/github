{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/commit-detail.json",
  "title": "Commit Detail",
  "type": "object",
  "definitions": {
    "stats": {
      "type": "object",
      "properties": {
        "additions": {
          "type": "number",
          "example": 104
        },
        "deletions": {
          "type": "number",
          "example": 4
        },
        "total": {
          "type": "number",
          "example": 108
        }
      },
      "additionalProperties": false,
      "required": [
        "additions",
        "deletions",
        "total"
      ]
    }
  },
  "properties": {
    "url": {
      "$ref": "https://schema.github.com/v3/commit.json#/definitions/url"
    },
    "sha": {
      "$ref": "https://schema.github.com/v3/commit.json#/definitions/sha"
    },
    "node_id": {
      "$ref": "https://schema.github.com/v3/commit.json#/definitions/node_id"
    },
    "html_url": {
      "$ref": "https://schema.github.com/v3/commit.json#/definitions/html_url"
    },
    "comments_url": {
      "$ref": "https://schema.github.com/v3/commit.json#/definitions/comments_url"
    },
    "commit": {
      "$ref": "https://schema.github.com/v3/commit.json#/definitions/commit"
    },
    "author": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    },
    "committer": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    },
    "parents": {
      "type": "array",
      "items": {
        "$ref": "https://schema.github.com/v3/commit.json#/definitions/parent_commit"
      }
    },
    "stats": {
      "$ref": "#/definitions/stats"
    },
    "files": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "null"
          },
          {
            "$ref": "https://schema.github.com/v3/diff-entry.json#"
          }
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "url",
    "sha",
    "node_id",
    "html_url",
    "comments_url",
    "commit",
    "author",
    "committer",
    "parents",
    "stats",
    "files"
  ]
}

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/organization-actions-secret.json",
  "title": "Actions Secret for an Organization",
  "description": "Secrets for GitHub Actions for an organization.",
  "type": "object",
  "definitions": {
    "visibility": {
      "description": "Visibility of a secret",
      "enum": [
        "all",
        "private",
        "selected"
      ],
      "type": "string"
    },
    "selected_repositories_url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/organizations/org/secrets/my_secret/repositories"
    },
    "selected_repository_ids": {
      "description": "List of repository IDs that the secret should have access to",
      "example": [
        1
      ],
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    }
  },
  "links": [
    {
      "title": "Creates a secret for an organization.",
      "href": "/organizations/{organization_id}/actions/secrets/{name}",
      "method": "PUT",
      "rel": "set-org-secret",
      "schema": {
        "properties": {
          "key_id": {
            "$ref": "https://schema.github.com/v3/actions-secret.json#/definitions/key_id"
          },
          "encrypted_value": {
            "$ref": "https://schema.github.com/v3/actions-secret.json#/definitions/encrypted_value"
          },
          "visibility": {
            "$ref": "#/definitions/visibility"
          },
          "selected_repository_ids": {
            "$ref": "#/definitions/selected_repository_ids"
          }
        },
        "required": [
          "key_id",
          "encrypted_value",
          "visibility"
        ],
        "type": "object"
      }
    },
    {
      "title": "Deletes an organization secret.",
      "href": "/organizations/{organization_id}/actions/secrets/{name}",
      "method": "DELETE",
      "rel": "delete-org-secret",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Set the repositories for a secret",
      "href": "/organizations/{organization_id}/actions/secrets/{name}/repositories",
      "method": "PUT",
      "rel": "set-org-secret-repositories",
      "schema": {
        "properties": {
          "selected_repository_ids": {
            "$ref": "#/definitions/selected_repository_ids"
          }
        },
        "required": [
          "selected_repository_ids"
        ],
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Add a repository to a secret.",
      "href": "/organizations/{organization_id}/actions/secrets/{name}/repositories/{repository_id}",
      "method": "PUT",
      "rel": "set-org-secret-repository",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Removes a repository from a secret.",
      "href": "/organizations/{organization_id}/actions/secrets/{name}/repositories/{repository_id}",
      "method": "DELETE",
      "rel": "delete-org-secret-repository",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ],
  "properties": {
    "name": {
      "$ref": "https://schema.github.com/v3/actions-secret.json#/definitions/name"
    },
    "created_at": {
      "$ref": "https://schema.github.com/v3/actions-secret.json#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "https://schema.github.com/v3/actions-secret.json#/definitions/updated_at"
    },
    "visibility": {
      "$ref": "#/definitions/visibility"
    },
    "selected_repositories_url": {
      "$ref": "#/definitions/selected_repositories_url"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "visibility",
    "created_at",
    "updated_at"
  ]
}

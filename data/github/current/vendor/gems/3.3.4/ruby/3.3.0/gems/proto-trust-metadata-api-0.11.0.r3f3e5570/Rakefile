# frozen_string_literal: true

require "bundler/gem_tasks"
require 'rake/testtask'

task default: %i[]

task :docker_build do
  system("docker build --platform=linux/amd64 --tag=tma-protos .", exception: true)
end

Rake::TestTask.new do |t|
  t.pattern = FileList['test/**/*_test.rb']
  t.verbose = true
end

desc "Run sorbet type checker"
task :srb do
  sh 'srb tc'
end

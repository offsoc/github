{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/branch.json",
  "title": "Repository branch",
  "description": "A branch in a git repository",
  "type": "object",
  "definitions": {
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    },
    "branch": {
      "description": "Name of the branch",
      "example": "my-topic",
      "type": "string"
    }
  },
  "links": [
    {
      "title": "Rename a branch",
      "href": "/repositories/{repository_id}/branches/{branch}/rename",
      "method": "POST",
      "rel": "rename",
      "schema": {
        "properties": {
          "new_name": {
            "description": "The name to change the branch to",
            "example": "trunk",
            "type": "string"
          }
        },
        "required": [
          "new_name"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

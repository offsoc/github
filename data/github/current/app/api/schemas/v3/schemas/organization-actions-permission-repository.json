{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/organization-actions-permission-repository.json",
  "title": "List of repositories allowed to run Actions under this organization",
  "type": "object",
  "definitions": {
    "selected_repository_ids": {
      "description": "List of repository IDs for which to enable Actions.",
      "type": "array",
      "items": {
        "type": "integer"
      },
      "example": [
        42,
        1337
      ]
    },
    "total_count": {
      "description": "Total number of repositories that are allowed to run Actions, for pagination.",
      "type": "integer"
    },
    "repositories": {
      "description": "The URL of the selected actions if 'allowed_actions' is 'selected'.",
      "type": "array",
      "items": {
        "$ref": "https://schema.github.com/v3/repository.json#"
      }
    }
  },
  "properties": {
    "repositories": {
      "$ref": "#/definitions/repositories"
    },
    "total_count": {
      "$ref": "#/definitions/total_count"
    }
  },
  "additionalProperties": false,
  "required": [
    "total_count",
    "repositories"
  ],
  "links": [
    {
      "title": "Enable GitHub Actions for a list of repositories",
      "href": "/organizations/{organization_id}/actions/permissions/repositories",
      "method": "PUT",
      "rel": "update-repositories",
      "schema": {
        "properties": {
          "selected_repository_ids": {
            "$ref": "#/definitions/selected_repository_ids"
          }
        },
        "required": [
          "selected_repository_ids"
        ],
        "additionalProperties": false,
        "type": "object"
      }
    }
  ]
}

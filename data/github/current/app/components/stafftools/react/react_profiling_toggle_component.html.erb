<react-profiling-toggle data-catalyst-inline>
  <%= render(Primer::Beta::Button.new(
    id: "react-profiling-toggle",
    size: :small,
    scheme: :link,
    color: :on_emphasis,
    "data-target": "react-profiling-toggle.profilingToggleButton",
    "data-action": "click:react-profiling-toggle#toggleReactPerformanceProfilingMode",
    "aria-label": "React Performance Profiling Mode",
  )) do |c| %>
    <% c.with_tooltip(text: "Enable React performance profiling mode") %>
    <%= render(Primer::Beta::Octicon.new(icon: :log, size: :small)) %>
  <% end %>
</react-profiling-toggle>

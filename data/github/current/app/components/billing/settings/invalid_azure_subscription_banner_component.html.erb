<%= render(GitHub::FlashActionDismissibleComponent.new(
  level: :warning,
  dismissible_path: dismissal_path,
  test_selector: "invalid_azure_subscription_banner",
  mb: 4
)) do |c| %>
  <% c.with_title do %>
    Invalid Azure subscription detected
  <% end %>
  <% c.with_text do %>
    Please update your Azure subscription before enabling metered billing via Azure again.
  <% end %>
<% end %>

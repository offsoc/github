          },
          "min_staleness": {
            "$ref": "#/definitions/min_staleness"
          },
          "include_unassigned_prs": {
            "$ref": "#/definitions/include_unassigned_prs"
          },
          "include_reviewed_prs": {
            "$ref": "#/definitions/include_reviewed_prs"
          },
          "require_review_request": {
            "$ref": "#/definitions/require_review_request"
          },
          "ignore_draft_prs": {
            "$ref": "#/definitions/ignore_draft_prs"
          },
          "ignore_after_approval_count": {
            "$ref": "#/definitions/ignore_after_approval_count"
          },
          "ignored_terms": {
            "$ref": "#/definitions/ignored_terms"
          },
          "ignored_labels": {
            "$ref": "#/definitions/ignored_labels"
          },
          "required_labels": {
            "$ref": "#/definitions/required_labels"
          },
          "needed_reviews": {
            "$ref": "#/definitions/needed_reviews"
          },
          "teams": {
            "$ref": "#/definitions/teams"
          },
          "repos": {
            "$ref": "#/definitions/repos"
          },
          "settings": {
            "$ref": "#/definitions/settings"
          }
        },
        "type": "object",
        "additionalProperties": false,
        "required": [
          "delivery_times",
          "time_zone_name",
          "reminder_workspace_id",
          "channel_name",
          "channel_id"
        ]
      }
    },
    {
      "title": "Update a reminder",
      "method": "PUT",
      "rel": "update-reminder",
      "href": "/schedule_reminders/{organization_id}/reminder/{reminder_id}",
      "schema": {

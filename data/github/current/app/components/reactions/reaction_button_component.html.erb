<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render Primer::ButtonComponent.new(
  disabled: disabled,
  display: :flex,
  underline: false,
  name: "input[content]",
  id: id,
  type: :submit,
  value: value,
  **system_arguments
) do %>
  <% if content.present? %>
    <%= content %>
  <% end %>
<% end %>
<% if title.present? %>
  <%= render Primer::Alpha::Tooltip.new(type: :description, for_id: id, text: title, direction: :n) %>
<% end %>

<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% if GitHub.flipper[:banner_migration].enabled?(current_user) %>
  <%= render(Primer::Alpha::Banner.new(scheme: :warning, mb: 4)) do %>
    This application is
    <%= link_to_if transfer_target.adminable_by?(current_user), "pending transfer", transfer_path %>
    to <strong><%= link_author transfer_target %></strong>.
    <%= button_to "Cancel transfer", transfer_path_with_id, method: :delete, class: "btn btn-danger btn-sm", form_class: "float-right" %>
  <% end %>
<% else %>
  <%= render(Primer::Beta::Flash.new(scheme: :warning, mb: 4)) do %>
    This application is
    <%= link_to_if transfer_target.adminable_by?(current_user), "pending transfer", transfer_path %>
    to <strong><%= link_author transfer_target %></strong>.
    <%= button_to "Cancel transfer", transfer_path_with_id, method: :delete, class: "btn btn-danger btn-sm", form_class: "float-right" %>
  <% end %>
<% end %>

<%= render Primer::Box.new(**system_arguments) do %>

   <%= render Primer::Box.new(display: :flex, justify_content: :space_between) do %>
      <% if toggle? %>
         <%= toggle %>
      <% else %>
         <%= render Primer::Box.new do %>
            <%= title %>
            <%= description %>
         <% end %>
      <% end %>
      <%= render Primer::Box.new(display: :flex, direction: :column) do %>
         <%= render Primer::Box.new(font_weight: :bold, text_align: :right) do %>
            <%= seat_price_in_dollars %>
         <% end %>
         <%= render Primer::Box.new(color: :muted, font_size: 6, text_align: :right) do %>
            <%= per %>
         <% end %>
      <% end %>
   <% end %>

   <% if notice? %>
      <%= render Primer::Box.new do %>
         <%= notice %>
      <% end %>
   <% end %>

   <% if toggle? %>
      <%= render Primer::Box.new do %>
         <%= title %>
         <%= description %>
      <% end %>
   <% end %>

   <%= render Primer::Box.new do %>
      <%= stepper_component %>
   <% end %>
<% end %>


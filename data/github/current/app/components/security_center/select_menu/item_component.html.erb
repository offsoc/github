<%# erblint:counter DeprecatedComponentsCounter 2 %>
<%= render(Primer::Box.new(display: :flex, justify_content: :space_between, w: :full)) do %>
  <%= render(Primer::Box.new(direction: :column, display: :flex)) do %>
    <%= render(
      Primer::Truncate.new(
        max_width: 175,
        test_selector: "security-center-filters-select-menu-item-component-label"
      ).with_content(item.label)
    ) %>

    <% if item.description.present? %>
      <%= render(
        Primer::Truncate.new(
          color: :muted,
          max_width: 175,
          test_selector: "security-center-filters-select-menu-item-component-description"
        ).with_content(item.description)
      ) %>
    <% end %>
  <% end %>

  <% if item.count.present? %>
    <%= render(
      Primer::Beta::Counter.new(
        align_self: :center,
        count: item.count,
        test_selector: "security-center-filters-select-menu-item-component-count"
      )
    ) %>
  <% end %>
<% end %>

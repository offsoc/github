<% if language.present? && display_language_name_for(language).present? %>
  <%= render Primer::Beta::Blankslate.new do |c| %>
    <% c.with_heading(tag: :h2) do %>
      <%= "It looks like we don’t have any trending #{type} for #{display_language_name_for(language)}." %>
    <% end %>
  <% end %>
<% else %>
  <%= render Primer::Beta::Blankslate.new do |c| %>
    <% c.with_heading(tag: :h2) do %>
      <%= "It looks like we don’t have any trending #{type} for your choices." %>
    <% end %>
  <% end %>
<% end %>

import {useRoutePayload} from '@github-ui/react-core/use-route-payload'

export interface {{routeComponent}}Payload {
  // Update this type to reflect the data you place in payload in Rails
  someField: string
}

export function {{routeComponent}}() {
  const payload = useRoutePayload<{{routeComponent}}Payload>()

  return (
    <>
      <h1 data-hpc>{{routeComponent}} for {{packageName}}</h1>
      <article>{payload.someField}</article>
    </>
  )
}

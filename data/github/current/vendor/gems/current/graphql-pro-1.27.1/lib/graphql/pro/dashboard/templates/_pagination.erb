<div class="pagination">
  <% if prev_page %>
    <% prev_params = request.params.merge("page" => prev_page) %>
    <a href="<%= request.path %>?<%= to_query_string(prev_params) %>" class="btn pagination-link prev">&laquo; prev</a>
  <% end %>
  <% if next_page %>
    <% next_params = request.params.merge("page" => next_page) %>
    <a href="<%= request.path %>?<%= to_query_string(next_params) %>" class="btn pagination-link next">next &raquo;</a>
  <% end %>
</div>

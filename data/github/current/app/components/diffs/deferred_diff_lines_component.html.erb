<% if did_defer_syntax_highlighting? %>
  <%= content_tag content_tag_name, class: classes, "data-url": url, **content_tag_options do %>
    <% inputs.each do |name, value| %>
      <%= hidden_field_tag name, value, id: nil, "data-targets": "#{content_tag_name}.inputs" %>
    <% end %>
    <% if context_lines.present? %>
      <%= hidden_field_tag "context_lines", context_lines.to_json, id: nil, "data-targets": "#{content_tag_name}.inputs" %>
    <% end %>
    <%= content %>
  <% end %>
<% else %>
  <%= content %>
<% end %>

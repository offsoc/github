<% content_for :header do %>
  <%= @summary %>
<% end %>

<%= render(Mail::RowComponent.new) do %>
  <%= render(Mail::ColumnComponent.new) do %>
    <p>Hello <strong>@<%= @sponsor %></strong>,</p>

    <%= render(Mail::SpacerComponent.new) %>

    <p>Your invoice has been paid and the funds have been added to your account. You may start sponsoring!</p>

    <%= render(Mail::SpacerComponent.new) %>

    <p>
      To view your balance, please visit <%= @sponsor %>'s <%= link_to "sponsorship insights dashboard", org_sponsoring_url(@sponsor) %>.
    </p>

    <%= render(Mail::SpacerComponent.new) %>

    <p>
      If you have any questions, please reach out to our <%= link_to "support team", GitHub.support_url %>.
    </p>

    <%= render(Mail::SpacerComponent.new) %>

    <p>
      Thank you for supporting the open source community!
    </p>

    <p>
      GitHub Sponsors Team
    </p>

  <% end %>
<% end %>

<pricing-calculator-section id="security">
  <ghas-calculator class="d-block rounded-2 box-shadow-card-border-mktg px-4 flex-auto flex-column mb-5 color-bg-default" data-targets="pricing-calculator.calculatorSections">
    <%= render partial: "site/pricing/calculator/section_header", locals: {
      name: "ghas",
      heading: "GitHub Advanced Security",
      description: "Secure code, from blueprint to execution.",
      icon_name: "shield-lock",
    } %>

    <div class="calculator-section calculator-section--hidden mt-2" data-target="pricing-calculator-section.sectionContent">
      <div data-target="pricing-calculator-section.sectionInputs" class="calculator-section color-bg-default">
        <div class="mx-1">
          <%= render "site/pricing/calculator/ghas/committers" %>
        </div>
      </div>

      <div class="d-flex flex-column rounded-2 color-bg-subtle p-3 mt-3 mb-4">
        <div class="d-flex flex-items-center mb-2">
          <span class="f5-mktg text-bold pr-2 mr-auto">Cost per month</span>
          <span class="f5-mktg text-right text-bold" data-target="ghas-calculator.costPerMonthDisplay"> <%= Money.new(0, "USD").format %></span>
          <span class="f5-mktg text-bold ml-1">USD</span>
        </div>
        <div class="d-flex flex-items-center mb-2">
          <span class="f5-mktg mr-auto pr-2">License cost (based on number of committers)</span>
          <span class="f5-mktg text-right" data-target="ghas-calculator.committerSeatCostDisplay"><%= Money.new(0, "USD").format %></span>
          <span class="f5-mktg ml-1">USD</span>
        </div>
      </div>
    </div>
    <%= render partial: "site/pricing/calculator/more_info", locals: {
      link_name: "Advanced Security",
      docs_href: "https://docs.github.com/get-started/learning-about-github/about-github-advanced-security",
    } %>
  </ghas-calculator>
</pricing-calculator-section>

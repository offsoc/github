<%= tag.video(
  width: video[:size],
  height: video[:size],
  loop: true,
  muted: true,
  playsinline: true,
  preload: "none",
  class: "js-build-in-item build-in-scale-up js-viewport-aware-video looping-mktg width-full height-auto",
  tabindex: 0,
  data: { threshold: 0,  "play-aria-label": "The video is paused. Press the space bar to play the video.", "pause-aria-label": "The video is playing. Press the space bar to pause the video." }
) do %>
  <% {
    :mov => "video/mp4; codecs=hvc1",
    :webm => "video/webm"
  }.each do |format, type| %>
    <%= tag.source(
      src: image_path("modules/site/mona-sans/#{video[:filename]}.#{format}"),
      type: type
    ) %>
  <% end %>
<% end %>

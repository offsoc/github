<%= render Primer::Beta::IconButton.new(
  icon: :trash,
  scheme: :invisible,
  "aria-label": @label,
  id: "dialog-show-#{@cache_id}",
  "data-show-dialog-id": "cache-dialog-#{@cache_id}")
%>
<%= render Primer::Alpha::Dialog.new(
  title: "Remove cache",
  size: :large,
  id: "cache-dialog-#{@cache_id}",
  text_align: :left,
) do |d| %>
  <% d.with_body(text_align: :left) do %>
    <p>Are you sure you want to delete this cache? <strong>This action cannot be undone</strong>.</p>
  <% end %>
  <% d.with_footer(display: :block) do %>
    <%= form_tag @path,
      method: "delete" do %>
      <%= render Primer::Beta::Button.new(
          type: :submit,
          block: true,
          scheme: :danger,
          "data-disable-with": "Deleting cache..."
        ) do %>
          Yes, permanently delete this cache
      <% end %>
    <% end %>
  <% end %>
<% end %>

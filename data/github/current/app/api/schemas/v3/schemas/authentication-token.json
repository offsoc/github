{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/authentication-token.json",
  "title": "Authentication Token",
  "type": "object",
  "definitions": {
    "token": {
      "description": "The token used for authentication",
      "type": "string",
      "example": "v1.1f699f1069f60xxx"
    },
    "expires_at": {
      "description": "The time this token expires",
      "type": "string",
      "format": "date-time",
      "example": "2016-07-11T22:14:10Z"
    },
    "repositories": {
      "description": "The repositories this token has access to",
      "type": "array",
      "items": {
        "$ref": "https://schema.github.com/v3/repository.json#/"
      }
    }
  },
  "properties": {
    "token": {
      "$ref": "#/definitions/token"
    },
    "expires_at": {
      "$ref": "#/definitions/expires_at"
    },
    "permissions": {
      "$ref": "https://schema.github.com/v3/installation.json#/definitions/permissions"
    },
    "repositories": {
      "$ref": "#/definitions/repositories"
    },
    "single_file": {
      "$ref": "https://schema.github.com/v3/installation.json#/definitions/single_file_name"
    },
    "has_multiple_single_files": {
      "$ref": "https://schema.github.com/v3/installation.json#/definitions/has_multiple_single_files"
    },
    "single_file_paths": {
      "$ref": "https://schema.github.com/v3/installation.json#/definitions/single_file_paths"
    },
    "repository_selection": {
      "$ref": "https://schema.github.com/v3/installation.json#/definitions/repository_selection"
    }
  },
  "additionalProperties": false,
  "required": [
    "token",
    "expires_at"
  ]
}

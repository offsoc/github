<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= form_with url: stafftools_enterprise_billing_education_configuration_path(business), method: :put do |f| %>
  <dl class="form-group">
    <dt>
      <%= f.label :education_bundle, "Education Bundle" %>
    </dt>
    <dd>
      <%= f.select :education_bundle, options_for_select(Billing::SalesServePlanSubscription.education_bundles.keys, business&.sales_serve_plan_subscription&.education_bundle) %>
    </dd>
  </dl>
  <%= render(Primer::ButtonComponent.new(scheme: :primary, type: :submit, w: :full, mt: 3)) { "Update Education Configuration" } %>
<% end %>

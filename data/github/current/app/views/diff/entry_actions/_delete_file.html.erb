<%# erblint:counter ButtonComponentMigrationCounter 2 %>
<%# erblint:counter GoogleAnalyticsDeprecation 1 %>
<% if current_repository_writable? && can_edit_pull_request_blobs? && !uneditable_type %>
  <a href="<%= delete_file_path %>" role="menuitem" class="pl-5 dropdown-item menu-item-danger btn-link" rel="nofollow" aria-label="Delete this file" data-ga-click="Delete file, click, location:files_changed_dropdown" <%= repo_turbo_frame_attr(flagged: true) %>>
    Delete file
  </a>
<% else %>
  <button type="button" disabled role="menuitem" class="pl-5 dropdown-item btn-link" aria-label="You must be signed in and have push access to delete this file.">
    Delete file
  </button>
<% end %>

<%# erblint:counter DeprecatedComponentsCounter 1 %>
<div class="mt-3 pb-4" id="sponsors">
  <remote-pagination>
    <div class="d-flex flex-wrap" data-target="remote-pagination.list">
      <%= render "sponsors/sponsors_partials/show",
        sponsorships: sponsorships,
        sponsorable: sponsorable,
        next_page_filter: next_page_filter
      %>
    </div>

    <%=
      form_with(
        class: "mt-1",
        html: { hidden: true },
        url: false,
        method: :get,
        data: {
          target: "remote-pagination.form",
          action: "submit:remote-pagination#submit",
        }
      ) do
    %>
      <%= render(Primer::ButtonComponent.new(
        type: :submit,
        scheme: :link,
        color: :muted,
        font_size: :small,
        data: { target: "remote-pagination.submitButton" }
      )) do %>
        Show more <%= render Primer::Beta::Octicon.new icon: "chevron-down", vertical_align: :middle %>
      <% end %>
    <% end %>
  </remote-pagination>
</div>

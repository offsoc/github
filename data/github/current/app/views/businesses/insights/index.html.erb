<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% page_info title: "GitHub Insights",
    selected_link: :business_insights,
    stafftools: stafftools_enterprise_path(this_business) %>

<%= render layout: "businesses/layout",
  locals: {
    business: this_business,
    title: "GitHub Insights",
    container_attributes: "itemscope itemtype='http://schema.org/Business'"
  } do %>
  <%= render Primer::BlankslateComponent.new(
    image_src: "modules/insights/Dashboard.png",
    image_alt: "Insights Dashboard",
    title: "GitHub Insights has not been set up",
    description: "GitHub Insights is a standalone application that integrates with GitHub through the GitHub API.",
  ) do %>
    <p><%= link_to "Contact sales to get started", ent_contact_url, class: "btn btn-primary" %></p>
    <p class="mt-3">Already purchased GitHub Insights? <%= link_to "Click here to connect it.", settings_enterprise_insights_path(this_business.slug), class: "Link--inTextBlock" %></p>
  <% end %>
<% end %>

<%= render(Primer::Alpha::TabNav.new(label: "Notifications", px: [3, nil, 0])) do |c| %>
  <% c.with_tab(id: "notifications-tab", href: global_notifications_path(:all => nil), selected: selected_tab == "notifications", display: responsive? ? :none : :block) do |t| %>
    <% t.with_text do %>
      <%= render(Primer::Beta::Octicon.new(icon: "bell")) %>
      Notifications
    <% end %>
  <% end %>

  <% c.with_tab(id: "watching-tab", href: watching_path, selected: selected_tab == "watching") do |t| %>
    <% t.with_text do %>
      <%= render(Primer::Beta::Octicon.new(icon: "eye")) %>
      Watching
    <% end %>
  <% end %>

  <% c.with_tab(id: "subscriptions-tab", href: notification_subscriptions_path, selected: selected_tab == "subscriptions") do |t| %>
    <% t.with_text do %>
      <%= render(Primer::Beta::Octicon.new(icon: "bell")) %>
      Subscriptions
    <% end %>
  <% end %>

  <% if GitHub.flipper[:ignorable_team_notifications].enabled?(current_user) %>
    <% c.with_tab(id: "teams-tab", href: teams_notifications_path, selected: selected_tab == "teams") do |t| %>
      <% t.with_text do %>
        <%= render(Primer::Beta::Octicon.new(icon: "people")) %>
        Teams
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render Primer::Beta::Subhead.new(display: :flex, align_items: :center) do |component| %>
  <% component.with_heading(tag: :h1) do %>Profile details<% end %>
<% end %>

<%= render Sponsors::Dashboard::Profile::FeaturedWorkSearchFormComponent.new(sponsorable_login: sponsorable_login) %>
<%= render Sponsors::Dashboard::Profile::MeetTheTeamFormComponent.new(sponsors_listing: sponsors_listing) %>
<%= render Sponsors::Dashboard::Profile::FeaturedSponsorsFormComponent.new(sponsors_listing: sponsors_listing) %>

<%= form_tag(sponsorable_dashboard_profile_path(sponsorable_login), method: :put, class: "js-sponsors-dashboard-profile-form") do %>
  <%= render Sponsors::Dashboard::Profile::ShortBioComponent.new(sponsors_listing: sponsors_listing) %>
  <%= render Sponsors::Dashboard::Profile::IntroductionComponent.new(sponsors_listing: sponsors_listing) %>
  <%= render Sponsors::Dashboard::Profile::MeetTheTeamComponent.new(sponsors_listing: sponsors_listing) %>
  <%= render Sponsors::Dashboard::Profile::YourSponsorsComponent.new(sponsors_listing: sponsors_listing) %>
  <%= render Sponsors::Dashboard::Profile::FeaturedWorkComponent.new(sponsors_listing: sponsors_listing) %>
  <%= render Sponsors::Dashboard::Profile::FeaturedSponsorsComponent.new(sponsors_listing: sponsors_listing) %>
  <%= render Sponsors::Dashboard::Profile::FeaturedOptInComponent.new(sponsors_listing: sponsors_listing) %>

  <input type="submit" value="Update profile" data-disable-invalid class="btn btn-primary mt-3">
<% end %>

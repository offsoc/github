<div class="border rounded-1 px-3 py-4 mb-4">
  <div class="d-flex text-small flex-justify-between">
    <h5 class="text-normal text-small color-fg-muted mb-1 pb-1">
      <%= render(Primer::Beta::Octicon.new(icon: "terminal", mr: 1, vertical_align: :text_top)) %>
      Install from the command line:
    </h5>
    <span><%= link_to GitHub.npm_github_package_registry_url, class: "Link--inTextBlock" do %>Learn more about npm packages<% end %></span>
  </div>

  <div class="position-relative">
    <div class="Box color-bg-subtle border-0 text-left mx-auto p-3 overflow-x-auto code-block"  style= "white-space: nowrap">
      <code class="d-block color-bg-subtle border-0 rounded-2 f6 lh-default">
        <span class="color-fg-muted">$</span> npm install @<span class="color-fg-done"><%= owner.display_login.downcase %></span>/<span class="color-fg-done"><%= package_name.downcase %></span>@<span class="color-fg-done"><%= package_version_name %></span>
      </code>
      <div class="clipboard-copy">
        <%= render Primer::Beta::ClipboardCopy.new(id: "npm-install", classes: "copy-button btn tooltipped-no-delay", p: 2, "aria-label": " npm install @#{owner.display_login}/#{package_name}@#{package_version_name}", "data-copy-feedback": "Copied!", "data-tooltip-direction": "w", role: "button", tabindex: "0", value: "npm install @#{ owner.display_login.downcase }/#{ package_name.downcase }@#{ package_version_name }") %><%# erblint:disable Primer::Accessibility::TooltippedMigration %>
      </div>
    </div>
  </div>

    <h5 class="text-normal color-fg-muted f6 mb-1 mt-3 pb-1">
      <%= primer_octicon(:code, mr: 1, vertical_align: :text_top) %>
      Install via package.json:
    </h5>
    <div class="position-relative">
      <div class="Box color-bg-subtle border-0 text-left mx-auto p-3 overflow-x-auto code-block" style= "white-space: nowrap">
        <code class="d-block color-bg-subtle position-relative border-0 rounded-2 f6 lh-default">
          "@<span class="color-fg-done"><%= owner.display_login.downcase %></span>/<span class="color-fg-done"><%= package_name.downcase %></span>": "<span class="color-fg-done"><%= package_version_name  %></span>"
        </code>
        <div class="clipboard-copy">
          <%= render Primer::Beta::ClipboardCopy.new(classes: "copy-button btn tooltipped-no-delay", p: 2, "aria-label": "#{owner.display_login}/#{package_name}:#{package_version_name}", "data-copy-feedback": "Copied!", "data-tooltip-direction": "w", role: "button", tabindex: "0", value: "\"@#{ owner.display_login.downcase }/#{ package_name.downcase }\": \"#{ package_version_name }\"")  %><%# erblint:disable Primer::Accessibility::TooltippedMigration %>
        </div>
      </div>
    </div>
</div>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/scoped-installation-token.json",
  "title": "Scoped Installation Token",
  "description": "Authentication token for a GitHub App installed on a user or org with a subset of repository access.",
  "type": "object",
  "definitions": {
    "pull_request": {
      "type": "object",
      "properties": {
        "number": {
          "$ref": "https://schema.github.com/v3/pull-request.json#/definitions/number"
        },
        "permissions": {
          "$ref": "https://schema.github.com/v3/installation.json#/definitions/permissions"
        }
      },
      "additionalProperties": false,
      "required": [
        "number",
        "permissions"
      ]
    },
    "workflow_run": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "https://schema.github.com/v3/workflow-run.json#/definitions/id"
        },
        "permissions": {
          "$ref": "https://schema.github.com/v3/installation.json#/definitions/permissions"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "permissions"
      ]
    },
    "repository": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "https://schema.github.com/v3/repository.json#/definitions/id"
        },
        "name": {
          "$ref": "https://schema.github.com/v3/repository.json#/definitions/name"
        },
        "permissions": {
          "$ref": "https://schema.github.com/v3/installation.json#/definitions/permissions"
        },
        "pull_requests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pull_request"
          },
          "minItems": 1,
          "maxItems": 5,
          "uniqueItems": true
        },
        "workflow_runs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/workflow_run"
          },
          "minItems": 1,
          "maxItems": 1,
          "uniqueItems": true
        }
      },
      "additionalProperties": false,
      "required": [
        "permissions"
      ],
      "oneOf": [
        {
          "required": [
            "id"
          ]
        },
        {
          "required": [
            "name"
          ]
        }
      ]
    },
    "repositories": {
      "description": "List of repositories that the token should have access to",
      "type": "array",
      "items": {
        "$ref": "#/definitions/repository"
      },
      "minItems": 1,
      "maxItems": 10
    }
  },
  "links": [
    {
      "title": "Create a new scoped installation token",
      "method": "POST",
      "rel": "create",
      "href": "/app/installations/{installation_id}/access_tokens/scoped",
      "schema": {
        "properties": {
          "repositories": {
            "$ref": "#/definitions/repositories"
          }
        },
        "required": [
          "repositories"
        ],
        "additionalProperties": false,
        "type": "object"
      }
    }
  ]
}

<%= render Primer::Box.new(test_selector: "fork-detail") do %>
  <%= render Primer::Beta::Heading.new(tag: :h2, font_size: 4, test_selector: "fork-detail-heading") do %>
    <%= profile_link(fork.owner, class: "no-underline") do %>
      <%= owner_avatar %>
      <%= render Primer::Beta::Text.new(font_size: 4, display: :inline_block) do %>
        <%= fork.owner_display_login %>
      <% end %>
    <% end %>
    <%= render Primer::Beta::Text.new(color: :muted) do %>
      /
    <% end %>
    <%= render Primer::Beta::Link.new(href: fork_url, font_size: 4, underline: false) do %>
      <%= fork.name %>
    <% end %>
  <% end %>
  <div class="d-flex flex-column flex-sm-row mt-2">
    <% details.each do |d| %>
      <%= render d %>
    <% end%>
  </div>
<% end %>

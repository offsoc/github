<% dummy_list = Primer::Beta::NavList::Group.new %>
<%= render Primer::Alpha::ActionList::Item.new(list: dummy_list, truncate_label: true, classes: "js-load-user-status-submit", content_arguments: { data: { action: "click:user-drawer-side-panel#openDialog", **analytics_click_attributes(category: "Global navigation", action: "USER_STATUS") }}, test_selector: "user-status-item") do |item| %>
  <% item.with_leading_visual_content do %>
    <% if emoji %>
      <%= emoji_tag(emoji, {
        class: "emoji",
        align: "absmiddle",
        style: "font-size: 14px;"
      }) %>
    <% else %>
      <%= primer_octicon :smiley %>
    <% end %>
  <% end %>

  <% if user_status %>
    <% if user_status.message %>
      <%= user_status.message_html(viewer: current_user, link_mentions: false) %>
    <% else %>
      Edit status
    <% end %>
  <% else %>
    Set status
  <% end %>
<% end %>

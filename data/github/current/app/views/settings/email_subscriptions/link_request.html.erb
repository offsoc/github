<% page_info sticky_footer: true, class: "f4" %>

<div class="container-lg py-5">
  <h1 class="h1-mktg"><%= _("Request a link to manage your email communication preferences.") %></h1>
  <p class="f2-mktg mt-2">
    <%= _("We'll send a link to your email to manage your communication preferences. Enter your email address below and select Submit.") %>
  </p>

  <p class="f2-mktg mt-2">
    <%= _("If you don't receive an email, check your spam folder or request a new link.") %>
  </p>

  <%= form_with(url: settings_link_request_path, class: "mt-5") do %>
    <%= csrf_hidden_input_for settings_link_request_path %>
    <div class="form-group">
      <div class="form-group-header">
        <label for="email">
          <%= _("Email Address") %>
        </label>
      </div>
      <div class="form-group-body">
        <input
          class="form-control"
          required
          type="email"
          name="email"
          id="email"
          placeholder="<%= _("Email address") %>"
          autocomplete="off"
          spellcheck="false"
        >
      </div>
    </div>

    <%= render Primer::Beta::Button.new(
      type: :submit,
      data: {
        disable_with: "Submit #{render(Primer::Beta::Spinner.new(size: :small))}"
      }
    ) do %>
      <%= _("Submit") %>
      <span class="sr-only">
        <%= _("to receive the preferences center link via email.") %>
      </span>
    <% end %>
  <% end %>
</div>

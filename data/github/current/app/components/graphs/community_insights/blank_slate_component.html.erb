<%= render Primer::Beta::Blankslate.new do |c| %>
  <% c.with_visual_icon(icon: :'comment-discussion') %>
  <% c.with_heading(tag: :h2).with_content("Enable Discussions to unlock Community Insights!") %>
  <% c.with_description do %>
    Discussions is the central space for your community to share announcements, ask questions, and host conversations.

    <% if repository.can_toggle_discussions_setting?(current_user) %>
      <%= button_to(
        "Set up discussions",
        discussions_welcome_templates_path(
          repository.owner,
          repository,
        ),
        class: "btn btn-primary",
        "data-test-selector": "discussions-enable-cta"
      ) %>
    <% end %>
  <% end %>
<% end %>

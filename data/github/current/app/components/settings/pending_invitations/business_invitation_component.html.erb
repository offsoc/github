<div class="Box-row d-flex flex-items-center flex-justify-between" <%= test_selector "enterprise-#{business.id}-invite" %>>
  <div>
    <%= render(Primer::Beta::Avatar.new(src: business.primary_avatar_url, size: 20, alt: business.name, shape: :square)) %>
    <strong class="ml-1">
      <%= link_to business.name, enterprise_path(business) %>
    </strong>
    <%= render(Primer::Beta::Label.new(scheme: :secondary)) { role_label } %>
  </div>
  <div class="d-flex flex-items-center flex-justify-end" style="gap: 16px;">
    <span class="color-fg-muted f6"><%= remaining_time_message %></span>
      <%= link_to "Accept", accept_url,
        data: analytics_click_attributes(
          category: "pending_enterprise_invitation",
          action: "accept_invitation_link",
          label: "ref_loc:user_settings_enterprise_list;role:#{role}"
        ),
        class: "btn btn-sm"
      %>
  </div>
</div>

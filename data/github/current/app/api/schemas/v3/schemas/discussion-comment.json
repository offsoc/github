{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/discussion-comment.json",
  "title": "Discussion Comment",
  "description": "Comments provide a way for people to participate in a discussion.",
  "type": "object",
  "definitions": {
    "id": {
      "description": "Unique identifier of the discussion comment",
      "example": 42,
      "type": "integer"
    },
    "node_id": {
      "type": "string"
    },
    "body": {
      "description": "Contents of the discussion comment",
      "example": "What version of Safari were you using when you observed this bug?",
      "type": "string"
    },
    "html_url": {
      "type": "string",
      "format": "uri"
    },
    "parent_id": {
      "description": "The ID of the parent discussion comment. Null for top-level comments.",
      "type": "integer"
    },
    "child_comment_count": {
      "description": "The count of child comments for this discussion comment",
      "type": "integer",
      "example": 0
    },
    "repository_url": {
      "type": "string",
      "format": "uri"
    },
    "discussion_id": {
      "description": "The ID of the owning discussion.",
      "type": "integer"
    },
    "author_association": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "body": {
      "$ref": "#/definitions/body"
    },
    "html_url": {
      "$ref": "#/definitions/html_url"
    },
    "parent_id": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/definitions/parent_id"
        }
      ]
    },
    "child_comment_count": {
      "$ref": "#/definitions/child_comment_count"
    },
    "repository_url": {
      "$ref": "#/definitions/repository_url"
    },
    "discussion_id": {
      "$ref": "#/definitions/discussion_id"
    },
    "author_association": {
      "$ref": "#/definitions/author_association"
    },
    "user": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    },
    "reactions": {
      "$ref": "https://schema.github.com/v3/reaction-rollup.json#"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "node_id",
    "body",
    "html_url",
    "parent_id",
    "child_comment_count",
    "repository_url",
    "discussion_id",
    "author_association",
    "user",
    "created_at",
    "updated_at"
  ]
}

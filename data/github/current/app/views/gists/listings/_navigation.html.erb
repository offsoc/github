<%= render(Primer::Alpha::UnderlineNav.new(label: "Gist tab")) do |component| %>
  <% component.with_tab(href: discover_gists_path, selected: link_selected?(:discover_gists)) do |t| %>
    <% t.with_icon(icon: :"code-square") %>
    <% t.with_text { "All gists" } %>
  <% end %>

  <% component.with_tab(href: forked_gists_path, selected: link_selected?(:forked_gists)) do |t| %>
    <% t.with_icon(icon: :"git-branch") %>
    <% t.with_text { "Forked" } %>
  <% end %>

  <% component.with_tab(href: starred_gists_path, selected: link_selected?(:starred_gists)) do |t| %>
    <% t.with_icon(icon: :star) %>
    <% t.with_text { "Starred" } %>
  <% end %>
<% end %>

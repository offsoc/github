{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/application-grant.json",
  "title": "Application Grant",
  "description": "The authorization associated with an OAuth Access.",
  "type": "object",
  "definitions": {
    "grant_id": {
      "description": "The ID of the grant.",
      "type": "integer"
    },
    "client_id": {
      "description": "The ID of the application.",
      "type": "integer"
    },
    "access_token": {
      "description": "The access_token of the grant.",
      "type": "string"
    },
    "id": {
      "type": "integer",
      "example": 1
    },
    "scopes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "example": [
        "public_repo"
      ]
    },
    "url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/applications/grants/1"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "example": "2011-09-06T17:26:27Z"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "example": "2011-09-06T20:39:23Z"
    }
  },
  "links": [
    {
      "title": "Delete a grant",
      "method": "DELETE",
      "rel": "delete",
      "href": "/applications/grants/{grant_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Revoke a grant for an application",
      "method": "DELETE",
      "rel": "delete-for-app",
      "href": "/applications/{client_id}/grants/{access_token}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Revoke a grant for an application",
      "method": "DELETE",
      "rel": "delete-for-app-token",
      "href": "/applications/{client_id}/grant",
      "schema": {
        "properties": {
          "access_token": {
            "$ref": "#/definitions/access_token"
          }
        },
        "required": [
          "access_token"
        ],
        "additionalProperties": false,
        "type": [
          "object"
        ]
      }
    }
  ],
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "client_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false,
      "required": [
        "client_id",
        "name",
        "url"
      ]
    },
    "id": {
      "$ref": "#/definitions/id"
    },
    "scopes": {
      "$ref": "#/definitions/scopes"
    },
    "url": {
      "$ref": "#/definitions/url"
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    },
    "user": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "app",
    "id",
    "scopes",
    "url",
    "created_at",
    "updated_at"
  ]
}

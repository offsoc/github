<%- if web_server? && config_value('smtp', 'enabled') -%>
LoadPlugin filecount
<Plugin filecount>
  <Directory "/data/user/mail/reply/new">
    Instance "mail-incoming"
  </Directory>
  <Directory "/var/spool/postfix/active">
    Instance "mail-outgoing"
  </Directory>
  <Directory "/var/spool/postfix/deferred">
    Instance "mail-deferred"
  </Directory>
</Plugin>
<%- end -%>

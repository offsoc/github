<%
  return_to = params[:return_to]

  if !defined?(ignore_return_to_path)
    return_to ||= return_to_path
  end

  if !defined?(webauthn_conditional)
    webauthn_conditional = "undefined"
  end
%>

<input type="hidden" name="webauthn-conditional" value="<%= webauthn_conditional %>">
<input type="hidden" class="js-support" name="javascript-support" value="unknown">
<input type="hidden" class="js-webauthn-support" name="webauthn-support" value="unknown">
<input type="hidden" class="js-webauthn-iuvpaa-support" name="webauthn-iuvpaa-support" value="unknown">
<%= hidden_field_tag 'return_to', return_to %>
<%= hidden_field_tag 'allow_signup', params[:allow_signup] %>
<%= hidden_field_tag 'client_id', params[:client_id] %>
<%= hidden_field_tag 'integration', params[:integration] %>
<%= spamurai_form_signals %>

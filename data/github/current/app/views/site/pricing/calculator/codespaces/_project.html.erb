<div class="pb-3 border-bottom border-top-0 border-left-0 border-right-0 border-dashed">
  <p class="f5-mktg text-bold">Project requirements</p>
  <p class="f5-mktg color-fg-muted">Codespaces can scale to the complexity of your project requirements. Select the machine size that best suits your work: </p>
  <% Site::PricingCalculator::MACHINE_TYPES.each do |machine_size| %>
    <label class="d-flex flex-row flex-items-start pl-2 pr-3 px-sm-3 py-3 mb-2 rounded-2 calculator-radio-label" data-targets="codespaces-calculator.machineSizeLabels">
      <%= radio_button_tag(
        "codespaces-machine-size",
        machine_size[:key],
        false,
        class: "mt-1 mr-2 position-relative",
        "data-label": machine_size[:name],
        data: {
          targets: "codespaces-calculator.machineSizes",
          action: "click:codespaces-calculator#machineSizeUpdated",
        }
      ) %>
      <div class="d-flex flex-row flex-justify-between flex-1 position-relative">
        <div class="col-10 col-sm-11 pr-2">
          <div class="d-block f5-mktg text-bold"><%= machine_size[:name] %></div>
          <div class="f5-mktg color-fg-muted"><%= machine_size[:description] %></div>
        </div>
        <div class="col-2 col-sm-1 d-flex flex-column flex-items-end">
          <span class="f5-mktg text-bold no-wrap"><%= Money.new(machine_size[:price_cents_usd], "USD").format %> USD</span>
          <span class="f5-mktg color-fg-muted">/hr</span>
        </div>
      </div>
    </label>
  <% end %>
</div>

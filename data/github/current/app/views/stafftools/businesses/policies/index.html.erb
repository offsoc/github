  <% component.with_heading(tag: :h2) do %>Policies<% end %>
<% end %>

<%= render Primer::Beta::BorderBox.new(padding: :condensed) do |component| %>
  <% component.with_row do %>
    <%= link_to "Repository policies", repository_policies_stafftools_enterprise_path(this_business) %>
  <% end %>
  <% component.with_row do %>
    <%= link_to "Actions policies", actions_policies_stafftools_enterprise_path(this_business) %>
  <% end %>
  <% component.with_row do %>
    <%= link_to "Project policies", project_policies_stafftools_enterprise_path(this_business) %>
  <% end %>
  <% component.with_row do %>
    <%= link_to "Team policies", team_policies_stafftools_enterprise_path(this_business) %>
  <% end %>
  <% component.with_row do %>
    <%= link_to "Organization policies", organization_policies_stafftools_enterprise_path(this_business) %>
  <% end %>
<% end %>

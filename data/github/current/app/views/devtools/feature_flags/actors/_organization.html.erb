<%# erblint:counter ButtonComponentMigrationCounter 1 %>
<li class="Box-row">
  <img src="<%= organization.primary_avatar_url %>" alt="@<%= organization.login %>" height="20" width="20" class="<%= avatar_class_names(organization) %>">
  <a href="<%= stafftools_user_path(organization) %>"><%= organization.login %></a> &ndash; <%= organization.name %>

  <span class="stafftools-email-actions">
    <%= form_tag devtools_feature_flag_delete_actor_path(feature_flag), method: :delete, class: "inline-form" do %>
      <input type="hidden" name="flipper_id" value="<%= organization.flipper_id %>">
      <%= hidden_field_tag 'rollout_updated_at', feature_flag.rollout_updated_at, {:id => "org_#{ organization.flipper_id }_rollout_updated_at"} %>
      <button type="submit" class="btn-link color-fg-danger" title="Remove access for <%= organization.login %>"><%# erblint:disable GitHub::Accessibility::NoTitleAttribute %>
        <%= primer_octicon(:trash) %>
      </button>
    <% end %>
  </span>
</li>

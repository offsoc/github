<% if @config['collectd'] && @config['collectd']['graphite'] && \
     @config['collectd']['graphite']['enabled'] == true %>
LoadPlugin write_graphite

<Plugin write_graphite>
  <Carbon>
    Host "<%= @config['collectd']['graphite']['host'] || 'localhost' %>"
    Port "<%= @config['collectd']['graphite']['port'] || 2003 %>"
    Prefix "<%= @config['collectd']['graphite']['prefix'] || 'hosts.' %>"
    Protocol "<%= @config['collectd']['graphite']['protocol'] || 'udp' %>"
    AlwaysAppendDS true
  </Carbon>
</Plugin>
<% else %>
# Graphite plugin not enabled
<% end %>

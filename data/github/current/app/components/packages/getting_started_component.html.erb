<div class="container-lg">
  <div class="text-center">
    <%= svg("registry-marketing-icon", width: "56", height: "56") %>
    <h1 class="mb-2">Get started with GitHub Packages</h1>
    <p class="color-fg-muted mb-6 f4">Safely publish packages, store your packages alongside your code, and share your packages privately with your team.</p>
    <p class="f3 color-fg-muted pt-2 pb-2">Choose a registry</p>
  </div>
  <div class="package-grid">
    <% ecosystems.each do |name, ecosystem| %>
      <% if !GitHub.enterprise? || ENV[ecosystem[:enterprise_key]] == "true" %>
        <%=
          render partial: "registry/packages/ecosystem_learn_more_card",
            locals: {
              ecosystem: ecosystem,
              documentation_link: "#{DOCUMENTATION_BASE_URL}#{ecosystem[:documentation_path]}"
            }
        %>
      <% end %>
    <% end %>
  </div>
</div>

<div
  class="<%= class_names("form-group", "required" => required?) %>"
  <%= test_selector("issue-form-dropdown") %>
>
  <div class="form-group-header">
    <%= label(base_form_param, element.id, element.label, class: "d-block mb-1") %>
    <% if has_description? %>
      <%= render Primer::Beta::Markdown.new(mb: 2, id: description_id, font_size: :small, classes: "note", test_selector: "issue-form-dropdown-description", "aria-required": required?) do %>
        <%= description %>
      <% end %>
    <% end %>
  </div>
  <%= select_tag name,
    select_options,
    class: "form-select js-session-resumable",
    required: required?,
    id: id,
    "aria-describedby": description_id
  %>
</div>

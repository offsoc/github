<%= render(Primer::Alpha::SelectPanel::ItemList.new(
  menu_id: "actions_status_filter",
  select_variant: :single,
  aria: { label: "statuses" },
)) do |list| %>
  <% statuses.each do |status| %>
    <% selected = workflow_run_filters[:is] == status %>
    <% list.with_item(
        href: filtered_runs_by_file_path(filters: workflow_run_filters, replace: { is: !selected ? status : nil }, filename: selected_filename, lab: is_lab),
        label: status.humanize(capitalize: false),
        active: selected) %>
  <% end %>
<% end %>

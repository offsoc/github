      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "type": "object",
        "additionalProperties": false,
        "required": [
          "body"
        ]
      }
    },
    {
      "href": "/repositories/{repository_id}/comments/{comment_id}",
      "method": "POST",
      "rel": "update",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object"
      },
      "title": "Update a commit comment"
    },
    {
      "title": "Delete a commit comment",
      "method": "DELETE",
      "rel": "delete",
      "href": "/repositories/{repository_id}/comments/{comment_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    },
    {
      "title": "Create a comment for a specific commit",
      "method": "POST",
      "href": "/repositories/{repository_id}/commits/{sha}/comments",
      "rel": "create",
      "schema": {

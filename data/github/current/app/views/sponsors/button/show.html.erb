<%= render(Primer::Beta::Button.new(
  tag: :a,
  block: true,
  href: sponsorable_url(
    sponsorable,
    **Sponsors::TrackingParameters.new(
      origin: Sponsors::TrackingParameters::EMBEDDED_SPONSOR_BUTTON_ORIGIN,
    ).to_h
  ),
  "aria-label": "Sponsor @#{sponsorable}",
  target: "_top",
)) do |button| %>
  <% button.with_leading_visual_icon(icon: :heart, color: :sponsors) %>
  Sponsor
<% end %>

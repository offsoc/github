<%= render Primer::Alpha::ActionMenu.new(
  "data-filter-on": "sso",
  select_variant: :single,
  anchor_align: :end,
  align_self: :center,
  mr: 1,
) do |menu| %>
  <% menu.with_show_button(scheme: :invisible) do |button|
      button.with_trailing_action_icon(icon: :"triangle-down")
      "SSO"
  end %>
  <% menu.with_item(
      href: url_for(query: ""),
      label: "Everyone",
      active: view.sso_filter_select_class(:all) == "selected",
      classes: "js-member-search-filter",
      "data-filter": ""
  ) %>
  <% menu.with_item(
      href: url_for(query: "sso:linked"),
      label: "Linked",
      active: view.sso_filter_select_class(:linked) == "selected",
      classes: "js-member-search-filter",
      "data-filter": "sso:linked"
  ) %>
  <% menu.with_item(
      href: url_for(query: "sso:unlinked"),
      label: "Unlinked",
      active: view.sso_filter_select_class(:unlinked) == "selected",
      classes: "js-member-search-filter",
      "data-filter": "sso:unlinked"
  ) %>
<% end %>

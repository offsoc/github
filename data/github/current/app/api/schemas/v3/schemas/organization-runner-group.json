          }
        },
        "required": [
          "selected_repository_ids"
        ],
        "additionalProperties": false,
        "type": "object"
      }
    },
    {
      "title": "Adds a repository to an organization runner group",
      "href": "/organizations/{organization_id}/actions/runner-groups/{runner_group_id}/repositories/{repository_id}",
      "method": "PUT",
      "rel": "add-repository",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Removes a repository from an organization runner group",
      "href": "/organizations/{organization_id}/actions/runner-groups/{runner_group_id}/repositories/{repository_id}",
      "method": "DELETE",
      "rel": "remove-repository",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ],
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "name": {
      "$ref": "#/definitions/name"
    },
    "visibility": {
      "$ref": "#/definitions/visibility"
    },
    "selected_repositories_url": {
      "$ref": "#/definitions/selected_repositories_url"
    },
    "runners_url": {
      "$ref": "#/definitions/runners_url"
    },
    "inherited": {
      "$ref": "#/definitions/inherited"
    },
    "inherited_allows_public_repositories": {
      "$ref": "#/definitions/inherited_allows_public_repositories"
    },
    "allows_public_repositories": {
      "$ref": "#/definitions/allows_public_repositories"
    },
    "workflow_restrictions_read_only": {
      "$ref": "#/definitions/workflow_restrictions_read_only"
    },
    "restricted_to_workflows": {
      "$ref": "#/definitions/restricted_to_workflows"
    },
    "selected_workflows": {
      "$ref": "#/definitions/selected_workflows"
    },
    "default": {
      "$ref": "#/definitions/default"
    },
    "network_configuration_id": {
      "$ref": "#/definitions/network_configuration_id"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "visibility"
  ]
}

<% sponsorships.each_with_index do |sponsorship, index| %>
  <%=
    render Sponsors::Profile::SponsorAvatarComponent.new(
      user_or_org: sponsorship.linked_or_direct_sponsor,
      sponsorship: sponsorship,
      size: 30,
      is_first_on_page: index == 0,
      next_page: sponsorships.next_page,
      next_page_filter: next_page_filter,
    )
  %>
<% end %>

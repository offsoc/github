<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% banner = GitHub.flipper[:banner_migration].enabled?(current_user) ? Primer::Alpha::Banner : Primer::Beta::Flash %>
<% if subscription_ended_due_to_billing_trouble %>
  <%= render(banner.new(scheme: :warning)) do %>
    Your GitHub Copilot subscription has been canceled due to a billing issue. Please <%= link_to settings_user_billing_tab_path(tab: "payment_information"), class: "Link--inTextBlock" do %> update your payment method <% end %> to re-subscribe to GitHub Copilot.
  <% end %>
  <br>
<% elsif trial_only_subscription %>
  <%= render(banner.new(scheme: :danger)) { "Your trial of Copilot has ended. Please purchase to continue to use Copilot." } %>
  <br>
<% else %>
  <%= render(banner.new(scheme: :warning)) { "Your GitHub Copilot subscription has ended." } %>
  <br>
<% end %>

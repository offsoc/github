<% if accepted_accounts.any? %>
  <%= render Primer::Beta::Subhead.new(mb: 5, mx: :auto, col: [12, nil, nil, 9]) do |component| %>
    <% component.with_heading(tag: :h2) do %>GitHub Sponsors dashboards<% end %>
  <% end %>
  <% accepted_accounts.each do |account| %>
    <%= render Sponsors::Accounts::CardComponent.new(account: account) %>
  <% end %>
<% end %>

<% if submitted_accounts.any? %>
  <%= render Primer::Beta::Subhead.new(mb: 5, mx: :auto, col: [12, nil, nil, 9]) do |component| %>
    <% component.with_heading(tag: :h2) do %>GitHub Sponsors applications<% end %>
  <% end %>
  <% submitted_accounts.each do |account| %>
    <%= render Sponsors::Accounts::CardComponent.new(account: account) %>
  <% end %>
<% end %>

<% if unsubmitted_accounts.any? %>
  <%= render Primer::Beta::Subhead.new(mb: 5, mx: :auto, col: [12, nil, nil, 9]) do |component| %>
    <% component.with_heading(tag: :h2) do %>GitHub Sponsors eligible accounts<% end %>
  <% end %>
  <% unsubmitted_accounts.each do |account| %>
    <%= render Sponsors::Accounts::CardComponent.new(account: account) %>
  <% end %>
<% end %>

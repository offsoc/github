<div class="form-group <% if required? %>required<% end %>" <%= test_selector("issue-form-input") %>>
  <div class="form-group-header">
    <%= label(base_form_param, element.id, element.label, required: required?, class: "d-block mb-1") %>
    <% if has_description? %>
      <%= render Primer::Beta::Markdown.new(mb: 2, id: description_id, font_size: :small, classes: "note", test_selector: "issue-form-input-description") do %>
        <%= description %>
      <% end %>
    <% end %>
  </div>
  <div class="form-group-body">
    <%= text_field(
      base_form_param,
      element.id,
      attributes
    ) %>
  </div>
</div>

<ul class="list-style-none d-flex flex-column flex-lg-row gutter-md-condensed mt-2"
  <%= test_selector "onboarding-tasks" %>>
  <%= render(OnboardingTasks::TaskComponent.new(
    task: OnboardingTasks::Businesses::CreateOverviewReadme.new(
      taskable: this_business,
      user: current_user
    ),
    body: "Communicate information about your enterprise."
  )) %>
  <%= render(OnboardingTasks::TaskComponent.new(
    task: OnboardingTasks::Businesses::InviteAdmin.new(
      taskable: this_business,
      user: current_user
    ),
    body: "Add GitHub users or send an email invite."
  )) %>
  <%= render(OnboardingTasks::TaskComponent.new(
    task: OnboardingTasks::Businesses::CreateOrganization.new(
      taskable: this_business,
      user: current_user
    ),
    body: "Add an organization to your enterprise."
  )) %>
  <%= render(OnboardingTasks::TaskComponent.new(
    task: OnboardingTasks::Businesses::EnableSaml.new(
      taskable: this_business,
      user: current_user
    ),
    body: "Manage members' identities and access."
  )) %>
</ul>

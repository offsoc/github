          <!-- Issue Convo Event 5 -->
          <div class="position-relative z-2 d-flex flex-items-start js-build-in-item build-in-scale-up">
            <img src="<%= image_path "modules/site/issues/illo/event-4-avatar.png" %>" width="40" height="40" alt="" class="circle height-auto flex-shrink-0 mr-4 d-none d-md-block" loading="lazy" decoding="async">
            <div class="position-relative width-full">
              <div class="Box width-full">

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/interaction-limit.json",
  "title": "Interaction Limits",
  "description": "Interaction limit settings.",
  "type": "object",
  "definitions": {
    "limit": {
      "description": "The interaction limit to enable.",
      "enum": [
        "existing_users",
        "contributors_only",
        "collaborators_only"
      ],
      "example": "existing_users",
      "type": "string"
    },
    "expiry": {
      "description": "The time period an interaction limit can be set for.",
      "enum": [
        "one_day",
        "three_days",
        "one_week",
        "one_month",
        "six_months"
      ],
      "example": "one_day",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    },
    "organization_id": {
      "description": "The ID of the organization.",
      "type": "integer"
    },
    "origin": {
      "description": "The origin of the interaction limit that is applied to an object.",
      "enum": [
        "repository",
        "organization",
        "user"
      ],
      "type": "string",
      "example": "repository"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "example": "2018-08-17T04:18:39Z"
    }
  },
  "links": [
    {
      "title": "Set repository limit",
      "method": "PUT",
      "rel": "update-for-repository",
      "href": "/repositories/{repository_id}/interaction-limits",
      "schema": {
        "properties": {
          "limit": {
            "$ref": "#/definitions/limit"
          },
          "expiry": {
            "$ref": "#/definitions/expiry"
          }
        },
        "type": "object",
        "additionalProperties": false,
        "required": [
          "limit"
        ]
      }
    },
    {
      "title": "Remove repository limit",
      "method": "DELETE",
      "rel": "delete-for-repository",
      "href": "/repositories/{repository_id}/interaction-limits",
      "schema": {
        "additionalProperties": false,
        "type": "null"
      }
    },
    {
      "title": "Set organization limit",
      "method": "PUT",
      "rel": "update-for-organization",
      "href": "/organizations/{organization_id}/interaction-limits",
      "schema": {
        "properties": {
          "limit": {
            "$ref": "#/definitions/limit"
          },
          "expiry": {
            "$ref": "#/definitions/expiry"
          }
        },
        "type": "object",
        "additionalProperties": false,
        "required": [
          "limit"
        ]
      }
    },
    {
      "title": "Remove organization limit",
      "method": "DELETE",
      "rel": "delete-for-organization",
      "href": "/organizations/{organization_id}/interaction-limits",
      "schema": {
        "additionalProperties": false,
        "type": "null"
      }
    },
    {
      "title": "Set user limit",
      "method": "PUT",
      "rel": "update-for-user",
      "href": "/user/interaction-limits",
      "schema": {
        "properties": {
          "limit": {
            "$ref": "#/definitions/limit"
          },
          "expiry": {
            "$ref": "#/definitions/expiry"
          }
        },
        "type": "object",
        "additionalProperties": false,
        "required": [
          "limit"
        ]
      }
    },
    {
      "title": "Remove user limit",
      "method": "DELETE",
      "rel": "delete-for-user",
      "href": "/user/interaction-limits",
      "schema": {
        "additionalProperties": false,
        "type": "null"
      }
    }
  ],
  "properties": {
    "limit": {
      "$ref": "#/definitions/limit"
    },
    "origin": {
      "$ref": "#/definitions/origin"
    },
    "expires_at": {
      "$ref": "#/definitions/expires_at"
    }
  },
  "additionalProperties": false,
  "required": [
    "limit",
    "origin",
    "expires_at"
  ]
}

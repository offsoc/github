<%= render(Primer::Alpha::UnderlineNav.new(label: "Actions navigation", mb: 3)) do |component| %>
  <% component.with_tab(href: settings_actions_enterprise_path(business.slug), selected: link_selected?(settings_actions_enterprise_path(business.slug))) do |t| %>
    <% t.with_text { "Policies" } %>
  <% end %>
  <% component.with_tab(href: settings_actions_runners_enterprise_path(business.slug), selected: link_selected?(settings_actions_runners_enterprise_path(business.slug))) do |t| %>
    <% t.with_text { "Runners" } %>
  <% end %>
  <% component.with_tab(href: settings_actions_runner_groups_enterprise_path(business.slug), selected: link_selected?(settings_actions_runner_groups_enterprise_path(business.slug))) do |t| %>
    <% t.with_text { "Runner groups" } %>
  <% end %>
  <% if should_display_custom_images_tab %>
    <% component.with_tab(href: settings_actions_custom_images_enterprise_path(business.slug), selected: link_selected?(settings_actions_custom_images_enterprise_path(business.slug))) do |t| %>
      <% t.with_text { "Custom images" } %>
    <% end %>
  <% end %>
<% end %>

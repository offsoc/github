{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/reminder.json",
  "title": "Reminder",
  "type": "object",
  "definitions": {
    "time_zone_name": {
      "type": "string",
      "example": "Africa/Asmara"
    },
    "delivery_times": {
      "type": "object",
      "properties": {
        "days": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "Monday"
          ]
        },
        "times": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "7:00 AM"
          ]
        }
      },
      "required": [
        "days",
        "times"
      ],
      "additionalProperties": false
    },
    "reminder_workspace_id": {
      "type": "number"
    },
    "channel_name": {
      "type": "string"
    },
    "channel_id": {
      "type": "string"
    },
    "min_age": {
      "type": "number"
    },
    "min_staleness": {
      "type": "number"
    },
    "include_unassigned_prs": {
      "type": "boolean"
    },
    "include_reviewed_prs": {
      "type": "boolean"
    },
    "require_review_request": {
      "type": "boolean"
    },
    "ignore_draft_prs": {
      "type": "boolean"
    },
    "ignore_after_approval_count": {
      "type": "number"
    },
    "ignored_terms": {
      "type": "string"
    },
    "ignored_labels": {
      "type": "string"
    },
    "required_labels": {
      "type": "string"
    },
    "needed_reviews": {
      "type": "number"
    },
    "teams": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "repos": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "settings": {
      "type": "object"
    }
  },
  "links": [
    {
      "title": "Create a new reminder",
      "method": "POST",
      "rel": "create-reminder",
      "href": "/schedule_reminders/{organization_id}/reminders",
      "schema": {
        "properties": {
          "time_zone_name": {
            "$ref": "#/definitions/time_zone_name"
          },
          "delivery_times": {
            "$ref": "#/definitions/delivery_times"
          },
          "reminder_workspace_id": {
            "$ref": "#/definitions/reminder_workspace_id"
          },

<% error ||= false %>

<%
  page_info title: "GitHub Copilot",
            responsive: false,
            selected_link: :organization_copilot_settings_csv_exports
%>

<%= render layout: "orgs/settings/layout" do %>
  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>
      CSV Exports
    <% end %>
    <% component.with_description do %>Export specifically for our Microsoft friends<% end %>
  <% end %>
  <%= form_tag settings_org_copilot_csv_exports_generate_path(current_organization), :method => :post do %>
    <%= render(Primer::Beta::Button.new(type: :submit)) do |button| %>
      <% button.with_leading_visual_icon(icon: :download) %>
      Export Legacy CSV
    <% end %>
  <% end %>
  <br>
  <br>
<% end %>

<%= render(Primer::Beta::BorderBox.new) do |component| %>
  <% component.with_header do |h| %>
    <% h.with_title(tag: :h3) do %>
      Permissions
    <% end %>
  <% end %>

  <% @resource_permissions.each do |hsh| %>
    <% component.with_row do %>
      <div class="f6">
        <% if hsh.has_key? "type" %>
          <b><%= "#{hsh["type"]} - " %></b><%= hsh["resource_parent"]&.name_with_owner || hsh["resource_parent"].name %>
          <br>
        <% end %>
        <b>Permission - </b><%= "#{hsh["subject_type"]}: " %><%= render(Primer::Beta::Label.new) { hsh["action"] } %>
      </div>
    <% end %>
  <% end %>
<% end %>

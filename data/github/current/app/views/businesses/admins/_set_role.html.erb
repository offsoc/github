<%= render(Primer::Alpha::Dialog.new(
  id: dialog_id,
  title: "Change role for #{admin.display_login}",
)) do |dialog| %>
  <%= form_tag role_enterprise_admin_path(business, admin.display_login), method: :patch do %>
    <%= render(Primer::Alpha::Dialog::Body.new) do %>
      <%= render "businesses/admins/role_radios",
        business: business,
        role: role,
        admin_id: admin.id %>
    <% end %>
    <%= render(Primer::Alpha::Dialog::Footer.new) do %>
      <%= render(Primer::Beta::Button.new(data: { "close-dialog-id": dialog_id })) { "Cancel" } %>
      <%= render(Primer::Beta::Button.new(
        type: :submit,
        scheme: :primary,
        "data-disable-with": "",
      )) { "Change role" } %>
    <% end %>
  <% end %>
<% end %>

<%= render(Primer::BaseComponent.new(**@system_arguments)) do %>
  <%= render(Primer::Alpha::ActionBar.new) do |component| %>
    <% if @prepend_items.any? %>
      <% @prepend_items.each do |item| %>
        <% component.with_item_icon_button(**item) %>
      <% end %>
      <% component.with_item_divider %>
    <% end %>

    <% component.with_item_icon_button(
      label: "Heading",
      icon: :heading,
      aria: {
        label: "Add heading text"
      },
      data: {
        "md-button": "header-3",
        **comment_box_tracking(:HEADING)
      }
    ) %>

    <% component.with_item_icon_button(
      label: "Bold",
      icon: :bold,
      aria: {
        label: "Add bold text"
      },
      data: {
        "md-button": "bold",
        "hotkey-scope": textarea_id,
        "hotkey": hotkey("b"),
        **comment_box_tracking(:BOLD)
      }
    ) %>

    <% component.with_item_icon_button(
      label: "Italic",
      icon: :italic,
      aria: {
        label: "Add italic text"
      },
      data: {
        "md-button": "italic",
        "hotkey-scope": textarea_id,
        "hotkey": hotkey("i"),
        **comment_box_tracking(:ITALIC)
      }
    ) %>

    <% component.with_item_icon_button(
      label: "Quote",
      icon: :quote,
      aria: {
        label: "Add a quote"
      },
      data: {
        "md-button": "quote",
        "hotkey-scope": textarea_id,
        "hotkey": hotkey("Shift+>"),
        **comment_box_tracking(:QUOTE)
      }
    ) %>

    <% component.with_item_icon_button(
      label: "Code",
      icon: :code,
      aria: {
        label: "Add code"
      },
      data: {
        "md-button": "code",
        "hotkey-scope": textarea_id,
        "hotkey": hotkey("e"),
        **comment_box_tracking(:CODE)
      }
    ) %>

    <% component.with_item_icon_button(
      label: "Link",
      icon: :link,
      aria: {
        label: "Add a link"
      },
      data: {
        "md-button": "link",
        "hotkey-scope": textarea_id,
        "hotkey": hotkey("k"),
        **comment_box_tracking(:LINK)
      }
    ) %>

    <% component.with_item_divider %>

    <% component.with_item_icon_button(
      label: "Numbered list",
      icon: :"list-ordered",
      aria: {
        label: "Add a numbered list"
      },
      data: {
        "md-button": "ordered-list",
        "hotkey-scope": textarea_id,
        "hotkey": hotkey("Shift+&"),
        **comment_box_tracking(:ORDERED_LIST)
      }
    ) %>

    <% component.with_item_icon_button(
      label: "Unordered list",
      icon: :"list-unordered",
      aria: {
        label: "Add a bulleted list"
      },
      data: {
        "md-button": "unordered-list",
        "hotkey-scope": textarea_id,
        "hotkey": hotkey("Shift+*"),
        **comment_box_tracking(:UNORDERED_LIST)
      }
    ) %>

    <% component.with_item_icon_button(
      label: "Task list",
      icon: :"tasklist",
      aria: {
        label: "Add a task list"
      },
      data: {
        "md-button": "task-list",
        "hotkey-scope": textarea_id,
        "hotkey": hotkey("Shift+L"),
        **comment_box_tracking(:TASK_LIST)
      }
    ) %>

    <% if @append_items.any? %>
      <% component.with_item_divider %>
      <% @append_items.each do |item| %>
        <% component.with_item_icon_button(**item) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/user.json",
  "title": "User Block",
  "description": "A GitHub user",
  "type": "object",
  "definitions": {
    "username": {
      "description": "The username of the following.",
      "example": "username1",
      "type": "string"
    },
    "reason-suspend": {
      "description": "The reason the user is being suspended. If `reason` is not provided, the default reason will be used: \"Suspended via API by #{site administrator that performed the action}.\"",
      "example": "Suspended due to inactivity",
      "type": "string"
    },
    "reason-unsuspend": {
      "description": "The reason the user is being unsuspended. If `reason` is not provided, the default reason will be used: \"Unsuspended via API by #{site administrator that performed the action}.\"",
      "example": "Unsuspended reason",
      "type": "string"
    },
    "name": {
      "description": "The new name of the user.",
      "type": "string",
      "example": "Omar Jahandar"
    },
    "email": {
      "description": "The publicly visible email address of the user.",
      "type": "string",
      "example": "omar@example.com"
    },
    "blog": {
      "description": "The new blog URL of the user.",
      "type": "string",
      "example": "blog.example.com"
    },
    "twitter_username": {
      "description": "The new Twitter username of the user.",
      "type": [
        "string",
        "null"
      ],
      "example": "therealomarj"
    },
    "company": {
      "description": "The new company of the user.",
      "type": "string",
      "example": "Acme corporation"
    },
    "location": {
      "description": "The new location of the user.",
      "type": "string",
      "example": "Berlin, Germany"
    },
    "hireable": {
      "description": "The new hiring availability of the user.",
      "type": "boolean"
    },
    "bio": {
      "description": "The new short biography of the user.",
      "type": "string"
    },
    "org": {
      "description": "The name of the organization.",
      "type": "string"
    },
    "organization_id": {
      "description": "The ID of the organization.",
      "type": "integer"
    },
    "user_id": {
      "description": "The ID of the user.",
      "example": 12345678,
      "type": "integer"
    }
  },
  "links": [
    {
      "href": "/user/{user_id}/suspended",
      "method": "PUT",
      "rel": "update-legacy",
      "title": "Suspend a user",
      "schema": {
        "properties": {
          "reason": {
            "$ref": "#/definitions/reason-suspend"
          }
        },
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "href": "/user/{user_id}/suspended",
      "method": "DELETE",
      "rel": "delete-legacy",
      "title": "Unsuspend a user",
      "schema": {
        "properties": {
          "reason": {
            "$ref": "#/definitions/reason-unsuspend"
          }
        },
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Update the authenticated user",
      "method": "PATCH",
      "rel": "update-authenticated",
      "href": "/user",
      "schema": {
        "properties": {
          "name": {
            "$ref": "#/definitions/name"
          },
          "email": {
            "$ref": "#/definitions/email"
          },
          "blog": {
            "$ref": "#/definitions/blog"
          },
          "twitter_username": {
            "$ref": "#/definitions/twitter_username"
          },
          "company": {
            "$ref": "#/definitions/company"
          },
          "location": {
            "$ref": "#/definitions/location"
          },
          "hireable": {
            "$ref": "#/definitions/hireable"
          },
          "bio": {
            "$ref": "#/definitions/bio"
          }
        },
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Block a user from an organization",
      "method": "PUT",
      "rel": "block-from-organization",
      "href": "/organizations/{organization_id}/blocks/{username}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    },
    {
      "title": "Block a user",
      "method": "PUT",

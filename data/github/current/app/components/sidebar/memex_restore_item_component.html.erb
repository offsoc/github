<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render Primer::Box.new(
  w: :full,
  px: 0,
  font_weight: :normal,
  style: "width: 100%",
  classes: "js-restore-item",
  data: { column: item.id, url: unarchive_url }
) do %>
  <%= csrf_hidden_input_for unarchive_url, method: :put, class: "js-data-url-csrf" %>

  <% if readonly %>
    <%= render Primer::Beta::Text.new do %>
      Archived in project
    <% end %>
  <% else%>
    <%= render Primer::Beta::Text.new do %>
      Archived in project:
    <% end %>
    <%= render Primer::ButtonComponent.new(
      type: :submit,
      scheme: :link,
    ).with_content("Restore") %>
  <% end %>
<% end %>

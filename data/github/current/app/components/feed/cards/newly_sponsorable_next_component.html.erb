<% stats_timer do %>
  <%= render Feed::ItemNextComponent.new(
    actor:,
    action:,
    timestamp: item.created_at,
    item:,
    heading_icon:,
  ) do |c| %>
    <% c.with_body do %>
      <div class="d-flex p-3 color-bg-subtle flex-justify-between rounded-1" <%= test_selector("newly-sponsorable-feed-card") %>>
        <div class="d-flex">
          <%= helpers.feed_user_avatar(user, item, size: 48) %>

          <div class="ml-2">
            <p class="css-truncate text-bold wb-break-all m-0">
              <%= helpers.link_to_feed_user(user, item, show_profile_name: true) %>
              <%= helpers.feed_user_login_name(user) %>
            </p>
            <% if render_description? %>
              <div class="m-0 mt-1 wb-break-all" <%= test_selector("description") %>><%= description %></div>
            <% end %>
          </div>
        </div>

        <div <%= test_selector("card-cta") %> class="ml-1">
          <% if render_sponsor_button? %>
            <%= render Sponsors::SponsorButtonComponent.new(
              sponsorable: user,
              is_sponsoring: sponsoring?,
              data: hydro_data(click_target: "sponsors_button"),
            ) %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

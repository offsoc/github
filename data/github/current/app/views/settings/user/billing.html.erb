
<%
  page_info title: billing_page_title(selected_tab),
    hide_marketplace_retargeting_notice: true,
    hide_marketplace_pending_installations_notice: true,
    selected_link: selected_link
%>

<%= render layout: "settings/settings" do %>
  <%= render partial: 'billing_settings/overview',
    locals: {
      view: BillingSettings::OverviewView.new(account: current_user, current_user: current_user),
      target: current_user,
      selected_tab: selected_tab,
      sponsors_tab: sponsors_tab
    }
  %>
<% end %>

<% content_for :scripts do %><%# erblint:disable NoContentForScripts %>
  <%= javascript_bundle "billing" %>
<% end %>

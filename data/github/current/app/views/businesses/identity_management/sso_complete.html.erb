<% page_info :title => "Sign in to #{view.business.name}" %>

<div
  class="business-sso text-center js-sso-modal-complete"
  data-expires-around="<%= sso_expires_around(view.business).to_i %>"
  data-fallback-url="<%= view.fallback_url %>"
  <% if view.sso_error %>data-error="<%= view.sso_error %>"<% end %>>
  <%= render "shared/flash" %>

  <div class="business-sso-panel">
    <div class="position-relative mt-2 mb-3">
      <%= render(Primer::Beta::Spinner.new(display: :inline_block, mb: 2)) %>

      <h1 class="sso-title m-0">
        <% if view.sso_error %>
          There was an error signing in with
        <% else %>
          Redirecting you to
        <% end %>
        <strong><%= view.business.name %></strong>
      </h1>
    </div>

    <p class="color-fg-muted mt-2 mb-4">
      If youâ€™re not redirected,
      <a class="Link--inTextBlock" href="<%= view.fallback_url %>">click here to go back to <%= view.business %></a>.
    </p>
  </div>
</div>

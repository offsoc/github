<div class="page-header">
  <h3>Topic: <code><%= topic_name %></code></h3>
</div>
<p><%= pluralize("Subscriber", subscriptions_count) %></p>

<table>
  <thead>
    <tr>
      <th>Subscription ID</th>
    </tr>
  </thead>
  <tbody>
    <% subscription_ids.each do |subscription_id| %>
      <tr>
        <td><%= link_to(subscription_id, subscriptions_show_path(subscription_id: subscription_id)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render_partial("_pagination") %>

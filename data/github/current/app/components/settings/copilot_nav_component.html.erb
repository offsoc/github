<%= render(@item) do |item| %>
  <% sub_sections.each do |section| %>
    <% item.with_item(label: section[:display_name],
                      href: section[:path],
                      selected_by_ids: [section[:item_id], section[:path]]) do |sub_item| %>
      <% sub_item.with_trailing_visual_label(scheme: :success) { "Beta" } if section[:beta_label].present? %>
    <% end %>
  <% end %>
  <% item.with_leading_visual_icon(icon: :copilot) %>
<% end %>

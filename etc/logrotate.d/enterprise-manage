/var/log/enterprise-manage/unicorn.log
{
  rotate 7
  daily
  missingok
  delaycompress
  compress
  notifempty
  sharedscripts
  postrotate
    [ -f /data/enterprise-manage/shared/pids/unicorn.pid ] && kill -USR1 `cat /data/enterprise-manage/shared/pids/unicorn.pid` || true
  endscript
}
/var/log/enterprise-manage/audit.log
{
  rotate 7
  weekly
  missingok
  delaycompress
  compress
  notifempty
}

<% page_info responsive: false, title: "Settings · Topics · #{organization.name}", selected_link: :repository_topics %>

<%= render layout: "orgs/settings/layout" do %>
  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>
      <%= organization.name %> repositories you contribute to
    <% end %>
  <% end %>

  <%= render partial: "orgs/topics/list",
             locals: { organization: organization, repositories: repositories } %>
<% end %>

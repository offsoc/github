{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/content-reference.json",
  "title": "ContentReference",
  "description": "Content references allow you to provide context around URLs posted in comments",
  "type": "object",
  "definitions": {
    "id": {
      "description": "The ID of the content reference",
      "example": 21,
      "type": "integer"
    },
    "node_id": {
      "description": "The node_id of the content reference",
      "example": "MDE2OkNvbnRlbnRSZWZlcmVuY2UyMQ==",
      "type": "string"
    },
    "reference": {
      "type": "string"
    }
  },
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "reference": {
      "$ref": "#/definitions/reference"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "reference"
  ]
}

<%=
  form.text_group "Support email address", :support_email,
    :placeholder    => "support@your-company.com",
    :name           => "support_email",
    :value          => membership.support_email,
    :hint           => "An email address where GitHub users can contact you for support.",
    :autocapitalize => :off,
    :autofocus      => auto_focus || false,
    :error          => error_for(membership, :support_email),
    :group_class    => "mt-0"
%>

<%=
  form.text_group "Product or company website", :website,
    :placeholder    => "http://your-website.com",
    :name           => "website",
    :value          => membership.website,
    :hint           => "The URL for the product, company, or service that integrates with GitHub.",
    :autocapitalize => :off,
    :error          => error_for(membership, :website)
%>

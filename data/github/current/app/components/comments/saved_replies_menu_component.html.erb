<%= render(Primer::Alpha::Dialog.new(id: "saved_replies_menu_#{ @textarea_id }-dialog", position_narrow: :bottom, title: "Select a reply", classes: "js-saved-reply-container")) do |d| %>
  <% d.with_header %>
  <% d.with_body do %>
    <include-fragment class="js-saved-reply-include-fragment" role="menuitem" aria-label="Loading" src="<%= saved_replies_path(context: @saved_reply_context) %>" loading="lazy">
      <%= render(Primer::Beta::Spinner.new(my: 6, mx: :auto, display: :block)) %>
    </include-fragment>
  <% end %>
  <% d.with_footer(show_divider: true) do %>
    <%= render(Primer::Beta::Button.new(
        scheme: :invisible,
        block: true,
        align_content: :start,
        href: saved_replies_path(return_to: 1),
        tag: :a
    )) do |component| %>
      <% component.with_leading_visual_icon(icon: :plus) %>
      Create a new saved reply
    <% end %>
  <% end %>
<% end %>

<%= render(Primer::Beta::Link.new(href: @href, muted: true, test_selector: @test_selector)) do %>
  <%= render(Primer::Beta::Octicon.new(icon: :repo, color: text_color)) %>
  <%= render(Primer::Beta::Text.new(color: text_color, font_weight: text_weight, ml: 1)) do %>
    <%= render(Primer::Beta::Text.new(classes: @js_slot_class)) do %>
      <%= render(Primer::Beta::Text.new(
        display: :inline_block,
        classes: "Skeleton Skeleton--text",
        style: "background-color: var(--bgColor-neutral-muted)",
        ).with_content("&nbsp")) %>
    <% end %>
    <%= @text %>
  <% end %>
<% end %>

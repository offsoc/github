<%= render(Primer::Beta::State.new(
  title: title,
  scheme: scheme,
  size: size,
  display: :flex,
  align_items: :center,
  test_selector: "state-badge",
  **@system_arguments,
)) do %>
  <%= render(Primer::Beta::Octicon.new(
    octicon,
    align_items: :center,
    size: octicon_size,
    mr: 1,
    aria: { hidden: true },
    test_selector: "state-octicon",
  ))%>
  <%= state %>
<% end %>

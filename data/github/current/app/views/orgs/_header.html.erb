<%# `view` is an instance of Orgs::HeaderView %>

<% page_info stafftools: stafftools_user_path(view.organization) %>
<%= render Organizations::ArchivedNoticeComponent.new(organization: view.organization)%>

<div class="<%= class_names(
  "pagehead orghead border-bottom-0",
  "pt-0": responsive?
) %>">
  <div class="<%= class_names(
      "clearfix",
      "container-lg": !container_xl?,
      "container-xl": container_xl?,
      "p-responsive d-none d-lg-block": responsive?,
      "px-3": !responsive?
    ) %>">
    <%= render "orgs/header_org_name", view: create_view_model(
      Orgs::HeaderView,
      organization: view.organization
    ) %>
  </div>

  <%= render Organizations::HeaderNavComponent.new(
    organization: view.organization,
    selected_nav_item: view.selected_nav_item || :members,
  ) %>

  <%= render(Site::EnterpriseBannersComponent.new) %>
</div>

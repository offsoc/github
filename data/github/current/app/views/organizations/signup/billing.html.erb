<%
  page_info container_xl: true

  container_class = "mb-4 mb-md-8 container-md"
  yield_container_class = "container-sm"
  if view.orgs_data_collection_enabled?
    container_class = "mb-4 mb-md-8 container-lg"
    yield_container_class = "container-lg p-responsive"
  end
%>

<%= render partial: "organizations/signup/selected_plan_banner", locals: { plan: view.plan } %>

<%= render layout: "signup/container", locals: {
  title: "Payment details",
  container_class: container_class,
  yield_container_class: yield_container_class,
  } do %>
  <% if view.orgs_data_collection_enabled? %>
    <%= render partial: "organizations/signup/plan_billing_details_experiment", locals: {view: view} %>
  <% else %>
    <%= render partial: "organizations/signup/plan_billing_details", locals: {view: view} %>
  <% end %>
<% end %>

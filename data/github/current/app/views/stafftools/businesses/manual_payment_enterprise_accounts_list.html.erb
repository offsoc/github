<% page_info title: "Manual Payment RBI Restricted Enterprise Accounts", selected_link: :manual_payment_accounts %>
<%= render layout: "stafftools/stafftools" do %>
  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>Manual Payment RBI Restricted Enterprise Accounts<% end %>
  <% end %>

  <div class="form-group">
    <%= form_with url: manual_payment_accounts_stafftools_enterprises_path, method: "get" do |form| %>
      <%= form.text_field :query, id: :query, class: "form-control", placeholder: "Find enterprise by name or slug", value: query %>
      <%= render Primer::Beta::Button.new(type: :submit, position: :relative, display: :inline_block) do %>Search<% end %>
    <% end %>
    <% if query.present? %>
      <div class="mt-2">
        <%= render(Primer::Beta::Link.new(href: manual_payment_accounts_stafftools_enterprises_path)) do %>
          <%= render(Primer::Beta::Octicon.new(:x)) %>
          Clear filters
        <% end %>
      </div>
    <% end %>
  </div>

  <%= render "stafftools/businesses/manual_payment_enterprise_accounts", businesses: businesses, page: current_page %>
<% end %>

<%= render Primer::Alpha::ActionMenu.new(
  "data-filter-on": "two-factor",
  select_variant: :single,
  anchor_align: :end,
  align_self: :center,
  mr: 1,
) do |menu| %>
  <% menu.with_show_button(scheme: :invisible) do |button|
      button.with_trailing_action_icon(icon: :"triangle-down")
      "2FA"
  end %>
  <% menu.with_item(
      href: url_for(query: ""),
      label: "Everyone",
      active: view.two_factor_filter_select_class(:all) == "selected",
      classes: "js-member-search-filter",
      "data-filter": ""
  ) %>
  <% menu.with_item(
    href: url_for(query: "two-factor:enabled"),
    label: "Enabled",
    active: view.two_factor_filter_select_class(:enabled) == "selected",
    classes: "js-member-search-filter",
    "data-filter": "two-factor:enabled"
  ) %>
  <% menu.with_item(
    href: url_for(query: "two-factor:disabled"),
    label: "Disabled",
    active: view.two_factor_filter_select_class(:disabled) == "selected",
    classes: "js-member-search-filter",
    "data-filter": "two-factor:disabled"
  ) %>
  <% menu.with_item(
    href: url_for(query: "two-factor:required"),
    label: "Required",
    active: view.two_factor_filter_select_class(:required) == "selected",
    classes: "js-member-search-filter",
    "data-filter": "two-factor:required"
  ) %>
<% end %>

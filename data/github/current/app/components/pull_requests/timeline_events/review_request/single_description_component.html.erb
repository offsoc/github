<% if self_request? %>
  <%= self_action_description %>
<% else %>
  <%= action_description %>
  from <%= render PullRequests::TimelineEvents::ReviewerLinkComponent.new(reviewer: requested_reviewer, team_name: requested_review_team_name || missing_reviewer_name) %>
<% end %>
<% if review_requested? %>
  <% if as_code_owner? %>
    as a <%= codeowner_link %>
  <% end %>
  <% if assigned_from_team_name.present? %>
    (assigned from <%= assigned_from_team_name %>)
  <% end %>
<% end %>

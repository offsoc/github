<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% case mode %>
<% when :view %>
  <%= render(Primer::Beta::BorderBox.new(mt: 3, test_selector: "info-box", **system_arguments)) do |component| %>
    <% component.with_body do %>
      <%= render(GitHub::BetaFlagComponent.new(label: label, mr: 2)) %>
      This file is used as a <b><%= description %></b>.
      <% if docs_url.present? %>
        Need help? Check out the <%= link_to("documentation", docs_url, class: "Link--inTextBlock") %>.
      <% end %>
    <% end %>
  <% end %>
<% when :edit %>
  <%= render(Primer::Beta::Flash.new(mt: 3, test_selector: "flash-box", **system_arguments)) do |component| %>
    <%= render(GitHub::BetaFlagComponent.new(label: label, mr: 2)) %>
    Looks like this file is a <b><%= description %></b>.
    <% if docs_url.present? %>
      Need help? Check out the <%= link_to("documentation", docs_url, class: "Link--inTextBlock") %>.
    <% end %>
  <% end %>
<% end %>

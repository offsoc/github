{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/installation-token.json",
  "title": "Installation Token",
  "description": "Authentication token for a GitHub App installed on a user or org.",
  "type": "object",
  "definitions": {
    "installation_id": {
      "description": "The ID of the installation.",
      "type": "integer"
    },
    "repositories": {
      "description": "List of repository names that the token should have access to",
      "example": [
        "rails"
      ],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "repository_ids": {
      "description": "List of repository IDs that the token should have access to",
      "example": [
        1
      ],
      "type": "array",
      "items": {
        "type": "integer"
      }
    }
  },
  "links": [
    {
      "title": "Create a new installation token",
      "method": "POST",
      "rel": "create",
      "href": "/app/installations/{installation_id}/access_tokens",
      "schema": {
        "properties": {
          "installation_id": {
            "$ref": "#/definitions/installation_id"
          },
          "repositories": {
            "$ref": "#/definitions/repositories"
          },
          "repository_ids": {
            "$ref": "#/definitions/repository_ids"
          },
          "permissions": {
            "$ref": "https://schema.github.com/v3/installation.json#/definitions/permissions"
          }
        },
        "required": [
          "installation_id"
        ],
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Update an installation token",
      "method": "PATCH",
      "rel": "update",
      "href": "/app/installations/{installation_id}/access_tokens",
      "schema": {
        "properties": {
          "installation_id": {
            "$ref": "#/definitions/installation_id"
          },
          "token": {
            "$ref": "https://schema.github.com/v3/authentication-token.json#/definitions/token"
          },
          "expires_at": {
            "$ref": "https://schema.github.com/v3/authentication-token.json#/definitions/expires_at"
          }
        },
        "required": [
          "token"
        ],
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ]
}

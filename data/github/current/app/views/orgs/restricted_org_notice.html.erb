<%
  page_title = target.safe_profile_name
  description = target.organization? ? this_organization_meta_description : nil
%>
<%
org_header_title(target)
page_info \
  title: page_title,
  description: description,
  richweb: {
    title: page_title,
    url: user_url(target),
    description: description,
    image: avatar_url_for(target, 280),
    username: target.display_login,
    type: "profile",
  }
%>

<%=
  render Billing::Settings::RestrictedOrganizationNoticeComponent.new \
    target: target,
    selected_nav_item: selected_nav_item,
    header_view: header_view
%>

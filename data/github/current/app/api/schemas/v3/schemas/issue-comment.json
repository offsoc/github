{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/issue-comment.json",
  "title": "Issue Comment",
  "description": "Comments provide a way for people to collaborate on an issue.",
  "type": "object",
  "definitions": {
    "id": {
      "description": "Unique identifier of the issue comment",
      "example": 42,
      "type": "integer"
    },
    "body": {
      "description": "Contents of the issue comment",
      "example": "What version of Safari were you using when you observed this bug?",
      "type": "string"
    },
    "url": {
      "description": "URL for the issue comment",
      "example": "https://api.github.com/repositories/42/issues/comments/1",
      "type": "string",
      "format": "uri"
    },
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "comment_id": {
      "description": "The ID of the comment.",
      "type": "integer"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    },
    "issue_number": {
      "description": "The number of the issue.",
      "type": "integer"
    },
    "node_id": {
      "type": "string"
    },
    "body_text": {
      "type": "string"
    },
    "body_html": {
      "type": "string"
    },
    "html_url": {
      "type": "string",
      "format": "uri"
    },
    "issue_url": {
      "type": "string",
      "format": "uri"
    },
    "author_association": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "links": [
    {
      "href": "/repositories/{repository_id}/issues/{issue_number}/comments",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object"
      },
      "title": "Create an issue comment"
    },
    {
      "href": "/repositories/{repository_id}/issues/comments/{comment_id}",
      "method": "PATCH",
      "rel": "update-legacy",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object"
      },
      "title": "Update an issue comment"
    },
    {
      "href": "/repositories/{repository_id}/issues/comments/{comment_id}",
      "method": "POST",
      "rel": "update",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object"
      },
      "title": "Update an issue comment"
    },
    {
      "title": "Delete a comment",
      "method": "DELETE",
      "rel": "delete",
      "href": "/repositories/{repository_id}/issues/comments/{comment_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    },
    {
      "title": "Create an issue comment",
      "method": "POST",
      "href": "/repositories/{repository_id}/issues/{issue_number}/comments",
      "rel": "create",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object",
        "additionalProperties": false
      }
    },
    {
      "title": "Update an issue comment",
      "method": "PATCH",
      "href": "/repositories/{repository_id}/issues/comments/{comment_id}",
      "rel": "update",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ],
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "body": {
      "$ref": "#/definitions/body"
    },
    "body_text": {
      "$ref": "#/definitions/body_text"
    },
    "body_html": {
      "$ref": "#/definitions/body_html"
    },
    "html_url": {
      "$ref": "#/definitions/html_url"
    },
    "issue_url": {
      "$ref": "#/definitions/issue_url"
    },
    "author_association": {
      "$ref": "#/definitions/author_association"
    },
    "user": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    },
    "performed_via_github_app": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/integration.json#"
        }
      ]
    },
    "url": {
      "$ref": "#/definitions/url"
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    },
    "reactions": {
      "$ref": "https://schema.github.com/v3/reaction-rollup.json#"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "node_id",
    "html_url",
    "issue_url",
    "author_association",
    "user",
    "url",
    "created_at",
    "updated_at",
    "reactions"
  ]
}

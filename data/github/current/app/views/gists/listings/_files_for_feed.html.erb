<% gist.sorted_files.map do |file| %>
  <%= link_to file.display_name, user_gist_url(gist.user_param, gist, :anchor => "file-#{EncodingSafeParameterizeHelper.encoding_safe_parameterize(file.name)}") %>
  <%= render "gists/gists/blob", view: create_view_model(
    Gists::BlobView,
    :blob => file,
    :gist => gist,
    :show_header => false
  ) %>
<% end %>

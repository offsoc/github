<% variant = (type == "budgets_error") ? :danger : :success %>
<% icon = (type == "budgets_error") ? 'stop' : 'check-circle' %>
<%= render(GitHub::FlashActionDismissibleComponent.new(level: variant, test_selector: "set_budget_state_banner", mb: 4)) do |c| %>
  <% if type == "budgets_error" %>
    <% c.with_title do %>
      Error: Cannot create new budget
    <% end %>
  <% end %>
  <% c.with_text do %>
    <% message %>
  <% end %>
<% end %>


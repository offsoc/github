<%
  classes                   = local_assigns[:classes] || ""
  button_classes            = local_assigns[:button_classes] || ""
  show_subscription_actions = !local_assigns[:starring_only]
  show_archive_actions      = !local_assigns[:starring_only]
  show_read_actions         = !local_assigns[:starring_only] && local_assigns[:include_read_actions]
%>

<% if show_archive_actions %>
  <%= render partial: "notifications/v2/actions/unarchive", locals: {
      classes: "js-notification-action notification-action-mark-unarchived mr-2 #{classes}",
      button_classes: button_classes,
      include_hotkeys: local_assigns[:include_hotkeys],
      notification_id: local_assigns[:notification_id],
      show_button_text: local_assigns[:show_button_text],
      inbox_redirect: local_assigns[:inbox_redirect]
    }
  %>

  <%= render partial: "notifications/v2/actions/archive", locals: {
      classes: "js-notification-action notification-action-mark-archived mr-2 #{classes}",
      button_classes: button_classes,
      include_hotkeys: local_assigns[:include_hotkeys],
      notification_id: local_assigns[:notification_id],
      show_button_text: local_assigns[:show_button_text],
      inbox_redirect: local_assigns[:inbox_redirect]
    }
  %>
<% end %>

<% if show_subscription_actions %>
  <%= render partial: "notifications/v2/actions/unsubscribe", locals: {
      classes: "js-notification-action notification-action-unsubscribe mr-2 #{classes}",
      button_classes: button_classes,
      include_hotkeys: local_assigns[:include_hotkeys],
      notification_id: local_assigns[:notification_id],
      show_button_text: local_assigns[:show_button_text],
      inbox_redirect: local_assigns[:inbox_redirect],
    }
  %>

  <%= render partial: "notifications/v2/actions/subscribe", locals: {
      classes: "js-notification-action notification-action-subscribe mr-2 #{classes}",
      button_classes: button_classes,
      notification_id: local_assigns[:notification_id],
      list_is_ignored: local_assigns[:list_is_ignored],
      show_button_text: local_assigns[:show_button_text]
    }
  %>
<% end %>

<% if show_read_actions %>
  <%= render partial: "notifications/v2/actions/read", locals: {
      classes: "js-notification-action notification-action-mark-read mr-2 #{classes}",
      button_classes: button_classes,
      include_hotkeys: local_assigns[:include_hotkeys],
      notification_id: local_assigns[:notification_id],
      show_button_text: local_assigns[:show_button_text]
    }
  %>

  <%= render partial: "notifications/v2/actions/unread", locals: {
      classes: "js-notification-action notification-action-mark-unread mr-2 #{classes}",
      button_classes: button_classes,
      include_hotkeys: local_assigns[:include_hotkeys],
      notification_id: local_assigns[:notification_id],
      show_button_text: local_assigns[:show_button_text],
      inbox_redirect: local_assigns[:inbox_redirect]
    }
  %>
<% end %>

<%= render partial: "notifications/v2/actions/star", locals: {
    classes: "js-notification-action notification-action-star #{classes}",
    button_classes: button_classes,
    include_hotkeys: local_assigns[:include_hotkeys],
    notification_id: local_assigns[:notification_id],
    show_button_text: local_assigns[:show_button_text]
  }
%>

<%= render partial: "notifications/v2/actions/unstar", locals: {
    classes: "js-notification-action notification-action-unstar #{classes}",
    button_classes: button_classes,
    include_hotkeys: local_assigns[:include_hotkeys],
    notification_id: local_assigns[:notification_id],
    show_button_text: local_assigns[:show_button_text]
  }
%>

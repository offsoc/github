{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/team-membership.json",
  "title": "Team Membership",
  "description": "TODO",
  "type": "object",
  "definitions": {
    "role": {
      "description": "The role of the user in the team.",
      "enum": [
        "member",
        "maintainer"
      ],
      "default": "member",
      "example": "member",
      "type": "string"
    },
    "team_id": {
      "description": "The ID of the team",
      "type": "integer"
    },
    "username": {
      "description": "The username of the membership",
      "type": "string",
      "example": "username1"
    },
    "state": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    }
  },
  "links": [
    {
      "title": "Add or update team membership",
      "method": "PUT",
      "rel": "replace",
      "href": "/organizations/{org_id}/team/{team_id}/memberships/{username}",
      "schema": {
        "properties": {
          "role": {
            "$ref": "#/definitions/role"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Remove team membership",
      "method": "DELETE",
      "rel": "delete",
      "href": "/organizations/{org_id}/team/{team_id}/memberships/{username}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ],
  "properties": {
    "role": {
      "$ref": "#/definitions/role"
    },
    "state": {
      "$ref": "#/definitions/state"
    },
    "url": {
      "$ref": "#/definitions/url"
    }
  },
  "additionalProperties": false,
  "required": [
    "role",
    "state",
    "url"
  ]
}

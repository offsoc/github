{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/environment.json",
  "title": "Environment",
  "description": "An environment",
  "type": "object",
  "definitions": {
    "name": {
      "description": "The name of the environment.",
      "example": "staging",
      "type": "string"
    },
    "id": {
      "type": "integer",
      "description": "The ID of the environment.",
      "example": 5
    },
    "node_id": {
      "type": "string",
      "example": "RW52aXJvbm1lbnQ6MQo="
    },
    "bypass_protection_rules": {
      "type": "boolean",
      "description": "Allow administrators to bypass environment protection rules.",
      "example": false
    },
    "url": {
      "type": "string",
      "description": "The URL of the environment.",
      "example": "https://api.github.com/repos/github/hello-world/environments/staging"
    },
    "html_url": {
      "type": [
        "string"
      ],
      "example": "https://github.com/github/hello-world/deployments/activity_log?environment=staging"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "deployment_branch_policy": {
      "description": "The type of deployment branch policy the environment uses.",
      "type": [
        "null",
        "object"
      ],
      "properties": {
        "protected_branches": {
          "type": "boolean"
        },
        "custom_branch_policies": {
          "type": "boolean"
        }
      },
      "required": [
        "protected_branches",
        "custom_branch_policies"
      ]
    },
    "protection_rules": {
      "description": "The list of protection rules for this environment.",
      "type": "array",
      "items": {
        "$ref": "https://schema.github.com/v3/protection-rule.json#"
      }
    },
    "reviewer_id": {
      "type": "integer",
      "description": "The ID of the reviewer.",
      "example": 5
    },
    "reviewers": {
      "description": "The list of reviewers sent when editing an environment.",
      "type": [
        "null",
        "array"
      ],
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "User",
              "Team"
            ]
          },
          "id": {
            "$ref": "#/definitions/reviewer_id"
          }
        }
      }
    }
  },
  "links": [
    {
      "title": "Create or update an environment",
      "method": "PUT",
      "rel": "create-update-environment",
      "href": "/repositories/{repository_id}/environments/{environment}",
      "schema": {
        "properties": {
          "wait_timer": {
            "$ref": "https://schema.github.com/v3/protection-rule.json#/definitions/wait_timer"
          },
          "reviewers": {
            "$ref": "#/definitions/reviewers"
          },
          "deployment_branch_policy": {
            "$ref": "#/definitions/deployment_branch_policy"
          },
          "can_admins_bypass": {
            "$ref": "#/definitions/bypass_protection_rules"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Deletes an environment.",
      "method": "DELETE",
      "rel": "delete-environment",
      "href": "/repositories/{repository_id}/environments/{environment}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ],
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "name": {
      "$ref": "#/definitions/name"
    },
    "deployment_branch_policy": {
      "$ref": "#/definitions/deployment_branch_policy"
    },
    "protection_rules": {
      "$ref": "#/definitions/protection_rules"
    },
    "url": {
      "$ref": "#/definitions/url"
    },
    "html_url": {
      "$ref": "#/definitions/html_url"
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    },
    "can_admins_bypass": {
      "$ref": "#/definitions/bypass_protection_rules"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "node_id",
    "name",
    "url",
    "html_url",
    "created_at",
    "updated_at"
  ]
}

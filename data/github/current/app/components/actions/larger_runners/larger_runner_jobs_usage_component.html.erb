<div class="d-flex flex-justify-between py-2 mt-1">
  <h3 class="pt-2 text-bold h5">All jobs usage</h3>
  <span class="p-2 text-normal color-fg-muted"><%= total_active_jobs %>/<%= total_runners_limit %></span>
</div>

<div class="border p-3 rounded">
  <div class="pt-2">
    <%= render(Primer::Beta::ProgressBar.new(classes: "w-75")) do |component| %>
      <% component.with_item(bg: :accent_emphasis, percentage: percentage) %>

    <% end %>
  </div>

  <div class="mt-2 d-flex flex-wrap">
      <div class="d-flex flex-items-center flex-nowrap">
        <%= render Primer::Beta::Octicon.new(icon: "dot-fill", color: :accent, size: :medium) %>
        <div class="pr-2">
          <span class="text-normal color-fg-muted"><%= @larger_runner&.platform %></span>
        </div>
      </div>
  </div>
</div>

<%= render Primer::Beta::TimelineItem.new(condensed: true, test_selector: "code-scanning-missing-timeline-commit") do |component| %>
  <% component.with_badge(icon: :"git-commit") %>
  <% component.with_body(display: :flex, align_items: :center, font_family: :mono, font_size: :small) do %>
    <%= render Primer::Beta::Avatar.new(src: avatar_url_for(User.ghost) , size: 20, alt: "Unknown user")%>
    <%= render Primer::Beta::Text.new(flex: :auto, px: 1) do %>
      Commit no longer found in repository
    <% end %>
    <% if commit_url(commit_oid) %>
      <%= render Primer::Beta::Link.new(href: commit_url(commit_oid), flex_shrink: 0, scheme: :secondary) do %>
        <%= commit_oid[0..7] %>
      <% end %>
    <% else %>
      <%= commit_oid[0..7] %>
    <% end %>
  <% end %>
<% end %>

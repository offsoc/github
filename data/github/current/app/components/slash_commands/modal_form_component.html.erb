<div class="details-reset details-overlay details-overlay-dark modal-anchor" data-component="form">
  <details-dialog class="Box d-flex flex-column anim-fade-in fast" aria-labelledby="slash-command-dialog-label" style="width: 800px;"><%# erblint:disable A11yDetailsDialogMigration %>
    <%= render(Primer::Beta::BorderBox.new) do |component| %>
      <% component.with_header do %>
        <h3 class="Box-title">
          <%= render Primer::Beta::Octicon.new(icon: "code-square") %>

          <% if breadcrumbs.any? %>
            <span class="color-fg-muted text-small pl-1">Slash</span>
            <% breadcrumbs.each_with_index do |breadcrumb, index| %>
              /
              <span
                class="text-small"
                <% if index == breadcrumbs.count - 1 %>
                  <%= "id=\"slash-command-dialog-label\"" %>
                <% end %>
                <%= test_selector("breadcrumb-item") %>
              >
                <%= breadcrumb %>
                </span>
            <% end %>
          <% else %>
            <span
              class="color-fg-muted text-small pl-1"
              id="slash-command-dialog-label"
              <%= test_selector("default-title") %>
            >
              Slash commands
            </span>
          <% end %>

          <button class="Box-btn-octicon btn-octicon float-right" type="button" aria-label="Close dialog" data-close-dialog>
            <%= primer_octicon(:x) %>
          </button>

          <%= render Primer::Beta::Label.new(tag: :div, scheme: :success, ml: 2) do %>Alpha<% end %>
        </h3>
      <% end %>

      <% component.with_body(pt: pt) do %>
        <% render_parent %>
      <% end %>
    <% end %>
  </details-dialog>
</div>

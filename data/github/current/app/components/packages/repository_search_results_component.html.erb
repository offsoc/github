<% if @repositories.any? %>
  <% @repositories.each do |repo| %>
    <%= render Primer::Beta::AutoComplete::Item.new(
      value: repo.name,
      classes: "typeahead-result"
    ) do %>
      <%= primer_octicon(repo.repo_type_icon) %>
      <strong <%= test_selector("autocomplete-suggestion-repo-#{repo.id}") %>><%= repo.name %></strong>
    <% end %>
  <% end %>
<% else%>
  <%= render Primer::Beta::AutoComplete::Item.new(
      value: "no-results",
      label: "no-results",
      m: 2,
      disabled: true,
      test_selector: "empty-autocomplete-suggestion"
    ) do %>
      Could not find any matching repositories.
    <% end %>
<% end%>

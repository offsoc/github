<%= content_tag(:picture, class: @picture_classes) do %>
  <%= content_tag(:source, nil, srcset: srcset_for_format("avif"), sizes: @sizes, type: "image/avif") if @photo %>
  <%= content_tag(:source, nil, srcset: srcset_for_format("webp"), sizes: @sizes, type: "image/webp") %>
  <%= content_tag(:source, nil, srcset: srcset_for_format(@format), sizes: @sizes, type: @type) %>
  <%= image_tag(src_for_format(@format),
    class: @classes,
    width: @width,
    height: @height,
    style: @style,
    loading: @loading,
    decoding: @decoding,
    alt: @alt,
    data: { "build-margin-bottom": @build_margin_bottom })
  %>
<% end %>

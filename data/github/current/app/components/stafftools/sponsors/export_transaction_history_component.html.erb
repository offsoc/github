<div class="Box-row">
  <%= form_with url: stafftools_sponsors_member_transaction_exports_path(sponsorable_login), class: "d-flex flex-items-center" do |f| %>
    <dl class="form-group flex-auto my-0">
      <dt>
        <h5>Export transaction history</h5>
        <p class="note">
          Export transactions for organizations using <strong><%= sponsorable_login %></strong> as their fiscal
          host in the requested timeframe.<br>
          We'll email the export to you at <strong <%= test_selector("recipient-email") %>><%= current_user.email %></strong>; change this in <a class="Link--inTextBlock" href="<%= settings_email_preferences_path %>">your settings</a>.
        </p>
      </dt>
      <dd>
        <%= f.label(:timeframe, "Timeframe", for: "transactions-timeframe", class: "mr-2") %>
        <%= f.select(:timeframe, [["All-time", "all"], ["Past Month", "month"]], {}, class: "form-control short", id: "transactions-timeframe") %>
      </dd>
    </dl>
    <%= f.submit("Export", class: "btn") %>
  <% end %>
</div>

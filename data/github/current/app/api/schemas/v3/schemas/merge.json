{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/merge.json",
  "title": "Repository branch merge",
  "description": "A merge of one git repository branch into another",
  "type": "object",
  "definitions": {
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    }
  },
  "links": [
    {
      "href": "/repositories/{repository_id}/merges",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "base": {
            "description": "Name of the base branch that the head will be merged into",
            "example": "master",
            "type": "string"
          },
          "head": {
            "description": "Branch name or a commit SHA1 identifying the head the merge into the base",
            "example": "add-bitcoin-as-payment-option",
            "type": "string"
          },
          "commit_message": {
            "description": "Commit message to use for the merge commit; if omitted, a default message will be used",
            "example": "Ship support for Bitcoin :moneybag:",
            "type": "string"
          }
        },
        "required": [
          "base",
          "head"
        ],
        "type": "object"
      },
      "title": "Merge"
    },
    {
      "title": "Perform a merge",
      "method": "POST",
      "href": "/repositories/{repository_id}/merges",
      "rel": "create",
      "schema": {
        "properties": {
          "base": {
            "description": "Name of the base branch that the head will be merged into",
            "example": "master",
            "type": "string"
          },
          "head": {
            "description": "Branch name or a commit SHA1 identifying the head the merge into the base",
            "example": "add-bitcoin-as-payment-option",
            "type": "string"
          },
          "commit_message": {
            "description": "Commit message to use for the merge commit; if omitted, a default message will be used",
            "example": "Ship support for Bitcoin :moneybag:",
            "type": "string"
          }
        },
        "required": [
          "base",
          "head"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

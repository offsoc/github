<% potential_sponsors.each do |user| %>
  <li role="option" class="autocomplete-item" data-autocomplete-value="<%= user.display_login %>">
    <%= render GitHub::AvatarComponent.new(actor: user) %>
    <%= user.safe_profile_name %>
    <% unless user.display_login == user.safe_profile_name %>
      <small class="text-normal color-fg-muted">@<%= user.display_login %></small>
    <% end %>
  </li>
<% end %>

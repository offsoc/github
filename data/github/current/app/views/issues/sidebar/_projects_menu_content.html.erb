<%
  project_picker_result_id ||= nil
%>

<%= render Sidebar::ProjectPickerComponent.new(
  issue: issue,
  repository: current_repository,
  viewer: current_user,
  access_level: "write",
  memex_enabled: GitHub.projects_new_enabled?,
  tabs_settings: {
    show_recent_projects_ui: true,
    show_repository_projects_ui: current_repository.projects_enabled?,
    show_organization_projects_ui: show_organization_projects_ui?(issue.repository),
    show_user_projects_ui: show_user_projects_ui?(issue.repository)
  },
  options: {
    click_item_action: 'toggleItem',
    project_picker_result_id: project_picker_result_id
  }
) %>

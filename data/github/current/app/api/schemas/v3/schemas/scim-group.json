{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/scim-group.json",
  "title": "SCIM /Groups",
  "description": "SCIM /Groups provisioning endpoints",
  "type": "object",
  "definitions": {
    "schemas": {
      "description": "SCIM schema used.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "example": "urn:ietf:params:scim:schemas:core:2.0:Group"
      }
    },
    "id": {
      "description": "Unique identifier of an external group",
      "example": "1b78eada-9baa-11e6-9eb6-a431576d590e",
      "type": "string"
    },
    "externalId": {
      "description": "The ID of the Group.",
      "type": "string",
      "example": "a7b0f98395"
    },
    "Operations": {
      "description": "Set of operations to be performed",
      "example": [
        {
          "op": "replace",
          "value": {
            "active": false
          }
        }
      ],
      "type": "array",
      "minItems": 1,
      "items": {
        "properties": {
          "op": {
            "type": "string",
            "enum": [
              "add",
              "Add",
              "remove",
              "Remove",
              "replace",
              "Replace"
            ]
          },
          "path": {
            "type": "string"
          },
          "value": {
            "type": [
              "string",
              "object",
              "array"
            ]
          }
        },
        "required": [
          "op"
        ],
        "type": "object"
      }
    },
    "displayName": {
      "description": "Name of the Group.",
      "example": "group-name",
      "type": "string"
    },
    "members": {
      "description": "members of the group. Only /User resource type for members is supported at this point",
      "example": [

      ],
      "type": "array",
      "items": {
        "properties": {
          "value": {
            "type": "string"
          },
          "($ref)": {
            "type": "string"
          },
          "display": {
            "type": "string"
          }
        },
        "required": [
          "value"
        ]
      }
    },
    "organization_id": {
      "description": "The ID of the organization.",
      "type": "integer"
    },
    "team_guid": {
      "description": "Unique identifier of an external group",
      "example": "1b78eada-9baa-11e6-9eb6-a431576d590e",
      "type": "string"
    },
    "meta": {
      "type": "object",
      "properties": {
        "resourceType": {
          "type": "string",
          "example": "Group"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "example": "2019-01-24T22:45:36.000Z"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "example": "2019-01-24T22:45:36.000Z"
        },
        "location": {
          "type": "string",
          "format": "uri",
          "example": "https://api.github.com/scim/v2/enterprises/my-enterprise/Groups/c42772b5-2029-11e9-8543-9264a97dec8d"
        }
      }
    }
  },
  "links": [
    {
      "href": "/scim/v2/organizations/{organization_id}/Groups/{team_guid}",
      "method": "PATCH",
      "rel": "patch",
      "title": "Patch a Group to add/replace/remove members",
      "schema": {
        "properties": {
          "Operations": {
            "$ref": "#/definitions/Operations"
          }
        },
        "required": [
          "Operations"
        ],
        "type": "object"
      }
    },
    {
      "href": "/scim/v2/organizations/{organization_id}/Groups",
      "method": "POST",
      "rel": "provision",
      "title": "Provision a Team",
      "schema": {
        "properties": {
          "displayName": {
            "$ref": "#/definitions/displayName"
          },
          "members": {
            "$ref": "#/definitions/members"
          }
        },
        "required": [
          "displayName"
        ],
        "type": "object"
      }
    },
    {
      "href": "/scim/v2/enterprises/{enterprise_id}/Groups",
      "method": "POST",
      "rel": "provision",
      "title": "Provision an External Group",
      "schema": {
        "properties": {
          "displayName": {
            "$ref": "#/definitions/displayName"
          },
          "members": {
            "$ref": "#/definitions/members"
          }
        },
        "required": [
          "displayName"
        ],
        "type": "object"
      }
    },
    {
      "href": "/scim/v2/enterprises/{enterprise_id}/Groups/{external_identity_guid}",
      "method": "PATCH",
      "rel": "patch",
      "title": "Patch update an External Group",
      "schema": {
        "properties": {
          "Operations": {
            "$ref": "#/definitions/Operations"
          }
        },
        "required": [
          "Operations"
        ],
        "type": "object"
      }
    },
    {
      "href": "/scim/v2/enterprises/{enterprise_id}/Groups/{external_identity_guid}",
      "method": "PUT",
      "rel": "put",
      "title": "Put update an External Group",
      "schema": {
        "properties": {
          "displayName": {
            "$ref": "#/definitions/displayName"
          },
          "members": {
            "$ref": "#/definitions/members"
          }
        },
        "required": [
          "displayName"
        ],
        "type": "object"
      }
    },
    {
      "href": "/scim/v2/enterprises/{enterprise_id}/Groups/{external_identity_guid}",
      "method": "DELETE",
      "rel": "delete",
      "title": "Delete an External Group, effectively removes all previous membership",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ],
  "properties": {
    "schemas": {
      "$ref": "#/definitions/schemas"
    },
    "id": {
      "$ref": "#/definitions/id"
    },
    "externalId": {
      "$ref": "#/definitions/externalId"
    },
    "Operations": {
      "$ref": "#/definitions/Operations"
    },
    "displayName": {
      "$ref": "#/definitions/displayName"
    },
    "members": {
      "$ref": "#/definitions/members"
    },
    "organization_id": {
      "$ref": "#/definitions/organization_id"
    },
    "team_guid": {
      "$ref": "#/definitions/team_guid"
    },
    "meta": {
      "$ref": "#/definitions/meta"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "schemas"
  ]
}

<% classes = "mr-3 flex-shrink-0 ml-1" %>

<template id="step-icon-timed_out">
  <%= octicon("x", class: "color-fg-danger #{classes}", title: "This step timed out") %>
</template>

<template id="step-icon-failure">
  <%= octicon("x-circle-fill", class: "color-fg-danger #{classes}", title: "This step failed") %>
</template>

<template id="step-icon-neutral">
  <%= octicon("square-fill", class: "#{status_state_text_class(:neutral)} #{classes}", title: "This step was neutral") %>
</template>

<template id="step-icon-success">
  <%= octicon("check-circle-fill", class: classes, title: "This step passed") %>
</template>

<template id="step-icon-cancelled">
  <%= octicon("stop", class: "#{status_state_text_class(:neutral)} #{classes}", title: "This step was cancelled") %>
</template>

<template id="step-icon-action_required">
  <%= octicon("alert", class: "color-fg-attention #{classes}", title: "This step requires action with the application") %>
</template>

<template id="step-icon-skipped">
  <%= octicon("skip", class: "#{status_state_text_class(:neutral)} #{classes}", title: "This step was skipped") %>
</template>

<template id="step-icon-in-progress">
  <svg width="16" height="16" fill="none" class="anim-rotate <%= classes %>" xmlns="http://www.w3.org/2000/svg" aria-label="In progress"><path opacity=".5" d="M8 15A7 7 0 108 1a7 7 0 000 14v0z" stroke="#DBAB0A" stroke-width="2"></path><path d="M15 8a7 7 0 01-7 7" stroke="#DBAB0A" stroke-width="2"></path><path d="M8 12a4 4 0 100-8 4 4 0 000 8z" fill="#DBAB0A"></path></svg>
</template>

<template id="step-icon-other">
  <%= octicon("circle", class: classes, height: 16) %>
</template>

<template id="primer-octicon-gear">
  <%= primer_octicon(:gear) %>
</template>

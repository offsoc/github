<% label.name ||= "Label preview" %>
<%= render Issues::LabelComponent.new(
    color: label.color,
    name: label.name,
    description: label.description,
    variant: :big,
    display: :inline_block,
    vertical_align: :top,
    classes: "lh-condensed") do |component| %>
  <%= label.name %>
<% end %>

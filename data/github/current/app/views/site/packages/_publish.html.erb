<%# erblint:counter DeprecatedInPrimerCounter 1 %>
<div class="position-relative pt-6 mt-6 mt-md-12 pb-2 pb-md-10">
  <div class="pattern-container position-absolute z-n1 width-full top-0 left-0 overflow-hidden events-none">
    <div class="container-xl position-relative height-full">
      <picture>
        <source srcset="<%= image_path "modules/site/packages/bg-publish.webp" %>" type="image/webp">
        <img src="<%= image_path "modules/site/packages/bg-publish.svg" %>" alt="" class="top-11 position-absolute" width="926.28" height="593" style="right: -20px;" loading="lazy" decoding="async">
      </picture>
    </div>
  </div>

  <div class="container-xl text-center text-md-left d-flex flex-md-row flex-wrap flex-md-nowrap pb-5 flex-lg-justify-center flex-md-justify-around flex-items-center">
    <div class="col-12 col-md-5 px-3 px-md-0 mt-3 mb-4 mb-md-0 d-flex flex-column flex-justify-center">
      <h2 class="h3-mktg mb-3">Easy publishing</h2>
      <p class="color-fg-muted f3-mktg">Use industry and community-standard package managers with native tooling commands. Then authenticate and publish directly to GitHub.</p>
      <div class="d-flex flex-wrap flex-md-justify-start flex-justify-center flex-items-center pr-lg-8 mt-3">
        <img src="<%= image_path "modules/site/packages/package-managers/npm.svg" %>" class="d-block my-2 mr-5" alt="npm" loading="lazy" height="27">
        <% if site_packages_helm_enabled? %>
          <div class="position-relative">
            <span class="position-absolute top-n1 right-2">
              <span class="text-mono color-text-white py-1 px-2 f6 packages-badge">NEW</span>
            </span>
            <picture>
              <source srcset="<%= image_path "modules/site/packages/package-managers/helm.webp" %>" type="image/webp">
              <img src="<%= image_path "modules/site/packages/package-managers/helm.png" %>" class="d-block mr-5 my-2" alt="helm" loading="lazy" decoding="async" height="50">
            </picture>
          </div>
        <% end %>
        <img src="<%= image_path "modules/site/packages/package-managers/docker.svg" %>" class="d-block mr-5 my-2 position-relative top-n1" alt="docker" loading="lazy" decoding="async" height="30">
        <img src="<%= image_path "modules/site/packages/package-managers/nuget.svg" %>" class="d-block mr-5 ml-2 my-2" alt="nuget" loading="lazy" decoding="async" height="32">
        <picture>
          <source srcset="<%= image_path "modules/site/packages/package-managers/maven.webp" %>" type="image/webp">
          <img src="<%= image_path "modules/site/packages/package-managers/maven.png" %>" class="d-block my-2 mr-5 ml-md-0" alt="maven" loading="lazy" decoding="async" height="25">
        </picture>
        <img src="<%= image_path "modules/site/packages/package-managers/gems.svg" %>" class="d-block mr-5 my-2" alt="ruby gems" loading="lazy" decoding="async" height="43">
        <img src="<%= image_path "modules/site/packages/package-managers/gradle.svg" %>" class="d-block  my-2 position-relative top-n1" alt="gradle" loading="lazy" decoding="async" height="30">
      </div>
    </div>
    <div class="col-12 col-md-5 position-relative text-left">
      <div class="col-10 col-md-11 position-relative mx-auto">
        <video class="js-packages-video-1 packages-video packages-video-hidden d-block width-full box-shadow-mktg-xl rounded-2 overflow-hidden mt-7 mt-md-8" alt="" muted autoplay playsinline poster="<%= image_path "modules/site/codespaces/code.png" %>" style="max-width: 91%">
          <source type="video/mp4; codecs=hevc,mp4a.40.2" src="<%= image_path "modules/site/packages/token.hevc.mp4" %>">
          <source type="video/mp4; codecs=avc1.4D401E,mp4a.40.2" src="<%= image_path "modules/site/packages/token.h264.mp4" %>">
        </video>
        <video class="js-packages-video-2 packages-video packages-video-hidden d-block width-full box-shadow-mktg-xl rounded-2 overflow-hidden position-absolute" alt="" muted autoplay playsinline poster="<%= image_path "modules/site/codespaces/code.png" %>" style="max-width: 91%; left: 6%; bottom: 10%;">
          <source type="video/mp4; codecs=avc1.4D401E,mp4a.40.2" src="<%= image_path "modules/site/packages/terminal.h264.mp4" %>">
        </video>
        <video class="js-packages-video-3 packages-video packages-video-hidden d-block width-full box-shadow-mktg-xl rounded-2 overflow-hidden position-absolute" alt="" muted autoplay playsinline poster="<%= image_path "modules/site/codespaces/code.png" %>" style="max-width: 91%; left: 12%; bottom: 20%;">
          <source type="video/mp4; codecs=hevc,mp4a.40.2" src="<%= image_path "modules/site/packages/package.hevc.mp4" %>">
          <source type="video/mp4; codecs=avc1.4D401E,mp4a.40.2" src="<%= image_path "modules/site/packages/package.h264.mp4" %>">
        </video>
      </div>
    </div>
  </div>
</div>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/requested-reviewer.json",
  "title": "Requested Reviewers",
  "description": "Requested reviewers on pull requests.",
  "type": "object",
  "definitions": {
    "users": {
      "description": "The users that are requested for review on the pull request",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "null"
          },
          {
            "$ref": "https://schema.github.com/v3/simple-user.json#"
          }
        ]
      }
    },
    "teams": {
      "description": "The teams that are requested for review on the pull request",
      "type": "array",
      "items": {
        "$ref": "https://schema.github.com/v3/team.json#"
      }
    }
  },
  "properties": {
    "users": {
      "$ref": "#/definitions/users"
    },
    "teams": {
      "$ref": "#/definitions/teams"
    }
  },
  "additionalProperties": false,
  "required": [
    "users",
    "teams"
  ]
}

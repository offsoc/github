<div
  class="<%= class_names("form-group", "required" => required?) %>"
  <%= test_selector("issue-form-multi-select") %>
>
  <div class="form-group-header">
    <%= label(base_form_param, element.id, element.label, required: required?, class: "d-block mb-1", "aria-required": required?) %>
    <% if has_description? %>
      <%= render Primer::Beta::Markdown.new(mb: 2, id: description_id, font_size: :small, classes: "note", test_selector: "issue-form-multi-select-description") do %>
        <%= description %>
      <% end %>
    <% end %>
  </div>
  <%= render GitHub::MenuComponent.new(text: "Selections: ", items: options) do |component| %>
    <% component.with_summary do %>
      <%= render(
        GitHub::MenuSummaryComponent.new(
          classes: "btn btn-sm select-menu-button js-structured-issue-multi-select-summary-button",
          text: "Selections: ",
          replaceable: true,
        )
      ) %>
    <% end %>
  <% end %>
</div>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/release.json",
  "title": "Release",
  "description": "A release.",
  "type": "object",
  "definitions": {
    "tag_name": {
      "description": "The name of the tag.",
      "example": "v1.0.0",
      "type": "string"
    },
    "target_commitish": {
      "description": "Specifies the commitish value that determines where the Git tag is created from.",
      "example": "master",
      "type": "string"
    },
    "name": {
      "description": "The name of the release.",
      "example": "v1.0.0",
      "type": "string"
    },
    "body": {
      "description": "Text describing the contents of the tag.",
      "example": "Description of the release",
      "type": "string"
    },
    "draft": {
      "description": "true to create a draft (unpublished) release, false to create a published one.",
      "example": false,
      "type": "boolean"
    },
    "prerelease": {
      "description": "Whether to identify the release as a prerelease or a full release.",
      "example": false,
      "type": "boolean"
    },
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "release_id": {
      "description": "The ID of the release.",
      "type": "integer"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    },
    "assets_url": {
      "type": "string",
      "format": "uri"
    },
    "upload_url": {
      "type": "string"
    },
    "tarball_url": {
      "type": [
        "string",
        "null"
      ],
      "format": "uri"
    },
    "zipball_url": {
      "type": [
        "string",
        "null"
      ],
      "format": "uri"
    },
    "release_body": {
      "type": [
        "string",
        "null"
      ]
    },
    "body_html": {
      "type": "string"
    },
    "body_text": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "published_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "id": {
      "type": "integer"
    },
    "node_id": {
      "type": "string"
    },
    "html_url": {
      "type": "string",
      "format": "uri"
    },
    "release_name": {
      "type": [
        "string",
        "null"
      ]
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "https://schema.github.com/v3/release-asset.json#"
      }
    },
    "mentions_count": {
      "type": "integer"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "discussion_category_name": {
      "description": "Specifies the category name to create a discussion in for this release.",
      "example": "releases",
      "type": [
        "string",
        "null"
      ]
    },
    "generate_release_notes": {
      "description": "Whether to automatically generate the name and body for this release. If `name` is specified, the specified name will be used; otherwise, a name will be automatically generated. If `body` is specified, the body will be pre-pended to the automatically generated notes. Default: `false`.",
      "example": false,
      "type": "boolean"
    },
    "make_latest": {
      "description": "Specifies whether this release should be set as the latest release for the repository. Drafts and prereleases cannot be set as latest. Defaults to `true` for newly published releases. `legacy` specifies that the latest release should be determined based on the release creation date and higher semantic version.",
      "example": "false",
      "type": "string"
    }
  },

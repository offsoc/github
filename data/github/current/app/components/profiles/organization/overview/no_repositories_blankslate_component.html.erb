<%= render(Primer::Beta::BorderBox.new) do |component| %>
  <% component.with_body do %>
    <%= render Primer::Beta::Blankslate.new do |c| %>
      <% c.with_visual_icon(icon: "#{icon}") %>

      <% c.with_heading(tag: :h2) do %>
        <%= heading_copy %>
      <% end %>

      <% if is_member && can_create_repository %>
        <% c.with_description do %>
          A new home for your code where you can start collaborating with your team.
        <% end %>

        <% c.with_primary_action(href: new_org_repository_path(organization)) do %>
          Create a new repository
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

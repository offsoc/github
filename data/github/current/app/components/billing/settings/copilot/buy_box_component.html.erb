  <%= render Primer::Box.new(classes: "Box-body", p: 0) do %>
    <%= render Primer::Box.new(classes: "Box-row", display: :flex, align_items: :center) do %>
        <div class="d-flex flex-column col-12">
          <p class="color-fg-muted m-0">
            <%= copilot_for_business_feature.description %>
          </p>
          <div class="d-flex mt-2">
            <%= render(Primer::Beta::Button.new(
              test_selector: "addon-copilot-cta",
              tag: :a,
              scheme: :secondary,
              size: :small,
              href: copilot_signup_path,
              data: analytics_click_attributes(
                category: "copilot_for_business",
                action: "click_to_buy_copilot_for_business",
                label: "ref_cta:buy_copilot_for_business;ref_loc:billing_settings_add_on"
              )
            )) { "Sign up for #{Copilot.business_product_name}" } %>
          </div>
        </div>
        <% if total&.positive? %>
          <div class="d-flex flex-md-justify-end flex-items-baseline col-md-4">
            <span class="h3 mr-2" <%= test_selector("total-addon-#{copilot_for_business_feature}") %>><%= total %></span>
            <span class="color-fg-muted"><%= "request".pluralize(total) %></span>
          </div>
        <% end %>
    <% end %>
  <% end %>
<% end %>

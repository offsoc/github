#!/bin/bash
set -e

# This script sets up the github/copilot-api repository for a github/github codespace.

RED='\033[0;31m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
NC='\033[0m' # No Color

# Function to print help message
help() {
   echo "Sets up the github/copilot-api repository for a github/github codespace."
   echo
   echo "Usage: setup-codespaces-copilot-api [-b branch] [-d|h] "
   echo "Options:"
   echo "-d     Before starting, delete the existing copilot-api directory in the codespace."
   echo "-w     Add the copilot-api repo as a workspace in VS Code."
   echo "-h     Print this help message."
   echo
}

# Get the options
while getopts ":hdw" opt; do
   case $opt in
      h) # display help message
         help
         exit;;
      d) # Delete the repository if it exists
         DELETE_REPO=true;;
      w) # Add the repository as a workspace in VS Code
         ADD_TO_WORKSPACE=true;;
     :)
      echo "Error: Option -$OPTARG requires an argument."
      exit 1;;
     \?) # Invalid option
         echo "Error: Invalid option -$OPTARG"
         exit 1;;
   esac
done

# If the copilot-api repo already exists and the delete argument hasn't been specified, echo a warning and exit.
if [[ -d "/workspaces/copilot-api" && -z "$DELETE_REPO" ]]; then
  echo -e "${RED}The copilot-api directory already exists in this codespace.${NC} \nYou can rerun the setup script with the -d argument to force the deletion of the existing repository."
  exit 1
fi

if [ "$DELETE_REPO" = true ]; then
  echo -e "\n${GREEN}‚û°Ô∏è Deleting the existing copilot-api repo...\n${NC}"
  rm -rf /workspaces/copilot-api
fi

# Do a shallow clone of copilot-api to the same dir as the github/github repo.
# If a branch was supplied, use that branch for the clone.
echo -e "\n${GREEN}‚û°Ô∏è Cloning copilot-api repo...\n${NC}"
git clone https://github.com/github/copilot-api /workspaces/copilot-api

# Bootstrap copilot-api
echo -e "\n${GREEN}‚û°Ô∏è Bootstrapping copilot-api...\n${NC}"
( cd /workspaces/copilot-api ; script/bootstrap-dotcom-codespaces; )

# Add the copilot-api repo as a workspace in VS Code
if [ "$ADD_TO_WORKSPACE" = true ]; then
   echo -e "\n${GREEN}‚û°Ô∏è Adding copilot-api to VS Code workspace...\n${NC}"
   code --add /workspaces/copilot-api
fi

echo -e ""
echo -e "${GREEN}üéâüéâ FINISHED! The copilot-api repo has been set up! üéâüéâ"
echo -e ""
echo -e "If you're not using Codespace secrets, make sure the generated /workspaces/copilot-api/.env file has all the proper values."
echo -e ""
echo -e "${GREEN}The copilot-api server will be started when you run script/server in /workspaces/github."
echo -e ""

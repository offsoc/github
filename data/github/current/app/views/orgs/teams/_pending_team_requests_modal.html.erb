<%= render Primer::Beta::Blankslate.new do |c| %>
  <% c.with_visual_icon(icon: "people") %>

  <% c.with_heading(tag: :h2) do %>
    Pending team requests
  <% end %>
<% end %>

<% page_size = Orgs::TeamsController::PAGE_SIZE %>

<%=
  render 'orgs/teams/inbound_requests',
  requests: TeamChangeParentRequest.inbound_pending_requests_non_null_parent_initiated(team).first(page_size),
  prompt: 'Teams requesting to become the parent team',
  team: team
%>
<%=
  render 'orgs/teams/inbound_requests',
  requests: TeamChangeParentRequest.inbound_pending_requests_non_null_child_initiated(team).first(page_size),
  prompt: 'Teams requesting to become a child team',
  team: team
%>

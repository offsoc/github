{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/branch-protection.json",
  "title": "Branch Protection",
  "type": "object",
  "definitions": {
    "enabled": {
      "type": "boolean"
    }
  },
  "properties": {
    "enabled": {
      "$ref": "#/definitions/enabled"
    },
    "required_status_checks": {
      "type": "object",
      "properties": {
        "enforcement_level": {
          "type": "string"
        },
        "contexts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "checks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "context": {
                "type": "string"
              },
              "appId": {
                "oneOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            }
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "enforcement_level",
        "contexts"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "enabled",
    "required_status_checks"
  ]
}

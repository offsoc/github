<%= render Primer::Box.new(test_selector: 'overview-discussions') do %>
  <%= render Primer::Beta::Heading.new(tag: :h2, mb: 3, text: :normal, font_size: 4, font_weight: :normal) do %>
    Top discussions this past month
  <% end %>
  <% if top_discussions_this_month.blank? %>
    <%= render Primer::Beta::Text.new(tag: :p) do %>
      Discussions are for sharing announcements, creating conversation in your community, answering questions, and more.
    <% end %>
    <%= render Primer::Beta::Link.new(href: agnostic_new_discussion_path(repository, org_param: org_param), text: :small, test_selector: "new-discussion-link") do %>
      Start a new discussion
    <% end %>
  <% else %>
    <%= render Primer::Box.new(test_selector: 'discussions') do %>
      <% top_discussions_this_month.each do |discussion| %>
        <%= render Discussions::OverviewDiscussionComponent.new(discussion: discussion) %>
      <%end%>
      <%= render Primer::Box.new(mt: 2) do %>
        <%= render Primer::Beta::Link.new(href: view_all_discussions_path, text: :small) do %>
          View all discussions
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

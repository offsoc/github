{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/personal-reminder.json",
  "title": "Personal reminder",
  "type": "object",
  "definitions": {
    "include_review_requests": {
      "type": "boolean",
      "example": true
    },
    "include_team_review_requests": {
      "type": "boolean",
      "example": true
    },
    "time_zone_name": {
      "type": "string",
      "example": "Africa/Asmara"
    },
    "delivery_times": {
      "type": "object",
      "properties": {
        "days": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "Monday"
          ]
        },
        "times": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "7:00 AM"
          ]
        }
      },
      "required": [
        "days",
        "times"
      ],
      "additionalProperties": false
    },
    "reminder_event_subscriptions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "event_type": {
            "type": "string"
          },
          "options": {
            "type": "string"
          }
        },
        "required": [
          "event_type",
          "options"
        ],
        "additionalProperties": false
      }
    },
    "reminder_slack_workspace_id": {
      "type": "number"
    }
  },
  "links": [
    {
      "title": "Create/ update a new personal reminder",
      "method": "PUT",
      "rel": "create-or-udpate-personal-reminder",
      "href": "/personal_schedule_reminders/{organization_id}",
      "schema": {
        "properties": {
          "include_review_requests": {
            "$ref": "#/definitions/include_review_requests"
          },
          "include_team_review_requests": {
            "$ref": "#/definitions/include_team_review_requests"
          },
          "time_zone_name": {
            "$ref": "#/definitions/time_zone_name"
          },
          "delivery_times": {
            "$ref": "#/definitions/delivery_times"
          },
          "reminder_event_subscriptions": {
            "$ref": "#/definitions/reminder_event_subscriptions"
          },
          "reminder_slack_workspace_id": {
            "$ref": "#/definitions/reminder_slack_workspace_id"
          }
        },
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

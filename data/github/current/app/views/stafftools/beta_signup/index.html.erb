<% page_info title: "Technology previews", selected_link: :betas %>

<%= render layout: "stafftools/stafftools" do %>
  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>Technology Previews<% end %>
  <% end %>

  <%= render(Primer::Box.new(display: :flex, direction: :column)) do %>
    <% betas.each do |path, beta| %>
      <% beta = beta.new %>

      <%= render(Primer::Box.new) do %>
        <%= render(Primer::Beta::Link.new(href: stafftools_beta_signup_path(beta: path))) { beta.feature_name } %>
      <% end %>
    <% end %>
  <% end %>

<% end %>

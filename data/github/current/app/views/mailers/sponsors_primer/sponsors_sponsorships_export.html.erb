<% content_for :header do %>
  Your sponsorships export is ready!
<% end %>

<%= render(Mail::RowComponent.new) do %>
  <%= render(Mail::ColumnComponent.new) do %>
    <%= render(Mail::ContainerComponent.new) do %>
      <img src="<%= mailer_static_asset_path("images/email/sponsors/sponsors-icon.png") %>" width="80" alt="GitHub Sponsors">
    <% end %>

    <%= render(Mail::SpacerComponent.new) %>

    <p>Hi <strong>@<%= @actor %></strong>,</p>

    <%= render(Mail::SpacerComponent.new) %>

    <p>Attached to this email is an export of all of the users and organizations you are currently sponsoring. Please download to see your sponsorships export.</p>

    <% if @actor %>
      <%= render(Mail::SpacerComponent.new) %>

      <p>
        You are receiving this email because
        <% if @actor == @sponsor%>
          you
        <% else %>
          <a href="<%= user_url(@actor) %>">@<%= @actor %></a>
        <% end %>
        requested an export of this data.
      </p>
    <% end %>
  <% end %>
<% end %>

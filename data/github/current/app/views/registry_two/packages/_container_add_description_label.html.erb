<%# erblint:counter DeprecatedComponentsCounter 1 %>
<div class="Box border-dashed mb-4 mt-4">
    <%= render Primer::BlankslateComponent.new(
    title: "No description provided",
    p: 6,
    ) do %>
    <p class="mx-auto col-10">This package version was published <%= time_ago_in_words_js updated_at %>.</p>
    <div class="border rounded-2 px-4 text-left mt-6" style="padding-bottom:15px">
        <p class="mt-3 mb-3 color-fg-muted">To provide a description, add the following line to your Dockerfile:</p>
        <div class="Box color-bg-subtle border-0 text-left mx-auto p-2">
        <code class='d-block color-bg-subtle border-0 rounded-2 f6 lh-default'>
            <%= render Primer::Beta::ClipboardCopy.new(display: :block, position: :relative, px: 2, py: 1, border_radius: 2, classes: "CopyBlock tooltipped-no-delay", "aria-label": "Copy", "data-copy-feedback": "Copied!", "data-tooltip-direction": "e", role: "button", tabindex: "0", value: "LABEL org.opencontainers.image.description DESCRIPTION") do %><%# erblint:disable Primer::Accessibility::TooltippedMigration %>
            LABEL org.opencontainers.image.description <span class="color-fg-done">DESCRIPTION</span>
            <%= primer_octicon(:copy, color: :accent, right: 0, mr: 1, position: :absolute, style: "top: 5px;") %>
            <%= primer_octicon(:check, color: :success, position: :absolute, display: :none, style: "top: 6px; right: 5px;") %>
            <% end %>
        </code>
        </div>
        <p class="mt-3 mb-3 color-fg-muted">For multi-arch images, set a value for the <code class="color-bg-subtle border-0 rounded-2 f6 lh-default">org.opencontainers.image.description</code> key in the <code class="color-bg-subtle border-0 rounded-2 f6 lh-default">annotations</code> field of the manifest:</p>
        <div class="Box color-bg-subtle border-0 text-left mx-auto p-2">
        <code class='d-block color-bg-subtle border-0 rounded-2 f6 lh-default'>
            <%= render Primer::Beta::ClipboardCopy.new(display: :block, position: :relative, px: 2, py: 1, border_radius: 2, classes: "CopyBlock tooltipped-no-delay", "aria-label": "Copy", "data-copy-feedback": "Copied!", "data-tooltip-direction": "e", role: "button", tabindex: "0", value: "\"annotations\": { \"org.opencontainers.image.description\": \"DESCRIPTION\" }") do %><%# erblint:disable Primer::Accessibility::TooltippedMigration %>
            "annotations": {
                "org.opencontainers.image.description": "<span class="color-fg-done">DESCRIPTION</span>"
            }
            <%= primer_octicon(:copy, color: :accent, right: 0, mr: 1, position: :absolute, style: "top: 5px;") %>
            <%= primer_octicon(:check, color: :success, position: :absolute, display: :none, style: "top: 6px; right: 5px;") %>
            <% end %>
        </code>
        </div>
        <div class="mt-3"><%= link_to "Learn more about labelling container images", "https://docs.github.com/packages/working-with-a-github-packages-registry/working-with-the-container-registry#labelling-container-images", class: "Link--inTextBlock" %></div>
    </div>
    <% end %>
</div>

<%= render(Primer::BaseComponent.new(tag: :"experimental-action-list", "data-is-navigation-list": true, **@system_arguments)) do %>
  <%= render(Primer::BaseComponent.new(tag: :nav, classes: "NavigationList", **@nav_arguments)) do %>
    <%= render(Primer::BaseComponent.new(tag: :ul, role: :list, classes: "ActionList")) do %>
      <% items.each do |item| %>
        <%= item %>
      <% end %>
      <% unless sections.empty? %>
        <%= render(Primer::Experimental::NavigationList::Separator.new) %>
      <% end %>
      <% sections.each_with_index do |section, idx| %>
        <% if idx > 0 %>
          <%= render(Primer::Experimental::NavigationList::Separator.new) %>
        <% end %>
        <%= section %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

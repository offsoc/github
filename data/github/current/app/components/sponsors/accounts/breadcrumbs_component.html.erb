<%= render Primer::BaseComponent.new(
  tag: :div,
  display: :flex,
  align_items: :center,
  justify_content: :flex_start,
  p: 3,
  border: :bottom,
) do %>
  <%= render(Primer::Beta::Octicon.new(:heart, size: :small, mr: 2, color: :sponsors)) %>
  <%= render(Primer::Beta::Breadcrumbs.new) do |breadcrumb| %>
    <%= breadcrumb.with_item(
      href: sponsors_accounts_path,
      test_selector: "sponsors-accounts-breadcrumb",
    ).with_content("GitHub Sponsors accounts") %>
    <%= breadcrumb.with_item(
      href: request.path,
      test_selector: "sponsorable-breadcrumb",
    ).with_content(sponsorable.display_login) if sponsorable.present? %>
  <% end %>
<% end %>

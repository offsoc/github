<% page_info \
  title: "New custom pattern",
  container_xl: true,
  selected_link: security_and_analysis_path %>
<%= render layout: "edit_repositories/edit" do %>
  <%= render SecretScanning::CustomPatterns::FormComponent.new(
    pattern: pattern,
    owner: owner,
    mode: :create,
    settings_path: security_and_analysis_path,
    submit_path: custom_pattern_form_submit_path,
    test_pattern_path: test_custom_pattern_path,
    remove_pattern_path: nil,
    show_publish_alert_message: false,
    dry_run_info: nil,
    cancel_custom_pattern_dry_run_path: nil,
    get_alert_metrics_path: nil,
    get_push_protection_metrics_path: nil,
    form_actions_path: nil,
    error_message: error_message,
    get_generated_expressions_path: get_generated_expressions_path,
  ) %>
<% end %>

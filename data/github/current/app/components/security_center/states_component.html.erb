<% button_render_options = {
  scheme: :invisible,
  tag: :a,
  size: :medium,
  px: 1,
  **system_arguments
} %>

<%= render(Primer::Beta::Button.new(
  href: open_state_href,
  test_selector: "security-center-states-filter-open-count",
  classes: "js-change-open-close-state",
  ml: -1,
  **button_render_options
)) do %>
  <%= render(
    SecurityCenter::StateComponent.new(
      icon: :shield,
      is_highlighted: open_state_selected,
      text: number_with_delimiter(open_state_count) + " Open"
    )
  ) %>
<% end %>

<%= render(Primer::Beta::Button.new(
  href: closed_state_href,
  test_selector: "security-center-states-filter-close-count",
  classes: "js-change-open-close-state",
  ml: 1,
  **button_render_options
)) do %>
  <%= render(
    SecurityCenter::StateComponent.new(
      icon: :check,
      is_highlighted: closed_state_selected,
      text: number_with_delimiter(closed_state_count) + " Closed"
    )
  ) %>
<% end %>

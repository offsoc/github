<div class="js-repository-selection-component d-flex flex-column overflow-hidden" <% if @discard_changes_on_close %>data-discard-changes-on-close <% end %>data-action="repository-items-loaded:selected-item-list#updateCount" <%= test_selector("repository-selection-component") %>>
  <filter-input class="flex-1 mb-3" aria-owns="list">
    <input type="search" aria-label="Filter repositories" class="form-control width-full js-repository-items-filter-input" placeholder="Filter repositories">
  </filter-input>
  <div id="list" class="d-flex flex-column overflow-auto">
    <ul data-filter-list class="list-style-none position-relative mb-3">
        <%= render(Packages::RepositoryItemsComponent.new(
          package: @package,
          next_page: 1,
          owner: @owner,
          repositories: @repositories,
          total_count: @owner.visible_repositories_for(current_user).size)) %>
    </ul>
    <div class="color-fg-muted m-1" data-filter-empty-state hidden>
      No repositories found.
    </div>
  </div>
</div>

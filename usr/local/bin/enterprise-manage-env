#!/bin/bash
#/ enterprise-manage-env [-h]
#/
#/ Load the enterprise-manage application environment.
#/
#/ Typically, you will only execute this if you've contacted support and they've asked you to do so.
#/
#/ OPTIONS:
#/   -h | --help     Show this message.
#/
set -e

if [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
  grep '^#/' < "$0" | cut -c4-
  exit 2
fi

if [[ -z "$*" ]] ; then
  command="/bin/bash"
else
  command="$@"
fi

if [[ "$USER" == "root" ]] ; then
  cd /data/enterprise-manage/current && . .app-config/production.sh && bash -c "$command"
else
  sudo bash -c "cd /data/enterprise-manage/current && . .app-config/production.sh && $command"
fi

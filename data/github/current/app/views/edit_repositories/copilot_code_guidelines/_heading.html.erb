<%= render Primer::Beta::Subhead.new(direction: [:column, nil, nil, :row], align_items: [:flex_start, nil, nil, :center]) do |c| %>
  <% c.with_heading(tag: :h1, font_size: 3) do %>
    <%= link_to "Copilot Code Review", copilot_code_guidelines_path %> / <%= breadcrumb_title %>
  <% end %>

  <% if local_assigns.key?(:coding_guideline) %>
    <% c.with_actions(align_self: [:start, nil, nil, :center]) do %>
      <%= render Primer::Beta::Button.new(
        tag: :a,
        href: copilot_code_guideline_playground_path(user_id: current_repository.owner, copilot_code_guideline_id: coding_guideline),
      ) do |button| %>
        <% button.with_leading_visual_icon(icon: :beaker) %>
        Test in playground
      <% end %>
    <% end %>
  <% end %>
<% end %>

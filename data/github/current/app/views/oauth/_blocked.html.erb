<div class="oauth-org-item mb-2 m-0 px-0" <%= test_selector("blocking-org-#{blocked.id}") %>>
  <%= avatar_for(blocked, 20, :class => "avatar") %>
  <strong class="color-fg-muted text-small"><%= blocked.display_login %></strong>

  <%= render(Primer::Beta::Link.new(href: docs_url("organizations/about-oauth-app-access-restrictions"), id: "link-to-docs-for-org-#{blocked.id}")) do |component| %>
    <% component.with_tooltip(
      type: :description,
      direction: :e,
      text: "This organization has blocked this application from accessing their resources"
    ) %>

    <%= render(Primer::Beta::Octicon.new(icon: :x, color: :danger, "aria-label": "Blocked")) %>
  <% end %>
</div>

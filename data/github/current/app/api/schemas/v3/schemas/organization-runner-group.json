      "href": "/organizations/{organization_id}/actions/runner-groups/{runner_group_id}",
      "method": "DELETE",
      "rel": "delete-group",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {

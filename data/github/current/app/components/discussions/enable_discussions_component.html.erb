<%= render Primer::Box.new(test_selector: "discussions-enablement") do %>
  <%= render Primer::Beta::Heading.new(tag: :h2, mb: 3, text: :normal, font_size: 4, font_weight: :normal) do %>
    Discussions
  <% end %>
  <%= render Primer::Beta::Text.new(tag: :p) do %>
    Set up discussions to engage with your community!
  <% end %>
  <%= render Primer::Box.new(mt: 2) do %>
    <%= render Primer::Beta::Link.new(href: discussions_settings_path, text: :small) do %>
      Turn on discussions
    <% end %>
  <% end %>
<% end %>

          },
          "required_labels": {
            "$ref": "#/definitions/required_labels"
          },
          "needed_reviews": {
            "$ref": "#/definitions/needed_reviews"
          },
          "teams": {
            "$ref": "#/definitions/teams"
          },
          "repos": {
            "$ref": "#/definitions/repos"
          },
          "settings": {
            "$ref": "#/definitions/settings"
          }
        },
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

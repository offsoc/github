<% discussion_deleted = false unless local_assigns.key?(:discussion_deleted) %>

<%= render layout: "issues/issues" do %>
  <%= render Primer::Beta::Blankslate.new(test_selector: "discussion-transfer-no-access") do |c| %>
    <% c.with_visual_icon(icon: "comment-discussion") %>

    <% c.with_heading(tag: :h2) do %>
      Discussion has moved
    <% end %>

    <% c.with_description do %>
      <%= "This discussion has been moved to a repository you don't have access to" + (discussion_deleted ? " or has been deleted since being transferred" : "") + "." %>
    <% end %>
  <% end %>
<% end %>

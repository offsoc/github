<div class="page-header">
  <h3>Subscription: <%= subscription_id %></h3>
</div>

<% if query_data.nil? %>
  <p class="muted"><i>This subscription was not found or is no longer active.</i></p>
<% else %>
  <p>Context:</p>
  <pre><%= Rack::Utils.escape_html(query_data[:context].inspect) %></pre>

  <p>Variables:</p>
  <pre><%= Rack::Utils.escape_html(query_data[:variables].inspect) %></pre>

  <p>Operation Name:</p>
  <pre><%= query_data[:operation_name].inspect %></pre>

  <p>Query String:</p>
  <div class="highlight-graphql-container">
    <textarea class="highlight-graphql" disabled><%= Rack::Utils.escape_html(query_data[:query_string]) %></textarea>
  </div>
<% end %>

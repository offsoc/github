{
  "name": "@github-ui/code-mirror",
  "description": "Core library for the React implementation of CodeMirror 6",
  "homepage": "https://ui.githubapp.com/storybook/?path=/story/utilities-codemirror--example",
  "componentInfo": {
    "name": "CodeMirror",
    "type": "Utilities"
  },
  "main": "CodeMirror.tsx",
  "exports": {
    ".": "./CodeMirror.tsx",
    "./autocomplete": "./autocomplete/custom-autocomplete.ts",
    "./emit-to-codemirror": "./emit-to-codemirror.ts",
    "./help-panel": "./extensions/help-panels.ts",
    "./linter": "./linter/custom-linter.ts",
    "./types/*": "./types/*.ts",
    "./utils": "./utils.ts"
  },
  "scripts": {
    "lint": "eslint --cache --max-warnings=0 . --ext .js,.ts,.tsx,.json",
    "test": "jest",
    "tsc": "tsc"
  },
  "dependencies": {
    "@codemirror/autocomplete": "6.6.1",
    "@codemirror/commands": "6.2.2",
    "@codemirror/lang-markdown": "6.1.0",
    "@codemirror/language": "6.6.0",
    "@codemirror/language-data": "6.2.0",
    "@codemirror/lint": "6.2.0",
    "@codemirror/search": "6.3.0",
    "@codemirror/state": "6.2.0",
    "@codemirror/view": "6.9.3",
    "@github-ui/hotkey": "*",
    "@github-ui/react-core": "*",
    "@github/memoize": "1.1.1",
    "@lezer/highlight": "1.1.4",
    "react": "*"
  },
  "devDependencies": {
    "@github-ui/eslintrc": "*",
    "@github-ui/jest": "*",
    "@github-ui/noop": "*",
    "@storybook/react": "*",
    "@testing-library/react": "*"
  },
  "private": true
}

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/enterprise-announcement.json",
  "title": "Enterprise announcement",
  "description": "An Enterprise Server global announcement",
  "type": "object",
  "definitions": {
    "announcement": {
      "description": "The announcement text in GitHub Flavored Markdown.",
      "example": "Very **important** announcement about _nothing_.",
      "type": "string"
    },
    "expires_at": {
      "description": "The time at which the announcement expires.",
      "example": "2020-12-01",
      "type": [
        "string",
        "null"
      ]
    },
    "user_dismissible": {
      "description": "Whether the announcement is dismissible by the user.",
      "example": false,
      "type": "boolean"
    }
  },
  "properties": {
    "announcement": {
      "$ref": "#/definitions/announcement"
    },
    "expires_at": {
      "$ref": "#/definitions/expires_at"
    }
  },
  "additionalProperties": false,
  "required": [
    "announcement"
  ],
  "links": [
    {
      "title": "Set the current Enterprise Server global announcement.",
      "href": "/enterprise/announcement",
      "method": "PATCH",
      "rel": "set-announcement",
      "schema": {
        "properties": {
          "announcement": {
            "$ref": "#/definitions/announcement"
          },
          "expires_at": {
            "$ref": "#/definitions/expires_at"
          },
          "user_dismissible": {
            "$ref": "#/definitions/user_dismissible"
          }
        },
        "additionalProperties": false,
        "type": "object"
      },
      "required": [
        "announcement"
      ]
    }
  ]
}

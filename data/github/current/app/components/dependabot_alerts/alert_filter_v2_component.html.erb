<%= render Primer::Alpha::ActionMenu::List.new(
  menu_id: "dependabot-alert-list-#{filter_type}-filter",
  select_variant: :multiple,
  test_selector: "dependabot-alerts-#{filter_type}-filter",
  ) do |menu| %>
  <% item_list.each do |item| %>
    <% menu.with_item(
      label: item[:label],
      href: dependabot_alerts_path(q: filter_query(item[:slug])),
      active: selected(item[:slug]),
    ) do |menu_item| %>
      <% menu_item.with_trailing_visual_counter(count: item[:count]) if item[:count] %>
    <% end %>
  <% end %>
<% end %>

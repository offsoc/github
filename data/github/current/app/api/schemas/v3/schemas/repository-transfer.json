{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/repository-transfer.json",
  "title": "Repository Transfer",
  "description": "Repository transfers allow moving a repository to a different Organization or User",
  "type": "object",
  "definitions": {
    "new-owner": {
      "description": "The login of the destination Organization or User",
      "example": "github",
      "type": "string"
    },
    "team-ids": {
      "description": "The teams to assign the repository to",
      "example": [
        12,
        345
      ],
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    }
  },
  "links": [
    {
      "href": "/repositories/{repository_id}/transfer",
      "method": "POST",
      "rel": "transfer-legacy",
      "schema": {
        "properties": {
          "new_owner": {
            "$ref": "#/definitions/new-owner"
          },
          "team_ids": {
            "$ref": "#/definitions/team-ids"
          }
        },
        "required": [
          "new_owner"
        ],
        "type": "object"
      },
      "title": "Transfer"
    },
    {
      "title": "Request a repository transfer",
      "method": "POST",
      "href": "/repositories/{repository_id}/transfer",
      "rel": "transfer",
      "schema": {
        "properties": {
          "new_owner": {
            "$ref": "#/definitions/new-owner"
          },
          "team_ids": {
            "$ref": "#/definitions/team-ids"
          }
        },
        "required": [
          "new_owner"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

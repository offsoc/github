{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/actions-dynamic-workflow.json",
  "title": "Actions Dynamic Workflow",
  "description": "A GitHub Actions Dynamic workflow",
  "type": "object",
  "definitions": {
    "workflow": {
      "type": "string",
      "example": "on: dynamic\njobs:\n  test:\n    runs-on: ubuntu-latest\n    steps:\n    - run: echo Hello"
    },
    "inputs": {
      "description": "Inputs for the dynamic workflow run",
      "example": {
        "name": "monalisa",
        "color": "green"
      },
      "type": "object",
      "maxProperties": 10,
      "additionalProperties": {
        "type": "string"
      }
    },
    "ref": {
      "description": "The ref to trigger, this can be a branch, tag, or sha",
      "example": "topic-branch",
      "type": "string"
    },
    "workflow_name": {
      "description": "The name of the workflow to run",
      "example": "test",
      "type": "string"
    },
    "slug": {
      "description": "The slug to use in the dynamic workflow path",
      "example": "something",
      "type": "string"
    }
  },
  "links": [
    {
      "title": "Queue an Actions dynamic workflow run",
      "href": "/repositories/{repository_id}/actions/dynamic",
      "method": "POST",
      "rel": "start",
      "schema": {
        "properties": {
          "workflow": {
            "$ref": "#/definitions/workflow"
          },
          "ref": {
            "$ref": "#/definitions/ref"
          },
          "inputs": {
            "$ref": "#/definitions/inputs"
          },
          "workflow_name": {
            "$ref": "#/definitions/workflow_name"
          },
          "slug": {
            "$ref": "#/definitions/slug"
          }
        },
        "additionalProperties": false,
        "required": [
          "workflow",
          "ref"
        ],
        "type": "object"
      }
    }
  ],
  "properties": {
  },
  "additionalProperties": false
}

<%# Responsive menu for small and medium size screens %>
<div class="d-flex d-lg-none position-fixed bottom-0 width-full border-top color-bg-default p-3 color-shadow-large" style="z-index: 35;">
  <div class="flex-auto">
    <%= render Primer::Beta::Details.new(classes: "details-reset") do |c| %>
      <% c.with_summary(w: :full, text_align: :center, mb: 3) do %>
        Sponsors dashboard menu
        <div class="dropdown-caret"></div>
      <% end %>
      <% c.with_body do %>
        <%= render Sponsors::Dashboard::NavigationComponent.new(
          sponsors_listing: sponsors_listing,
          selected_tab: selected_tab,
        ) %>
      <% end %>
    <% end %>
  </div>
</div>

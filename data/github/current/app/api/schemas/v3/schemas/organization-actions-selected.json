{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/organization-actions-selected.json",
  "title": "Specifies which actions are allowed on a organization.",
  "type": "object",
  "definitions": {
    "github_owned_allowed": {
      "description": "Whether GitHub-owned actions are allowed on this organization.",
      "type": "boolean"
    },
    "verified_allowed": {
      "description": "Whether verified actions from the marketplace are allowed on this organization.",
      "type": "boolean"
    },
    "patterns_allowed": {
      "description": "Specifies a list of string-matching patterns to allow specific actions on this organization.",
      "type": "array",
      "items": {
        "description": "A pattern to allow on this organization.",
        "type": "string"
      },
      "example": [
        "monacorp/*",
        "monalisa/octocat@v2"
      ]
    }
  },
  "properties": {
    "github_owned_allowed": {
      "$ref": "#/definitions/github_owned_allowed"
    },
    "verified_allowed": {
      "$ref": "#/definitions/verified_allowed"
    },
    "patterns_allowed": {
      "$ref": "#/definitions/patterns_allowed"
    }
  },
  "anyOf": [
    {
      "required": [
        "github_owned_allowed",
        "verified_allowed",
        "patterns_allowed"
      ]
    },
    {
      "required": [
        "github_owned_allowed",
        "patterns_allowed"
      ]
    }
  ],
  "additionalProperties": false,
  "links": [
    {
      "title": "Enable or disable GitHub Actions for a organization",
      "href": "/organizations/{organization_id}/actions/permissions/selected-actions",
      "method": "PUT",
      "rel": "update-selected",
      "schema": {
        "properties": {
          "github_owned_allowed": {
            "$ref": "#/definitions/github_owned_allowed"
          },
          "verified_allowed": {
            "$ref": "#/definitions/verified_allowed"
          },
          "patterns_allowed": {
            "$ref": "#/definitions/patterns_allowed"
          }
        },
        "type": "object"
      }
    }
  ]
}

<% page_info \
  title: "Repository role details",
  container_xl: true,
  selected_link: :role_details %>

<%= render layout: "edit_repositories/edit" do %>
  <%= render(Primer::Beta::Breadcrumbs.new(mb: 3)) do |component| %>
    <% component.with_item(href: repository_access_management_path(view.repository.owner, view.repository)) do %>Manage access<% end %>
    <% component.with_item(href: request.path) do %>Role details<% end %>
  <% end %>

  <%= render Roles::ListComponent.new(organization: view.repository.owner, repository: view.repository) %>
<% end %>

<%= render Primer::Beta::Blankslate.new(
  narrow: true,
  mt: 5,
  test_selector: "external-conditional-access-forbidden-message"
) do |bs| %>
  <% bs.with_visual_icon(icon: :alert) %>
  <% bs.with_heading(tag: :h2).with_content("Access forbidden by Identity Provider Conditional Access Policy enforcement") %>
  <% bs.with_description(mt: 3) do %>
    The <strong><%= target.safe_profile_name %></strong> enterprise
    has enabled Identity Provider Conditional Access Policy enforcement
    on the account which does not permit access to this resource.
    <strong><%= idp_message %></strong>.
    Please contact an owner of the <strong><%= target.safe_profile_name %></strong> enterprise for more details.
  <% end %>
<% end %>

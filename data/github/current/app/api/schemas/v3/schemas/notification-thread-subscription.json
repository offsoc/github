{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/notification-thread-subscription.json",
  "title": "Notification Thread Subscription",
  "description": "Subscription status to a notification thread.",
  "type": "object",
  "definitions": {
    "ignored": {
      "description": "Whether to block all notifications from a thread.",
      "default": false,
      "type": "boolean"
    },
    "thread_id": {
      "description": "The ID of the thread",
      "type": "integer"
    }
  },
  "links": [
    {
      "title": "Set a thread subscription",
      "method": "PUT",
      "rel": "update",
      "href": "/notifications/threads/{thread_id}/subscription",
      "schema": {
        "properties": {
          "ignored": {
            "$ref": "#/definitions/ignored"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Delete a thread subscription",
      "method": "DELETE",
      "rel": "delete",
      "href": "/notifications/threads/{thread_id}/subscription",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ]
}

<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% banner = GitHub.flipper[:banner_migration].enabled?(current_user) ? Primer::Alpha::Banner : Primer::Beta::Flash %>
<% if days_left_on_trial > 0 %>
  <% if days_left_on_trial <= 5 %>
    <%= render(banner.new(scheme: :default)) do %>
      You have <%= pluralize(days_left_on_trial, "day") %> left on your GitHub Copilot trial.
    <% end %>
    <br>
  <% end %>
<% else %>
  <% if days_until_next_billing_date > 0 && days_until_next_billing_date <= 3 %>
    <%= render(banner.new(scheme: :default)) do %>
      Your GitHub Copilot subscription will renew in <%= pluralize(days_until_next_billing_date, "day") %>.
    <% end %>
  <% end %>
<% end %>

<% content_for :header do %>
    <%= "You have been assigned a GitHub Enterprise license by #{@business.name}" %>
<% end %>

<%= render(Mail::HeaderTitleComponent.new(title: "Welcome to #{@business.name}", avatar: @business)) %>

<%= render(Mail::RowComponent.new) do %>
    <%= render(Mail::ColumnComponent.new) do %>
        <p>
            To get started, ask your administrator to invite you to an organization and start taking advantage of all that comes with your GitHub Enterprise license.
        </p>
    <% end %>
<% end %>

<% content_for :footer_text do %>
    <%= @footer_text %>
<% end %>

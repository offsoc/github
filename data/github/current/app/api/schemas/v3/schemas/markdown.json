{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/markdown.json",
  "title": "Markdown",
  "description": "Text in markdown format.",
  "type": "object",
  "definitions": {
    "text": {
      "description": "The Markdown text to render in HTML.",
      "type": "string"
    },
    "mode": {
      "description": "The rendering mode.",
      "enum": [
        "markdown",
        "gfm"
      ],
      "default": "markdown",
      "example": "markdown",
      "type": "string"
    },
    "context": {
      "description": "The repository context to use when creating references in `gfm` mode.",
      "type": "string"
    }
  },
  "links": [
    {
      "title": "Render an arbitrary Markdown document",
      "method": "POST",
      "rel": "create",
      "href": "/markdown",
      "schema": {
        "properties": {
          "text": {
            "$ref": "#/definitions/text"
          },
          "mode": {
            "$ref": "#/definitions/mode"
          },
          "context": {
            "$ref": "#/definitions/context"
          }
        },
        "additionalProperties": false,
        "required": [
          "text"
        ],
        "type": "object"
      }
    }
  ]
}

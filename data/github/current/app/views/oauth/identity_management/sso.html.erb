<% page_info title: "Sign in to your accounts" %>

<%= render(Oauth::IdentityManagement::SingleSignOnComponent.new(
  application: application,
  cap_authorized_saml_organizations: cap_authorized_saml_organizations,
  form_data: form_data,
  return_to_url: return_to_url,
  cap_unauthorized_saml_organizations: cap_unauthorized_saml_organizations,
  suggested_org: local_assigns[:suggested_org]
)) do |c| %>
  <% c.with_shared_flash do %>
    <%= render "shared/flash" %>
  <% end %>

  <% c.with_footer do %>
    <%= link_to "Continue", skip_sso_url, class: "btn btn-block" %>
  <% end %>
<% end %>

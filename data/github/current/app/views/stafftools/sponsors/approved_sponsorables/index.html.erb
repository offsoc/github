<% approved_sponsors_listings.each do |sponsors_listing| %>
  <%= render(Primer::Beta::AutoComplete::Item.new(value: sponsors_listing.sponsorable_login)) do %>
    <%= render Sponsors::Sponsorables::AvatarComponent.new(sponsors_listing: sponsors_listing) %>
    <%= sponsors_listing.sponsorable_name %>
    <% unless sponsors_listing.sponsorable_login == sponsors_listing.sponsorable_name %>
      <small class="text-normal">@<%= sponsors_listing.sponsorable_login %></small>
    <% end %>
  <% end %>
<% end %>

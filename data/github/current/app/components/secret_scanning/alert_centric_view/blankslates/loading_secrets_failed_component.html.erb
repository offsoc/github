<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render(
  Primer::BlankslateComponent.new(
    icon: :alert,
    large: true,
    spacious: true,
    title: "Loading secrets failed",
    test_selector: "secret-scanning-alert-centric-view-blankslates-loading-secrets-failed-component",
    data: {hpc: ""}
  )
) do %>
  <%= render(Primer::Beta::Text.new(tag: :p)) do %>
    <% if GitHub.enterprise? %>
      If the problem persists <%= contact_support_snippet(true) %>.
    <% else %>
      We track these errors automatically, but if the problem persists feel free to
      <%= render(Primer::Beta::Link.new(href: contact_path, classes: "Link--inTextBlock").with_content("contact us")) %>.
    <% end %>
  <% end %>
<% end %>

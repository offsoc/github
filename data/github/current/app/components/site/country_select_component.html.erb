<dl class="<%= form_group_class %>" <%= test_selector("country-select") %>>
  <dt>
    <%= label_tag(@name, @label, class: label_class, for: @id) %>
  </dt>
  <dd>
    <%= select_tag @name,
      options_for_select(countries(@country_list)),
      selected: @selected,
      include_blank: @include_blank,
      id: @id,
      class: input_class,
      required: @required
    %>
  </dd>
</dl>


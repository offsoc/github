<% results.each do |org| %>
  <%= render(Primer::Beta::AutoComplete::Item.new(
    value: org.display_login,
  )) do %>
    <%= avatar_for org, 20, :class => "avatar" %>
    <%= org.display_login %>
  <% end %>
<% end %>

<% if results.empty? %>
  <%= render(Primer::Beta::AutoComplete::Item.new(value: "", disabled: true, test_selector: "no-results")) do %>
    No results
  <% end %>
<% end %>

<% if error_message.present? %>
  <%= render(Primer::Beta::AutoComplete::Item.new(value: "", disabled: true, test_selector: "error")) do %>
    <%= error_message %>
  <% end %>
<% end %>

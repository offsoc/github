<%= render Primer::Box.new(mt: 2) do %>
  <%= render Primer::Box.new(display: :flex, direction: :column) do %>
    <%= render Primer::Beta::Text.new(tag: :h2, classes: "h5") do %>
      Query suites
    <% end %>
    <%= render Primer::Beta::Text.new do %>
      <%= link_to "Group of queries", help_url, class: "Link--inTextBlock" %> to run against your code.
    <% end %>
  <% end %>
  <%= render(Primer::Alpha::RadioButtonGroup.new(name: "config[query_suite]", mt: 2, border: true, border_radius: 2, px: 2, pt: 2, pb: 0)) do |radio_group| %>
    <% suite_options.each do |option| %>
      <% label = capture do %>
        <%= render(Primer::Box.new(display: :inline_flex)) do %>
          <%= render(Primer::Beta::Text.new) { option[:label] } %>
          <% if recommended_query_suite == option[:value] %>
            <%= render(Primer::Beta::Label.new(scheme: :accent, ml: 2)) { "Recommended" } %>
          <% end %>
        <% end %>
      <% end %>
      <%
        radio_group.radio_button(
          label: label,
          value: option[:value],
          caption: option[:description],
          checked: recommended_query_suite == option[:value],
        )
      %>
    <% end %>
  <% end %>
<% end %>

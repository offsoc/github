<pricing-calculator-section id="teams">
  <teams-calculator class="d-block rounded-2 box-shadow-card-border-mktg px-4 flex-auto flex-column mb-5 color-bg-default" data-targets="pricing-calculator.calculatorSections">
    <%= render partial: "site/pricing/calculator/section_header", locals: {
        name: "teams",
        heading: "GitHub Teams",
        description: "Advanced collaboration for individuals and organizations.",
        icon_name: "people",
    } %>

    <div class="calculator-section calculator-section--hidden mt-2" data-target="pricing-calculator-section.sectionContent">
      <div data-target="pricing-calculator-section.sectionInputs" class="calculator-section">
        <div class="mx-1 border rounded-2 p-3 mb-2">
          <p class="f5-mktg color-fg-muted">With CI/CD, Dependabot, and the worldâ€™s largest developer community, GitHub gives your team everything they need to ship better software faster.</p>
          <div class="d-flex flex-column pt-4 pb-2">
            <div class="mb-3 mb-sm-0">
              <label class="d-block f5-mktg text-bold mb-1" for="teams-seat-count">Number of seats</label>
              <%= render partial: "site/pricing/calculator/unit_input", locals: {
                name: "teams-seat-count",
                unit: "Users",
                options: {
                  placeholder: "E.g 10",
                  data: {
                    target: "teams-calculator.seatCountInput",
                    action: "input:teams-calculator#calculate"
                    }
                  }
                } %>
            </div>
          </div>
        </div>
      </div>

      <div class="d-flex flex-column rounded-2 color-bg-subtle p-3 mt-1 mb-4">
        <div class="d-flex flex-items-center">
          <span class="f5-mktg text-bold pr-2 mr-auto">Cost per month</span>
          <span class="f5-mktg text-right text-bold" data-target="teams-calculator.subtotalElement"><%= Money.new(0, "USD").format %></span>
          <span class="f5-mktg text-bold ml-1">USD</span>
        </div>
      </div>
    </div>
    <%= render partial: "site/pricing/calculator/more_info", locals: {
      link_name: "GitHub Teams",
      docs_href: "https://docs.github.com/organizations",
    } %>
  </teams-calculator>
</pricing-calculator-section>

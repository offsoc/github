{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/contributor-activity.json",
  "title": "Contributor Activity",
  "type": "object",
  "definitions": {
    "total": {
      "type": "integer",
      "example": 135
    },
    "weeks": {
      "type": "array",
      "example": [
        {
          "w": "1367712000",
          "a": 6898,
          "d": 77,
          "c": 10
        }
      ]
    }
  },
  "properties": {
    "author": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://schema.github.com/v3/simple-user.json#"
        }
      ]
    },
    "total": {
      "$ref": "#/definitions/total"
    },
    "weeks": {
      "$ref": "#/definitions/weeks"
    }
  },
  "additionalProperties": false,
  "required": [
    "author",
    "total",
    "weeks"
  ]
}

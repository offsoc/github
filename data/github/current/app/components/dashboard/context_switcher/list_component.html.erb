<%= render(primer_panel_item_component(
  menu_id: id,
  aria: { label: "dashboards"},
  select_variant: :single,
  data: {
    "filter-list":  true,
    "test_selector": "context-switcher-list",
  }
)) do |list| %>
  <% contexts.each do |context| %>
    <% list.with_avatar_item(
      username: context.account.display_login,
      src: account_src(context),
      href:  context_path(context: context),
      active: context.account.id == current_context.id,
      "data-test-selector": "context-#{context.account.id}",
    ) do |item|  %>
      <% if show_billing_settings?(context) %>
        <% item.with_trailing_visual_icon(icon: "credit-card", ml: 2) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if auto_open_url_param.present? %>
  <%= render Growth::ShowDialogOnLoadComponent.new(url_param: auto_open_url_param) do |auto_open_dialog_component| %>
    <% auto_open_dialog_component.with_dialog(**dialog_attrs) do |dialog| %>
      <% dialog.with_show_button(**button_attrs) do %>
        <%= button_content %>
      <% end %>
      <% dialog.with_body do %>
        <%= body_content %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render Primer::Alpha::Dialog.new(**dialog_attrs) do |dialog| %>
    <% dialog.with_show_button(**button_attrs) do %>
      <%= button_content %>
    <% end %>
    <% dialog.with_body do %>
      <%= body_content %>
    <% end %>
  <% end %>
<% end %>

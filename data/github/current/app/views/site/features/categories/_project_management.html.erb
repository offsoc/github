<div id="features-project-management" class="js-section px-lg-3">
  <div class="features-category--dark overflow-x-hidden position-relative z-1 py-5 py-md-12" <%= mktg_color_theme_attributes %>>

    <div class="position-absolute z-n1 top-0 left-0 width-full height-full d-none d-md-block">
      <div class="p-responsive container-xl height-full">
        <div class="position-relative col-1 height-full overflow-hidden">
          <div class="features-category--git-line position-absolute right-7 top-0"></div>
        </div>
      </div>
    </div>

    <div class="p-responsive container-xl">
      <div class="col-12 offset-md-1 col-md-11">
        <header class="position-relative mb-5 mb-xl-9">
          <div class="features-category--icon-shift position-static position-md-absolute py-1 mt-2 left-n7">
            <img src="<%= image_path "modules/site/features/launchpad/icons/icon-project-management.svg" %>" alt="GitHub Project Management Icon" loading="lazy" width="50" height="50">
          </div>
          <h2 class="h2-mktg d-inline-block features-category--title text-gradient-mint-blue pr-1 pb-3">Project <br>Management</h2>
        </header>
        <div class="col-md-6 col-xl-5">
          <div class="position-relative mb-5 mb-md-8">
            <div class="features-category--icon-shift d-none d-md-block position-absolute top-2 left-n7">
              <%= svg("modules/site/features/launchpad/icons/dot.svg") %>
            </div>
            <div class="h6-mktg text-medium pr-xl-8">Keep feature requests, bugs, and more organized with GitHub issues â€” engineered for software teams.</div>
          </div>
          <div class="position-relative mb-5 mb-md-8">
            <div class="features-category--icon-shift d-none d-md-block position-absolute top-2 left-n7">
              <%= svg("modules/site/features/launchpad/icons/dot.svg") %>
            </div>
            <div class="h6-mktg text-medium pr-xl-8">Coordinate initiatives big and small with project tables, boards, and tasklists.</div>
          </div>
          <div class="position-relative mb-5 mb-md-8">
            <div class="features-category--icon-shift d-none d-md-block position-absolute top-2 left-n7">
              <%= svg("modules/site/features/launchpad/icons/dot.svg") %>
            </div>
            <div class="h6-mktg text-medium pr-xl-10">Track what you deliver down to the commit.</div>
          </div>
        </div>
      </div>
    </div>

    <%= render "site/features/categories/decorations/decoration_project_management" %>

    <div class="p-responsive container-xl mt-8 mt-md-12">
      <div class="col-12 offset-md-1 col-md-11">
        <% project_management = Site::Features.find_category_item_collection("project_management") %>
        <%= render "site/features/category_items", items: project_management.items, ref_loc: "project management category" %>
      </div>
    </div>

  </div>
</div>

<include-fragment src="<%= url %>" <%= test_selector("include-org-feed") %>>
  <div class="text-center" data-hide-on-error>
    <%= mona_loader_picture(
      width: 48,
      alt: "Loading your activity...",
      class: "mt-4 hide-reduced-motion"
    ) %>
    <%= mona_loader_static_picture(
      width: 48,
      alt: "Loading your activity...",
      class: "mt-4 hide-no-pref-motion"
    ) %>
    <p class="color-fg-muted my-2">One moment please...</p>
  </div>
  <div data-show-on-error hidden>
    <p class="color-fg-muted my-2 mb-2">
      There was an error in loading the activity feed.
      <a
        class="Link--inTextBlock"
        href="<%= org_dashboard_path(org: params[:org]) %>"
        aria-label="Reload this page">
        Reload this page.
      </a>
    </p>
  </div>
</include-fragment>

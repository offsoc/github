<% page_info selected_link: :orphaned_bundled_license_assignments %>

<%= render layout: "stafftools/stafftools" do %>
  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>Orphaned bundled license assignments<% end %>
    <% component.with_description do %>These bundled license assignments are not assigned to an enterprise account.<% end %>
    <% component.with_actions do %><%= link_to "Unsuccessful VSS Subscription Events", stafftools_vss_subscription_events_path, class: "Link--inTextBlock" %><% end %>
  <% end %>

  <%= render Stafftools::BundledLicenseAssignments::ListComponent.new(
    assignments: assignments,
    header: header,
    action: action,
    search_form_path: stafftools_orphaned_bundled_license_assignments_path
  ) %>
<% end %>

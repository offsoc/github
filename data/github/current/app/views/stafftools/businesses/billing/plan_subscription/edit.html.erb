<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= form_with url: stafftools_enterprise_billing_plan_subscription_path(business), method: :put do |f| %>
  <dl class="form-group">
    <dt>
    <%= f.label :plan_duration, "Plan Duration" %>
    </dt>
    <dd>
    <%= f.select :plan_duration, options_for_select(User::BillingDependency::PLAN_DURATIONS), selected: business.plan_duration %>
    </dd>
  </dl>
  <%= render(Primer::ButtonComponent.new(scheme: :primary, type: :submit, w: :full, mt: 3)) { "Update Subscription" } %>
<% end %>

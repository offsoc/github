<%# `view` is an instance of IntegrationInstallations::SuggestionsView %>

<% case reason
    when :spammy_target %>
  <%= render Primer::Beta::Blankslate.new do |c| %>
    <% c.with_visual_icon(icon: "alert") %>

    <% c.with_heading(tag: :h2) do %>
      Permission denied
    <% end %>

    <% c.with_description do %>
      <%= "#{view.target.safe_profile_name} has been flagged as spam and therefore cannot have new GitHub App installations." %>
    <% end %>
  <% end %>
<% when :spammy_actor %>
  <%= render Primer::Beta::Blankslate.new do |c| %>
    <% c.with_visual_icon(icon: "alert") %>

    <% c.with_heading(tag: :h2) do %>
      Permission denied
    <% end %>

    <% c.with_description do %>
      Your account has been marked as spam and thereforce cannot install or request GitHub Apps on any account.
    <% end %>
  <% end %>
<% else %>
  <%= render Primer::Beta::Blankslate.new do |c| %>
    <% c.with_visual_icon(icon: "alert") %>

    <% c.with_heading(tag: :h2) do %>
      Permission denied
    <% end %>

    <% c.with_description do %>
      <%= "You are not authorized to install or request this app on #{view.target.safe_profile_name}." %>
    <% end %>
  <% end %>
<% end %>

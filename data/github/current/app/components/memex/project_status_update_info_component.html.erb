<%= render(Primer::Box.new(display: :flex, test_selector: "project_status_update_index_info")) do %>
  <%= render(Primer::Box.new(display: :flex, flex: 1, align_items: :center, mb: 1, style: "width: 260px")) do %>
    <%= render(Primer::Box.new(flex: 1)) do %>
      <% if parsed_status_update[:status].present? %>
          <%= render(Primer::Beta::Link.new(href: status_update_path, test_selector: "project_status_update_index_status")) do %>
            <%= render Primer::Beta::Label.new(color: parsed_status_update[:color_code], bg: parsed_status_update[:color_code] == :default ? :subtle : parsed_status_update[:color_code], border_color: parsed_status_update[:color_code], accent: parsed_status_update[:color_code]) do %>
              <%= parsed_status_update[:status] %>
            <% end %>
          <% end %>
      <% end %>
    <% end %>
    <%= render(Primer::Box.new(flex: 1, pr: 1)) do %>
      <% if parsed_status_update[:start_date].present? %>
        <%= render(Primer::Beta::Text.new(font_size: 6, color: :muted, style: "white-space: nowrap;", test_selector: "project_status_update_index_start_date")) do %>
          <%= parsed_status_update[:start_date] %>
        <% end %>
      <% end %>
    <% end %>
    <%= render(Primer::Box.new(flex: 1, pr: 1)) do %>
      <% if parsed_status_update[:target_date].present? %>
        <%= render(Primer::Beta::Text.new(font_size: 6, color: :muted, style: "white-space: nowrap;", test_selector: "project_status_update_index_target_date")) do %>
          <%= parsed_status_update[:target_date] %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%# erblint:counter LabelComponentMigrationCounter 1 %>
<template data-target="ref-selector.itemTemplate">
  <label class="SelectMenu-item" tabindex="0" role="menuitemradio" aria-checked="{{ isCurrent }}" data-index="{{ index }}">
    <input checked="{{ isCurrent }}" hidden name="<%= input_object_name %>[<%= input_field_name%>]" type="radio" value="{{ refName }}"><%# erblint:disable BooleanAttributes %>
    <%= primer_octicon(:check, classes: 'SelectMenu-icon SelectMenu-icon--check') %>
    <span class="flex-1 css-truncate css-truncate-overflow {{ isFilteringClass }}" data-menu-button-text>{{ refName }}</span>
    <span hidden="{{ isNotDefault }}" class="Label Label--secondary flex-self-start">default</span><%# erblint:disable BooleanAttributes %>
  </label>
</template>

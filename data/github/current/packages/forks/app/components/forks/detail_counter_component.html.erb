<div class="mr-4 f6">
  <% if detail_url.present? %>
    <%= render Primer::Beta::Link.new(href: detail_url, test_selector: "fork-detail-#{detail_label}", muted: true) do %>
      <%= primer_octicon(detail_icon) %>
      <%= detail_value %>
    <% end %>
  <% else %>
    <%= render Primer::Beta::Text.new(test_selector: "fork-detail-#{detail_label}") do %>
      <%= primer_octicon(detail_icon) %>
      <%= detail_value %>
    <% end %>
  <% end %>
</div>

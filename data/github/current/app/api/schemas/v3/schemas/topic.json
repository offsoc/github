{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/topic.json",
  "title": "Topic",
  "description": "A topic aggregates entities that are related to a subject.",
  "type": "object",
  "definitions": {
    "names": {
      "description": "The topics to replace onto the repository.",
      "example": [
        "compiler",
        "ast"
      ],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    }
  },
  "links": [
    {
      "href": "/repositories/{repository_id}/topics",
      "method": "PUT",
      "rel": "replace-legacy",
      "schema": {
        "type": "object",
        "properties": {
          "names": {
            "$ref": "#/definitions/names"
          }
        },
        "required": [
          "names"
        ]
      },
      "title": "Replace all"
    },
    {
      "title": "Replace all topics of a repository",
      "method": "PUT",
      "href": "/repositories/{repository_id}/topics",
      "rel": "replace",
      "schema": {
        "type": "object",
        "properties": {
          "names": {
            "$ref": "#/definitions/names"
          }
        },
        "required": [
          "names"
        ],
        "additionalProperties": false
      }
    }
  ]
}

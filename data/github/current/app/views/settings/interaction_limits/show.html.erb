<%
  page_info responsive: false, title: "Temporary interaction limits", selected_link: :interaction_limits
  object = current_organization.present? ? current_organization : current_user
%>

<% content = capture do %>
  <%= render InteractionLimits::ShowComponent.new(object: object) %>
<% end %>

<% if current_organization %>
  <%= render layout: "orgs/settings/layout" do %>
    <%= content %>
  <% end %>
<% else %>
  <%= render layout: "settings/settings" do %>
    <%= content %>
  <% end %>
<% end %>

#!/bin/bash

set -e
cd "$(dirname "$0")/.."

if [ "$(uname -s)" = "Darwin" ]; then
  brew update >/dev/null
  brew bundle check &>/dev/null || brew bundle

  brew bootstrap-rbenv-ruby
fi

bundle install --binstubs --path=vendor/gems ${BUNDLE_WITHOUT:+"--without" "$BUNDLE_WITHOUT"}
bundle package --all

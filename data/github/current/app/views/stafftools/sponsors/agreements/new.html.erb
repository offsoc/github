  <%= render(Primer::Beta::Breadcrumbs.new(mb: 3)) do |breadcrumb| %>
    <%= breadcrumb.with_item(href: stafftools_sponsors_agreements_path).with_content("Sponsors agreements") %>
    <%= breadcrumb.with_item(href: request.path).with_content("New Sponsors agreement") %>
  <% end %>

  <%= render Primer::Beta::Subhead.new do |subhead_component| %>
    <% subhead_component.with_heading(tag: :h2) do %>

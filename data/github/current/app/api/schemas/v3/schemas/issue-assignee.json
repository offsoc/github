{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/issue-assignee.json",
  "title": "Issue Assignee",
  "description": "Someone assigned to an issue",
  "type": "object",
  "definitions": {
    "assignees": {
      "description": "The usernames of assignees on an issue.",
      "type": "array",
      "items": {
        "type": "string"
      },
      "example": [
        "hubot",
        "github"
      ]
    },
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    },
    "issue_number": {
      "description": "The number of the issue.",
      "type": "integer"
    }
  },
  "links": [
    {
      "title": "Add assignees to an issue",
      "method": "POST",
      "rel": "create",
      "href": "/repositories/{repository_id}/issues/{issue_number}/assignees",
      "schema": {
        "properties": {
          "assignees": {
            "$ref": "#/definitions/assignees"
          }
        },
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Remove assignees from an issue",
      "method": "DELETE",
      "rel": "delete",
      "href": "/repositories/{repository_id}/issues/{issue_number}/assignees",
      "schema": {
        "properties": {
          "assignees": {
            "$ref": "#/definitions/assignees"
          }
        },
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ]
}

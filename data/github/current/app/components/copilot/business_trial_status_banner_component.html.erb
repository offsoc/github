<%= render(Primer::Box.new(
  bg: business_trial.expired? ? :danger : :accent,
  border: true,
  border_radius: within_tile ? 0 : 3,
  border_color: business_trial.expired? ? :danger : :accent,
  p: 2,
  pl: 3,
  mb: 1
)) do |component| %>
  <%= render(Primer::Box.new(font_weight: :light, display: :flex, justify_content: :space_between, align_items: :center, test_selector: "copilot-trial-expiring-warning")) do %>
    <%= render(Primer::Box.new) do %>
      <% if business_trial.expired? %>
        <%= trial_expired_message %>
      <% else %>
        <%= trial_expiring_today_message %>
      <% end %>
      <%= trial_upgrade_instruction_message %>
    <% end %>
  <% end %>
<% end %>

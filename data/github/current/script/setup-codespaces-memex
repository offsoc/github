# A few lightweight steps to run in prebuilds to improve Memex developer experience

# Install Chromium for running Playwright spec tests
npx playwright install --with-deps chromium

# Register `memex` as a shell alias for `npm run -w @github-ui/memex`
echo "alias memex='npm run -w @github-ui/memex'" >> ~/.bashrc
echo "alias memex='npm run -w @github-ui/memex'" >> ~/.zshrc

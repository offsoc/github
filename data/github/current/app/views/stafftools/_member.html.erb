<% view = Stafftools::MemberView.new(:member => member) %>

<% component.with_row(clearfix: true) do %>
  <%= avatar_for member, 20, class: "avatar" %>
  <% if member.bot? %>
    <%= link_to member, stafftools_user_app_path(member.integration.owner, member.integration) %>
  <% else %>
    <%= link_to member, stafftools_user_path(member) %>
  <% end %>
  <% if view.has_name? %>
    &ndash; <%= member.profile_name %>
  <% end %>
<% end %>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/comment.json",
  "title": "Comment",
  "description": "A comment on an issue, pull request, or commit.",
  "type": "object",
  "definitions": {
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "comment_id": {
      "description": "The ID of the comment.",
      "type": "integer"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    },
    "body": {
      "description": "Contents of the comment",
      "example": "What version of Safari were you using when you observed this bug?",
      "type": "string"
    },
    "commit_id": {
      "description": "Unique identifier of the commit",
      "type": "string",
      "example": "6dcb09b5b57875f334f61aebed695e2e4193db5e"
    },
    "id": {
      "description": "Unique identifier of the comment",
      "example": 42,
      "type": "integer"
    },
    "url": {
      "description": "URL for the commit comment",
      "example": "https://api.github.com/repositories/42/commits/comments/1",
      "type": "string"
    },
    "path": {
      "description": "Relative path of the file to comment on",
      "example": "test/test_file.rb",
      "type": "string"
    },
    "line": {
      "description": "Line number in the file to comment on",
      "example": 47,
      "type": "integer"
    },
    "position": {
      "description": "Line index in the diff to comment on",
      "example": 0,
      "type": "integer"
    },
    "sha": {
      "description": "SHA for the reference",
      "example": "7638417db6d59f3c431d3e1f261cc637155684cd",
      "type": "string",
      "minLength": 40,
      "maxLength": 40
    }
  },
  "links": [
    {
      "href": "/repositories/{repository_id}/commits/{sha}/comments",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object"
      },
      "title": "Create a comment for a specific commit"
    },
    {
      "href": "/repositories/{repository_id}/comments/{comment_id}",
      "method": "PATCH",
      "rel": "update-for-commit-legacy",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object"
      },
      "title": "Update a commit comment"
    },
    {
      "title": "Update a pull request comment",
      "method": "PATCH",
      "rel": "update-for-pull",
      "href": "/repositories/{repository_id}/pulls/comments/{comment_id}",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "type": "object",
        "additionalProperties": false,
        "required": [
          "body"
        ]
      }
    },
    {
      "href": "/repositories/{repository_id}/comments",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "body": {
            "$ref": "#/definitions/body"
          }
        },
        "required": [
          "body"
        ],
        "type": "object"
      },
      "title": "Create a commit comment"
    },
    {
      "title": "Update a pull request comment",

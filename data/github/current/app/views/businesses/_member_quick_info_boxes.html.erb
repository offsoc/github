<%= render Primer::Box.new(
  display: :flex,
  mb: 4,
  justify_content: :space_between,
  test_selector: "quick-info-box") do %>
  <%= render partial: "businesses/quick_info_roles_box", locals: {
    view: view,
    right_position: GitHub.enterprise?
    } %>

  <% unless GitHub.enterprise? %>
    <%= render partial: "businesses/quick_info_licensing_box", locals:  {
      view: view,
      vss_enabled: vss_enabled,
      right_position: !connected_ghes_instances
      } %>
  <% end %>

  <% if connected_ghes_instances %>
    <%= render partial: "businesses/quick_info_deployment_box", locals: { view: view } %>
  <% end %>
<% end %>

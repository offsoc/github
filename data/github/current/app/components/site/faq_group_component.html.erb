<% cache cache_key do %>
  <%= content_tag(:h3,
    @title,
    class: "h4-mktg mt-8 mt-md-10 mb-3",
    id: "faq-#{@title.parameterize}"
  ) if @title.present? %>

  <% items.each do |item| %>
    <%= item %>
  <% end %>

  <% @items.each do |item| %>
    <%= render(Site::FaqItemComponent.new(**item, analytics: {category: "FAQ", ref_loc: @title.parameterize })) %>
  <% end %>
<% end %>

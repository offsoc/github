<%= render Primer::Box.new(test_selector: TEST_SELECTOR, **system_arguments) do %>
  <%= render Primer::Beta::Octicon.new(:"shield-lock") %>
  <%= render Primer::Beta::Text.new(color: :muted, font_size: :small) do %>
    <%= product_name %> enablement is blocked by <%= policy_block_url.nil? ? reason : link_to(reason, policy_block_url) %>
    <% if render_set_by_enterprise_suffix? %>
      set by <%= render(Primer::Beta::Link.new(href: org_enterprise_owners_path(owner), classes: "Link--inTextBlock")) { enterprise_name } %>
    <% end %>
  <% end %>
<% end %>

<%
  page_info title: "New invoiced sponsorship for @#{sponsor}"
%>

<%= render layout: "stafftools/stafftools" do %>
  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>New invoiced sponsorship for @<%= sponsor %><% end %>
  <% end %>

  <%= render Stafftools::Sponsors::Invoiced::SponsorshipFormComponent.new(
    sponsor: sponsor,
    sponsorship_form_inputs: sponsorship_form_inputs,
  ) %>
<% end %>

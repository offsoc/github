<%
  @footer_links = [
    { url: GitHub.privacy_statement_url, text: "Privacy policy" },
    { url: "#{GitHub.help_url}/site-policy/github-terms/github-terms-of-service", text: "Terms" },
    { url: contact_url, text: "Contact us" },
  ]
%>

<% content_for :header do %>
  <%= @header || message.subject %>
<% end %>

<% content_for :content do %>
  <style>
    ul {
      padding-left: 1.5em;
    }

    li {
      margin: 1em 0;
      padding-left: 0.5em;
    }
  </style>

  <%= render(Mail::RowComponent.new) do %>
    <%= render(Mail::ColumnComponent.new) do %>
      <%= yield %>
    <% end %>
  <% end %>
<% end %>

<%= render template: "layouts/primer_layout" %>

<%= render Primer::Beta::Blankslate.new do |blankslate| %>
  <% blankslate.with_visual_icon(icon: icon) %>
  <% blankslate.with_heading(tag: :h2) do %>
    <% if default_open_filter? && (@current_user_can_push || @team_member) %>
      Provide quick access to relevant <%= label %>.
    <% elsif default_open_filter? %>
      No open <%= label %>
    <% elsif default_closed_filter? %>
      No closed <%= label %>
    <% elsif @parsed_query.only_template_filter? %>
      No <%= label %>
    <% else %>
      No <%= label %> matched your search.
    <% end %>
  <% end %>
  <% blankslate.with_description do %>
    <% unless default_closed_filter? %>
      <% if @current_user_can_push || @team_member %>
        <% if org_project %>
          Add <%= label %> from your organization to view them here.
        <% else %>
          Add <%= label %> to view them here.
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

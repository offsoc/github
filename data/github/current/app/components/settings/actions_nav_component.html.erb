<%= render(@item) do |item| %>
  <% available_sections.each do |section_name| %>
    <% item.with_item(
      label: get_display_name(section_name),
      href: get_path(section_name),
      selected_by_ids: get_selected_by_item_ids(section_name),
      sub_item: true,
      content_classes: @system_arguments[:content_classes])
    %>
  <% end %>
  <% item.with_leading_visual_icon(icon: :play) %>
<% end %>

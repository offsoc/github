{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/repository-actions-permission.json",
  "title": "Permission for running actions for a repository",
  "type": "object",
  "definitions": {
    "enabled": {
      "description": "Whether GitHub Actions is enabled to run on this repository.",
      "type": "boolean",
      "default": true
    },
    "allowed_actions": {
      "description": "Which actions are allowed to run on this repository.",
      "type": "string",
      "enum": [
        "all",
        "local_only",
        "selected"
      ]
    },
    "selected_actions_url": {
      "description": "The URL of the selected actions if allowed_actions is selected.",
      "type": "string"
    }
  },
  "properties": {
    "enabled": {
      "$ref": "#/definitions/enabled"
    },
    "allowed_actions": {
      "$ref": "#/definitions/allowed_actions"
    },
    "selected_actions_url": {
      "$ref": "#/definitions/selected_actions_url"
    }
  },
  "additionalProperties": false,
  "links": [
    {
      "title": "Enable or disable GitHub Actions for a repository",
      "href": "/repositories/{repository_id}/actions/permissions",
      "method": "PUT",
      "rel": "set-permission",
      "schema": {
        "properties": {
          "enabled": {
            "$ref": "#/definitions/enabled"
          },
          "allowed_actions": {
            "$ref": "#/definitions/allowed_actions"
          }
        },
        "required": [
          "enabled"
        ],
        "type": "object"
      }
    }
  ]
}

<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <%= render(Primer::BaseComponent.new(tag: :div, container: @container_width, classes: "PageLayout-wrapper")) do %>
    <%= header_region %>
    <% if pane_region.nil? %>
      <%= content_region %>
    <% else %>
      <%= render(Primer::BaseComponent.new(tag: :div, classes: "PageLayout-columns")) do %>
        <% if pane_region.render_first? %>
          <%= pane_region %>
          <%= content_region %>
        <% else %>
          <%= content_region %>
          <%= pane_region %>
        <% end %>
      <% end %>
    <% end %>
    <%= footer_region %>
  <% end %>
<% end %>

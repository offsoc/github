<%
  view = Reminders::EditView.new(
    locked_to_team: locked_to_team,
    slack_workspaces: slack_workspaces,
    reminder: reminder
  )
%>

<% page_info title: view.title %>

<% if RemindersMethods.reminders_enabled?(locked_to_team) %>
  <%= render layout: "orgs/teams/team_settings_sidebar", locals: { org_login: view.reminder.remindable.display_login, team_slug: view.locked_to_team.slug, selected: "Scheduled reminders" } do %>
    <%= render "reminders/edit", view: view %>
  <% end %>
<% end %>

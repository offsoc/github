<%# erblint:counter ButtonComponentMigrationCounter 3 %>

<slide-show data-slide-show-autoplay="2500" class="planning-tracking-slide-show">
  <nav role="tablist" aria-orientation="horizontal" aria-label="Select view" class="mx-auto text-center">
    <button type="button" id="memex-tab-1" aria-selected="true" role="tab" class="js-slide-show-bullet slide-show-bullet btn-link mx-1" aria-controls="memex-slide-1">
      <span class="sr-only">By Squad</span>
    </button>
    <button type="button" id="memex-tab-2" aria-selected="false" tabindex="-1" role="tab" class="js-slide-show-bullet slide-show-bullet btn-link mx-1" aria-controls="memex-slide-2">
      <span class="sr-only">By milestone</span>
    </button>
    <button type="button" id="memex-tab-3" aria-selected="false" tabindex="-1" role="tab" class="js-slide-show-bullet slide-show-bullet btn-link mx-1" aria-controls="memex-slide-3">
      <span class="sr-only">Current sprint</span>
    </button>
  </nav>

  <div class="font-base width-full text-left overflow-hidden mt-4 position-relative rounded-sm-2" style="background-color: #161b22">
    <div class="d-flex px-4 px-md-5 py-3 flex-justify-between" style="opacity: 0.2; pointer-events: none;">
      <div class="h3 unselectable" aria-hidden="true">👾️ OctoArcade Invaders</div>
      <div class="BtnGroup d-none d-sm-flex" aria-hidden="true">
        <% ["graph", "sidebar-expand", "kebab-horizontal"].each do |icon| %>
          <div class="BtnGroup-item btn px-2">
            <%= render(Primer::Beta::Octicon.new(icon: icon, size: :small)) %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mb-0 tabnav" style="overflow-y-auto">
      <nav role="tablist" aria-orientation="horizontal" aria-label="Select view" class="tabnav-tabs d-flex overflow-auto pl-2 pr-4 px-md-5">

        <button type="button" aria-selected="true" role="tab" class="js-slide-show-bullet tabnav-tab planning-tracking-tab flex-shrink-0" aria-controls="memex-slide-1">
          <%= render(Primer::Beta::Octicon.new(icon: "project-roadmap", size: :small)) %>
          By squad

          <div class="btn p-0 ml-1 planning-tracking-tab-opts" style="pointer-events: none; border-color: #fff;">
            <%= render(Primer::Beta::Octicon.new(icon: "triangle-down", size: :small)) %>
          </div>
        </button>

        <button type="button" aria-selected="false" tabindex="-1" role="tab" class="js-slide-show-bullet tabnav-tab planning-tracking-tab flex-shrink-0" aria-controls="memex-slide-2">
          <%= render(Primer::Beta::Octicon.new(icon: "table", size: :small)) %>
          By milestone

          <div class="btn p-0 ml-1 planning-tracking-tab-opts" style="pointer-events: none; border-color: #fff;">
            <%= render(Primer::Beta::Octicon.new(icon: "triangle-down", size: :small)) %>
          </div>
        </button>

        <button type="button" aria-selected="false" tabindex="-1" role="tab" class="js-slide-show-bullet tabnav-tab planning-tracking-tab flex-shrink-0" aria-controls="memex-slide-3">
          <%= render(Primer::Beta::Octicon.new(icon: "project", size: :small)) %>
          Current sprint

          <div class="btn p-0 ml-1 planning-tracking-tab-opts" style="pointer-events: none; border-color: #fff;">
            <%= render(Primer::Beta::Octicon.new(icon: "triangle-down", size: :small)) %>
          </div>
        </button>
      </nav>
    </div>
    <div class="js-slide-show-swipe-area position-relative">
      <div id="memex-slide-1" role="tabpanel" class="js-slide-show-slide slide-show-slide position-absolute top-0 left-0 width-full" aria-labelledby="memex-tab-1">
        <%= render Site::ImageComponent.new(
          src: image_path("modules/site/issues/illo/memex-roadmap-dark.png"),
          lazy: false,
          width: 1250,
          height: 750,
          classes: "width-full height-auto border-left border-right",
          alt: "Illustration of project roadmap view with issues grouped by teams.",
          sizes: "(max-width: 1200px) 90vw, 1250px"
        ) %>
      </div>

      <div id="memex-slide-2" role="tabpanel" class="js-slide-show-slide slide-show-slide position-absolute top-0 left-0 width-full" aria-labelledby="memex-tab-2" aria-hidden="true">
        <%= render Site::ImageComponent.new(
          src: image_path("modules/site/issues/illo/memex-table-slice-dark.png"),
          lazy: false,
          width: 1250,
          height: 750,
          classes: "width-full height-auto border-left border-right",
          alt: "Illustration of project table view with issues sliced by milestone.",
          sizes: "(max-width: 1200px) 90vw, 1250px"
        ) %>
      </div>

      <div id="memex-slide-3" role="tabpanel" class="js-slide-show-slide slide-show-slide position-absolute top-0 left-0 width-full" aria-labelledby="memex-tab-3" aria-hidden="true">
        <%= render Site::ImageComponent.new(
          src: image_path("modules/site/issues/illo/memex-board-dark.png"),
          lazy: false,
          width: 1250,
          height: 750,
          classes: "width-full height-auto border-left border-right",
          alt: "Illustration of a classic kanban board project. Cards are sorted in 4 columns based on their status.'",
          sizes: "(max-width: 1200px) 90vw, 1250px"
        ) %>
      </div>

    </div>
    <div class="planning-tracking-slide-show-shadow position-absolute width-full left-0"></div>
  </div>
</slide-show>

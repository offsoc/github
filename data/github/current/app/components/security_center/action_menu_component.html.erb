<%= render Primer::Alpha::ActionMenu.new(select_variant: :single, dynamic_label_prefix: @button_prefix, dynamic_label: true, anchor_align: :end) do |menu| %>
  <% menu.with_show_button(size: :medium, scheme: :invisible, color: :muted, style: "height:21px; padding:0px") do |b| %>
    <% b.with_trailing_visual_icon(icon: "triangle-down", left: false, style: "margin-left:-6px") %>
  <% end %>
  <% @options.map { |data| menu.with_item(**data.to_action_menu_item_hash) } %>
<% end %>

{
  "extends": "@github-ui/tsconfig/base.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "types": ["react", "node"],
    "useDefineForClassFields": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/client",
    "./src/utils",
    "./src/stories",
    "./src/mocks",
    "./src/@types",
    "./src/server-dev.js",
    "./script",
    "../../../app/assets/types/**.d.ts",
    "../../../config/persisted_graphql_queries/github_ui.json"
  ],
  "exclude": ["node_modules"]
}

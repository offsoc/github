{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/project-collaborator.json",
  "title": "Project Collaborator",
  "description": "Users who have access to a project.",
  "type": "object",
  "definitions": {
    "project_id": {
      "description": "The ID of the project.",
      "type": "integer"
    },
    "username": {
      "description": "The username of the collaborator.",
      "type": "string",
      "example": "username1"
    },
    "permission": {
      "description": "The permission to grant the collaborator.",
      "enum": [
        "read",
        "write",
        "admin"
      ],
      "default": "write",
      "example": "write",
      "type": "string"
    }
  },
  "links": [
    {
      "title": "Add user as a collaborator",
      "method": "PUT",
      "rel": "add",
      "href": "/projects/{project_id}/collaborators/{username}",
      "schema": {
        "properties": {
          "permission": {
            "$ref": "#/definitions/permission"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Remove user as a collaborator",
      "method": "DELETE",
      "rel": "delete",
      "href": "/projects/{project_id}/collaborators/{username}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    }
  ]
}

<%# erblint:counter DeprecatedComponentsCounter 4 %>
<%= render Primer::Box.new(position: :relative, m: 0, classes: "js-notice") do %>
  <%= form_tag(
    dismiss_notice_path(path),
    class: "js-notice-dismiss"
  ) do %>
    <dialog open aria-modal="true" class="js-splash-dialog Box projects-splash-dialog border-0 p-0" <%= test_selector("projects_beta_splash_popover") %>>
      <%= render(Primer::Beta::BorderBox.new(box_shadow: :extra_large, style: "max-width: 700px")) do |component| %>
        <% component.with_body(p: 0, style: "max-height: calc(80vh - 221px); overflow: hidden") do %>
          <%= light_or_dark_picture_tag("modules/memexes/projects-beta-splash.png", "modules/memexes/projects-beta-splash-dark.png",
            class: "d-md-block d-none width-fit",
            alt: ""
          ) %>
          <%= light_or_dark_picture_tag("modules/memexes/projects-beta-splash-mobile.png", "modules/memexes/projects-beta-splash-mobile-dark.png",
            class: "d-md-none d-block width-fit",
            alt: ""
          ) %>
        <% end %>
        <% component.with_footer(p: 4) do %>
          <%= render(Primer::Beta::Heading.new(tag: :h3, font_size: 4, color: :default, display: :flex, align_items: :center)) do %>
            <%= render(Primer::Beta::Text.new(tag: :span, m: 0, color: :default)) { "Welcome to projects" } %>
          <% end %>
          <%= render(Primer::Beta::Text.new(tag: :p, mb: 0, mt: 3, color: :default)) do %>
            Built like a spreadsheet, project tables give you a live canvas to filter, sort, and group issues and pull requests. Tailor them to your needs with custom fields and saved views.
          <% end %>
          <%= render Primer::Box.new(display: [:none, :block, nil, nil, nil], text_align: :right, mt: 3) do %>
            <%= render(Primer::ButtonComponent.new(scheme: :default, tag: :a, size: :medium, href: docs_url, target: "_blank", classes: "js-dismiss-splash-dialog-link")) do %>
              Learn more
            <% end %>
            <%= render Primer::ButtonComponent.new(type: :submit, scheme: :primary, ml: 3, size: :medium, classes: "js-dismiss-splash-dialog") do %>
              Jump right in
            <% end %>
          <% end %>
          <%= render Primer::Box.new(display: [:block, :none, nil, nil, nil], text_align: :right, mt: 3) do %>
            <%= render(Primer::ButtonComponent.new(scheme: :default, tag: :a, size: :small, href: docs_url, target: "_blank", classes: "js-dismiss-splash-dialog-link")) do %>
              Learn more
            <% end %>
            <%= render Primer::ButtonComponent.new(type: :submit, scheme: :primary, ml: 2, size: :small, classes: "js-dismiss-splash-dialog") do %>
              Jump right in
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </dialog>
  <% end %>
<% end %>

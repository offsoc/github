<% page_info title: "Confirmed enterprise organization invitations", selected_link: :organization_invitations_and_upgrades %>

<%= render layout: "stafftools/stafftools" do %>
  <%= render "stafftools/businesses/organization_invitations_and_upgrades_nav", tab: "organization_invitations" %>

  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>Enterprise organization invitations pending review<% end %>
  <% end %>

  <%= render "stafftools/businesses/organization_invitations",
    organization_invitations: pending_completion_invitations,
    page_param_name: :pending_page %>

  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>Recently completed enterprise organization invitations<% end %>
  <% end %>

  <%= render "stafftools/businesses/organization_invitations",
    organization_invitations: completed_invitations,
    page_param_name: :reviewed_page %>
<% end %>

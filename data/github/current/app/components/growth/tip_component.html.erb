<%= render Primer::BaseComponent.new(
  tag: :div,
  display: :flex,
  flex_direction: :row,
  px: 3,
  py: 2,
  border: :top,
  direction: [:row, :column, :column, :row, :row],
  align_items: :center,
  justify_content: :space_between,
  position: :relative,
  style: "min-height: 32px; gap: 8px;",
  **system_arguments,
) do %>
  <%= render(Primer::BaseComponent.new(tag: :div, display: :flex, align_items: :center, style: "min-height: 24px;" )) do %>
    <%= render(Primer::Beta::Octicon.new(:"light-bulb", size: :small, mr: 2)) %>
    <%= description %>
  <% end %>
  <%= render(Primer::BaseComponent.new(
      tag: :div,
      display: :flex,
      direction: [:row, :row_reverse, :row_reverse, :row, :row] )) do %>
    <%= action %>
    <% if dismissible_type == :user %>
      <%= form_tag dismiss_notice_path(notice_name), :class => "js-notice-dismiss" do %>
          <%= dismiss_button %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/organization-invitation.json",
  "title": "Organization Invitation",
  "type": "object",
  "definitions": {
    "email": {
      "description": "The email address of the user to invite",
      "example": "octocat@github.com",
      "type": "string"
    },
    "invitee_id": {
      "description": "The ID of the user to invite",
      "example": 12345,
      "type": "integer"
    },
    "role": {
      "description": "The role to assign the invited user",
      "example": "billing_manager",
      "type": "string"
    },
    "team_ids": {
      "description": "The IDs of the teams to add the invited user to",
      "example": [
        12,
        345
      ],
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "organization_id": {
      "description": "The ID of the organization.",
      "type": "integer"
    }
  },
  "links": [
    {
      "title": "Create an organization invitation",
      "method": "POST",
      "href": "/organizations/{organization_id}/invitations",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "email": {
            "$ref": "#/definitions/email"
          },
          "invitee_id": {
            "$ref": "#/definitions/invitee_id"
          },
          "role": {
            "$ref": "#/definitions/role"
          },
          "team_ids": {
            "$ref": "#/definitions/team_ids"
          }
        },
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Create an organization invitation",
      "method": "POST",
      "href": "/organizations/{organization_id}/invitations",
      "rel": "create",
      "schema": {
        "properties": {
          "email": {
            "$ref": "#/definitions/email"
          },
          "invitee_id": {
            "$ref": "#/definitions/invitee_id"
          },
          "role": {
            "$ref": "#/definitions/role"
          },
          "team_ids": {
            "$ref": "#/definitions/team_ids"
          }
        },
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Cancel an organization invitation",
      "method": "DELETE",
      "rel": "cancel",

<%= render(Primer::Alpha::ActionMenu.new(
    select_variant: :single,
    dynamic_label: true,
    dynamic_label_prefix: "Type",
    anchor_align: :end
  )) do |menu| %>
  <% menu.with_show_button(size: :small) do |button|
      button.with_trailing_action_icon(icon: :"triangle-down")
      "Type"
    end %>
    <% menu.with_item(
      label: view.visibility_name(nil),
      active: !!link_selected?(view.visibility_prefix_path),
      href: url_for(view.visibility_prefix_path)
    ) %>
    <% menu.with_item(
      label: view.visibility_name("public"),
      active: !!link_selected?(view.public_visibility_path),
      href: url_for(view.public_visibility_path)
    ) %>
    <% menu.with_item(
      label: view.visibility_name("secret"),
      active: !!link_selected?(view.secret_visibility_path),
      href: url_for(view.secret_visibility_path)
    ) %>
<% end %>

<%# erblint:counter DeprecatedComponentsCounter 1 %>
<div class="previewable-comment-form">
  <div class="comment-form-head tabnav">
    <div class="tabnav-tabs">
      <span class="tabnav-tab write-tab selected">Write</span>
      <span class="tabnav-tab preview-tab ">Preview</span>
    </div>
  </div>
  <%= render Primer::BlankslateComponent.new(
    icon: "mail",
    test_selector: "no-verified-email",
  ) do %>
    <p>You need to <%= link_to "verify your email address", settings_email_preferences_path, class: "Link--inTextBlock" %> before you can join the conversation.</p>
  <% end %>
</div>

#!/bin/bash
#
# Prepare Mysql SLAVE node 

MASTER=$1
REPL_USER=$2
REPL_PASS=$3

sudo mysql -u root -e "CHANGE MASTER TO MASTER_HOST='${MASTER}', MASTER_USER='${REPL_USER}',\
  MASTER_PASSWORD='${REPL_PASS}', MASTER_CONNECT_RETRY=1, MASTER_AUTO_POSITION=1,\
  MASTER_RETRY_COUNT=864000, MASTER_HEARTBEAT_PERIOD=2"

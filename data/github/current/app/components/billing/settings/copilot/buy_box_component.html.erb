        test_selector: "addon-copilot-docs",
        mr: 3,
        font_size: 6,
        font_weight: :bold,
        href: copilot_for_business_feature.docs_url,
        data: analytics_click_attributes(
          category: "copilot_for_business",
          action: "click_to_view_docs_copilot_for_business",
          label: "ref_cta:learn_more;ref_loc:billing_settings_add_on"

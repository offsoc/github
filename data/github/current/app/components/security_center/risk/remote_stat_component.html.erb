<%= render Primer::Box.new(style: "white-space:nowrap;", clearfix: true, py: 1, font_size: 6, test_selector: TEST_SELECTOR) do %>
  <% if href.present? %>
    <%= render Primer::Beta::Link.new(href: href, scheme: :primary).with_content(title) %>
  <% else %>
    <%= render Primer::Beta::Text.new(font_weight: :bold).with_content(title) %>
  <% end %>

  <%= render Primer::Box.new(pl: 2, float: :right) do %>
    <include-fragment src="<%= fragment_src %>">
      <%= render Primer::Beta::Spinner.new(size: :small) %>
    </include-fragment>
  <% end %>
<% end %>

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/community-profile.json",
  "title": "Community Profile",
  "type": "object",
  "definitions": {
    "health_percentage": {
      "type": "integer",
      "example": 100
    },
    "description": {
      "type": [
        "string",
        "null"
      ],
      "example": "My first repository on GitHub!"
    },
    "documentation": {
      "type": [
        "string",
        "null"
      ],
      "example": "example.com"
    },
    "content_reports_enabled": {
      "description": "Indicates if this repository allows reporting content to its maintainers. This feature is only available for organization owned repositories.",
      "type": "boolean"
    },
    "updated_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "example": "2017-02-28T19:09:29Z"
    }
  },
  "properties": {
    "health_percentage": {
      "$ref": "#/definitions/health_percentage"
    },
    "description": {
      "$ref": "#/definitions/description"
    },
    "documentation": {
      "$ref": "#/definitions/documentation"
    },
    "files": {
      "type": "object",
      "properties": {
        "code_of_conduct": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "https://schema.github.com/v3/code-of-conduct-simple.json#"
            }
          ]
        },
        "code_of_conduct_file": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "https://schema.github.com/v3/community-health-file.json#"
            }
          ]
        },
        "license": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "https://schema.github.com/v3/license-simple.json#"
            }
          ]
        },
        "contributing": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "https://schema.github.com/v3/community-health-file.json#"
            }
          ]
        },
        "readme": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "https://schema.github.com/v3/community-health-file.json#"
            }
          ]
        },
        "issue_template": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "https://schema.github.com/v3/community-health-file.json#"
            }
          ]
        },
        "pull_request_template": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "https://schema.github.com/v3/community-health-file.json#"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "code_of_conduct",
        "code_of_conduct_file",
        "license",
        "contributing",
        "readme",
        "issue_template",
        "pull_request_template"
      ]
    },
    "content_reports_enabled": {
      "$ref": "#/definitions/content_reports_enabled"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    }
  },
  "additionalProperties": false,
  "required": [
    "health_percentage",
    "description",
    "documentation",
    "files",
    "updated_at"
  ]
}

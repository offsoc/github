<div class="border rounded-1 px-3 py-4 mb-4">
  <div class="d-flex text-small flex-justify-between">
    <h5 class="text-normal text-small color-fg-muted mb-1 pb-1">
      <%= render(Primer::Beta::Octicon.new(icon: "terminal", mr: 1, vertical_align: :text_top)) %>
      Install from the command line:
    </h5>
    <span><%= link_to GitHub.nuget_github_package_registry_url, class: "Link--inTextBlock" do  %>Learn more about NuGet packages<% end %></span>
  </div>

  <div class="position-relative">
    <div class="Box color-bg-subtle border-0 text-left mx-auto p-3 overflow-x-auto code-block"  style= "white-space: nowrap">
      <code class="d-block color-bg-subtle border-0 rounded-2 f6 lh-default">
        <span class="color-fg-muted">$</span> dotnet add package <span class="color-fg-done"><%= package_name %></span> --version <span class="color-fg-done"><%= package_version_name %></span>
      </code>
      <div class="clipboard-copy">
        <%= render Primer::Beta::ClipboardCopy.new(id: "nuget-install", classes: "copy-button btn tooltipped-no-delay", p: 2, "aria-label": "Copy", "data-copy-feedback": "Copied!", "data-tooltip-direction": "w", role: "button", tabindex: "0", value: "dotnet add package #{package_name} --version #{package_version_name}") %><%# erblint:disable Primer::Accessibility::TooltippedMigration %>
      </div>
    </div>
  </div>
</div>

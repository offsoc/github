<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= form_tag stafftools_user_sponsors_trust_levels_path(@target), method: :patch do %>
  <%= hidden_field_tag :target_type, @target_type %>
  <%= hidden_field_tag :trust_level, @trust_level %>
  <%= render Primer::ButtonComponent.new(
    type: :submit,
    scheme: :link,
    classes: "dropdown-item",
    "data-confirm": "Are you sure you want to update the trust level?",
  ).with_content(@trust_level.to_s.titleize)
  %>
<% end %>

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/group-mapping.json",
  "title": "GroupMapping",
  "description": "External Groups to be mapped to a team for membership",
  "type": "object",
  "definitions": {
    "group-id": {
      "description": "The ID of the group",
      "example": "111a1a11-aaa1-1aaa-11a1-a1a1a1a1a1aa",
      "type": "string"
    },
    "group-name": {
      "description": "The name of the group",
      "example": "saml-azuread-test",
      "type": "string"
    },
    "group-description": {
      "description": "a description of the group",
      "example": "A group of Developers working on AzureAD SAML SSO",
      "type": "string"
    },
    "status": {
      "description": "synchronization status for this group mapping",
      "example": "unsynced",
      "type": "string"
    },
    "synced-at": {
      "description": "the time of the last sync for this group-mapping",
      "example": "2019-06-03 22:27:15:000 -700",
      "type": "string"
    },
    "groups": {
      "description": "Array of groups to be mapped to this team",
      "example": [
        {
          "group_id": "111a1a11-aaa1-1aaa-11a1-a1a1a1a1a1aa",
          "group_name": "saml-azuread-test",
          "group_description": "A group of Developers working on AzureAD SAML SSO"
        },
        {
          "group_id": "2bb2bb2b-bb22-22bb-2bb2-bb2bbb2bb2b2",
          "group_name": "saml-azuread-test2",
          "group_description": "Another group of Developers working on AzureAD SAML SSO"
        }
      ],
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "group_id",
          "group_name",
          "group_description"
        ],
        "properties": {
          "group_id": {
            "$ref": "#/definitions/group-id"
          },
          "group_name": {
            "$ref": "#/definitions/group-name"
          },
          "group_description": {
            "$ref": "#/definitions/group-description"
          }
        }
      }
    }
  },
  "properties": {
    "group_id": {
      "$ref": "#/definitions/group-id"
    },
    "group_name": {
      "$ref": "#/definitions/group-name"
    },
    "group_description": {
      "$ref": "#/definitions/group-description"
    },
    "status": {
      "$ref": "#/definitions/status"
    },
    "synced_at": {
      "$ref": "#/definitions/synced-at"
    },
    "groups": {
      "$ref": "#/definitions/groups"
    }
  },
  "additionalProperties": false,
  "links": [
    {
      "title": "Update group-mappings for this team",
      "href": "/organizations/{org_id}/team/{team_id}/team-sync/group-mappings",
      "method": "PATCH",
      "rel": "update-group-mappings",
      "schema": {
        "type": "object",
        "properties": {
          "groups": {
            "$ref": "#/definitions/groups"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "title": "Update group-mappings status and synced at time for this team",
      "href": "/organizations/{org_id}/team/{team_id}/team-sync/group-mappings-state",
      "method": "PATCH",
      "rel": "group-mappings-state",
      "schema": {
        "type": "object",
        "properties": {
          "synced_at": {
            "$ref": "#/definitions/synced-at"
          },
          "status": {
            "$ref": "#/definitions/status"
          }
        },
        "additionalProperties": false
      }
    }
  ]
}

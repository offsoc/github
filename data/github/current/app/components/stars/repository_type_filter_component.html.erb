<%= render(
  Primer::Alpha::ActionMenu.new(
    select_variant: :single,
    data: { turbo_replace: true },
    menu_id: "stars-type-filter-menu",
    **@system_arguments
  )
) do |menu| %>
  <% menu.with_show_button do |button| %>
    <% button.with_trailing_action_icon(icon: :"triangle-down") %>
    <%= button_text %>
  <% end %>
  <% type_filters.each do |value, name| %>
    <% menu.with_item(
        tag: :a,
        active: selected_type.to_s == value,
        href: user_path(user, params: user_path_params_for(value)),
    ) do %>
      <%= name %>
    <% end %>
  <% end %>
<% end %>

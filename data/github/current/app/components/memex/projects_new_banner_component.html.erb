<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render Primer::Box.new(display: @display) do %>
  <%= render Primer::Box.new(display: :flex, direction: :column, mt: 0, mb: 3, box_shadow: true, border: true, border_radius: 2, test_selector: "projects_beta_banner", classes: "js-notice projects-splash-banner") do %>
    <%= render Primer::Box.new(display: :flex, direction: :column, p: 3) do %>
      <%= render Primer::Box.new(display: :flex, direction: :row) do %>
        <%= render Primer::Box.new(pr: [1, nil, nil, 6, nil]) do %>
          <%= render Primer::Beta::Heading.new(tag: :h2, mb: 1, font_size: 2) do %>
            Welcome to projects
          <% end %>
          <%= render Primer::Beta::Text.new(tag: :p, m: 0, color: :default) do %>
            Built like a spreadsheet, project tables give you a live canvas to filter, sort, and group issues and pull requests. Tailor them to your needs with custom fields and saved views.
          <% end %>
        <% end %>
        <%= form_tag dismiss_notice_path(path), class: "js-notice-dismiss" do %>
          <%= render Primer::Beta::CloseButton.new(type: :submit) %>
        <% end %>
      <% end %>
      <%= render Primer::Box.new(display: :flex, direction: :row, mt: 3) do %>
        <%= render Primer::ButtonComponent.new(scheme: :default, tag: :a, href: docs_url, target: "_blank") do %>
          Learn more
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

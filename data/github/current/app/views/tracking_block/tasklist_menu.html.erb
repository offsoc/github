<turbo-frame id="tasklist-item-<%= uuid %>-<%= issue.id %>-<%= type %>">
  <% if !can_update %>
    <%= render partial: "tracking_block/error"%>
  <% elsif type == "assignees"%>
    <%= render partial: "issues/sidebar/show/assignees", locals: { issue: issue, inline: true } %>
  <% elsif type == "labels" %>
    <%= render partial: "issues/sidebar/show/labels", locals: { issue: issue, inline: true } %>
  <% elsif type == "project" %>
    <%= render partial: "issues/sidebar/show/projects", locals: { issue: issue, inline: true, tasklist_id: uuid } %>
  <% end %>
</turbo-frame>

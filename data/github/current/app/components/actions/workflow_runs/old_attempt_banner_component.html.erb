<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% if GitHub.flipper[:banner_migration].enabled?(current_user) %>
  <%= render(Primer::Alpha::Banner.new(mb: 3)) do %>
    You are viewing an <b>older attempt</b> in the history of this workflow run.
    <%= render Primer::Beta::Link.new(
      href: latest_attempt_path,
      underline: :false,
    ).with_content("View latest attempt") %>.
  <% end %>
<% else %>
  <%= render(Primer::Beta::Flash.new(mb: 3)) do %>
    You are viewing an <b>older attempt</b> in the history of this workflow run.
    <%= render Primer::Beta::Link.new(
      href: latest_attempt_path,
      underline: :false,
    ).with_content("View latest attempt") %>.
  <% end %>
<% end %>

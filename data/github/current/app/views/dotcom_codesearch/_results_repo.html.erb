<%# rubocop:disable Lint/InstanceVariable %>
<% if results.timed_out %>
  <%= render :partial => "dotcom_codesearch/results_error", :locals => { :search => @search, :type => "Repositories" } %>
<% elsif results.empty? %>
  <%= render :partial => "dotcom_codesearch/results_empty", :locals => { :message => "We couldnâ€™t find any repositories matching '#{@search}' in #{GitHub.dotcom_host_name_string}" } %>
<% else %>
  <h3> <%= "#{number_with_delimiter(results.total)} #{'result'.pluralize(results.total)} from #{GitHub.dotcom_host_name_string}" %></h3>
  <ul class="repo-list">
    <% results.each do |hit| %>
      <%= render :partial => "dotcom_codesearch/hit_repo", :locals => {:hit => hit} %>
    <% end %>
  </ul>
  <%= render partial: "codesearch/results_pagination", locals: { results: results } %>
<% end %>

<% list.with_item(
  active: active?,
  test_selector: "sponsors-featured-sponsors-search-#{sponsorship.sponsor.display_login}",
  label: sponsorship.sponsor.safe_profile_name,
  content_arguments: {
    classes: "js-sponsors-featured-item-toggle",
    "data-input-name": "sponsors_listing[featured_sponsorships_selection][]",
    "data-input-value": sponsorship.id,
    align_items: :center,
  },
) do |item| %>
  <% item.with_leading_visual_content do
    render(GitHub::AvatarComponent.new(
      actor: sponsorship.sponsor,
      size: 20,
      alt: "", # no alt text so that the username doesn't get repeated for screen reader users
    ))
  end %>
  <% unless sponsorship.sponsor.safe_profile_name == sponsorship.sponsor.display_login %>
    <% item.with_description { sponsorship.sponsor.display_login } %>
  <% end %>
<% end %>

{
  "name": "@github-ui/{{ packageName }}",
  "description": "{{ packageDescription }}",
  {{#if reactComponent}}
  "homepage": "https://ui.githubapp.com/storybook/?path=/docs/recipes-{{componentName}}--readme",
  "componentInfo": {
    "name": "{{ componentName }}",
    "type": "Recipes",
    "status": "Draft",
    "links": {
      "figma": "",
      "tracking": "{{ trackingIssue }}"
    }
  },
  {{/ if}}
  {{#if mainFileName}}
  "main": "{{mainFileName}}",
  "exports": {
    ".": "./{{mainFileName}}"
  },
  {{/ if}}
  {{#unless mainFileName }}
  {{#unless createEntry }}
  "main": "{{ packageName }}.ts",
  "exports": {
    ".": "./{{ packageName }}.ts"
  },
  {{/ unless }}
  {{/ unless }}
  "scripts": {
    {{{scriptsJson}}}
  },
  {{#if dependenciesJson}}
  "dependencies": {
    {{{dependenciesJson}}}
  },
  {{/if}}
  {{#if devDependenciesJson}}
  "devDependencies": {
    {{{devDependenciesJson}}}
  },
  {{/if}}
  {{#if devPackage}}
  "dev": true,
  {{/if}}
  "private": true
}

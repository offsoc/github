<%= render Primer::Beta::BorderBox.new(**border_box_args) do |box| %>
  <% action_names_and_descriptions.each do |rule| %>
    <% box.with_row do %>
      <%= content_tag :b, rule[:name] %>
      <%= content_tag :p, rule[:description], class: "text-small color-fg-muted pr-2 m-0" %>
    <% end %>
  <% end %>
<% end %>

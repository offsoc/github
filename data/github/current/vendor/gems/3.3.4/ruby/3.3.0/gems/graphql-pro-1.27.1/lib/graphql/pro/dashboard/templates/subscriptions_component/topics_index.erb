<div class="page-header">
  <h3><%= pluralize("Subscription Topic", topics_count) %></h3>
  <form style="margin-left: auto;" action="<%= subscriptions_clear_path %>" method="post">
    <button type="submit" class="btn"
      onClick='return confirm("This will:\n\n- Remove all subscriptions from the database\n- Stop updates to all current subscribers\n\nAre you sure?")'
      >
      Reset
    </button>
  </form>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th># Subscribers</th>
    </tr>
  </thead>
  <tbody>
    <% topics.each do |topic| %>
      <tr>
        <td><%= link_to(topic.name, topics_show_path(topic: topic.name)) %></td>
        <td><%= topic.subscriptions_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render_partial("_pagination") %>

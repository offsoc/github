<%# erblint:counter ButtonComponentMigrationCounter 1 %>

<div class="Box rounded-2 d-flex flex-column overflow-hidden width-full flex-auto mb-4">
  <div class="px-4 pt-3 pb-4 height-full">
    <div class="d-flex flex-row flex-wrap height-full">
      <h2 class="lh-condensed mb-3">
        <span class="d-inline-flex p-1 circle">
          <%= render Packages::IconComponent.new(type: ecosystem[:name]) %>
        </span>
        <span><%= ecosystem[:display_name] %></span>
        <% if ecosystem[:beta] %>
          <%= render Primer::Beta::State.new(title: "beta", scheme: :merged, float: :right) do %>
            beta
          <% end %>
        <% end %>
      </h2>
      <p class="color-fg-muted f6 mb-3">
        <%= ecosystem[:description] %>
      </p>
      <a class="btn btn-sm flex-self-end" data-hydro-click="" data-hydro-click-hmac="" href="<%= documentation_link %>" aria-label="Learn more about <%= ecosystem[:display_name] %>">Learn more</a>
    </div>
  </div>
</div>

<%= render(Primer::Alpha::ActionList.new(
  pr: 2,
  pl: 2,
  pb: 2,
  select_variant: :single,
  role: 'listbox',
  aria: { label: 'Choose a tag to compare' },
  )) do |list| %>
  <% refs.each do |ref| %>
    <% list.with_item(
      active: ref.name == tag_name,
      href: compare_path(repository, "#{escape_url_branch(tag_name).gsub('%2B', '+')}...#{ref.name}")
    ) do %>
      <%= ref.name %>
    <% end %>
  <% end %>
<% end %>

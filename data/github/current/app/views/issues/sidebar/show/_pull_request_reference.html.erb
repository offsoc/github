<% hydro_data = xrefs_hydro_attributes(issue_id: issue.id, pull_request_id: pull_request.id, reference_location: reference_location) %>
<% hovercard_data = hovercard_data_attributes_for_issue_or_pr(pull_request) %>

<div class="my-1">
  <%= render(Primer::Beta::Truncate.new(classes: "truncate-with-responsive-width")) do |component| %>
    <% component.with_item(tag: :a, href: pull_request_path(pull_request), font_weight: :bold, display: :block, classes: ["Link--primary", "markdown-title"], data: hydro_data.merge(hovercard_data)) do %>
      <%= issue_pr_state_octicon_ar(pull_request) %>
      <%= title_markdown(pull_request.title) %>
    <% end %>
  <% end %>
  <% if pull_request.head_repository %>
    <a href="<%= repository_path(pull_request.head_repository) %>" class="d-block Link--muted f6 pl-1 ml-3">
      <%= pull_request.head_repository.name_with_display_owner %>
    </a>
  <% end %>
</div>

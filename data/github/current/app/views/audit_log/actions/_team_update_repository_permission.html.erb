<% if view.entry.hit.data[:new_repo_base_role].present? && view.entry.hit.data[:old_repo_permission] == view.entry.hit.data[:new_repo_permission] %>
	Updated <%= view.link_to_team %> permission for <%= view.link_to_repo %> from <span class="context"><%= view.entry.hit.data[:old_repo_permission] %></span> with base permission <%= view.entry.hit.data[:old_repo_base_role] %> to <span class="context"><%= view.entry.hit.data[:new_repo_permission] %></span> with base permission <%= view.entry.hit.data[:new_repo_base_role] %>
<% elsif view.entry.hit.data[:old_repo_permission].present? && view.entry.hit.data[:old_repo_permission] != view.entry.hit.data[:new_repo_permission] %>
	Updated <%= view.link_to_team %> permission for <%= view.link_to_repo %> from <span class="context"><%= view.entry.hit.data[:old_repo_permission] %></span> to <span class="context"><%= view.entry.hit.data[:new_repo_permission] %></span>
<% else %>
	Updated <%= view.link_to_team %> permission for <%= view.link_to_repo %> from <span class="context"><%= view.entry.hit.data[:old_permission] %></span> to <span class="context"><%= view.entry.hit.data[:permission] %></span>
<% end %>

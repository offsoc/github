<% page_info \
  title: page.title,
  description: page.seo.description,
  richweb: {
    title: page.seo.title,
    url: request.original_url,
    description: page.seo.description,
    image: page.seo.image.url,
  }
%>

<div class="container-xl pt-6 pt-md-8 pb-10 pb-md-11 p-responsive">
  <div class="d-flex flex-wrap gutter-spacious flex-justify-between">
    <div class="col-12 col-lg-6 offset-md-1 Links--underline">
      <div class="h6-mktg text-semibold color-fg-muted mb-2">
        <%= page.content.kicker %>
      </div>

      <h1 class="h1-mktg mb-4">
        <%= page.content.heading %>
      </h1>

      <div class="f3-mktg color-fg-muted mb-7 mb-md-8">
        <%= contentful_rich_text(page.content.subheading) %>
      </div>

      <% page.content.sections.each do |section| %>
        <%= render Site::Contentful::Legal::UpdateListComponent.new(title: section.title, updates: section.updates) %>
      <% end %>

      <% if page.content.license.present? %>
        <h2 class="h6-mktg mb-2">
          <%= page.content.license.title %>
        </h2>

        <%= render Site::Contentful::SimpleRichTextComponent.new(text: page.content.license.text, classes: ["f4-mktg color-fg-muted"]) %>
      <% end %>
    </div>

    <div class="col-5 d-none d-lg-block">
      <%= svg("site/enterprise/legal-bg.svg", class: "mt-lg-8 width-full", aria_hidden: true) %>
    </div>
  </div>
</div>

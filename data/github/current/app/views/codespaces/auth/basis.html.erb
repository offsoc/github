 <%
  SecureHeaders::append_content_security_policy_directives(
    request,
    form_action: [URI.parse(postback_uri).host]
  )
 %>

<% page_info title: "Codespaces - Authenticating", footer: false %>

<%= form_tag postback_uri, method: :post, class: "js-auto-submit-form" do %>
  <%= hidden_field_tag "tunnelId", tunnel_id %>
  <%= hidden_field_tag "tunnelName", tunnel_name %>
  <%= hidden_field_tag "portNumber", port %>
  <%= hidden_field_tag "accessToken", access_token %>
  <%= check_box_tag "skipAntiPhishing", skip_anti_phishing, skip_anti_phishing, style: "display:none" %>
<% end %>

<%= render "codespaces/auth_loading" %>

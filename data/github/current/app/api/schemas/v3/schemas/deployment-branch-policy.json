{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/deployment-branch-policy.json",
  "title": "DeploymentBranchPolicy",
  "description": "An deployment branch rule to enforce for an environment",
  "type": "object",
  "definitions": {
    "id": {
      "description": "The ID of this deployment branch rule.",
      "type": "integer"
    },
    "node_id": {
      "type": "string",
      "example": "RW52aXJvbm1lbnQ6MQo="
    },
    "name": {
      "description": "The rule to enforce to allow certain branches to deployed",
      "type": "string"
    },
    "type": {
      "description": "Whether this rule targets a branch or tag",
      "type": "string",
      "example": "branch",
      "enum": [
        "branch",
        "tag"
      ]
    }
  },
  "links": [
    {
      "title": "Edit or create a deployment branch policy",
      "method": "PUT",
      "rel": "edit-deployment-branch-policy",
      "href": "/repositories/{repository_id}/environments/{environment}/deployment-branch-policies/{branch_policy_id}",
      "schema": {
        "properties": {
          "name": {
            "$ref": "#/definitions/name"
          }
        },
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "type": "object"
      }
    },
    {
      "title": "Create a deployment branch rule",
      "method": "POST",
      "rel": "create-deployment-branch-policy",
      "href": "/repositories/{repository_id}/environments/{environment}/deployment-branch-policies",
      "schema": {
        "properties": {
          "name": {
            "$ref": "#/definitions/name"
          },
          "type": {
            "$ref": "#/definitions/type"
          }
        },
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "type": "object"
      }
    },
    {
      "title": "Delete a deployment branch gate policy",
      "method": "DELETE",
      "rel": "delete-deployment-branch-gate-policy",
      "href": "/repositories/{repository_id}/environments/{environment}/deployment-branch-policies/{branch_policy_id}",
      "schema": {
        "properties": {
          "name": {
            "$ref": "#/definitions/name"
          }
        },
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "type": "object"
      }
    }
  ],
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "node_id": {
      "$ref": "#/definitions/node_id"
    },
    "name": {
      "$ref": "#/definitions/name"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "node_id",
    "name"
  ]
}

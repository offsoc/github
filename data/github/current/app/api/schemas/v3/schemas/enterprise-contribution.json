{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/enterprise-contribution.json",
  "title": "Enterprise Contribution",
  "description": "Post contribution data from enterprise to a dotcom profile",
  "type": "object",
  "definitions": {
    "contribution": {
      "description": "A contribution",
      "title": "Contribution",
      "type": "object",
      "properties": {
        "date": {
          "description": "The date of the contribution.",
          "example": "2018-04-24T00:00:00Z",
          "type": "string",
          "format": "date-time"
        },
        "count": {
          "description": "Number of contributions",
          "example": 42,
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "required": [
        "date",
        "count"
      ]
    },
    "login": {
      "description": "The login of the enterprise user account sending the data",
      "type": "string",
      "example": "new-org"
    }
  },
  "links": [
    {
      "href": "/enterprise-installation/contributions",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "contributions": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/contribution"
            }
          },
          "login": {
            "$ref": "#/definitions/login"
          }
        },
        "required": [
          "contributions",
          "login"
        ],
        "type": "object"
      },
      "title": "Create"
    },
    {
      "title": "Create contributions",
      "method": "POST",
      "href": "/enterprise-installation/contributions",
      "rel": "create",
      "schema": {
        "properties": {
          "contributions": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/contribution"
            }
          },
          "login": {
            "$ref": "#/definitions/login"
          }
        },
        "required": [
          "contributions",
          "login"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

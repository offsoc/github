<%
  page_info stafftools: stafftools_path,
            container_xl: true
%>

<% content_for :breadcrumbs do %>
  <%= link_to "Site admin", stafftools_path %>
  /
  <%= link_to this_user, stafftools_user_path(this_user) %>
  /
  <strong><%= link_to current_repository, gh_stafftools_repository_path(current_repository) %></strong>
<% end %>

<% content_for :nav_items do %>
  <%= selected_link_to gh_admin_stafftools_repository_path(current_repository), highlight: :repo_admin, class: "UnderlineNav-item" do %>
    <%= primer_octicon(:gear, classes: "UnderlineNav-octicon") %>
    Admin
  <% end %>

  <%= selected_link_to gh_security_stafftools_repository_path(current_repository), highlight: [:repo_security, :hooks], class: "UnderlineNav-item" do %>
    <%= primer_octicon(:"shield-lock", classes: "UnderlineNav-octicon") %>
    Security
  <% end %>

  <%= selected_link_to stafftools_repository_issues_path(current_repository.owner, current_repository), highlight: [
    :repo_collaboration, :issues, :issue_files
  ], class: "UnderlineNav-item" do %>
    <%= primer_octicon(:"git-pull-request", classes: "UnderlineNav-octicon") %>
    Collaboration
  <% end %>

  <%= selected_link_to gh_disk_stafftools_repository_path(current_repository), highlight: :repo_storage, class: "UnderlineNav-item" do %>
    <%= primer_octicon(:database, classes: "UnderlineNav-octicon") %>
    Storage
  <% end %>

  <% if GitHub.actions_enabled? %>
    <%= selected_link_to gh_actions_stafftools_repository_path(current_repository), highlight: :repo_actions, class: "UnderlineNav-item" do %>
      <%= primer_octicon(:play, classes: "UnderlineNav-octicon") %>
      Actions
    <% end %>
  <% end %>
<% end %>

<%= render template: "layouts/stafftools" %>

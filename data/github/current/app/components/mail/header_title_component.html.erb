<% if icon_url %>
  <img src="<%= icon_url %>" width="56" height="56" alt="">
  <%= render(Mail::SpacerComponent.new(size: 12)) %>
<% elsif avatar %>
  <%= render(GitHub::AvatarComponent.new(actor: avatar, size: 48)) %>
  <%= render(Mail::SpacerComponent.new(size: 16)) %>
<% elsif avatar_plus_avatar&.size == 2 %>
  <%= render(GitHub::AvatarComponent.new(actor: avatar_plus_avatar.first, size: 48)) %>
  <img class="avatar" alt="plus"
    src="<%= mailer_static_asset_path("/images/email/organization/octicon-plus.png") %>"
    height="48" width="48">
  <%= render(GitHub::AvatarComponent.new(actor: avatar_plus_avatar.second, size: 48)) %>
  <%= render(Mail::SpacerComponent.new(size: 16)) %>
<% end %>
<h3 class="lh-condensed"><%= title %></h3>
<%= render(Mail::SpacerComponent.new(size: 16)) %>

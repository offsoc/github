{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/gpg-key.json",
  "title": "GPG Key",
  "description": "A unique encryption key",
  "type": "object",
  "definitions": {
    "armored_public_key": {
      "description": "A GPG key in ASCII-armored format.",
      "type": "string"
    },
    "gpg_key_id": {
      "description": "The ID of the gpg_key.",
      "type": "integer"
    },
    "id": {
      "type": "integer",
      "example": 3
    },
    "primary_key_id": {
      "type": [
        "number",
        "null"
      ]
    },
    "key_id": {
      "type": "string",
      "example": "3262EFF25BA0D270"
    },
    "raw_key": {
      "type": [
        "string",
        "null"
      ]
    },
    "public_key": {
      "type": "string",
      "example": "xsBNBFayYZ..."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "example": "2016-03-24T11:31:04-06:00"
    },
    "expires_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "can_sign": {
      "type": "boolean",
      "example": true
    },
    "can_encrypt_comms": {
      "type": "boolean"
    },
    "can_encrypt_storage": {
      "type": "boolean"
    },
    "can_certify": {
      "type": "boolean",
      "example": true
    },
    "revoked": {
      "type": "boolean",
      "example": true
    },
    "emails": {
      "type": "array",
      "example": [
        {
          "email": "octocat@users.noreply.github.com",
          "verified": true
        }
      ]
    },
    "subkeys": {
      "type": "array",
      "example": [
        {
          "id": 4,
          "primary_key_id": 3,
          "key_id": "4A595D4C72EE49C7",
          "public_key": "zsBNBFayYZ...",
          "emails": [

          ],
          "subkeys": [

          ],
          "can_sign": false,
          "can_encrypt_comms": true,
          "can_encrypt_storage": true,
          "can_certify": false,
          "created_at": "2016-03-24T11:31:04-06:00",
          "expires_at": null,
          "revoked": false
        }
      ]
    }
  },
  "links": [
    {
      "title": "Create a GPG key",
      "method": "POST",
      "rel": "create",
      "href": "/user/gpg_keys",
      "schema": {
        "properties": {
          "armored_public_key": {
            "$ref": "#/definitions/armored_public_key"
          }
        },
        "type": "object",
        "required": [
          "armored_public_key"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Delete a GPG key",
      "method": "DELETE",
      "rel": "delete",
      "href": "/user/gpg_keys/{gpg_key_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    }
  ],
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "primary_key_id": {
      "$ref": "#/definitions/primary_key_id"
    },
    "key_id": {
      "$ref": "#/definitions/key_id"
    },
    "raw_key": {
      "$ref": "#/definitions/raw_key"
    },
    "public_key": {
      "$ref": "#/definitions/public_key"
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "expires_at": {
      "$ref": "#/definitions/expires_at"
    },
    "can_sign": {
      "$ref": "#/definitions/can_sign"
    },
    "can_encrypt_comms": {
      "$ref": "#/definitions/can_encrypt_comms"
    },
    "can_encrypt_storage": {
      "$ref": "#/definitions/can_encrypt_storage"
    },
    "can_certify": {
      "$ref": "#/definitions/can_certify"
    },
    "revoked": {
      "$ref": "#/definitions/revoked"
    },
    "emails": {
      "$ref": "#/definitions/emails"
    },
    "subkeys": {
      "$ref": "#/definitions/subkeys"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "primary_key_id",
    "key_id",
    "raw_key",
    "public_key",
    "created_at",
    "expires_at",
    "can_sign",
    "can_encrypt_comms",
    "can_encrypt_storage",
    "can_certify",
    "emails",
    "subkeys",
    "revoked"
  ]
}

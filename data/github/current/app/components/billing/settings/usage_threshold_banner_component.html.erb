<%= render(GitHub::FlashActionDismissibleComponent.new(level: variant, dismissible_path: dismissal_path, dismissible_method: "post", is_dismissible: show_dismiss_form?, test_selector: "usage_threshold_banner", mb: 4)) do |c| %>
  <% if show_update_spending_limit? %>
    <% c.with_action(path: spending_limit_path) do %>
      <% if use_budgets? %>
        Update budget
      <% else %>
        Update spending limit
      <% end %>
    <% end %>
  <% end %>
  <% c.with_title do %>
    <%= title_text %>
  <% end %>
  <% unless is_trade_restricted? %>
    <% c.with_text do %>
      <%= body_text %>
    <% end %>
  <% end %>
<% end %>

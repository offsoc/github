{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/notification-status.json",
  "title": "Notification Status",
  "description": "The 'read' status of a notification.",
  "type": "object",
  "definitions": {
    "last_read_at": {
      "description": "Describes the last point that notifications were checked.",
      "default": "<current date/time>",
      "type": "string",
      "format": "date-time"
    },
    "thread_id": {
      "description": "The ID of the thread.",
      "type": "integer"
    },
    "read": {
      "description": "Whether the notification has been read.",
      "type": "boolean"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    }
  },
  "links": [
    {
      "title": "Mark notifications as read in a repository",
      "method": "PUT",
      "rel": "mark-in-repo",
      "href": "/repositories/{repository_id}/notifications",
      "schema": {
        "properties": {
          "last_read_at": {
            "$ref": "#/definitions/last_read_at"
          },
          "read": {
            "$ref": "#/definitions/read"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Mark all notifications as read",
      "method": "PUT",
      "rel": "mark-all",
      "href": "/notifications",
      "schema": {
        "properties": {
          "last_read_at": {
            "$ref": "#/definitions/last_read_at"
          },
          "read": {
            "$ref": "#/definitions/read"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Mark a thread as read",
      "method": "PATCH",
      "rel": "mark-thread",
      "href": "/notifications/threads/{thread_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    },
    {
      "title": "Mark a thread as read",
      "method": "POST",
      "rel": "mark-thread",
      "href": "/notifications/threads/{thread_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    },
    {
      "title": "Mark a thread as done",
      "method": "DELETE",
      "rel": "mark-thread-as-done",
      "href": "/notifications/threads/{thread_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    }
  ]
}

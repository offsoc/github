<%= render Primer::Beta::Details.new(classes: "js-collapsible-container", mb: mb, id: id, reset: true) do |details| %>
  <% details.with_summary(button: false) do %>
    <%= render Primer::Beta::BorderBox.new do |box| %>
      <% box.with_header(bg: header_bg, display: :flex, justify_content: :space_between, align_items: :center, border: 0, m: 0, border_radius: 2) do %>
        <%= header %>
        <%= render(Primer::Beta::Octicon.new(:"chevron-right", "data-toggle-action" => :open)) %>
        <%= render(Primer::Beta::Octicon.new(:"chevron-down", "data-toggle-action" => :close, display: :none)) %>
      <% end %>
    <% end %>
  <% end %>
  <% details.with_body do %>
    <%= body %>
  <% end %>
<% end %>

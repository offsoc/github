<% field_id = "org-invite-complete-results-#{SecureRandom.alphanumeric(5)}" %>
<auto-complete
  src="<%= org_attribution_invitations_target_suggestions_path(current_organization) %>"
  for="invite-complete-results-<%= field_id %>"
  class="auto-search-group d-block"
  >
  <input
    type="text"
    name="target_login"
    aria-label="Search by username, full name or email address"
    class="form-control input-block input-contrast auto-search-input new-member-field"
    autofocus
    required
    placeholder="Search by username, full name, or email address">
  <%= primer_octicon(:person) %>
  <ul
    id="invite-complete-results-<%= field_id %>"
    class="invite-member-results autocomplete-results"></ul>
</auto-complete>


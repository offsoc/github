<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <%= render Primer::BaseComponent.new(
    tag: :div,
    display: :flex,
    align_items: :center,
    justify_content: :flex_start,
  ) do %>
    <%= render(Sponsors::BulkSponsorshipIconComponent.new(color: :default, mr: 1)) %>
    <%= render(Primer::Beta::Breadcrumbs.new) do |breadcrumb| %>
      <%= breadcrumb.with_item(href: get_started_path).with_content("Bulk sponsorship") %>
      <%= breadcrumb.with_item(
        href: import_path,
        test_selector: "unselected-bulk-sponsorship-page",
      ).with_content(Page::Import.serialize) if show_import_link? %>
      <%= breadcrumb.with_item(
        href: review_path,
        test_selector: "unselected-bulk-sponsorship-page",
      ).with_content(Page::Review.serialize) if show_review_link? %>
      <%= breadcrumb.with_item(
        href: request.path,
        test_selector: "current-bulk-sponsorship-page",
      ).with_content(page.serialize) %>
    <% end %>
  <% end %>
<% end %>

<%= render Primer::Beta::Subhead.new(spacious: true) do |component| %>
  <% component.with_heading(tag: :h2, id: "preferences", test_selector: "marketing-subscriptions-heading") do %>
    <%= _("Email preferences") %>
  <% end %>
  <% component.with_description do %>
    <%= _("Subscriptions through our various marketing platforms. Each email address has its own subscriptions.") %>
  <% end %>
<% end %>

<%= render(Primer::Beta::BorderBox.new(mt: 2, padding: :condensed)) do |component| %>
  <% verified_emails.each do |email| %>
    <% component.with_row(display: :flex, justify_content: :space_between, align_items: :center, pr: 2) do %>
      <strong><%= email %></strong>
        <%= render Primer::Beta::Button.new(tag: :a, href: settings_email_subscriptions_path(email: email), size: :small, "aria-label": "Manage marketing email subscriptions for #{email}", test_selector: "manage-subscriptions-link") do %>
        <%= _("Manage") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

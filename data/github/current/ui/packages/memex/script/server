#!/bin/bash

# default NODE_ENV to development if none explicitly set
export NODE_ENV="${NODE_ENV:-development}"
export GH_GH_PAT=$GITHUB_TOKEN

# If package.json has changed from last npm install, run npm install
npm run install-if-changed

# clear our the ./dist to ensure we don't serve stale built files
rm -rf ./dist
# run dev script
npm run start:dotcom

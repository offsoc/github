<% if actor_is_dependabot? %>
  <%= render GitHub::AvatarComponent.new(is_user: false, src: dependabot_image_path, alt: "@dependabot", test_selector: "alert-timeline-event-dependabot-avatar") %>
  <%= render Primer::Beta::Link.new(href: dependabot_link_url, scheme: :primary, font_weight: :bold, test_selector: "alert-timeline-event-actor-dependabot-link").with_content("dependabot") %>
  <%= bot_identifier_tag %>
<% elsif actor.ghost? %>
  <%= render GitHub::AvatarComponent.new(actor: actor, test_selector: "alert-timeline-event-ghost-avatar") %>
  <strong class="author" <%= test_selector("alert-timeline-event-ghost-login") %>>
    <%= actor.display_login %>
  </strong>
<% else %>
  <%= linked_avatar_for(actor, 20, img_class: "avatar circle", link_data: test_selector_hash("alert-timeline-event-actor-avatar")) %>
  <%= profile_link(actor, class: "author Link--primary text-bold", data: test_selector_hash("alert-timeline-event-actor-profile-link")) %>
  <%= bot_identifier(actor) %>
<% end %>

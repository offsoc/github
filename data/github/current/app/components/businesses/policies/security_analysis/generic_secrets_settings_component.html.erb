<%= render Primer::Box.new(test_selector: TEST_SELECTOR, **system_arguments) do %>
  <%= render Primer::Beta::Subhead.new(hide_border: true, mb: 2) do |component| %>
    <% component.with_heading(font_size: 3, mb: 2) do %>
      AI detection in secret scanning
      <%= render GitHub::BetaFlagComponent.new(variant: :none, ml: 1) %>
    <% end %>
    <% component.with_description { repo_scope_text } %>
  <% end %>

  <%= form_tag settings_security_analysis_policies_update_generic_secrets_settings_enterprise_path, method: :put do %>
    <%= render GitHub::MenuComponent.new(items: menu_items) do |menu| %>
      <% menu.with_summary do %>
        <%= render Primer::Beta::Button.new(tag: :summary, classes: "select-menu-button") do %>
          <%= render(Primer::Beta::Text.new) { "All repositories:" } %>
          <%= menu.default_selection_text %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

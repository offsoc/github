{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/git-ref.json",
  "title": "Git Reference",
  "description": "Git references within a repository",
  "type": "object",
  "definitions": {
    "ref": {
      "description": "The name of the fully qualified reference (e.g: refs/heads/master). If it doesn't start with 'refs' and have at least two slashes, it will be rejected.",
      "example": "refs/heads/master",
      "type": "string"
    },
    "sha": {
      "description": "SHA for the reference",
      "example": "7638417db6d59f3c431d3e1f261cc637155684cd",
      "type": "string",
      "minLength": 40,
      "maxLength": 40
    },
    "force": {
      "description": "Indicates whether to force the update or to make sure the update is a fast-forward update. Leaving this out or setting it to `false` will make sure you're not overwriting work. Default: `false`.",
      "example": true,
      "type": "boolean"
    },
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    }
  },
  "links": [
    {
      "href": "/repositories/{repository_id}/git/refs",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "ref": {
            "$ref": "#/definitions/ref"
          },
          "sha": {
            "$ref": "#/definitions/sha"
          }
        },
        "required": [
          "ref",
          "sha"
        ],
        "type": "object"
      },
      "title": "Create a reference"
    },
    {
      "href": "/repositories/{repository_id}/git/refs/{ref}",
      "method": "PUT",
      "rel": "update-legacy",
      "schema": {
        "properties": {
          "sha": {
            "$ref": "#/definitions/sha"
          },
          "force": {
            "$ref": "#/definitions/force"
          }
        },
        "required": [
          "sha"
        ],
        "type": "object"
      },
      "title": "Update a reference"
    },
    {
      "href": "/repositories/{repository_id}/git/refs/{ref}",
      "method": "PATCH",
      "rel": "update",
      "schema": {
        "properties": {
          "sha": {
            "$ref": "#/definitions/sha"
          },
          "force": {
            "$ref": "#/definitions/force"
          }
        },
        "required": [
          "sha"
        ],
        "type": "object"
      },
      "title": "Update a reference"
    },
    {
      "href": "/repositories/{repository_id}/git/refs/{ref}",
      "method": "POST",
      "rel": "update",
      "schema": {
        "properties": {
          "sha": {
            "$ref": "#/definitions/sha"
          },
          "force": {
            "$ref": "#/definitions/force"
          }
        },
        "required": [
          "sha"
        ],
        "type": "object"
      },
      "title": "Update a reference"
    },
    {
      "title": "Delete a reference",
      "method": "DELETE",
      "rel": "delete",
      "href": "/repositories/{repository_id}/git/refs/{ref}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    },
    {
      "title": "Create a reference",
      "method": "POST",
      "href": "/repositories/{repository_id}/git/refs",
      "rel": "create",
      "schema": {
        "properties": {
          "ref": {
            "$ref": "#/definitions/ref"
          },
          "sha": {
            "$ref": "#/definitions/sha"
          }
        },
        "required": [
          "ref",
          "sha"
        ],
        "type": "object",
        "additionalProperties": false
      }
    },
    {
      "title": "Update a reference",
      "method": "PUT",
      "href": "/repositories/{repository_id}/git/refs/{ref}",
      "rel": "update",
      "schema": {
        "properties": {
          "sha": {
            "$ref": "#/definitions/sha"
          },
          "force": {
            "$ref": "#/definitions/force"
          }
        },
        "required": [
          "sha"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ],
  "properties": {
    "ref": {
      "type": "string"
    },
    "node_id": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "object": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "sha": {
          "$ref": "#/definitions/sha"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

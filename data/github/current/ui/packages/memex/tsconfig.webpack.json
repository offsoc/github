{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "bundler",
    "target": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["./script/*.ts", "./webpack.config.ts", "./webpack/*.ts", "./src/@types", "./jest.config.js"]
}

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/repository-collaborator.json",
  "title": "Repository Collaborator",
  "description": "A collaborator on a repository.",
  "type": "object",
  "definitions": {
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "username": {
      "description": "The username of the collaborator.",
      "type": "string",
      "example": "username1"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    },
    "permission": {
      "description": "The permission to grant the collaborator.",
      "enum": [
        "pull",
        "push",
        "admin"
      ],
      "default": "push",
      "example": "push",
      "type": "string"
    }
  },
  "links": [
    {
      "title": "Add user as a collaborator",
      "method": "PUT",
      "rel": "add",
      "href": "/repositories/{repository_id}/collaborators/{username}",
      "schema": {
        "properties": {
          "permission": {
            "$ref": "#/definitions/permission"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Remove user as a collaborator",
      "method": "DELETE",
      "rel": "delete",
      "href": "/repositories/{repository_id}/collaborators/{username}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    }
  ]
}

<% page_info title: view.page_title, selected_link: :stafftools_user_security %>

<div class="boxed-group">
  <h3>
    <%= link_to(
      "Security /",
      stafftools_user_security_path(this_user),
      class: "boxed-group-breadcrumb",
    ) %>
    Legacy activity log
  </h3>
  <div class="boxed-group-inner">
    <p>
      These log entries are automatically generated when the user performs potentially destructive
      operations like repository renames and org transforms.
    </p>
    <% if view.log_notes? %>
      <ul class="boxed-group-list standalone">
        <% view.log_notes.each do |note| %>
          <li class="clearfix">
            <%= time_ago_in_words_js note.created_at %>
            <%= avatar_for note.user, 20 %>
            <strong class="author"><%= note.user %></strong>
            <pre>
              <%= note.body_html %>
            </pre>
          </li>
        <% end %>
      </ul>
    <% else %>
      <hr class="bleed-flush">
      <p>No log entries for this account.</p>
    <% end %>
  </div>
</div>

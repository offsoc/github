<% workflows.each_with_index do |workflow, index| %>
  <%# For pages >= 2 show selected workflow at top of list and avoid repetition  %>
  <% if workflow.id != selected_workflow&.id %>
    <%= render Actions::WorkflowNavComponent.new(
      selected_by_ids: [workflow.id],
      selected_workflow: selected_workflow,
      workflow: workflow,
      current_repo: current_repository,
      current_user: current_user,
      allow_pinning: allow_pinning,
      filters: workflow_run_filters
    ) %>
  <% end %>
<% end %>

<% if show_dialog? %>
  <%
    # We can't use the shared/details_dialog partial for this. In our case we're going to be opening this dialog
    # from another part of the DOM, and we want it to be invisible to both people and screen readers until
    # the time is right.
  %>
  <details
    hidden
    aria-hidden="true"
    data-target="create-branch.details"
    class="details-reset details-overlay details-overlay-dark lh-default color-fg-default">
    <summary role=""></summary>
    <details-dialog
      aria-label="<%= label %>"
      class="Box Box--overlay overflow-visible d-flex flex-column anim-fade-in fast color-fg-default f5"
      data-action="details-dialog-close:create-branch#closeDialog"
      src= "<%= src %>"><%# erblint:disable A11yDetailsDialogMigration %>

      <include-fragment>
        <%= render(Primer::Beta::Spinner.new(my: 3, mx: :auto, display: :block)) %>
      </include-fragment>
    </details-dialog>
  </details>
<% end %>

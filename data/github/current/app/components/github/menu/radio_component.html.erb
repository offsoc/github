<label
  role="menuitemradio"
  aria-checked="<%= checked %>"
  class="SelectMenu-item text-normal"
  tabindex="0">
  <input
    <% if @id %>id="<%= @id %>"<% end %>
    type="radio"
    name="<%= @name %>"
    value="<%= @value %>"
    autocomplete="off"
    hidden
    class="<%= @input_classes %>"
    <% if checked %>checked<% end %>
    <% if @disabled %>disabled<% end %>
    <% if @data %><%= safe_data_attributes(@data) %><% end %>
    <% if required? %>required<% end %>
  >
  <%= render Primer::Beta::Octicon.new(icon: "check", classes: "SelectMenu-icon SelectMenu-icon--check") %>
  <div>
    <div class="<% if @description %>text-bold<% end %>">
      <% if should_render_avatar? %>
        <%= render @avatar %>
      <% end %>

      <% if should_render_octicon? %>
        <%= render(Primer::Beta::Octicon.new(@octicon, classes: "SelectMenu-icon")) %>
      <% end %>

      <%= text %> <% if should_render_label? %> <%= render(Primer::Beta::Label.new(vertical_align: :middle, ml: 1)) { label } %> <% end %>
    </div>
    <div class="color-fg-muted">
      <%= @description %>
    </div>
  </div>

  <% if replace_text %>
    <span hidden data-filter-item-text data-menu-button-text>
      <%= replace_text %>
    </span>
  <% end %>
</label>

<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render Primer::Beta::Label.new(scheme: :secondary, display: hidden ? :none : nil, ml: 2, classes: "js-project-repo-link-badge", "data-repo-name": repository.name, title: "Label: Secret") do %>
  <input type="hidden"
    name="project_repository_link_ids[]"
    value="<%= repository.global_relay_id %>"
    class="js-repo-id"
    <% if hidden %>disabled<% end %>
  >
  <%= repository.name %>
  <%= render Primer::ButtonComponent.new(scheme: :link, ml: 1, classes: "Link--muted js-remove-project-repo-link", "aria-label": "Remove #{ repository.name }") do %>
    <%= primer_octicon(:x) %>
  <% end %>
<% end %>

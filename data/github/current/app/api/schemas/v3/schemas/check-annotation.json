{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/check-annotation.json",
  "title": "Check Annotation",
  "type": "object",
  "definitions": {
    "path": {
      "type": "string",
      "example": "README.md"
    },
    "blob_href": {
      "type": "string"
    },
    "start_line": {
      "type": "integer",
      "example": 2
    },
    "end_line": {
      "type": "integer",
      "example": 2
    },
    "start_column": {
      "type": [
        "number",
        "null"
      ],
      "example": 5
    },
    "end_column": {
      "type": [
        "number",
        "null"
      ],
      "example": 10
    },
    "annotation_level": {
      "type": [
        "string",
        "null"
      ],
      "example": "warning"
    },
    "title": {
      "type": [
        "string",
        "null"
      ],
      "example": "Spell Checker"
    },
    "message": {
      "type": [
        "string",
        "null"
      ],
      "example": "Check your spelling for 'banaas'."
    },
    "raw_details": {
      "type": [
        "string",
        "null"
      ],
      "example": "Do you mean 'bananas' or 'banana'?"
    }
  },
  "properties": {
    "path": {
      "$ref": "#/definitions/path"
    },
    "blob_href": {
      "$ref": "#/definitions/blob_href"
    },
    "start_line": {
      "$ref": "#/definitions/start_line"
    },
    "end_line": {
      "$ref": "#/definitions/end_line"
    },
    "start_column": {
      "$ref": "#/definitions/start_column"
    },
    "end_column": {
      "$ref": "#/definitions/end_column"
    },
    "annotation_level": {
      "$ref": "#/definitions/annotation_level"
    },
    "title": {
      "$ref": "#/definitions/title"
    },
    "message": {
      "$ref": "#/definitions/message"
    },
    "raw_details": {
      "$ref": "#/definitions/raw_details"
    }
  },
  "additionalProperties": false,
  "required": [
    "path",
    "blob_href",
    "start_line",
    "end_line",
    "start_column",
    "end_column",
    "annotation_level",
    "title",
    "message",
    "raw_details"
  ]
}

{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/installation-repository.json",
  "title": "Installation Repository",
  "description": "A GitHub App installed on a repository.",
  "type": "object",
  "definitions": {
    "installation_id": {
      "description": "The ID of the installation.",
      "type": "integer"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    }
  },
  "links": [
    {
      "title": "Add repository to installation",
      "method": "PUT",
      "rel": "add",
      "href": "/user/installations/{installation_id}/repositories/{repository_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    },
    {
      "title": "Remove repository from installation",
      "method": "DELETE",
      "rel": "delete",
      "href": "/user/installations/{installation_id}/repositories/{repository_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    }
  ]
}

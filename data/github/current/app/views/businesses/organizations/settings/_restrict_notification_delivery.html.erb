<% header = capture do %>
  <% if this_business.restrict_notifications_to_verified_domains? %>
    Your organizations' settings without the enterprise setting are shown below. If you
    disable notification restrictions for the enterprise, then the organizations will
    use the configuration outlined below.
  <% else %>
    Your current organizations' settings are shown below. If you enable notification
    restrictions for the enterprise, the enterprise setting will override these values.
  <% end %>
<% end %>

<%= render layout: "businesses/organizations/settings/layout",
  locals: { header: header } do %>
  <%= render partial: "businesses/organizations/settings/row", locals: {
    organizations: this_business.restrict_notification_delivery_setting_organizations(value: true),
    label: "Enabled",
    description: "Organizations that have restricted email notifications to eligible domain emails."
  } %>
  <%= render partial: "businesses/organizations/settings/row", locals: {
    organizations: this_business.restrict_notification_delivery_setting_organizations(value: false),
    label: "Disabled",
    description: "Organizations that have not restricted email notifications to eligible domain emails."
  } %>
<% end %>

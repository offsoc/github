<% page_info :title => "SLA reports", :selected_link => :sla_reports %>
<%= render layout: "stafftools/stafftools" do %>
  <%= render Primer::Beta::Blankslate.new(
    large: true,
    spacious: true,
  ) do |c| %>
   <%  c.with_visual_icon(icon: "graph") %>
   <%  c.with_heading(tag: :h2).with_content("Customer SLA Reports has moved") %>
   <%  c.with_description do %>
    SLA reports are no longer provided by stafftools. Please use the SLA Report
    Dashboard in Azure Data Explorer (aka Kusto) using your @githubazure.com credentials
   <% end %>
   <%  c.with_primary_action(href: "https://dataexplorer.azure.com/dashboards/c4eec369-530d-4dae-8b77-01138263bae0").with_content("Go to SLA Report Dashboard") %>
   <%  c.with_secondary_action(href: "https://thehub.github.com/support/worktent/SLA-Breach/").with_content("Read documentation about the SLA Process on TheHub") %>
  <% end %>
<% end %>

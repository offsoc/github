<%= form_tag(TWITTER_WEB_INTENT_URL,
  method: :get,
  target: "_blank",
  class: "d-inline",
  data: test_selector_hash("twitter-form"),
) do %>
  <textarea
    name="text"
    rows="3"
    class="form-control mb-3 width-full"
    required
    <%= test_selector("sponsors-twitter-textarea") %>
  ><%= @text %></textarea>

  <input class = "btn" type = "submit" value = "Post on X" <%= test_selector("post-on-X-button")%>>
<% end %>

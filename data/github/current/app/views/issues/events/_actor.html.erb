<% if actor %>
  <%= cached_event_actor(actor) %>
<% else %>
  <%
    # TODO figure out a way to retrieve Ghost avatar w/o ActiveRecord
    # so we can `enforce_platform_access` on callers
    # See: https://github.com/github/github/issues/76653
  %>
  <img src="<%= User.ghost.primary_avatar_url(32) %>" alt="@<%= GitHub.ghost_user_login %>" height="20" width="20" class="<%= avatar_class_names(User.ghost) %>">
  <strong class="author"><%= GitHub.ghost_user_login %></strong>
<% end %>

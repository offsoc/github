{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/git-tree.json",
  "title": "Git Tree",
  "description": "The hierarchy between files in a Git repository.",
  "type": "object",
  "definitions": {
    "tree": {
      "description": "Objects specifying a tree structure",
      "type": "array",
      "items": {
        "type": "object"
      },
      "example": [
        {
          "path": "file.rb",
          "mode": "100644",
          "type": "blob",
          "size": 30,
          "sha": "44b4fc6d56897b048c772eb4087f854f46256132",
          "url": "https://api.github.com/repos/octocat/Hello-World/git/blobs/44b4fc6d56897b048c772eb4087f854f46256132"
        }
      ]
    },
    "path": {
      "description": "The file referenced in the tree",
      "type": "string",
      "example": "config/database.yml"
    },
    "mode": {
      "description": "The file mode.",
      "enum": [
        "100644",
        "100755",
        "040000",
        "160000",
        "120000"
      ],
      "example": "160000",
      "type": "string"
    },
    "type": {
      "description": "The type of entry in the tree.",
      "enum": [
        "blob",
        "tree",
        "commit"
      ],
      "example": "tree",
      "type": "string"
    },
    "sha": {
      "description": "The SHA1 checksum ID of the object in the tree",
      "type": [
        "string",
        "null"
      ],
      "pattern": "[0-9a-f]{40}",
      "example": "7638417db6d59f3c431d3e1f261cc637155684cd"
    },
    "content": {
      "description": "The contents of the file.",
      "type": "string",
      "example": "heart"
    },
    "base_tree": {
      "description": "The SHA1 of the tree you want to update with new data.",
      "type": "string"
    },
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    },
    "git_tree_sha": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "truncated": {
      "type": "boolean"
    }
  },
  "links": [
    {
      "title": "Create a tree",
      "method": "POST",
      "rel": "create",
      "href": "/repositories/{repository_id}/git/trees",
      "schema": {
        "properties": {
          "tree": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "path": {
                  "$ref": "#/definitions/path"
                },
                "mode": {
                  "$ref": "#/definitions/mode"
                },
                "type": {
                  "$ref": "#/definitions/type"
                },
                "sha": {
                  "$ref": "#/definitions/sha"
                },
                "content": {
                  "$ref": "#/definitions/content"
                }
              }
            }
          },
          "base_tree": {
            "$ref": "#/definitions/base_tree"
          }
        },
        "additionalProperties": false,
        "required": [
          "tree"
        ],
        "type": "object"
      }
    }
  ],
  "properties": {
    "sha": {
      "$ref": "#/definitions/git_tree_sha"
    },
    "url": {
      "$ref": "#/definitions/url"
    },
    "tree": {
      "$ref": "#/definitions/tree"
    },
    "truncated": {
      "$ref": "#/definitions/truncated"
    }
  },
  "additionalProperties": false,
  "required": [
    "sha",
    "url",
    "tree",
    "truncated"
  ]
}

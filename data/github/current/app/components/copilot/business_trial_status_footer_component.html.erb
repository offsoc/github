<%= render(Primer::Box.new(classes: "Box-footer", font_weight: :light)) do %>
  <%= trial_expires_message %>
  <% if business_trial.pending? %>
    <%= render(Primer::Beta::Text.new(tag: :span, font_weight: :bold)) do %>
      <%= trial_requirements_message %>
    <% end %>
  <% else %>
    in
    <%= render(Primer::Beta::Text.new(tag: :span, font_weight: :bold)) do %>
      <%= pluralize(business_trial.days_left, "day") %>.
    <% end %>
  <% end %>
  <%= render(Primer::Beta::Link.new(
  href: "#{GitHub.developer_help_url}/billing/managing-billing-for-github-copilot/about-billing-for-github-copilot",
  classes: "Link--inTextBlock"
  ).with_content("Read billing documentation.")) %>
<% end %>

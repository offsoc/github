<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% if view.repo_deployment_access? %>
<div class="px-0 border-bottom-0 oauth-repo-deployment-permissions oauth-permissions-details js-details-container Details <%= view.repo_deployment_access_value %> <%= !view.repo_deployment_access? ? 'd-none' : '' %>">

  <%= render Primer::ButtonComponent.new("aria-expanded": "false", scheme: :link, pr: 0, classes: "oauth-details-toggle js-details-target", "aria-label": "More information about this request") do %>
    <%= primer_octicon(:"chevron-down", size: :medium) %>
    <%= primer_octicon(:"chevron-up", size: :medium) %>
  <% end %>

  <%= primer_octicon(:server, :height => 32) %>
  <div class="permission-summary lh-condensed">
    <strong class="permission-title">Deployments</strong>
    <small class="access-details">
      <span class="no-access">No access</span>
      <span class="full-access">Manage deployments and deployment status</span>
    </small>
  </div>
  <div class="content">
    <div class="permission-help pt-2">
      <p>This application will be able to manage deployments and deployment status (no direct code access).</p>
      <%= render :partial => "oauth_accesses/learn_more_link", :locals => { :view => view } %>
    </div>
  </div> <!-- content -->
</div> <!-- details-container -->
<% end %>

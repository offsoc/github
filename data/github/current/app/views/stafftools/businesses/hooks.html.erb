<% page_info title: "#{business.name} webhooks", selected_link: :business_webhooks %>

<%= render Primer::Beta::Subhead.new do |component| %>
	<% component.with_heading(tag: :h2) do %>Webhooks<% end %>
<% end %>
<% if hooks.any? %>
  <%= render "stafftools/hooks/list", hooks: hooks %>
<% else %>
  <%= render Primer::Beta::Blankslate.new(mb: 3) do |c| %>
    <% c.with_heading(tag: :h2) do %>
      No webhooks configured for this enterprise.
    <% end %>
  <% end %>
<% end %>

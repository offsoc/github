<% if permitted? %>
  <%= render(Primer::Beta::Button.new(tag: :a, href: installation_settings_route)) { "Configure" } %>
<% else %>
  <%= render(Primer::Beta::Button.new(id: "configure-button-disabled-#{@installation.id}", aria: { disabled: true })) do |component| %>
    <% component.with_tooltip(text: tooltip_text, direction: :n) %>
    Configure
  <% end %>
<% end %>

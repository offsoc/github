{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/organization-runner-group.json",
  "title": "Runner Group for an Organization",
  "description": "A runner group for an organization",
  "type": "object",
  "definitions": {
    "id": {
      "description": "The id of the runner group.",
      "type": "integer",
      "example": 5
    },
    "name": {
      "description": "The name of the runner group.",
      "type": "string",
      "example": "Deployment Runners"
    },
    "visibility": {
      "description": "Visibility of a runner group",
      "enum": [
        "all",
        "selected",
        "private"
      ],
      "type": "string"
    },
    "selected_repositories_url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/organizations/org/actions/runner-groups/1/organizations"
    },
    "selected_repository_ids": {
      "description": "List of repository IDs that the runner group should have access to",
      "example": [
        1
      ],
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "workflow_restrictions_read_only": {
      "description": "Whether the runner group can modify inherited workflow restrictions",
      "type": "boolean"
    },
    "restricted_to_workflows": {
      "description": "If `true`, the runner group will be restricted to running only the workflows specified in the `selected_workflows` array.",
      "type": "boolean"
    },
    "selected_workflows": {
      "description": "List of workflows the runner group should be allowed to run. This setting will be ignored unless `restricted_to_workflows` is set to `true`.",
      "example": [
        "octo-org/octo-repo/.github/workflows/deploy.yaml@main",
        "octo-org/octo-repo/.github/workflows/deploy.yaml@v2",
        "octo-org/octo-repo/.github/workflows/deploy.yaml@e83c5163316f89bfbde7d9ab23ca2e25604af290"
      ],
      "type": "array",
      "items": {
        "type": "string",
        "description": "Name of workflow the runner group should be allowed to run. Note that a ref, tag, or long SHA is required.",
        "example": "octo-org/octo-repo/.github/workflows/deploy.yaml@main"
      }
    },
    "runners": {
      "description": "List of runner IDs in the runner group",
      "example": [
        4
      ],
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "runners_url": {
      "type": "string",
      "format": "uri",
      "example": "https://api.github.com/organizations/org/actions/runner-groups/1/runners"
    },
    "inherited": {
      "description": "Indicates if the runner group is inherited from an enterprise account.",
      "example": false,
      "type": "boolean"
    },
    "inherited_allows_public_repositories": {
      "description": "Only applicable if `inherited` is true. Indicates if the enterprise runner group allows public repositories to use its runners.",
      "example": false,
      "type": "boolean"
    },
    "allows_public_repositories": {
      "description": "Indicates if the runner group allows public repositories to use its runners. If this is an inherited runner then public repositories will only be able to use the runners if `inherited_allows_public_repositories` is also true.",
      "example": false,
      "type": "boolean"
    },
    "default": {
      "description": "Indicates if the runner group is the default group.",
      "example": false,
      "type": "boolean"
    },
    "network_configuration_id": {
      "description": "The identifier of a hosted compute network configuration.",
      "type": [
        "string",
        "null"
      ],
      "example": "EC486D5D793175D7E3B29C27318D5C1AAE49A7833FC85F2E82C3D2C54AC7D3BA"
    }
  },
  "links": [
    {
      "title": "Creates an organization runner grouup",
      "href": "/organizations/{organization_id}/actions/runner-groups",
      "method": "POST",
      "rel": "create-group",
      "schema": {
        "properties": {
          "name": {
            "$ref": "#/definitions/name"
          },
          "visibility": {
            "$ref": "#/definitions/visibility"
          },
          "selected_repository_ids": {
            "$ref": "#/definitions/selected_repository_ids"
          },
          "runners": {
            "$ref": "#/definitions/runners"
          },
          "allows_public_repositories": {
            "$ref": "#/definitions/allows_public_repositories"
          },
          "restricted_to_workflows": {
            "$ref": "#/definitions/restricted_to_workflows"
          },
          "selected_workflows": {
            "$ref": "#/definitions/selected_workflows"
          },
          "network_configuration_id": {
            "$ref": "#/definitions/network_configuration_id"
          }
        },
        "required": [
          "name"
        ],
        "type": "object"
      }
    },
    {

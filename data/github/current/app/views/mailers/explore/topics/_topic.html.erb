<%# erblint:counter GoogleAnalyticsDeprecation 1 %>
<!--// Topic //-->
<% if topic.present? %>
  <div class="feed-item">
    <div style="margin-bottom:8px">
      <table>
        <tr>
          <td width="14px" valign="middle !important">
            <img
              alt=""
              src="<%= mailer_static_asset_path("images/email/explore/octocat.v2.png") %>"
              height="14"
              style="vertical-align:middle; margin-right:4px;"
            >
          </td>
          <td width="4"></td>
          <td style="font-size: 12px">
            <%= label %>
          </td>
        </tr>
      </table>
    </div>
    <table>
      <tr>
        <% if topic.logo_url.present? %>
          <td colspan=1 valign="middle">
            <a
              href="<%= email_link_with_tracking(
                url: @view.github_url("topics/#{topic.name}"),
                email_source: "explore",
                auto_subscribed: @view.auto_subscribed,
              ) %>"
              style="display:block;margin-right:16px;"
            >
              <img
                src="<%= topic.logo_url %>"
                alt="<%= topic.safe_display_name %> logo"
                style="width:80px"
              >
            </a>
          </td>
          <td width="4"></td>
        <% end %>
        <td colspan=2 valign="middle">
          <h3 style="margin:4px 0">
            <a
              href="<%= email_link_with_tracking(
                url: @view.github_url("topics/#{topic.name}"),
                email_source: "explore",
                auto_subscribed: @view.auto_subscribed,
              ) %>"
              data-ga-click="Explore, go to topic, location:explore mailer; text:<%= topic.safe_display_name %>"
            >
              # <%= topic.safe_display_name %>
            </a>
          </h3>

          <% if topic.short_description.present? %>
            <p>
              <%= topic.short_description %>
            </p>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
<% end %>

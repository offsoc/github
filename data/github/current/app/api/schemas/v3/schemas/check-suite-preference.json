{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/check-suite-preference.json",
  "title": "Check Suite Preference",
  "description": "Check suite configuration preferences for a repository.",
  "type": "object",
  "definitions": {
    "auto_trigger_checks": {
      "description": "Enables or disables automatic creation of CheckSuite events upon pushes to the repository.",
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "app_id": {
      "description": "The ID of the GitHub App.",
      "type": "integer"
    },
    "setting": {
      "description": "Whether the option is enabled.",
      "default": true,
      "type": "boolean"
    },
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    }
  },
  "links": [
    {
      "title": "Set preferences for check suites on a repository",
      "method": "PATCH",
      "rel": "update",
      "href": "/repositories/{repository_id}/check-suites/preferences",
      "schema": {
        "properties": {
          "auto_trigger_checks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "app_id": {
                  "$ref": "#/definitions/app_id"
                },
                "setting": {
                  "$ref": "#/definitions/setting"
                }
              }
            },
            "required": [
              "app_id",
              "setting"
            ]
          }
        },
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ]
}

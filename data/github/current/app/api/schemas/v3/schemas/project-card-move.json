{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/project-card-move.json",
  "title": "Project Card Move",
  "description": "A project card move represents a change in position in a column.",
  "type": "object",
  "definitions": {
    "position": {
      "description": "The position of the card in a column",
      "example": "bottom",
      "type": "string",
      "pattern": "^(?:top|bottom|after:\\d+)$"
    },
    "column_id": {
      "description": "The unique identifier of the column the card should be moved to",
      "example": 42,
      "type": "integer"
    },
    "card_id": {
      "description": "The ID of the card.",
      "type": "integer"
    }
  },
  "links": [
    {
      "href": "/projects/columns/cards/{card_id}/moves",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "position": {
            "$ref": "#/definitions/position"
          },
          "column_id": {
            "$ref": "#/definitions/column_id"
          }
        },
        "required": [
          "position"
        ],
        "type": "object"
      },
      "title": "Create"
    },
    {
      "title": "Create a new project card move",
      "method": "POST",
      "href": "/projects/columns/cards/{card_id}/moves",
      "rel": "create",
      "schema": {
        "properties": {
          "position": {
            "$ref": "#/definitions/position"
          },
          "column_id": {
            "$ref": "#/definitions/column_id"
          }
        },
        "required": [
          "position"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ]
}

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/internal-page.json",
  "title": "Internal Page",
  "type": "object",
  "definitions": {
    "page_id": {
      "description": "The page ID.",
      "example": 123,
      "type": "integer"
    },
    "token": {
      "description": "A signed user session token.",
      "example": "GHSAT0123HJHGFSAGMHAJJHSAJY&TQ",
      "type": "string"
    },
    "ip_address": {
      "description": "IP Address.",
      "example": "125.0.0.1",
      "type": "string"
    }
  },
  "links": [
    {
      "title": "Given a page id and a signed user session token, checks if the token is valid",
      "method": "POST",
      "rel": "validate-pages-token",
      "href": "/internal/pages/auth",
      "schema": {
        "properties": {
          "page_id": {
            "$ref": "#/definitions/page_id"
          },
          "token": {
            "$ref": "#/definitions/token"
          },
          "ip_address": {
            "$ref": "#/definitions/ip_address"
          }
        },
        "additionalProperties": false,
        "required": [
          "token",
          "page_id",
          "ip_address"
        ],
        "type": "object"
      }
    },
    {
      "title": "Builds a page",
      "method": "POST",
      "rel": "build-page",
      "href": "/internal/pages/build",
      "schema": {
        "properties": {
          "page_id": {
            "$ref": "#/definitions/page_id"
          }
        },
        "additionalProperties": false,
        "required": [
          "page_id"
        ],
        "type": "object"
      }
    }
  ],
  "properties": {
    "page_id": {
      "$ref": "#/definitions/page_id"
    },
    "token": {
      "$ref": "#/definitions/token"
    },
    "ip_address": {
      "$ref": "#/definitions/ip_address"
    }
  },
  "additionalProperties": false,
  "required": [
    "page_id",
    "token",
    "ip_address"
  ]
}

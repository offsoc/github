{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/pre-receive-hook.json",
  "title": "Pre-Receive Hook",
  "description": "A pre-receive hook",
  "type": "object",
  "definitions": {
    "id": {
      "description": "Unique identifier of the pre-receive hook",
      "example": 42,
      "type": "integer"
    },
    "name": {
      "description": "The name of the pre-receive hook",
      "example": "Commit message enforcement",
      "type": "string"
    },
    "script": {
      "description": "Path to the script that will be executed when this hook runs",
      "example": "scripts/commit_enforcements.sh",
      "type": "string"
    },
    "environment-input": {
      "description": "The pre-receive environment the script will be executed in",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "https://schema.github.com/v3/pre-receive-environment.json#/definitions/id"
        }
      },
      "required": [
        "id"
      ]
    },
    "repository-input": {
      "description": "The repository where the script resides",
      "type": "object",
      "properties": {
        "full_name": {
          "description": "owner and name of this repo",
          "example": "github/linguist",
          "type": "string"
        }
      },
      "required": [
        "full_name"
      ]
    },
    "repository": {
      "description": "The repository where the script resides",
      "properties": {
        "full_name": {
          "description": "owner and name of this repo",
          "example": "github/linguist",
          "type": "string"
        }
      }
    },
    "enforcement": {
      "type": "string",
      "enum": [
        "enabled",
        "disabled",
        "testing"
      ]
    },
    "allow_downstream_configuration": {
      "type": "boolean"
    },
    "organization_id": {
      "description": "The ID of the organization.",
      "type": "integer"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    },
    "pre_receive_hook_id": {
      "description": "Unique identifier of the pre-receive hook",
      "example": 11235813,
      "type": "integer"
    }
  },

#!/bin/bash
#/
#/ Usage: ghe-create-local-bucket <name>
#/
#/ Creates a local storage bucket with the given name.
#/ See See https://docs.aws.amazon.com/AmazonS3/latest/dev/BucketRestrictions.html
#/ for constraints on bucket names.
set -euo pipefail

gmc=/usr/local/bin/ghe-minio-client

if [ $# != 1 ]; then
  echo "Usage: $0 <name>"
  exit 1
fi

${gmc} mb --ignore-existing "minio/${1}"

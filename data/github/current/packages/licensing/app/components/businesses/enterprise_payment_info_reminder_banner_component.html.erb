<%= render GitHub::FlashActionDismissibleComponent.new(
  level: :warning,
  full: true,
  is_dismissible: false,
  test_selector: "enterprise-payment-information-reminder-banner"
) do |c| %>
  <% c.with_action(path: settings_billing_tab_enterprise_path(business, :payment_information)) do %>
    Add payment information
  <% end %>
  <% c.with_title do %>
    Missing payment information
  <% end %>
  <% c.with_text do %>
    Add payment information for your account to enable usage of metered services beyond the included allotments.
  <% end %>
<% end %>

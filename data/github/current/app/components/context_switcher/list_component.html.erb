<%# erblint:counter DeprecatedComponentsCounter 1 %>
<% contexts.each do |context| %>
  <%= render context_link(context: context) do %>
    <%= render GitHub::AvatarComponent.new(
      actor: context.account,
      mr: 2,
    ) %>
    <%= render Primer::Truncate.new(tag: :span, flex: 1) do %>
      <%= context.account.display_login %>
    <% end %>
  <% end %>
<% end %>

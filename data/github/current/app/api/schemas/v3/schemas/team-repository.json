{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/team-repository.json",
  "title": "Team Repository",
  "description": "A team's access to a repository.",
  "type": "object",
  "definitions": {
    "team_id": {
      "description": "The ID of the team.",
      "type": "integer"
    },
    "permission": {
      "description": "The permission to grant the team on this repository.",
      "enum": [
        "pull",
        "triage",
        "push",
        "maintain",
        "admin"
      ],
      "example": "push",
      "type": "string"
    },
    "owner": {
      "description": "The owner of the repository.",
      "type": "string"
    },
    "repo": {
      "description": "The name of the repository.",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "type": "integer",
      "example": 42
    }
  },
  "links": [
    {
      "title": "Add or update team repository",
      "method": "PUT",
      "rel": "replace",
      "href": "/organizations/{org_id}/team/{team_id}/repositories/{repository_id}",
      "schema": {
        "properties": {
          "permission": {
            "$ref": "#/definitions/permission"
          }
        },
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": false
      }
    },
    {
      "title": "Remove team repository",
      "method": "DELETE",
      "rel": "delete",
      "href": "/organizations/{org_id}/team/{team_id}/repositories/{repository_id}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "null",
          "object"
        ]
      }
    }
  ]
}

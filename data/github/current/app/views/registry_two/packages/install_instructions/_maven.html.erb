<div class="border rounded-1 px-3 py-4 mb-4">
  <div class="d-flex text-small flex-justify-between">
    <h5 class="text-normal text-small color-fg-muted mb-1 pb-1">
      <%= render(Primer::Beta::Octicon.new(icon: "terminal", mr: 1, vertical_align: :text_top)) %>
      Install 1/2: Add this to pom.xml
    </h5>
    <span><%= link_to GitHub.maven_github_package_registry_url, class: "Link--inTextBlock" do %>Learn more about Maven<% end %> or <%= link_to GitHub.gradle_github_package_registry_url, class: "Link--inTextBlock" do %>Gradle<% end %></span>
  </div>

  <div class="position-relative">
    <div class="Box color-bg-subtle border-0 text-left mx-auto p-3 overflow-x-auto code-block"  style= "white-space: nowrap">
      <code class="d-block color-bg-subtle border-0 rounded-2 f6 lh-default">
              &lt;dependency&gt;<br>
              &nbsp;&nbsp;&lt;groupId&gt;<span class="color-fg-done"><%= group_id %></span>&lt;/groupId&gt;<br>
              &nbsp;&nbsp;&lt;artifactId&gt;<span class="color-fg-done"><%= artifact_id %></span>&lt;/artifactId&gt;<br>
              &nbsp;&nbsp;&lt;version&gt;<span class="color-fg-done"><%= package_version_name %></span>&lt;/version&gt;<br>
            &lt;/dependency&gt;
      </code>
      <div class="clipboard-copy">
        <% install_pkg = "<dependency>\n  <groupId>#{group_id}</groupId>\n  <artifactId>#{ artifact_id }</artifactId>\n  <version>#{ package_version_name }</version>\n</dependency>" %>
        <%= render Primer::Beta::ClipboardCopy.new(id: "mvn install", classes: "copy-button btn tooltipped-no-delay", p: 2, "aria-label": "Copy", "data-copy-feedback": "Copied!", "data-tooltip-direction": "w", role: "button", tabindex: "0", value: install_pkg) %><%# erblint:disable Primer::Accessibility::TooltippedMigration %>
      </div>
    </div>
  </div>

  <h5 class="text-normal text-small color-fg-muted mt-3 mb-1 pb-1">
      <%= render(Primer::Beta::Octicon.new(icon: "terminal", mr: 1, vertical_align: :text_top)) %>
      Install 2/2: Run via command line
  </h5>

  <div class="position-relative">
    <div class="Box color-bg-subtle border-0 text-left mx-auto p-3 overflow-x-auto code-block"  style= "white-space: nowrap">
      <code class="d-block color-bg-subtle border-0 rounded-2 f6 lh-default">
         <span class="color-fg-muted">$</span> mvn install
      </code>
      <div class="clipboard-copy">
        <%= render Primer::Beta::ClipboardCopy.new(id: "mvn install", classes: "copy-button btn tooltipped-no-delay", p: 2, "aria-label": "Copy", "data-copy-feedback": "Copied!", "data-tooltip-direction": "w", role: "button", tabindex: "0", value: "mvn install") %><%# erblint:disable Primer::Accessibility::TooltippedMigration %>
      </div>
    </div>
  </div>
</div>

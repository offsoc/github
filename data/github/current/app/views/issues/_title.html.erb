<%# rubocop:disable Lint/InstanceVariable %>
<% page_info(noindex: robot? && current_repository.hide_from_google?) %>

<%= render partial: "comments/title", locals: {
  comment: @issue,
  issue: @issue,
  title: @issue.title? ? @issue.title : "Untitled",
  sticky: local_assigns[:sticky].present? ? sticky : false,
  tasklist_block_enabled: local_assigns[:tasklist_block_enabled].present? ? tasklist_block_enabled : false,
  tracking_issues: local_assigns.fetch(:tracking_issues, []),
} %>

<%# rubocop:disable Lint/InstanceVariable %>
<% title = "Repository advisories" %>
<% page_info :title => title %>

<div class="site-admin-unboxed">
  <div class="site-admin-subhead ruleless">
    <h2 class="site-admin-subhead-heading"><%= title %></h2>
  </div>

  <% if @advisories.any? %>
    <table class="site-admin-table">
      <% @advisories.each do |advisory| %>
        <tr>
          <td width="400px">
            <%= link_to advisory.ghsa_id, gh_stafftools_repository_advisory_path(advisory) %>
          </td>
          <td>
            Created by <%= advisory.user %>
          </td>
          <td class="right-align">
            <%= advisory.created_at %>
          </td>
        </tr>
      <% end %>
    </table>

    <div class="paginate-container">
      <%= will_paginate @advisories %>
    </div>

  <% else %>
    <p class="site-admin-blankstate">
      No repository advisories.
    </p>
  <% end %>
</div>

<%= render(Growth::BannerComponent.new(
    user: user,
    dismissible: :organization,
    organization: organization,
    notice_name: "advanced_security_self_serve_trial_survey",
    scheme: :full_width,
    border: false,
    border_radius: 0,
    p: 3,
    bg: :accent,
    **system_arguments
  )) do |component| %>
  <% component.with_title(tag: :h3, classes: "lh-condensed") do %>
    <%= render(Primer::Beta::Link.new(
        href: survey_link,
        target: "_blank",
        rel: "noopener",
        color: :default,
        data: analytics_click_attributes(
          category: "advanced_security_self_serve_trial",
          action: "tell_us_how_your_trial_went",
          label: "ref_loc:ghas_onboarding"
        ),
      )) { "Tell us how your trial went" } %>
  <% end %>
  <% component.with_description(tag: :p, color: :muted, mb: [3, nil, nil, 0, nil], font_size: 5) do %>
    We want to make sure it's been easy for you to get started with Advanced Security. This will only take a few minutes.
  <% end %>
  <% component.with_action do %>
    <%=
        render(Primer::Beta::Button.new(
          tag: :a,
          href: survey_link,
          size: :large,
          mr: 3,
          data: analytics_click_attributes(
            category: "advanced_security_self_serve_trial",
            action: "take_our_survey",
            label: "ref_loc:ghas_onboarding"
          ),
          target: "_blank",
          rel: "noopener",
        ).with_content("Take our survey")
      )%>
  <% end %>
<% end %>

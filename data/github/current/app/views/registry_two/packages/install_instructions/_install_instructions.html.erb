<div class="mt-n1">
  <% case ecosystem.to_sym %>
  <% when :maven %>
  <%= render "registry_two/packages/install_instructions/maven",
    owner: owner,
    package_name: package_name,
    package_version_name: package_version_name,
    ecosystem: ecosystem,
    artifact_id: package_name.split(".").last,
    group_id: package_name.chomp(".#{package_name.split(".").last}")
  %>
  <% when :npm %>
  <%= render "registry_two/packages/install_instructions/npm",
    owner: owner,
    package_name: package_name,
    package_version_name: package_version_name,
    ecosystem: ecosystem
  %>
  <% when :rubygems %>
  <%= render "registry_two/packages/install_instructions/rubygems",
    owner: owner,
    package_name: package_name,
    package_version_name: package_version_name,
    ecosystem: ecosystem
  %>
  <% when :nuget %>
  <%= render "registry_two/packages/install_instructions/nuget",
    owner: owner,
    package_name: package_name,
    package_version_name: package_version_name,
    ecosystem: ecosystem
  %>
  <% end %>
</div>

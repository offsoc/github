<%= render Growth::BannerComponent.new(
  icon: icon,
  **system_arguments,
) do |component| %>
  <% component.with_title do %>
    <%= title %>
  <% end %>
  <% if description.present? %>
    <% component.with_description do %>
      <%= description %>
      <%= link_to_team_marketing_page %>
    <% end %>
  <% end %>
<% end %>

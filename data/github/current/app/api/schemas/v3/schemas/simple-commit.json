{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schema.github.com/v3/simple-commit.json",
  "title": "Simple Commit",
  "type": "object",
  "definitions": {
    "id": {
      "type": "string"
    },
    "tree_id": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "tree_id": {
      "$ref": "#/definitions/tree_id"
    },
    "message": {
      "$ref": "#/definitions/message"
    },
    "timestamp": {
      "$ref": "#/definitions/timestamp"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "login": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "email"
      ]
    },
    "committer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "login": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "email"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "tree_id",
    "message",
    "timestamp",
    "author",
    "committer"
  ]
}

<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render Primer::Box.new(test_selector: TEST_SELECTOR, **system_arguments) do %>
  <%= render Primer::Beta::Subhead.new(hide_border: true, mb: 2) do |component| %>
    <% component.with_heading(font_size: 3, mb: 2) do %>
      Repository Admins can Enable or Disable Secret Scanning
    <% end %>
    <% component.with_description { repo_scope_text } %>
  <% end %>

  <%= form_tag settings_security_analysis_policies_update_secret_scanning_settings_enterprise_path, method: :put do %>
    <%= render GitHub::MenuComponent.new(items: menu_items) do |menu| %>
      <% menu.with_summary do %>
        <%= render Primer::ButtonComponent.new(tag: :summary, classes: "select-menu-button") do %>
          <%= render(Primer::Beta::Text.new(tag: :i)) { "All repositories:" } %>
          <%= menu.default_selection_text %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

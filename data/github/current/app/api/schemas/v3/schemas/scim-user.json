{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/scim-user.json",
  "title": "SCIM /Users",
  "description": "SCIM /Users provisioning endpoints",
  "type": "object",
  "definitions": {
    "schemas": {
      "description": "SCIM schema used.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "example": "urn:ietf:params:scim:schemas:core:2.0:User"
      }
    },
    "id": {
      "description": "Unique identifier of an external identity",
      "example": "1b78eada-9baa-11e6-9eb6-a431576d590e",
      "type": "string"
    },
    "organization_id": {
      "description": "The ID of the organization.",
      "type": "integer"
    },
    "externalId": {
      "description": "The ID of the User.",
      "type": "string",
      "example": "a7b0f98395"
    },
    "active": {
      "description": "The active status of the User.",
      "type": "boolean",
      "example": true
    },
    "Operations": {
      "description": "Set of operations to be performed",
      "example": [
        {
          "op": "replace",
          "value": {
            "active": false
          }
        }
      ],
      "type": "array",
      "minItems": 1,
      "items": {
        "properties": {
          "op": {
            "type": "string",
            "enum": [
              "add",
              "remove",
              "replace"
            ]
          },
          "path": {
            "type": "string"
          },
          "value": {
            "type": [
              "string",
              "object",
              "boolean",
              "array"
            ]
          }
        },
        "required": [
          "op"
        ],
        "type": "object"
      }
    },
    "userName": {
      "description": "Configured by the admin. Could be an email, login, or username",
      "example": "someone@example.com",
      "type": "string"
    },
    "displayName": {
      "description": "The name of the user, suitable for display to end-users",
      "example": "Jon Doe",
      "type": "string"
    },
    "name": {
      "type": "object",
      "properties": {
        "givenName": {
          "type": "string"
        },
        "familyName": {
          "type": "string"
        },
        "formatted": {
          "type": "string"
        }
      },
      "required": [
        "givenName",
        "familyName"
      ],
      "example": "Jane User"
    },
    "emails": {
      "description": "user emails",
      "example": [
        "someone@example.com",
        "another@example.com"
      ],
      "type": "array",
      "minItems": 1,
      "items": {
        "properties": {
          "value": {
            "type": "string"
          },
          "primary": {
            "type": "boolean"
          }
        },
        "required": [
          "value"
        ]
      }
    },
    "roles": {
      "description": "user roles",
      "example": [
        "User",
        "Owner"
      ],
      "type": "array",
      "items": {
        "properties": {
          "value": {
            "type": "string"
          },
          "primary": {
            "type": "boolean"
          }
        },
        "required": [
          "value"
        ]
      }
    },
    "groups": {
      "description": "associated groups",
      "type": "array",
      "items": {
        "properties": {
          "value": {
            "type": "string"
          },
          "display": {
            "type": "string"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "resourceType": {
          "type": "string",
          "example": "User"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "example": "2019-01-24T22:45:36.000Z"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "example": "2019-01-24T22:45:36.000Z"
        },
        "location": {
          "type": "string",
          "format": "uri",
          "example": "https://api.github.com/scim/v2/organizations/myorg-123abc55141bfd8f/Users/c42772b5-2029-11e9-8543-9264a97dec8d"
        }
      }
    }
  },
  "links": [
    {
      "title": "Update a user attribute",
      "href": "/scim/v2/organizations/{organization_id}/Users/{external_identity_guid}",
      "method": "PATCH",
      "rel": "patch",
      "schema": {
        "properties": {
          "Operations": {
            "$ref": "#/definitions/Operations"
          }
        },
        "required": [
          "Operations"
        ],
        "type": "object"
      }
    },
    {
      "href": "/scim/v2/organizations/{organization_id}/Users",
      "method": "POST",
      "rel": "provision",
      "title": "Provision a user",
      "schema": {
        "properties": {
          "userName": {
            "$ref": "#/definitions/userName"
          },
          "displayName": {
            "$ref": "#/definitions/displayName"
          },
          "name": {
            "$ref": "#/definitions/name"
          },
          "emails": {
            "$ref": "#/definitions/emails"
          }
        },
        "required": [
          "userName",
          "name",
          "emails"
        ],
        "type": "object"
      }
    },
    {
      "title": "Update a provisioned organization membership",
      "href": "/scim/v2/organizations/{organization_id}/Users/{external_identity_guid}",
      "method": "PUT",
      "rel": "update",
      "schema": {
        "properties": {
          "userName": {
            "$ref": "#/definitions/userName"
          },
          "displayName": {
            "$ref": "#/definitions/displayName"
          },
          "name": {
            "$ref": "#/definitions/name"
          },
          "emails": {
            "$ref": "#/definitions/emails"
          }
        },
        "required": [
          "userName",
          "name",
          "emails"
        ],
        "type": "object"
      }
    },
    {
      "title": "Remove a user from the organization",
      "method": "DELETE",
      "rel": "deprovision",
      "href": "/scim/v2/organizations/{organization_id}/Users/{external_identity_guid}",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    }
  ],
  "properties": {
    "schemas": {
      "$ref": "#/definitions/schemas"
    },
    "id": {
      "$ref": "#/definitions/id"
    },
    "organization_id": {
      "$ref": "#/definitions/organization_id"
    },
    "externalId": {
      "$ref": "#/definitions/externalId"
    },
    "operations": {
      "$ref": "#/definitions/Operations"
    },
    "userName": {
      "$ref": "#/definitions/userName"
    },
    "displayName": {
      "$ref": "#/definitions/displayName"
    },
    "name": {
      "$ref": "#/definitions/name"
    },
    "emails": {
      "$ref": "#/definitions/emails"
    },
    "active": {
      "$ref": "#/definitions/active"
    },
    "groups": {
      "$ref": "#/definitions/groups"
    },
    "roles": {
      "$ref": "#/definitions/roles"
    },
    "meta": {
      "$ref": "#/definitions/meta"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "schemas",
    "externalId",
    "userName",
    "name",
    "emails",
    "active",
    "meta"
  ]
}

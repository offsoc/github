<%
show_full_name = local_assigns.fetch(:show_full_name, false)
link_options = {
  class: "author Link--primary css-truncate-target #{local_assigns.fetch(:link_class, "")}",
  show_full_name: show_full_name
}
%>

<% if actor %>
  <%= profile_link(actor, link_options) %>
  <%= bot_identifier(actor) %>
<% else %>
  <%= profile_link(User.ghost, class: "author color-fg-inherit") %>
<% end %>

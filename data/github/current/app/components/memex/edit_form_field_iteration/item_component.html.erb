<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render(Primer::Box.new(flex: 1, "data-menu-button-contents": "")) do %>
  <%= render(Primer::Box.new(justify_content: :space_between, w: :full, display: :flex)) do %>
    <%= render(Primer::Truncate.new(tag: :span, font_weight: :bold)) { sanitize @iteration.title } %>
    <%= render(Primer::Beta::Label.new(scheme: :info, classes: "inline-status")) { "current" } if @iteration.current? %>
    <%= render(Primer::Beta::Label.new(scheme: :secondary, classes: "inline-status")) { "completed" } if @iteration.completed? %>
  <% end %>
  <%= render(Primer::Box.new) do %>
    <%= render(Primer::Beta::Text.new(tag: :span, color: :muted, font_size: :small)) { date_range_formatted_s } %>
  <% end %>
  <%= render(Primer::Box.new(classes: "block-status")) do %>
    <%= render(Primer::Beta::Label.new(scheme: :info)) { "current" } if @iteration.current? %>
  <% end if @iteration.current? %>
<% end %>

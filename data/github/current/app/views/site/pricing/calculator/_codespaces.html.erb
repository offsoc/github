<pricing-calculator-section id="codespaces">
  <codespaces-calculator class="d-block rounded-2 box-shadow-card-border-mktg px-4 flex-auto flex-column mb-5 color-bg-default" data-targets="pricing-calculator.calculatorSections">
    <%= render partial: "site/pricing/calculator/section_header", locals: {
      name: "codespaces",
      heading: "GitHub Codespaces",
      description: "Your instant dev environment.",
      icon_name: "codespaces",
    } %>

    <div class="calculator-section calculator-section--hidden mt-2" data-target="pricing-calculator-section.sectionContent">
      <div data-target="pricing-calculator-section.sectionInputs" class="calculator-section">
        <div class="mx-1">
          <%= render "site/pricing/calculator/codespaces/project" %>
          <%= render "site/pricing/calculator/codespaces/team" %>
          <%= render "site/pricing/calculator/codespaces/retention" %>
        </div>
      </div>

      <div class="d-flex flex-column rounded-2 color-bg-subtle p-3 mt-1 mb-4">
        <div class="d-flex flex-items-center mb-2">
          <span class="f5-mktg text-bold pr-2 mr-auto">Cost per month</span>
          <span class="f5-mktg text-bold text-right" data-target="codespaces-calculator.costPerMonthDisplay"><%= Money.new(0, "USD").format %></span>
          <span class="f5-mktg text-bold ml-1">USD</span>
        </div>
        <div class="d-flex flex-items-center">
          <span class="f5-mktg pr-2 mr-auto">Cost per developer per&nbsp;month</span>
          <span class="f5-mktg text-right" data-target="codespaces-calculator.costPerDevPerMonthDisplay"><%= Money.new(0, "USD").format %></span>
          <span class="f5-mktg ml-1">USD</span>
        </div>
      </div>
    </div>
    <%= render partial: "site/pricing/calculator/more_info", locals: {
      link_name: "Codespaces",
      docs_href: "https://docs.github.com/codespaces",
    } %>
  </codespaces-calculator>
</pricing-calculator-section>

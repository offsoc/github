<%= render Primer::Box.new(mt: 3) do %>
  <%= render Primer::Beta::Text.new(tag: :div, font_weight: :bold, font_size: :small).with_content(name) %>

  <%= field_tag %>

  <% if description.present? %>
    <%= render Primer::Beta::Text.new(tag: :div, color: :muted, font_size: :small).with_content(description) %>
  <% end %>

  <% if documentation_url.present? %>
    <%= render Primer::Beta::Text.new(tag: :div, color: :muted, font_size: :small) do %>
      Learn more about this secret: <%= link_to documentation_url, documentation_url, target: :blank, class: "Link--inTextBlock" %>
    <% end %>
  <% end %>
<% end %>

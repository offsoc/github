<%= render(Primer::Alpha::SelectPanel::ItemList.new(
  menu_id: "actions_events_filter",
  aria: { label: "events" },
  data: {
    "filterable-for": "actions_events_filter_input",
    "filterable-type": "fuzzy"
  },
  select_variant: :single
)) do |list| %>
  <% events.each do |event| %>
    <% selected = workflow_run_filters[:event] == event %>
    <% list.with_item(
        href: filtered_runs_by_file_path(filters: workflow_run_filters, replace: { event: !selected ? event : nil }, filename: selected_filename, lab: is_lab),
        label: event,
        data: { value: event },
        active: selected) %>
  <% end %>
<% end %>

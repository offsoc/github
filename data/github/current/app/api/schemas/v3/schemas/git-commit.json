{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "https://schema.github.com/v3/git-commit.json",
  "title": "Git Commit",
  "description": "Low-level Git commit operations within a repository",
  "type": "object",
  "definitions": {
    "git-user": {
      "description": "Identifying information for the git-user",
      "type": "object",
      "properties": {
        "date": {
          "$ref": "https://schema.github.com/v3/git-user.json#/definitions/date"
        },
        "email": {
          "$ref": "https://schema.github.com/v3/git-user.json#/definitions/email"
        },
        "name": {
          "$ref": "https://schema.github.com/v3/git-user.json#/definitions/name"
        }
      },
      "required": [
        "email",
        "name"
      ]
    },
    "message": {
      "description": "Message describing the purpose of the commit",
      "example": "Fix #42",
      "type": "string"
    },
    "parents": {
      "description": "SHAs of the commits that were the parents of this commit: If omitted or empty, the commit will be written as a root commit. For a single parent, an array of one SHA should be provided; for a merge commit, an array of more than one should be provided.",
      "example": [
        "7d1b31e74ee336d15cbd21741bc88a537ed063a0"
      ],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sha": {
      "description": "SHA for the commit",
      "example": "7638417db6d59f3c431d3e1f261cc637155684cd",
      "type": "string"
    },
    "tree": {
      "description": "SHA of the tree object pointed to by this commit",
      "example": "827efc6d56897b048c772eb4087f854f46256132",
      "type": "string"
    },
    "url": {
      "description": "URL for the commit",
      "example": "https://api.github.com/repositories/42/git/commits/7638417db6d59f3c431d3e1f261cc637155684cd",
      "type": "string"
    },
    "signature": {
      "description": "Signature over the commit",
      "example": "-----BEGIN PGP SIGNATURE-----\n\niQJJBAABAQAzFiEESn/54jMNIrGSE6Tp6cQjvhfv7nAFAlnNULoVHG1hc3RhaHll\ndGlAZ21haWwuY29tAAoJEOnEI74X7+5wHssP/1D15dFGuBhHwfQ4NclSXwDXSgMl\nGaT2RrevF4hlZzl8DYQYoIeXw1N9iGJPEz0l4CF3gr1liNF8ZVjfrQDLOcRXBBp+\nz9NiMED3jjv1lIV6VUf3lEDtEFihWQDg0EyjIpsh+57dBXCCIaklGcPpB2dbq/04\nDBEG/LgC7S57HC89pJHOnZ+F8ko3b7v1yx9wpb+GD1txMPdsXgjX/rwImcwfKKLq\ntgqO9Eiw2Q60FUynOuaIKCJOePaxtq/0Un1NNrEFEaPASeAlXsTuv1L4mq/DdNlo\nUu3/c9UDf4yseIvV/BIILIEKtpVA1rFNnRT7N5socp4mYP+69eB9WPzrkJc68oaY\nwRTrP+NrzKrOakaaNsd/6eLrMElN7eJg3wW8dbqFi3HtXdX7XAF3jvJhbFt7cuJV\nB7Y2yd53FFuhl0LFGwWBOBKPG6ZjJHsIbcrX7pGPq3kIoggk5FHEoMprOjBME008\nErpvrCCNOvXbGRgechUZNHZh0lg586ctrpxHZufSgW5DhLQOIQiRyCFfRNwTmFa7\nx55vq9NyyIj577FHWDCYSNksw6ew/Z57ZSNXMaUjMsyQpiQcL9ws8agF4WBhnsC+\nZh4V0upqDgrGp3vgydLOInfZPC6k9EmhoJ063jaRuQsNG6UZggUEn7vD3ytovR6v\nbwMahnqx6ZKhJfUm\n=49iV\n-----END PGP SIGNATURE-----",
      "type": "string"
    },
    "repository_id": {
      "description": "The ID of the repository.",
      "example": 42,
      "type": "integer"
    }
  },
  "links": [
    {
      "href": "/repositories/{repository_id}/git/commits",
      "method": "POST",
      "rel": "create-legacy",
      "schema": {
        "properties": {
          "author": {
            "$ref": "#/definitions/git-user"
          },
          "committer": {
            "$ref": "#/definitions/git-user"
          },
          "message": {
            "$ref": "#/definitions/message"
          },
          "parents": {
            "$ref": "#/definitions/parents"
          },
          "tree": {
            "$ref": "#/definitions/tree"
          },
          "signature": {
            "$ref": "#/definitions/signature"
          }
        },
        "required": [
          "message",
          "tree"
        ],
        "type": "object"
      },
      "title": "Create"
    },
    {
      "title": "Create a commit",
      "method": "POST",
      "href": "/repositories/{repository_id}/git/commits",
      "rel": "create",
      "schema": {
        "properties": {
          "author": {
            "$ref": "#/definitions/git-user"
          },
          "committer": {
            "$ref": "#/definitions/git-user"
          },
          "message": {
            "$ref": "#/definitions/message"
          },
          "parents": {
            "$ref": "#/definitions/parents"
          },
          "tree": {
            "$ref": "#/definitions/tree"
          },
          "signature": {
            "$ref": "#/definitions/signature"
          }
        },
        "required": [
          "message",
          "tree"
        ],
        "type": "object",
        "additionalProperties": false
      }
    }
  ],
  "properties": {
    "sha": {
      "$ref": "#/definitions/sha"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "author": {
      "$ref": "#/definitions/git-user"
    },
    "committer": {
      "$ref": "#/definitions/git-user"
    },
    "message": {
      "$ref": "#/definitions/message"
    },
    "parents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sha": {
            "$ref": "#/definitions/sha"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "html_url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "tree": {
      "type": "object",
      "properties": {
        "sha": {
          "$ref": "#/definitions/sha"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "html_url": {
      "type": "string",
      "format": "uri"
    },
    "node_id": {
      "type": "string"
    },
    "verification": {
      "type": "object",
      "properties": {
        "verified": {
          "type": "boolean"
        },
        "reason": {
          "type": "string"
        },
        "signature": {
          "type": [
            "string",
            "null"
          ]
        },
        "payload": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

# frozen_string_literal: true

require 'rake/clean'
require 'rake/testtask'

task default: :test

Rake::TestTask.new(:test) do |t|
  t.libs << "test"
  t.test_files = FileList['test/test_**.rb']
  t.verbose = true
  t.warning = false
end

Rake::TestTask.new(:functional_test) do |t|
  t.libs << "test"
  t.test_files = FileList['test/functional_**.rb']
  t.verbose = true
  t.warning = false
end

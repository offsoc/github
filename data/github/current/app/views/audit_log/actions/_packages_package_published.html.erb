<% if view.republished? %>
  <% if view.version_count && view.version_count > 0 && view.storage_bytes && view.storage_bytes > 0 %>
    Republished <%= view.ecosystem %> package <%= view.package %> containing <%= view.version_count %> <%= view.version_count > 1 ? "versions" : "version" %> using <%= view.storage_bytes(human_readable: true) %> to the <%= view.org_name %> organization
  <% else %>
    Republished <%= view.ecosystem %> package <%= view.package %> to the <%= view.org_name %> organization
  <% end %>
<% else %>
  Published <%= view.ecosystem %> package <%= view.package %> to the <%= view.org_name %> organization
<% end %>

<% if @exception_message.present? %>
  <div class="mt-2 mb-2">
    <%= primer_octicon(:alert, color: :danger, classes: "alert", "aria-label": "Parse Error") %>
    Parsing the certificate to determine subject failed.
  </div>
  <code><%= @exception_message %></code>
<% else %>
  <pre data-label="subject" class="<%= @classes %>"><%= @certificate.subject %></pre>
<% end %>

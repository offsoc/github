<%# view is an instance of RepositoryCodeScanning::IndexView %>

<% no_results_text = view.no_results_messages.sample %>

<%= render Primer::Beta::Blankslate.new(spacious: true, test_selector: "code-scanning-no-results") do |c| %>
  <% c.with_visual_image(src: image_path("modules/site/icons/security.svg"), alt: "Security icon") %>

  <% c.with_heading(tag: :h2) do %>
    <%= no_results_text[:heading] %>
  <% end %>

  <% c.with_description do %>
    <%= no_results_text[:text] %>
  <% end %>
<% end %>

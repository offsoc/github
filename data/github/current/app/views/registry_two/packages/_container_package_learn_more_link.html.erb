<%
  learn_more_items = case
  when package_version.package_type_label&.match(/\Ahomebrew_bottle/)
    [
        "Learn more about Homebrew",
        "https://github.com/Homebrew"
    ]
  when package_version.package_type_label&.match(/\Acodeql/)
    [
        "Learn more about CodeQL",
        "https://codeql.github.com/docs/codeql-cli/publishing-and-using-codeql-packs"
    ]
  when package_version.package_type_label&.match(/\Adevcontainer_feature/)
    [
        "Learn more about Dev Container Features",
        "https://containers.dev/implementors/features/#referencing-a-feature"
    ]
  when package_version.package_type_label&.match(/\Adevcontainer_template/)
    [
        "Learn more about Dev Container Templates",
        "https://containers.dev/implementors/templates"
    ]
  when package_version.package_type_label&.match(/\Adevcontainer_collection/)
    [
        "Learn more about Dev Containers",
        "https://containers.dev/"
    ]
  when package_version.aop?
    [
        "Learn about workflow syntax",
        "https://docs.github.com/actions/using-workflows/workflow-syntax-for-github-actions#jobsjob_idsteps"
    ]
  else
    [
        "Learn more about packages",
        "https://docs.github.com/packages/getting-started-with-github-container-registry/about-github-container-registry"
    ]
  end

    learn_more_text = learn_more_items[0]
    learn_more_url = learn_more_items[1]
%>

<%= link_to learn_more_text, learn_more_url, class: "p-3" %>

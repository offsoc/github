<% if enable_consul_acl? -%>
  acl_datacenter = "<%= consul_acl_datacenter %>"
  <% if consul_server? -%>
    acl_master_token = "<%=secret_value("consul", "acl-master-token")%>"
  <% end -%>
  acl_agent_token = "<%=secret_value("consul", "acl-agent-token")%>"
  acl_default_policy = "deny"
  acl_down_policy = "extend-cache"

  <% if cluster_enabled? -%>
    <% if consul_server? -%>
      acl_replication_token = "<%=secret_value("consul", "acl-master-token")%>"
      enable_acl_replication = true
    <% end -%>
  <% end -%>
<% end -%>

<%
inline ||= nil
tasklist_id ||= nil
%>
<%= render layout: "issues/sidebar/menu", locals: {
      issue: issue,
      title: "Projects",
      hotkey: "p",
      menu_attributes: "data-multiple",
      menu_title: "Projects",
      menu_id: "projects-select-menu",
      deferred_content: local_assigns.fetch(:deferred_content, true),
      deferred_content_path: issue_show_partial_path(issue: issue, partial: "issues/sidebar/projects_menu_content", inline: inline, tasklist_id: tasklist_id),
      readonly: !issue_permissions(issue, current_user, :triageable) || issue.repository.locked? || issue.repository.archived?
} do %>
  <%= render "issues/sidebar/projects_menu_content", issue: issue, locals: { tasklist_id: tasklist_id } %>
<% end %>

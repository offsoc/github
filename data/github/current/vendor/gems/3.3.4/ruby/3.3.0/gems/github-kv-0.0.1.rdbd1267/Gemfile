# frozen_string_literal: true

source "https://rubygems.org"
gemspec

DEFAULT_RAILS_VERSION = "7.1"
ENV["RAILS_VERSION"] ||= DEFAULT_RAILS_VERSION

if ENV["RAILS_VERSION"] == "main"
  gem "activerecord", git: "https://github.com/rails/rails.git"
  gem "rails", git: "https://github.com/rails/rails.git"
else
  gem "activerecord", "~> #{ENV['RAILS_VERSION'] || DEFAULT_RAILS_VERSION}.0"
  gem "rails", "~> #{ENV['RAILS_VERSION'] || DEFAULT_RAILS_VERSION}.0"
end

          "name": {
            "$ref": "#/definitions/name"
          },
          "visibility": {
            "$ref": "#/definitions/visibility"
          },
          "allows_public_repositories": {
            "$ref": "#/definitions/allows_public_repositories"
          },
          "restricted_to_workflows": {
            "$ref": "#/definitions/restricted_to_workflows"
          },
          "selected_workflows": {
            "$ref": "#/definitions/selected_workflows"
          },
          "network_configuration_id": {
            "$ref": "#/definitions/network_configuration_id"
          }
        },
        "additionalProperties": false,
        "type": "object"
      }
    },
    {
      "title": "Updates the runners within an organization runner group",
      "href": "/organizations/{organization_id}/actions/runner-groups/{runner_group_id}/runners",
      "method": "PUT",
      "rel": "update-runners",
      "schema": {
        "properties": {
          "runners": {
            "$ref": "#/definitions/runners"
          }
        },
        "required": [
          "runners"
        ],
        "additionalProperties": false,
        "type": "object"
      }
    },
    {
      "title": "Adds a runner to an organization runner group",
      "href": "/organizations/{organization_id}/actions/runner-groups/{runner_group_id}/runners/{runner_id}",
      "method": "PUT",
      "rel": "add-runner",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Removes a runner from an organization runner group",
      "href": "/organizations/{organization_id}/actions/runner-groups/{runner_group_id}/runners/{runner_id}",
      "method": "DELETE",
      "rel": "remove-runner",
      "schema": {
        "additionalProperties": false,
        "type": [
          "object",
          "null"
        ]
      }
    },
    {
      "title": "Sets the repositories that have access to an organization runner group",
      "href": "/organizations/{organization_id}/actions/runner-groups/{runner_group_id}/repositories",
      "method": "PUT",

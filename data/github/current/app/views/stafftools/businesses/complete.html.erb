<%# erblint:counter ButtonComponentMigrationCounter 1 %>
<% page_info title: this_business.name, selected_link: :business_people %>

<%= render Primer::Beta::Subhead.new do |component| %>
  <% component.with_heading(tag: :h2) do %>
    <%= link_to "People", stafftools_enterprise_people_path(this_business) %>
    / Add or invite owners
  <% end %>
<% end %>

<%= render "stafftools/businesses/add_owner_form", business_slug: this_business.slug, page: :complete %>
<%= render Primer::Beta::Subhead.new(mt: 3) do |component| %>
  <% component.with_heading(tag: :h2) do %>Owners<% end %>
<% end %>
<%= render "stafftools/businesses/owners_list", owners: owners, complete_page: true %>
<%= render Primer::Beta::Subhead.new(mt: 3) do |component| %>
  <% component.with_heading(tag: :h2) do %>Owner invitations<% end %>
<% end %>
<%= render "stafftools/businesses/pending_owner_invitations_list",
  pending_owner_invitations: pending_owner_invitations, complete_page: true %>

<a rel="nofollow" class="btn" href="<%= stafftools_enterprise_path(this_business) %>">Finish</a>

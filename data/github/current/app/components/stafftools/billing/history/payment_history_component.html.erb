<%= render Primer::Beta::Subhead.new do |component| %>
  <%= component.with_heading(tag: :h2) { "Payment History" } %>
<% end %>

<% if payments.any? %>
  <%= render Primer::Beta::BorderBox.new(test_selector: "payment-history") do |component| %>
    <% payments.each do |payment| %>
      <% component.with_row(p: 0) do %>
        <%= render Stafftools::Billing::History::BillingTransactionComponent.new(payment: payment) %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render Primer::Beta::Blankslate.new(test_selector: "payment-history") do |component| %>
    <% component.with_heading(tag: :h2).with_content("#{billable_entity} has not made any self-serve payments.") %>
  <% end %>
<% end %>

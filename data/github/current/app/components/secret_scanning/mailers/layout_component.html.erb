<% content_for :header do %>
  <% if header_text.present? %>
    <%= header_text %>
  <% end %>
<% end %>

<%= render(Mail::ContainerComponent.new) do %>
  <%= render(Mail::HeaderTitleComponent.new(
    title: @title,
    icon: @icon)
  )%>
  <%= subheader_text if subheader_text.present? %>
<% end %>
<%= render(Mail::SpacerComponent.new) %>
<%= main_section if main_section.present? %>

<% if content_footer %>
  <% content_for :content_footer do %>
    <%= render(Mail::RowComponent.new) do %>
      <%= render(Mail::ColumnComponent.new) do %>
        <%= content_footer %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% content_for :footer_text do %>
  <%= footer_text if footer_text.present? %>
<% end %>

<% page_info title: "Organization to Enterprise upgrades", selected_link: :organization_invitations_and_upgrades %>

<%= render layout: "stafftools/stafftools" do %>
  <%= render "stafftools/businesses/organization_invitations_and_upgrades_nav", tab: "organization_upgrades" %>

  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>Organization to enterprise upgrades pending review<% end %>
  <% end %>

  <%= render "stafftools/businesses/organization_to_enterprise_upgrades",
    businesses: pending_completion_upgrades,
    page_param_name: :pending_page %>

  <%= render Primer::Beta::Subhead.new do |component| %>
    <% component.with_heading(tag: :h2) do %>Recently completed organization to enterprise upgrades<% end %>
  <% end %>

  <%= render "stafftools/businesses/organization_to_enterprise_upgrades",
    businesses: completed_upgrades,
    page_param_name: :reviewed_page %>
<% end %>

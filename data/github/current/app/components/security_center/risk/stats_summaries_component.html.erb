<%= render Primer::Box.new(
  mb: 3,
  test_selector: TEST_SELECTOR,
  **@system_args
) do %>
  <% if @src %>
    <include-fragment class="d-flex flex-1" src="<%= @src %>">
      <%= render(Primer::Beta::Spinner.new(
        "aria-label": "Loading...",
        size: :medium,
        my: 10,
        mx: :auto,
        display: :block,
        test_selector: SPINNER_TEST_SELECTOR
      )) %>
    </include-fragment>
  <% elsif @summaries %>
    <%= render Primer::Box.new(
      display: :flex,
      flex_wrap: :wrap,
      justify_content: :space_between,
      style: "gap: 1em"
    ) do %>
      <% @summaries.each do |summary| %>
        <%= render SecurityCenter::Risk::StatsSummaryComponent.new(summary) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render(Primer::Box.new) do %>
  <%= render(Primer::Beta::Link.new(
    display: :flex,
    flex_direction: :row,
    flex_wrap: :wrap,
    href: secret_url,
    scheme: :primary,
    underline: true)) do %>
    <%= render(Primer::Beta::Text.new(
      flex: :auto,
      tag: :span,
      font_family: :mono,
      font_size: :small
    )) { truncated_raw_secret } %>
    <% if pattern_scope == :repo_scope %>
      <%= render(Primer::Beta::Text.new(
        flex: :auto,
        tag: :span,
        font_family: :mono,
        font_size: :small,
        color: :muted,
        float: :right,
        text_align: :right,
        test_selector: "result-row-file-path"
      )) { file_path } %>
    <% else %>
      <%= render(Primer::Box.new(flex: :auto, float: :right, text_align: :right)) do %>
        <%= render(Primer::Beta::Octicon.new(icon: :repo, color: :muted)) %>
        <%= render(Primer::Beta::Text.new(
          tag: :span,
          font_family: :mono,
          font_size: :small,
          color: :muted,
          test_selector: "result-row-repo-nwo"
        )) do %>
          <%= repo.owner_display_login %>/<b><%= repo.name %></b>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>


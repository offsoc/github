<%= render(Primer::Alpha::Dialog.new(id: "staffbar-azure-exp-configure",
  title: "Azure EXP Assignments",
  subtitle: "overriding default experiment assignments",
  test_selector: "azure-exp-configure",
  size: :xlarge,
  )) do |d| %>
  <% d.with_show_button(scheme: :link, classes: "color-text-white", aria: { label: "AzureExP assignments" }) do |s| %>
      <% s.with_tooltip(text: "AzureExP assignments") %>
      <%= primer_octicon(:telescope) %>
  <% end %>

  <%= d.with_body do %>
    <turbo-frame loading="lazy" src="<%= edit_azure_exp_local_assignments_path %>" id="azure-exp-assignments">
    </turbo-frame>
  <% end %>
<% end %>

<template hidden class="js-azure-exp-local-assignments-toast">
  <%= render partial: "shared/toast", locals: { text: "Your changes were saved", state: "success", icon: "check" } %><%# erblint:disable A11yToastMigration %>
</template>

  <%- if user = @repository.created_by -%>
    <%- if @repository.fork? -%>
    <%= @repository.name_with_display_owner %> forked from <%= @repository.parent.name_with_display_owner %>
    <%- else -%>
    <%= @repository.name_with_display_owner %>
    <%- end -%>
  <%- else -%>
    <%= @repository.name_with_display_owner %>
  <%- end -%>
    <%- if @repository.description.present? -%>
    <%= raw @repository.description %>
    <%- end -%>
    <%= @repository.permalink %>


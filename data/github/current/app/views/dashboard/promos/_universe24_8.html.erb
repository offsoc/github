<% unless current_user.dismissed_notice?(:dashboard_promo_universe24_8) %>
  <div class="js-notice" <%= test_selector('dashboard-announcements') %>>
    <%= form_tag(
      dismiss_notice_path(:dashboard_promo_universe24_8),
      class: "Box position-relative rounded-2 mb-4 p-3 js-notice-dismiss overflow-hidden",
      style: "background: linear-gradient(250.82deg, #000000 11.93%, #000240 97.02%); z-index: 1; #{ user_feature_enabled?(:feeds_v2) ? '' : 'max-width: 340px;' }",
      data: analytics_visible_attributes(category: "In-product banner", text: "universe24_banner8li")
    ) do %>
      <picture>
        <source srcset="<%= image_path('modules/dashboard/universe24/univers24-banner-graphic-8.webp') %>" type="image/webp">
        <source srcset="<%= image_path('modules/dashboard/universe24/univers24-banner-graphic-8.png') %>" type="image/png">
        <img src="<%= image_path('modules/dashboard/universe24/univers24-banner-graphic-8.png') %>" alt="" width="300" height="300" class="position-absolute bottom-0 left-0 width-full events-none" style="z-index: -1; height: auto;">
      </picture>

      <div class="position-absolute p-2" style="top: 4px; right: 6px;">
        <%= render(Primer::Beta::CloseButton.new(
          type: :submit,
          color: :on_emphasis,
          style: "color: #ffffff !important",
          data: analytics_click_attributes(
            category: "dashboard_notices",
            action: "Dismiss universe24_banner8li",
          ))) %>
      </div>

      <img src="<%= image_path("modules/dashboard/universe24/logo-dark.svg") %>" alt="Universe24" width="230" height="25" style="max-width: 85%; height: auto" class="d-block">

      <h3 class="h4 col-11 mt-3" style="color: #ffffff !important;">
        Check out our full schedule of AI, DevEx, and security sessions.
      </h3>

      <p class="mt-1 mb-3 pr-2 color-fg-muted text-small" style="color: #ffffff !important;">
        Get tickets now to our global developer event on Oct. 29-30.
      </p>

      <%= render Primer::Beta::Button.new(
        size: :medium,
        tag: :a,
        href: "https://githubuniverse.com/?utm_source=github&utm_medium=banner&utm_campaign=24banner8li",
        block: true,
        classes: "universe24-dark-btn",
        data: analytics_click_attributes(
          category: "dashboard_notices",
          action: "universe24_banner8li",
        )
      ) do %>
        Get tickets
      <% end %>

      <style>
        .universe24-dark-btn {
          min-height: 36px;
          border-radius: 8px;
          font-weight: 600;
          color: #000000 !important;
          background: #ffffff !important;
          letter-spacing: -0.02em;
          border: 1px solid #6e7781 !important;
        }

        .universe24-dark-btn:hover {
          background: #f5f5f5 !important;
        }
      </style>

      <svg width="300" height="130" aria-hidden="true" style="width: 100%; height: auto; visibility: hidden; pointer-events: none;"></svg>
    <% end %>
  </div>
<% end %>

<%# erblint:counter GoogleAnalyticsDeprecation 1 %>
<%= render Primer::BaseComponent.new(
  tag: :div,
  classes: class_names("js-zuora-billing-info", container_class),
  "data-ga-event" => send_ga_event ? "" : nil,
  "data-ga-event-category" => send_ga_event ? ga_category : nil,
  "data-ga-event-action" => send_ga_event ? ga_action : nil,
  "data-ga-event-label" => send_ga_event ? ga_label : nil,
  test_selector: "zuora_billing_info",
  **system_arguments,
) do %>
  <%= content if content.present? %>
  <input type="hidden" name="billing[zuora_payment_method_id]" class="js-zuora-payment-method-id">
  <input type="hidden" name="billing[billing_address][country_code_alpha3]" class="js-zuora-select-country" value="<%= country_code %>">
  <input type="hidden" name="billing[billing_address][region]" class="js-zuora-select-region" value="<%= region %>">
  <input type="hidden" name="billing[billing_address][postal_code]" class="js-zuora-select-postal-code" value="<%= postal_code %>">
  <input type="hidden" name="billing[billing_address][address1]" value="<%= address1 %>">
  <input type="hidden" name="billing[billing_address][address2]" value="<%= address2 %>">
  <input type="hidden" name="billing[billing_address][city]" value="<%= city %>">
<% end %>

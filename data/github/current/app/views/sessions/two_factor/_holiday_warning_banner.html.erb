<%= render Primer::Beta::Flash.new(full: true, icon: :alert, spacious: true, py: 3, mb: 0, classes: "js-notice", test_selector: "holiday-warning-banner-flash") do %>
  <strong>Don't get locked out of your account.</strong>
  <%= link_to "Download your recovery codes", settings_auth_recovery_codes_path(two_factor_holiday_warning: true), target: "_blank", class: "Link--inTextBlock"%>
  <% if passkeys_enabled %>
    or
    <%= link_to "add a passkey", settings_security_path(two_factor_holiday_warning: true, anchor: "passkeys"), target: "_blank", class: "Link--inTextBlock" %>
  <% end %>
  so you don't lose access when you get a new device.

  <%= form_tag settings_user_2fa_dismiss_holiday_warning_banner_path, method: :patch, class: "js-notice-dismiss float-right mr-1" do %>
    <%= render Primer::Beta::IconButton.new(icon: :x, scheme: :invisible, type: :submit, show_tooltip: false, "aria-label": "Dismiss", classes: "flash-close") %>
  <% end %>
<% end %>

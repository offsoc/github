<%= render Primer::BaseComponent.new(tag: :div, my: 3, **system_arguments ) do %>
  <%= render Primer::BaseComponent.new(tag: :div, display: :flex, "align-items": :center ) do %>
    <%= remove_seat_control %>
    <%= input %>
    <%= add_seat_control %>
    <% if show_label %>
      <%= render Primer::BaseComponent.new(tag: :span, align_self: :center, ml: 3, classes: stepper_label_classes ) do %>
        <%= stepper_label %>
      <% end %>
    <% end %>
  <% end %>
  <% if show_inline_errors? %>
    <%= render Primer::BaseComponent.new(
      tag: :p,
      classes: @type == :plan_upgrade ? "js-minimum-seats" : "",
      font_size: 6,
      data: @type == :manage_subscription ? { target: "manage-subscription.min_error" } : {},
      color: :muted, mt: 2, mb: 0, hidden: true, ) do %>
       <%= render(Primer::Beta::Octicon.new(icon: :alert, color: :attention, mr: 2)) %><%= min_error_message %>
    <% end %>
    <%= render Primer::BaseComponent.new(
      tag: :p,
      classes: @type == :plan_upgrade ? "js-maximum-seats" : "",
      font_size: 6,
      data: @type == :manage_subscription ? { target: "manage-subscription.max_error" } : {},
      color: :muted, mt: 2, mb: 0, hidden: true) do %>
       <%= render(Primer::Beta::Octicon.new(icon: :alert, color: :attention, mr: 2)) %><%= max_error_message %>
    <% end %>
  <% end %>
<% end %>


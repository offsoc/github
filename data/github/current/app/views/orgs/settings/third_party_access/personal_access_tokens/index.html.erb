<% page_info responsive: false, title: "Personal access tokens", selected_link: :personal_access_tokens_settings %>

<%= render layout: "orgs/settings/layout" do %>
  <%= render(Primer::Beta::Subhead.new) do |component| %>
    <% component.with_heading do %>
      Personal access tokens
      <% unless redesign_enabled %>
        <%= render(Primer::Beta::Label.new(scheme: :success, vertical_align: :middle)) { "Beta" } %>
      <% end %>
    <% end %>
  <% end %>

  <% if redesign_enabled %>
    <%= render "orgs/settings/third_party_access/personal_access_tokens/tabs" %>
  <% end %>

  <%= render Primer::Box.new(display: :flex, my: 4, direction: :column, id: "toggle_pat_access_box") do %>
    <%= render Primer::Beta::Heading.new(tag: :h3, style: "flex: 0 1 auto;", mb: 2, font_weight: :normal) do %>
      Fine-grained personal access tokens
    <% end %>

    <%= render partial: "orgs/settings/third_party_access/personal_access_tokens/forms/restrict_access" %>
  <% end %>

  <%= render Primer::Box.new(display: :flex, my: 2, direction: :column) do %>
    <%= render Primer::Beta::Heading.new(tag: :h3, style: "flex: 0 1 auto;", mb: 2, font_weight: :normal) do %>
      Require approval of fine-grained personal access tokens
    <% end %>

    <%= render partial: "orgs/settings/third_party_access/personal_access_token_requests/forms/auto_approve" %>
  <% end %>

  <% unless redesign_enabled %>
    <%= render Primer::Box.new(display: :flex, my: 4, direction: :column) do %>
      <%= render Primer::Beta::Heading.new(tag: :h3, style: "flex: 0 1 auto;", mb: 2, font_weight: :normal) do %>
        Personal access token (classic)
      <% end %>

      <%= render partial: "orgs/settings/third_party_access/personal_access_tokens/forms/restrict_legacy_access" %>
    <% end %>
  <% end %>
<% end %>

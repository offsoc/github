<%
  page_info \
  title: "GitHub-hosted runners",
  selected_link: :business_actions_settings_hosted_runners,
  stafftools: stafftools_enterprise_path(this_business)
%>

<%= render layout: "businesses/layout",
  locals: {
    business: this_business,
    title: "GitHub-hosted runners",
    container_attributes: "itemscope itemtype='http://schema.org/Business'",
    back_to_link_path: settings_actions_runners_enterprise_path(this_business.slug),
    back_to_link_text: "runners"
  } do %>

    <div class="d-flex flex-row mb-5 pb-5 border-bottom">
      <div class="mr-5 pr-5" style="flex-basis: 35%">
        <%= render(Actions::HostedRunners::HostedRunnersJobsUsageComponent.new(
          jobs: jobs,
          concurrency_limit: concurrency_limit))
        %>
      </div>

      <div class="mr-5 pr-5" style="flex-basis: 63%">
        <%= render(Actions::HostedRunners::HostedRunnersLabelsComponent.new) %>
      </div>
    </div>

    <div>
      <%= render(Actions::HostedRunners::HostedRunnersJobsListComponent.new(jobs: paginated_jobs)) %>
    </div>
  <% end %>

<%# erblint:counter DeprecatedComponentsCounter 1 %>
<%= render(Primer::Beta::Flash.new(test_selector: survey_id, display: :flex, justify_content: :space_between, py: 2, **system_arguments)) do |component| %>
  <%= render(Primer::Beta::Octicon.new(:"mark-github", mt: 1)) %>
  <%= render(Primer::Box.new(flex: 1, display: :flex, direction: :column)) do %>
    <%= heading %>
    <%= description %>
  <% end %>
  <%= form_tag(dismiss_user_security_center_survey_path(id: survey_id), method: :delete) do %>
    <%= render(Primer::Beta::CloseButton.new(type: :submit)) %>
  <% end %>
<% end %>
